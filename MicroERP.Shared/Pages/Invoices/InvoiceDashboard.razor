@code
{
    List<InvoicesAllModel> AllData = new();
    List<InvoicesAllModel> data = new();
    InvoiceModel record = new();
    List<CurrenciesModel> Currencies = new();
    [Parameter] public string InvoiceType { get; set; } = "Sales";
    public string Action { get; set; } = "INSERT";
    private string InvoiceTypeDisplay => string.IsNullOrWhiteSpace(InvoiceType) ? "Invoice" : System.Globalization.CultureInfo.InvariantCulture.TextInfo.ToTitleCase(InvoiceType.Trim().ToLowerInvariant());
    private string InvoiceTypeDisplayLower => InvoiceTypeDisplay.ToLowerInvariant();
    private string searchString = "";
    public DateTime? startDate { get; set; } = DateTime.Today.AddMonths(-6);
    public DateTime? endDate { get; set; } = DateTime.Today;

    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        SyncInvoiceTypeFromRoute();
        Globals.AccessLevel = Globals.PageAccess(NavManager, "InvoiceDashboard", InvoiceType);
        Currencies = await Functions.GetAsync<List<CurrenciesModel>>($"Currencies/Search", true) ?? new List<CurrenciesModel>();
        await GetAll();
    }

    private string GetCurrencyCode(int currencyId)
    {
        if (currencyId == 0) return "-";
        var currency = Currencies.FirstOrDefault(c => c.Id == currencyId);
        return currency?.Code ?? "-";
    }
    
    protected override async Task OnParametersSetAsync()
    {
        SyncInvoiceTypeFromRoute();
        await GetAll();
    }

    /// <summary>Set InvoiceType from route parameter or from current URL path so header and data stay in sync.</summary>
    private void SyncInvoiceTypeFromRoute()
    {
        if (!string.IsNullOrWhiteSpace(InvoiceType))
        {
            InvoiceType = InvoiceType.Trim().ToUpperInvariant();
            return;
        }
        try
        {
            var baseUri = NavManager?.BaseUri ?? "";
            var uri = NavManager?.Uri ?? "";
            if (string.IsNullOrEmpty(uri) || string.IsNullOrEmpty(baseUri))
            {
                InvoiceType = "SALE";
                return;
            }
            var path = uri.Replace(baseUri, "", StringComparison.OrdinalIgnoreCase).TrimStart('/');
            var segments = path.Split('/', StringSplitOptions.RemoveEmptyEntries);
            if (segments.Length >= 2 && string.Equals(segments[0], "InvoiceDashboard", StringComparison.OrdinalIgnoreCase))
            {
                var second = segments[1].Trim().ToUpperInvariant();
                InvoiceType = second == "PURCHASE" ? "Purchases" : "Sales";
            }
            else
            {
                InvoiceType = "Sales";
            }
        }
        catch
        {
            InvoiceType = "Sales";
        }
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        try
        {
            if (startDate > endDate)
            {
                SnackbarService.Add("Start date must be earlier than end date.", Severity.Warning);
                LoadingPanel = false;
                return;
            }

            // Format dates for SQL comparison - use CAST to ensure proper date comparison
            string formattedStartDate = startDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.AddMonths(-6).ToString("yyyy-MM-dd");
            // Add 1 day to end date to include the entire end date in the range
            string formattedEndDateNextDay = (endDate?.Date ?? DateTime.Today).AddDays(1).ToString("yyyy-MM-dd");

            string ThisInvoiceType = $"i.InvoiceType = '{InvoiceType}' AND CAST(ISNULL(i.TranDate, i.CreatedOn) AS DATE) >= CAST('{formattedStartDate}' AS DATE) AND CAST(ISNULL(i.TranDate, i.CreatedOn) AS DATE) < CAST('{formattedEndDateNextDay}' AS DATE)";
            
            // Add LocationId filter for non-admin users (same as InvoiceSummary)
            if (Globals.User.GroupId != 1)
            {
                ThisInvoiceType += $" AND i.LocationId = {Globals.User.LocationId}";
            }
            
            // Add OrganizationId filter
            if (Globals.User.OrganizationId > 0)
            {
                ThisInvoiceType += $" AND i.OrganizationId = {Globals.User.OrganizationId}";
            }
            
            AllData = await Functions.GetAsync<List<InvoicesAllModel>>($"Invoice/Search/{Uri.EscapeDataString(ThisInvoiceType)}", true) ?? new List<InvoicesAllModel>();
            data = AllData;
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading data: {ex.Message}", Severity.Error);
            data = new List<InvoicesAllModel>();
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        var fullRecord = await Functions.GetAsync<InvoicesModel>($"Invoice/Get/{id}", true);
        if (fullRecord?.Invoice != null)
            record = fullRecord.Invoice;
        else
            record = new InvoiceModel();
        LoadingPanel = false;
    }

    private void FilterData()
    {
        if (string.IsNullOrWhiteSpace(searchString))
        {
            data = AllData.ToList();
        }
        else
        {
            var search = searchString.ToLower();
            data = AllData.Where(x =>
                ContainsIgnoreCase(x.Fullname, search) ||
                ContainsIgnoreCase(x.ClientComments, search) ||
                ContainsIgnoreCase(x.InvoiceType, search) ||
                ContainsIgnoreCase(x.Location, search) ||
                ContainsIgnoreCase(x.Party, search) ||
                ContainsIgnoreCase(x.PartyName, search) ||
                ContainsIgnoreCase(x.Code, search) ||
                ContainsIgnoreCase(x.Source, search) ||
                ContainsIgnoreCase(x.Status, search) ||
                ContainsIgnoreCase(x.AccountName, search)
            ).ToList();
        }

        StateHasChanged();
    }

    private static bool ContainsIgnoreCase(string? value, string search)
    {
        return !string.IsNullOrEmpty(value) && value.Contains(search, StringComparison.OrdinalIgnoreCase);
    }

    private string SafeInvoiceType => (string.IsNullOrWhiteSpace(InvoiceType) ? "SALE" : InvoiceType.Trim().ToUpperInvariant()) == "PURCHASE" ? "PURCHASE" : "SALE";

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new InvoiceModel();
        NavManager.NavigateTo($"/InvoicePage/{SafeInvoiceType}/INSERT/0");
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        NavManager.NavigateTo($"/InvoicePage/{SafeInvoiceType}/VIEW/{id}");
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        if (record.IsPostedToGL == 1)
        {
            Action = "VIEW";
            NavManager.NavigateTo($"/InvoicePage/{SafeInvoiceType}/VIEW/{id}");
        }
        else
        {
            Action = "UPDATE";
            NavManager.NavigateTo($"/InvoicePage/{SafeInvoiceType}/UPDATE/{id}");
        }
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        // Ensure Id is set for soft delete (e.g. if Get failed or route did not bind id)
        if (record.Id <= 0)
            record.Id = id;
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            var result = await Functions.PostAsync<InvoiceModel>($"Invoice/{Action}", record, true);
            if (result.Success == true)
            {
                var message = Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == true 
                    ? "Record Deleted Successfully" 
                    : "Record Saved Successfully";
                SnackbarService.Add(message, Severity.Success);
                await GetAll();
                if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) 
                    await Edit(result.Result!.Id);
            }
            else
            {
                SnackbarService.Add($"{result.Message}", Severity.Error);
                record = new();
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
            await _drawer.CloseDrawerAsync();
        }
    }

    private async Task ChildSaved()
    {
        await GetAll();
        //await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }

    protected async Task PostToGL(int invoiceId)
    {
        try
        {
            var res = await Functions.ShowConfirmation(dialogService, "Do you want to post this invoice to General Ledger? Once posted, it cannot be edited or deleted.");
            if (res == false)
                return;

            LoadingPanel = true;
            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>(
                $"GeneralLedger/CreateGLFromInvoice/{invoiceId}?userId={Globals.User.Id}&clientInfo={Uri.EscapeDataString(Globals.ClientInfo)}", 
                null, 
                true);
            LoadingPanel = false;

            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                SnackbarService.Add("Invoice posted to General Ledger successfully", Severity.Success);
                await GetAll();
                if (result.Result != null)
                {
                    var parameters = new DialogParameters<InvoiceGLPostedDialog> { { x => x.PostedData, result.Result } };
                    var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Large, FullWidth = true };
                    await dialogService.ShowAsync<InvoiceGLPostedDialog>("Posted Accounting Entry", parameters, options);
                }
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    protected void ViewGLEntry(string glEntryNo, int invoiceId)
    {
        if (string.IsNullOrWhiteSpace(glEntryNo))
        {
            SnackbarService.Add("GL Entry No is missing.", Severity.Warning);
            return;
        }
        try
        {
            var stub = new InvoicesModel
            {
                Invoice = new InvoiceModel
                {
                    Id = invoiceId,
                    OrganizationId = Globals.User.OrganizationId,
                    IsPostedToGL = 1,
                    GLEntryNo = glEntryNo
                }
            };
            var result = Functions.PostAsync<GeneralLedgerHeaderModel>("GeneralLedger/PreviewGLFromInvoice", stub, true).GetAwaiter().GetResult();
            if (result.Success == true && result.Result != null)
            {
                var parameters = new DialogParameters
                {
                    ["PostedData"] = result.Result
                };
                var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Large, FullWidth = true };
                dialogService.Show<InvoiceGLPostedDialog>("Posted Accounting Entry", parameters, options);
            }
            else
            {
                SnackbarService.Add($"Error loading GL entry: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading GL entry: {ex.Message}", Severity.Error);
        }
    }

    protected void Print(int id)
    {
        NavManager.NavigateTo($"/InvoiceReport/{id}");
    }
}



