@page "/InvoiceDashboard/{InvoiceType?}"
@using MicroERP.Shared.Models

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h5" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.Receipt" Class="me-2" Style="color: white;" />
                    @InvoiceTypeDisplay Invoice Management
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Create and manage @InvoiceTypeDisplayLower invoices</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0 flex-wrap">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <MudDatePicker @bind-Date="startDate"
                                   Label="Start Date" DateFormat="dd MMM yyyy" Variant="Variant.Outlined" />
                    <MudDatePicker @bind-Date="endDate"
                                   Label="End Date" DateFormat="dd MMM yyyy" Variant="Variant.Outlined" />
                </div>
                <div class="dashboard-search-container">
                    <MudTextField @bind-Value="searchString"
                                @bind-Value:after="FilterData"
                                Placeholder="Search invoices..."
                                Adornment="Adornment.Start"
                                AdornmentIcon="@Icons.Material.Filled.Search"
                                IconSize="Size.Small"
                                Variant="Variant.Outlined"
                                Immediate="true"
                                Margin="Margin.Dense"
                                Class="dashboard-search-field"
                                Style="background: rgba(255,255,255,0.95);" />
                </div>
                <MudButton StartIcon="@Icons.Material.TwoTone.Search" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Primary"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => GetAll())">
                    Search
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Add" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Success" 
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Clear())">
                    New
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    <MyDrawer @ref="_drawer" Title="Invoice" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <InvoicePage Action="@Action" CurrentRecord="record.Id" OnSaved="ChildSaved" InvoiceType="InvoiceType" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="InvoicesAllModel" MultiSelection="false" Items="@data" SortMode="SortMode.Multiple" Filterable="true" Hideable="true" RowsPerPage="10" Dense="true">

                <Columns>
                    <TemplateColumn Title="Actions" CellStyle="width: 80px; min-width: 80px;" HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(async () => await View(row.Item.ID))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View Details</span>
                                    </MudMenuItem>
                                    @if (Globals.AccessLevel == 1)
                                    {
                                        <MudMenuItem OnClick="@(async () => await Edit(row.Item.ID))"
                                                     Class="menu-item edit-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" />
                                            <span>Edit</span>
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(async () => await Delete(row.Item.ID))"
                                                     Color="Color.Error"
                                                     Class="menu-item delete-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" />
                                            <span>Delete</span>
                                        </MudMenuItem>
                                        <hr />
                                        @if (row.Item.IsPostedToGL == 1)
                                        {
                                            <MudMenuItem OnClick="@(() => ViewGLEntry(row.Item.GLEntryNo, row.Item.ID))"
                                                         Class="menu-item review-item">
                                                <MudIcon Icon="@Icons.Material.Filled.ReceiptLong" Class="menu-icon" />
                                                <span>Review GL Entry</span>
                                            </MudMenuItem>
                                        }
                                        else
                                        {
                                            <MudMenuItem OnClick="@(async () => await PostToGL(row.Item.ID))"
                                                         Class="menu-item post-item">
                                                <MudIcon Icon="@Icons.Material.Filled.PostAdd" Class="menu-icon" />
                                                <span>Post to General Ledger</span>
                                            </MudMenuItem>
                                        }
                                    }
                                    <hr />
                                    <MudMenuItem OnClick="@(() => Print(row.Item.ID))"
                                                 Class="menu-item print-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Print" Class="menu-icon" />
                                        <span>Print</span>
                                    </MudMenuItem>
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Code" Title="Code" Sortable="true" Filterable="true" />
                    <TemplateColumn Title="Source" Sortable="true" Filterable="true" HeaderClass="grid-header" CellClass="grid-cell" Width="120px">
                        <CellTemplate>
                            @if (!string.IsNullOrWhiteSpace(context.Item.Source))
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Text" Color="Color.Secondary">
                                    @context.Item.Source
                                </MudChip>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                    <PropertyColumn Property="x => x.PartyName" Title="Party Name" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.TranDate" Title="Tran Date" Sortable="true" Filterable="true" Format="dd-MMM-yyy" />
                    <PropertyColumn Property="x => x.Status" Title="Status" Sortable="true" Filterable="true" />
                    <TemplateColumn Title="GL" Sortable="false" Filterable="false" HeaderClass="grid-header" CellClass="grid-cell" Width="100px">
                        <CellTemplate>
                            @if (context.Item.IsPostedToGL == 1)
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Filled" Color="Color.Success">
                                    Posted
                                </MudChip>
                            }
                            else
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Outlined" Color="Color.Default">
                                    Unposted
                                </MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="Account" Sortable="true" Filterable="true" HeaderClass="grid-header" CellClass="grid-cell" Width="150px">
                        <CellTemplate>
                            @if (!string.IsNullOrWhiteSpace(context.Item.AccountName))
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Text" Color="Color.Info">
                                    @context.Item.AccountName
                                </MudChip>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="Invoice Total" Sortable="true" Filterable="false" HeaderClass="grid-header" CellClass="grid-cell text-end" Width="120px">
                        <CellTemplate>
                            <MudText Typo="Typo.body2" Class="fw-semibold" Style="color: var(--mud-palette-primary);">
                                @context.Item.BillAmount.ToString("#,##0.00")
                            </MudText>
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="Payment Total" Sortable="true" Filterable="false" HeaderClass="grid-header" CellClass="grid-cell text-end" Width="120px">
                        <CellTemplate>
                            <MudText Typo="Typo.body2" Class="fw-semibold" Style="color: var(--mud-palette-success);">
                                @context.Item.TotalPaidAmount.ToString("#,##0.00")
                            </MudText>
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="@(InvoiceType == "PURCHASE" ? "Payable" : "Receivable")" Sortable="true" Filterable="false" HeaderClass="grid-header" CellClass="grid-cell text-end" Width="120px">
                        <CellTemplate>
                            @{
                                var balanceAmount = context.Item.BalanceAmount;
                                var balanceColor = balanceAmount > 0 
                                    ? (InvoiceType == "PURCHASE" ? "var(--mud-palette-error)" : "var(--mud-palette-success)")
                                    : (balanceAmount < 0 
                                        ? (InvoiceType == "PURCHASE" ? "var(--mud-palette-success)" : "var(--mud-palette-error)")
                                        : "var(--mud-palette-text-primary)");
                                var styleValue = $"color: {balanceColor};";
                            }
                            <MudText Typo="Typo.body2" Class="fw-bold" Style="@styleValue">
                                @balanceAmount.ToString("#,##0.00")
                            </MudText>
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="Currency" Sortable="true" Filterable="true" HeaderClass="grid-header" CellClass="grid-cell" Width="100px">
                        <CellTemplate>
                            @if (!string.IsNullOrWhiteSpace(context.Item.CurrencyCode))
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Text" Color="Color.Info">
                                    @context.Item.CurrencyCode
                                </MudChip>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="Ex. Rate" Sortable="true" Filterable="false" HeaderClass="grid-header" CellClass="grid-cell text-end" Width="100px">
                        <CellTemplate>
                            @if (context.Item.ExchangeRate != 1.0)
                            {
                                <span class="fw-semibold">@context.Item.ExchangeRate.ToString("N6")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="InvoicesAllModel" />
                    </div>
                </PagerContent>
            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

