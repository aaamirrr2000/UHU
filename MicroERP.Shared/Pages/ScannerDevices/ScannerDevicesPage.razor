@page "/ScannerDevicesPage/{Action}/{CurrentRecord?}"
@using System.Text

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
        <MudButton Variant="Variant.Filled" OnClick="GetDeviceInfo" Color="Color.Error" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
            <MudIcon Icon="@Icons.Material.Filled.NetworkPing" Class="mr-1" />
            Ping
        </MudButton>
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">

        <!-- Device Connection Panel -->
        <MudExpansionPanel Text="Device Connection" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-network-wired"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.DeviceIpAddress) ? "NO NAME" : record.DeviceIpAddress)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Scanner Devices</MudText>
                    </div>
                </div>
                
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Device IP Address</label>
                        <MudTextField id="DeviceIpAddress"
                                      @bind-Value="record.DeviceIpAddress"
                                      placeholder="Device IP Address"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.DeviceIpAddress)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">User Name</label>
                        <MudTextField id="UserName"
                                      @bind-Value="record.UserName"
                                      placeholder="User Name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.UserName)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Password</label>
                        <MudTextField id="Password"
                                      @bind-Value="record.Password"
                                      placeholder="Password"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Password)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Device Location & Assignment Panel -->
        <MudExpansionPanel Text="Device Location & Assignment" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-map-marker-alt"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Device Location & Assignment</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Device location and access settings</MudText>
                    </div>
                </div>
                
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Location</label>
                        @if (Globals.User.GroupId == 1)
                        {
                            <MudSelect @bind-Value="record.LocationId"
                                       Placeholder="Location"
                                       Variant="Variant.Outlined"
                                       Clearable="true"
                                       FullWidth="true"
                                       Class="flex-grow-1">
                                @if (Loc != null && Loc.Any())
                                {
                                    foreach (var i in Loc)
                                    {
                                        <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                    }
                                }
                            </MudSelect>
                        }
                        else
                        {
                            <MudTextField Value="@(Loc?.FirstOrDefault(l => l.Id == record.LocationId)?.Name ?? "")"
                                          Variant="Variant.Outlined"
                                          ReadOnly="true"
                                          FullWidth="true" />
                        }
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.LocationId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">In Out All</label>
                        <MudSelect T="string"
                                   @bind-Value="record.InOutAll"
                                   Placeholder="In Out All"
                                   Variant="Variant.Outlined"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            <MudSelectItem T="string" Value="@("IN")">
                                <MudIcon Icon="@Icons.Material.Filled.ArrowRightAlt" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                In
                            </MudSelectItem>
                            <MudSelectItem T="string" Value="@("OUT")">
                                <MudIcon Icon="@Icons.Material.Filled.ArrowLeft" Color="Color.Warning" Size="Size.Small" Class="me-2" />
                                Out
                            </MudSelectItem>
                            <MudSelectItem T="string" Value="@("ALL")">
                                <MudIcon Icon="@Icons.Material.Filled.SyncAlt" Color="Color.Info" Size="Size.Small" Class="me-2" />
                                All
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.InOutAll)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Device Specifications Panel -->
        <MudExpansionPanel Text="Device Specifications" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-microchip"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Device Specifications</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Device make, model, and serial information</MudText>
                    </div>
                </div>
                
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Make</label>
                        <MudTextField id="Make"
                                      @bind-Value="record.Make"
                                      placeholder="Make"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Make)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Model</label>
                        <MudTextField id="Model"
                                      @bind-Value="record.Model"
                                      placeholder="Model"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Model)" />
                        </div>
                    </div>

                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Serial</label>
                        <MudTextField id="Serial"
                                      @bind-Value="record.Serial"
                                      placeholder="Serial"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Serial)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Status Panel -->
        <MudExpansionPanel Text="Status" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-toggle-on"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Status</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Device activation status</MudText>
                    </div>
                </div>
                
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Active</label>
                        <MudSelect T="int"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Active"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.IsActive)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Device Information Panel -->
        <MudExpansionPanel Text="Device Information" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-info-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Device Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Device connection and status information</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #F44336; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 mb-3">
                        <div class="p-3 bg-light rounded shadow-sm" style="white-space: normal; min-height: 100px;">
                            @DeviceInfo
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

    </MudExpansionPanels>

</div>

@code
{
    ScannerDevicesModel record = new();
    List<OrganizationsModel> Org = new();
    List<LocationsModel> Loc = new();
    public MarkupString DeviceInfo { get; set; }

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Loc = await Functions.GetAsync<List<LocationsModel>>($"Locations/Search", true) ?? new List<LocationsModel>();

        if (Action == "INSERT")
        {
            record = new ScannerDevicesModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<ScannerDevicesModel>($"ScannerDevices/Get/{id}", true) ?? new ScannerDevicesModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {

        if (Org != null && Org.Any() && record.OrganizationId == 0)
            record.OrganizationId = Org.First().Id;
        if (Loc != null && Loc.Any() && record.LocationId == 0)
        {
            record.LocationId = Globals.User.GroupId == 1 ? Loc.First().Id : Globals.User.LocationId;
        }
        // Lock location for non-admin users
        if (Globals.User.GroupId != 1)
        {
            record.LocationId = Globals.User.LocationId;
        }


        StateHasChanged();
    }

    protected async void Clear()
    {
        Action = "INSERT";
        record = new ScannerDevicesModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
          try
          {
               LoadingPanel = true;

                record.OrganizationId = Globals.User.OrganizationId;
                record.CreatedBy = Globals.User.Id;
                record.CreatedOn = DateTime.Now;
                record.CreatedFrom = Globals.ClientInfo;
                record.UpdatedBy = Globals.User.Id;
                record.UpdatedOn = DateTime.Now;
                record.UpdatedFrom = Globals.ClientInfo;

                string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
                var result = await Functions.PostAsync<ScannerDevicesModel>($"ScannerDevices/{url}", record, true);
                if (result.Success == false)
                {
                    SnackbarService.Add($"Record Not Saved", Severity.Error);
                }
                else
                {
                    await OnSaved.InvokeAsync();
                    SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                    if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                        await Edit(result.Result!.Id);
                    else
                    {
                         Clear();
                    }
                }
          }
          catch (Exception ex)
          {
              Log.Warning($"Error: {ex.Message}");        
          }
          finally
          {
              LoadingPanel = false;
  

          }

     }

    private async Task GetDeviceInfo()
    {
        try
        {
            DeviceInfo = (MarkupString)"Please Wait";
            LoadingPanel = true;
            var result = await Functions.GetAsync<DeviceInfoModel>($"ScannerDevices/ScannerDeviceDetails/{record.Id}", true);
            if (result == null)
            {
                DeviceInfo = (MarkupString)"⚠️ No device info found or connection failed.";
            }
            else
            {
                var d = result;
                var sb = new StringBuilder();

                sb.AppendLine("🔍📟  <b>Device Information</b><br>");
                sb.AppendLine("━━━━━━━━━━━━━━━━━━━━━━━━━━━<br>");
                sb.AppendLine($"🏷️  <b>Name:</b> {d.DeviceName}<br>");
                sb.AppendLine($"🧩  <b>Model:</b> {d.Model}<br>");
                sb.AppendLine($"⚙️  <b>Type:</b> {d.DeviceType}<br>");
                sb.AppendLine($"🔹 <b>Sub Type:</b> {d.SubDeviceType}<br>");
                sb.AppendLine($"🔖 <b>Serial Number:</b> {d.SerialNumber}<br>");
                sb.AppendLine($"🔗 <b>MAC Address:</b> {d.MacAddress}<br>");
                sb.AppendLine($"💾 <b>Firmware Version:</b> {d.FirmwareVersion}<br>");
                sb.AppendLine($"📅 <b>Firmware Release:</b> {d.FirmwareReleasedDate}<br>");
                sb.AppendLine($"🎞️ <b>Encoder Version:</b> {d.EncoderVersion}<br>");
                sb.AppendLine($"📆 <b>Encoder Release:</b> {d.EncoderReleasedDate}<br>");
                sb.AppendLine($"🏭 <b>Manufacturer:</b> {d.Manufacturer}<br>");
                sb.AppendLine($"🆔 <b>Device ID:</b> {d.DeviceID}<br>");
                sb.AppendLine($"🔢 <b>Telecontrol ID:</b> {d.TelecontrolID}<br>");
                sb.AppendLine($"🔔 <b>Relay Count:</b> {d.RelayNum}<br>");
                sb.AppendLine($"🚨 <b>Alarm Outputs:</b> {d.AlarmOutNum}<br>");
                sb.AppendLine($"📍 <b>Local Zones:</b> {d.LocalZoneNum}<br>");
                sb.AppendLine($"🌐 <b>Market Type:</b> {d.MarketType}<br>");
                sb.AppendLine("━━━━━━━━━━━━━━━━━━━━━━━━━━━<br>");
                sb.AppendLine($"📦 <b>Version:</b> {d.Version}<br>");

                DeviceInfo = (MarkupString)sb.ToString();
            }
        }
        catch (Exception ex)
        {
            DeviceInfo = (MarkupString)$"⚠️ {ex.Message}";
        }
        finally
        {
            LoadingPanel = false;

        }

    }
}

