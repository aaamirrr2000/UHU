@code
{
    List<PettyCashModel> data = new();
    PettyCashModel record = new();
    List<CurrenciesModel> Currencies = new();

    public DateTime? startDate { get; set; } = DateTime.Today;
    public DateTime? endDate { get; set; } = DateTime.Today;

    public string? Action { get; set; } = "INSERT";
    private bool _isSaving = false;

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "PettyCashDashboard");
        Currencies = await Functions.GetAsync<List<CurrenciesModel>>($"Currencies/Search", true) ?? new List<CurrenciesModel>();
        await GetAll();
    }

    private string GetCurrencyCode(int currencyId)
    {
        if (currencyId == 0) return "-";
        var currency = Currencies.FirstOrDefault(c => c.Id == currencyId);
        return currency?.Code ?? "-";
    }

    protected async Task PrintSummary()
    {
        NavManager.NavigateTo("/PettyCashSummary");
    }

    protected async Task GetAll()
    {
        try
        {
            if (!startDate.HasValue || !endDate.HasValue)
            {
                SnackbarService.Add("Please select both start and end dates.", Severity.Warning);
                return;
            }

            if (startDate > endDate)
            {
                SnackbarService.Add("Start date must be earlier than end date.", Severity.Warning);
                return;
            }

            string formattedStartDate = startDate.Value.ToString("yyyy-MM-dd");
            string formattedEndDateNextDay = endDate.Value.Date.AddDays(1).ToString("yyyy-MM-dd");

            string Criteria = string.Empty;
            LoadingPanel = true;

            Criteria = $"TranDate >= CAST('{formattedStartDate}' AS DATE) AND TranDate < CAST('{formattedEndDateNextDay}' AS DATE)";

            if (Globals.User.GroupId != 1)
            {
                Criteria += $" AND LocationId = {Globals.User.LocationId}";
            }

            string encodedCriteria = Uri.EscapeDataString(Criteria);
            string apiUrl = $"PettyCash/Search/{encodedCriteria}";

            data = await Functions.GetAsync<List<PettyCashModel>>(apiUrl, true) ?? new List<PettyCashModel>();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading data: {ex.Message}", Severity.Error);
            data = new List<PettyCashModel>();
        }
        finally
        {
            LoadingPanel = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PettyCashModel>($"PettyCash/Get/{id}", true) ?? new PettyCashModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PettyCashModel();
        isReadOnly = false;
        
        // Default values handled by Page component or set here if needed
        record.TranDate = DateTime.Now;
        record.LocationId = Globals.User.LocationId;
        
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        if (record.IsPostedToGL == 1)
        {
            SnackbarService.Add("This entry has been posted to General Ledger and cannot be edited.", Severity.Warning);
            Action = "VIEW";
            isReadOnly = true;
        }
        else
        {
            Action = "UPDATE";
            isReadOnly = false;
        }
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        if(record.Id != id) {
             await Get(id);
        }
        
        await Save();
    }

    protected void Print(int id)
    {
        NavManager.NavigateTo($"/PettyCashReport/{id}");
    }

    protected async Task Save()
    {
        if (_isSaving) return;
        _isSaving = true;
        try
        {
            LoadingPanel = true;
            
            // Validate period before saving
            string moduleType = "PETTYCASH";
            string dateStr = record.TranDate.Value.ToString("yyyy-MM-dd");
            var periodResult = await Functions.GetAsync<PeriodCloseModel>(
                $"PeriodClose/GetOpenPeriod/{record.OrganizationId}/{dateStr}/{moduleType}", 
                true);

            if (periodResult == null || periodResult.Id == 0 || 
                (periodResult.Status?.ToUpper() != "OPEN" && periodResult.Status?.ToUpper() != "OPEN_PENDING"))
            {
                 SnackbarService.Add($"Period is CLOSED for {moduleType} on {dateStr}. Cannot save.", Severity.Error);
                 return;
            }

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = Action;
            // Handle specific action strings if needed, defaulting to Action
            
            var result = await Functions.PostAsync<PettyCashModel>($"PettyCash/{Action}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message ?? "Operation Failed"}", Severity.Error);
            }
            else
            {
                SnackbarService.Add($"Operation Successful", Severity.Success);
                if (Action == "INSERT")
                {
                     // If insert, keep drawer open and switch to edit? or close? 
                     // Usually close or switch to edit. Let's switch to edit to allow print/post
                     await Get(result.Result!.Id);
                     Action = "UPDATE";
                }
                else if (Action == "SOFTDELETE")
                {
                    await _drawer.CloseDrawerAsync();
                }
                else
                {
                     // Update, reload
                     await Get(record.Id);
                }
                
                // Refresh grid
                await GetAll();
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
            _isSaving = false;
            StateHasChanged();
        }
    }

    protected async Task PostToGL(int pettyCashId)
    {
        try
        {
            var res = await Functions.ShowConfirmation(dialogService, "Do you want to post this pettycash entry to General Ledger? Once posted, it cannot be edited or deleted.");
            if (res == false)
                return;

            LoadingPanel = true;
            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>(
                $"GeneralLedger/CreateGLFromPettyCash/{pettyCashId}?userId={Globals.User.Id}&clientInfo={Uri.EscapeDataString(Globals.ClientInfo)}", 
                null, 
                true);
            LoadingPanel = false;

            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                SnackbarService.Add("Pettycash entry posted to General Ledger successfully", Severity.Success);
                await GetAll();
                
                // If drawer is open for this record, refresh it
                if (_drawer.Open && record.Id == pettyCashId)
                {
                    await Get(pettyCashId);
                }
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    protected async Task ShowGLPreview()
    {
         if (record.Id > 0 && record.IsPostedToGL == 1)
         {
             await ViewGLEntry(record.Id, record.GLEntryNo);
             return;
         }

        try
        {
            // Validate required fields
            if (record.AccountId == 0 || record.EmployeeId == 0 || record.Amount == 0)
            {
                SnackbarService.Add("Please fill all required fields", Severity.Warning);
                return;
            }

            LoadingPanel = true;
            // Ensure OrgId is set
            if (record.OrganizationId == 0) record.OrganizationId = Globals.User.OrganizationId;

            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>("GeneralLedger/PreviewGLFromPettyCash", record, true);
            LoadingPanel = false;

            if (result.Success && result.Result != null)
            {
                var parameters = new DialogParameters<InvoiceGLPreviewDialog>
                {
                    { x => x.PreviewData, result.Result },
                    { x => x.RecordId, record.Id },
                    { x => x.IsPostedToGL, record.IsPostedToGL == 1 },
                    { x => x.OnPostToGL, EventCallback.Factory.Create(this, async () => 
                    {
                        if (record.Id == 0)
                        {
                            SnackbarService.Add("Please save the entry before posting", Severity.Warning);
                            return;
                        }
                        await PostToGL(record.Id);
                    }) }
                };

                var options = new DialogOptions()
                {
                    MaxWidth = MaxWidth.Large,
                    FullWidth = true,
                    CloseButton = true,
                    CloseOnEscapeKey = true,
                    BackdropClick = false,
                    Position = DialogPosition.Center
                };

                await dialogService.ShowAsync<InvoiceGLPreviewDialog>("Accounting Entry Preview", parameters, options);
            }
            else
            {
                SnackbarService.Add($"Unable to generate preview: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error generating preview: {ex.Message}", Severity.Error);
        }
    }

    protected async Task ViewGLEntry(int id, string glEntryNo)
    {
        if (string.IsNullOrWhiteSpace(glEntryNo)) return;

        try
        {
            var stub = new PettyCashModel
            {
                Id = id,
                OrganizationId = Globals.User.OrganizationId,
                IsPostedToGL = 1,
                GLEntryNo = glEntryNo
            };

            LoadingPanel = true;
            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>("GeneralLedger/PreviewGLFromPettyCash", stub, true);
            LoadingPanel = false;

            if (result.Success == true && result.Result != null)
            {
                var parameters = new DialogParameters
                {
                    ["PostedData"] = result.Result
                };
                var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Large, FullWidth = true };
                dialogService.Show<MicroERP.Shared.Pages.Invoices.InvoiceGLPostedDialog>("Posted Accounting Entry", parameters, options);
            }
            else
            {
                SnackbarService.Add($"Error loading GL entry: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error loading GL entry: {ex.Message}", Severity.Error);
        }
    }

