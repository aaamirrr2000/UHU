@page "/PettyCashDashboard"
@using MicroERP.Shared.Models
@using MicroERP.Shared.Pages.Invoices

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h5" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.AccountBalanceWallet" Class="me-2" Style="color: white;" />
                    Petty Cash Management
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Manage petty cash transactions and entries</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0 flex-wrap">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <MudDatePicker @bind-Date="startDate"
                                   @bind-Date:after="OnStartDateChanged"
                                   Label="Start Date" DateFormat="dd MMM yyyy" Variant="Variant.Outlined" />
                    <MudDatePicker @bind-Date="endDate"
                                   @bind-Date:after="OnEndDateChanged"
                                   Label="End Date" DateFormat="dd MMM yyyy" Variant="Variant.Outlined" />
                </div>
                @if (Globals.AccessLevel == 1)
                {
                    <MudButton StartIcon="@Icons.Material.TwoTone.Add"
                               Size="Size.Small"
                               Variant="Variant.Filled"
                               Color="Color.Success"
                               Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                               OnClick="@(() => Clear())">
                        New
                    </MudButton>
                }
                <MudButton StartIcon="@Icons.Material.TwoTone.Print" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => PrintSummary())">
                    Print
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    <MyDrawer @ref="_drawer" Title="Petty Cash" FaIcon="fas fa-money-bill-wave">
        <HeaderContent>
             @if (Action != "VIEW" && Globals.AccessLevel == 1)
            {
                <MudButton Variant="Variant.Filled"
                           Color="Color.Success"
                           Size="Size.Small"
                           OnClick="Save"
                           Disabled="@_isSaving"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white; margin-right: 8px;">
                    <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                    @(_isSaving ? "Saving..." : (Action == "INSERT" ? "Save" : "Update"))
                </MudButton>

                <MudButton Variant="Variant.Filled"
                           Color="Color.Info"
                           Size="Size.Small"
                           OnClick="ShowGLPreview"
                           Disabled="@(_isSaving || record?.AccountId == 0 || record?.EmployeeId == 0 || record?.Amount == 0)"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white; margin-right: 8px;">
                    <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="mr-1" />
                    @(record.Id > 0 && record?.IsPostedToGL == 1 ? "View GL" : "Preview GL")
                </MudButton>

                @if (record.Id > 0)
                {
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Info"
                               Size="Size.Small"
                               OnClick="@(() => Print(record.Id))"
                               Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white; margin-right: 8px;">
                        <MudIcon Icon="@Icons.Material.Filled.Print" Class="mr-1" />
                        Print
                    </MudButton>
                }

                @if (Action == "UPDATE" && record.IsPostedToGL == 0)
                {
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => Delete(record.Id))"
                               Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;">
                        <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                        Delete
                    </MudButton>
                }
            }
        </HeaderContent>
        <ChildContent>
             <PettyCashPage Model="@record" Action="@Action" CurrentRecord="@record.Id" />
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="PettyCashModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="10"
                         Dense="true"
                         Striped="true"
                         Hover="true"
                         Class="professional-grid elevation-8">

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 80px; min-width: 80px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(() => View(row.Item.Id))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View</span>
                                    </MudMenuItem>
                                    @if (row.Item.IsPostedToGL == 1 && !string.IsNullOrWhiteSpace(row.Item.GLEntryNo))
                                    {
                                        <MudMenuItem OnClick="@(() => ViewGLEntry(row.Item.Id, row.Item.GLEntryNo))"
                                                     Class="menu-item gl-item">
                                            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="menu-icon" />
                                            <span>View GL Entry: @row.Item.GLEntryNo</span>
                                        </MudMenuItem>
                                    }
                                    @if (row.Item.Source == "PETTY CASH")
                                    {
                                        @if (row.Item.IsPostedToGL == 0)
                                        {
                                            @if (Globals.AccessLevel == 1)
                                            {
                                                <MudMenuItem OnClick="@(() => Edit(row.Item.Id))"
                                                             Class="menu-item edit-item">
                                                    <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" />
                                                    <span>Edit</span>
                                                </MudMenuItem>
                                            
                                                <MudMenuItem OnClick="@(() => Delete(row.Item.Id))"
                                                Color="Color.Error"
                                                Class="menu-item delete-item">
                                                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" />
                                                    <span>Delete</span>
                                                </MudMenuItem>
                                                <hr />
                                            }
                                            @if (Globals.AccessLevel == 1)
                                            {
                                                <MudMenuItem OnClick="@(() => PostToGL(row.Item.Id))"
                                                             Class="menu-item post-item">
                                                    <MudIcon Icon="@Icons.Material.Filled.PostAdd" Class="menu-icon" />
                                                    <span>Post to General Ledger</span>
                                                </MudMenuItem>
                                            }
                                        }
                                        else
                                        {
                                            <MudMenuItem Disabled="true"
                                                         Class="menu-item disabled-item">
                                                <MudIcon Icon="@Icons.Material.Filled.Lock" Class="menu-icon" />
                                                <span>Posted to GL - Cannot Edit/Delete</span>
                                            </MudMenuItem>
                                        }
                                    }
                                    <hr />
                                    <MudMenuItem OnClick="@(() => Print(row.Item.Id))"
                                                 Class="menu-item print-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Print" Class="menu-icon" />
                                        <span>Print</span>
                                    </MudMenuItem>
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.SeqNo"
                                    Title="Seq No"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="80px" />

                    <PropertyColumn Property="x => x.TranDate"
                                    Title="Transaction Date"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Format="dd MMM yyyy"
                                    Width="120px" />

                    @if (Globals.User.GroupId == 1)
                    {
                        <PropertyColumn Property="x => x.LocationName"
                                        Title="Location"
                                        Sortable="true"
                                        Filterable="true"
                                        HeaderClass="grid-header"
                                        CellClass="grid-cell"
                                        Width="200px" />
                    }

                    <PropertyColumn Property="x => x.EmployeeName"
                                    Title="Employee"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="200px" />

                    <PropertyColumn Property="x => x.Description"
                                    Title="Description"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="200px" />

                    <TemplateColumn Title="Account"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="150px">
                        <CellTemplate>
                            @if (!string.IsNullOrWhiteSpace(context.Item.AccountName))
                            {
                                <MudChip Size="Size.Small" Color="Color.Info" Variant="Variant.Outlined">
                                    @context.Item.AccountName
                                </MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Transaction Type"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="120px">
                        <CellTemplate>
                            @if (context.Item.TranType?.ToUpper() == "RECEIPT")
                            {
                                <MudChip Size="Size.Small" Color="Color.Success" Variant="Variant.Filled">
                                    @context.Item.TranType
                                </MudChip>
                            }
                            else if (context.Item.TranType?.ToUpper() == "PAYMENT")
                            {
                                <MudChip Size="Size.Small" Color="Color.Error" Variant="Variant.Filled">
                                    @context.Item.TranType
                                </MudChip>
                            }
                            else
                            {
                                <MudChip Size="Size.Small" Color="Color.Default" Variant="Variant.Filled">
                                    @context.Item.TranType
                                </MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.PaymentMethod"
                                    Title="Payment Method"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="130px" />

                    <PropertyColumn Property="x => x.RefNo"
                                    Title="Reference #"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="120px" />

                    <TemplateColumn Title="Receipts"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell text-end"
                                    Width="120px">
                        <CellTemplate>
                            @if (context.Item.TranType?.ToUpper() == "RECEIPT")
                            {
                                <span class="text-success fw-bold">@Math.Abs((decimal)context.Item.Amount).ToString("N2")</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Payments"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell text-end"
                                    Width="120px">
                        <CellTemplate>
                            @if (context.Item.TranType?.ToUpper() == "PAYMENT")
                            {
                                <span class="text-danger fw-bold">@Math.Abs((decimal)context.Item.Amount).ToString("N2")</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Currency"
                                    Sortable="false"
                                    Filterable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="100px">
                        <CellTemplate>
                            @{
                                var currencyId = context.Item.EnteredCurrencyId > 0 ? context.Item.EnteredCurrencyId : context.Item.BaseCurrencyId;
                            }
                            @if (currencyId > 0)
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Text" Color="Color.Info">
                                    @(GetCurrencyCode(currencyId))
                                </MudChip>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Rate"
                                    Sortable="false"
                                    Filterable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell text-end"
                                    Width="100px">
                        <CellTemplate>
                            @if (context.Item.ExchangeRate != 1.0)
                            {
                                <span class="fw-semibold">@context.Item.ExchangeRate.ToString("N6")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="PettyCashModel" Class="grid-pager" />
                    </div>
                </PagerContent>

            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

<style>
    .dashboard-header {
        padding: 20px;
        background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 8px;
    }

    .dashboard-header .mud-typography {
        color: white !important;
    }

    .dashboard-header .text-muted {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    /* Dark mode adjustments */
    .mud-theme-dark .dashboard-header {
        background: linear-gradient(135deg, var(--mud-palette-primary-darken) 0%, var(--mud-palette-primary) 100%);
    }
