@page "/SystemConfigurationPage/{Action}/{CurrentRecord?}"
@using Microsoft.AspNetCore.Components.Forms

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <EditForm Model="record">
    <MudGrid>
        <!-- Basic Details Card -->
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Configuration Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">System configuration settings</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudSelect T="string"
                                   Label="Category"
                                   @bind-Value="record.Category"
                                   Placeholder="Select category"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   Required="true"
                                   FullWidth="true"
                                   Class="mb-3">
                            <MudSelectItem T="string" Value="@("Backup")">Backup</MudSelectItem>
                            <MudSelectItem T="string" Value="@("Images")">Images</MudSelectItem>
                            <MudSelectItem T="string" Value="@("Email")">Email</MudSelectItem>
                            <MudSelectItem T="string" Value="@("FTP")">FTP</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.Category)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Configuration Key"
                                      @bind-Value="record.ConfigKey"
                                      Placeholder="Enter configuration key"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Required="true"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.ConfigKey)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Configuration Value"
                                      @bind-Value="record.ConfigValue"
                                      Placeholder="Enter configuration value"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Required="true"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.ConfigValue)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Description"
                                      @bind-Value="record.Description"
                                      Placeholder="Enter description"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Lines="3"
                                      FullWidth="true"
                                      Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Activation Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   Required="true"
                                   FullWidth="true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
    </EditForm>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    SystemConfigurationModel record = new();

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public SystemConfigurationModel? Model { get; set; }
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "SystemConfigurationDashboard");
        await GetAll();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Model != null)
        {
            record = Model;
        }
        else if (CurrentRecord > 0 && (record.Id != CurrentRecord || record.Id == 0))
        {
            await Get(CurrentRecord);
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Model != null)
        {
            record = Model;
        }
        else if (Action == "INSERT")
        {
            record = new SystemConfigurationModel();
            record.IsActive = 1;
            record.OrganizationId = Globals.User.OrganizationId;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<SystemConfigurationModel>($"SystemConfiguration/Get/{id}", true) ?? new SystemConfigurationModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (record.OrganizationId == 0)
            record.OrganizationId = Globals.User.OrganizationId;

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new SystemConfigurationModel();
        record.IsActive = 1;
        record.OrganizationId = Globals.User.OrganizationId;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<SystemConfigurationModel>($"SystemConfiguration/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
