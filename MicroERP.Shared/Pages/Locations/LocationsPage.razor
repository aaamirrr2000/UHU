@page "/LocationsPage/{Action}/{CurrentRecord?}"
@using Microsoft.AspNetCore.Components.Forms

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <EditForm Model="record">
    <MudExpansionPanels MultiExpansion="true">
        <MudGrid>
        <!-- Location Information Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Location Information" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.LocationOn" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Location Information</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="Code"
                                      @bind-Value="record.Code"
                                      Placeholder="Enter location code"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Code)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Name"
                                      @bind-Value="record.Name"
                                      Placeholder="Enter location name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Name)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Address"
                                      @bind-Value="record.Address"
                                      Placeholder="Enter address"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Lines="3"
                                      FullWidth="true" />
                        <ValidationMessage For="@(() => record.Address)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>

        <!-- Contact Person Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Contact Person" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.ContactPhone" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Contact Person</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="POC Name"
                                      @bind-Value="record.PocName"
                                      Placeholder="Enter POC name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.PocName)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="POC Email"
                                      @bind-Value="record.PocEmail"
                                      Placeholder="Enter POC email"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.PocEmail)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="POC Phone"
                                      @bind-Value="record.PocPhone"
                                      Placeholder="Enter POC phone"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true" />
                        <ValidationMessage For="@(() => record.PocPhone)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>

        <!-- Location Type & Classification Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Location Type" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Category" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Location Type</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="string"
                                   Label="Location Type"
                                   @bind-Value="record.LocationType"
                                   Placeholder="Select location type"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true">
                            @if (Loc != null && Loc.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.LocationType))
                                {
                                    record.LocationType = Loc.First().ListValue;
                                }
                                foreach (var i in Loc)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.LocationType)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>

        <!-- Geolocation Settings Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Geolocation Settings" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Public" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Geolocation Settings</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField Label="Latitude"
                                      @bind-Value="record.Latitude"
                                      Placeholder="Enter latitude"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Latitude)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Longitude"
                                      @bind-Value="record.Longitude"
                                      Placeholder="Enter longitude"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Longitude)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudNumericField Label="Radius"
                                         @bind-Value="record.Radius"
                                         Placeholder="0.00"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="true" />
                        <ValidationMessage For="@(() => record.Radius)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>

        <!-- Status Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Status" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.ToggleOn" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Status</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>
        </MudGrid>
    </MudExpansionPanels>
    </EditForm>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    LocationsModel record = new();
    List<TypeCodeModel> Loc = null!;

    [Parameter] public LocationsModel? Model { get; set; }
    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Model != null)
        {
            record = Model;
        }
        else if (CurrentRecord > 0 && (record.Id != CurrentRecord || record.Id == 0))
        {
            await Get(CurrentRecord);
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Loc = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/LOCATION TYPE", true) ?? new List<TypeCodeModel>();

        if (Action == "INSERT" && Model == null)
        {
            record = new LocationsModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<LocationsModel>($"Locations/Get/{id}", true) ?? new LocationsModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new LocationsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<LocationsModel>($"Locations/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
