@page "/CurrenciesPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">


    <MudGrid>
        <!-- Currency Information Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.AttachMoney" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Currency Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Currency identification details</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField Label="Code"
                                      @bind-Value="record.Code"
                                      Placeholder="Enter currency code"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Code)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Name"
                                      @bind-Value="record.Name"
                                      Placeholder="Enter currency name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Name)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Symbol"
                                      @bind-Value="record.Symbol"
                                      Placeholder="Enter currency symbol"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Symbol)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Country"
                                      @bind-Value="record.Country"
                                      Placeholder="Enter country"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true" />
                        <ValidationMessage For="@(() => record.Country)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Currency Settings Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" 
                             Size="Size.Large" 
                             Color="Color.Info" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Currency Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Base currency and status</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="int"
                                   Label="Is Base Currency"
                                   @bind-Value="record.IsBaseCurrency"
                                   Placeholder="Select base currency"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="mb-3">
                            @if (record.IsBaseCurrency != 0 && record.IsBaseCurrency != 1)
                            {
                                record.IsBaseCurrency = 0;
                            }
                            <MudSelectItem T="int" Value="1">Yes</MudSelectItem>
                            <MudSelectItem T="int" Value="0">No</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsBaseCurrency)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    CurrenciesModel record = new();

    [Parameter] public CurrenciesModel? Model { get; set; }
    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }
    private MyDrawer _drawer = new();

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Model != null)
        {
            record = Model;
        }
        else if (CurrentRecord > 0 && (record.Id != CurrentRecord || record.Id == 0))
        {
            await Get(CurrentRecord);
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Action == "INSERT" && Model == null)
        {
            record = new CurrenciesModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<CurrenciesModel>($"Currencies/Get/{id}", true) ?? new CurrenciesModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new CurrenciesModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<CurrenciesModel>($"Currencies/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
