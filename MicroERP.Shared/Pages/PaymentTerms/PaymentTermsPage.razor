@page "/PaymentTermsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">


    <MudExpansionPanels MultiExpansion="true">
        <MudGrid>
        <!-- Payment Term Information Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Payment Term Information" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Receipt" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Payment Term Information</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="Code"
                                     @bind-Value="record.Code"
                                     Placeholder="Code"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                        <ValidationMessage For="@(() => record.Code)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Description"
                                     @bind-Value="record.Description"
                                     Placeholder="Description"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                        <ValidationMessage For="@(() => record.Description)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>

        <!-- Payment Settings Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Payment Settings" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.CalendarToday" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Payment Settings</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12">
                        <MudNumericField T="int"
                                         Label="Days Due"
                                         @bind-Value="record.DaysDue"
                                         Placeholder="Days Due"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        <ValidationMessage For="@(() => record.DaysDue)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>

        <!-- Default & Status Settings Panel -->
        <MudItem xs="12" md="6">
            <MudExpansionPanel Text="Default & Status Settings" Expanded="true">
                <TitleContent>
                    <div class="d-flex align-items-center">
                        <MudIcon Icon="@Icons.Material.Filled.Settings" class="mr-3" />
                        <MudText Typo="Typo.h6" Class="mb-0">Default & Status Settings</MudText>
                    </div>
                </TitleContent>
                <ChildContent>

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="IsDefault"
                                   @bind-Value="record.IsDefault"
                                   Placeholder="Default"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            @if (record.IsDefault != 0 && record.IsDefault != 1)
                            {
                                record.IsDefault = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.StarOutline" Color="Color.Default" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsDefault)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="IsActive"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Active"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
                </ChildContent>
            </MudExpansionPanel>
        </MudItem>
        </MudGrid>
    </MudExpansionPanels>
</MudContainer>

@code
{
    PaymentTermsModel record = new();

    [Parameter] public PaymentTermsModel? Model { get; set; }
    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Model != null)
        {
            record = Model;
        }
        else if (CurrentRecord > 0 && (record.Id != CurrentRecord || record.Id == 0))
        {
            await Get(CurrentRecord);
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Action == "INSERT" && Model == null)
        {
            record = new PaymentTermsModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PaymentTermsModel>($"PaymentTerms/Get/{id}", true) ?? new PaymentTermsModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PaymentTermsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<PaymentTermsModel>($"PaymentTerms/{url}", record, true);
            if (result.Success == false)
            {
                await Functions.ShowMessage(dialogService, "error", $"Record Not Saved");
            }
            else
            {
                await OnSaved.InvokeAsync();
                await Functions.ShowMessage(dialogService, "success", $"Record {Action} Successfully");
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
