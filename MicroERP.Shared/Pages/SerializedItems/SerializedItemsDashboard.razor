@code {
    private MyDrawer? _drawer;
    private List<SerializedItemModel> AllData = new();
    private List<SerializedItemModel> data = new();
    private SerializedItemModel record = new();
    private string Action = "INSERT";
    private bool LoadingPanel = false;
    private string searchString = "";

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "SerializedItemsDashboard");
        await GetAll();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        var result = await Functions.GetAsync<List<SerializedItemModel>>($"SerializedItems/Search/OrganizationId={Globals.User.OrganizationId} AND IsSoftDeleted=0", true);
        AllData = result ?? new List<SerializedItemModel>();
        data = AllData;
        LoadingPanel = false;
        StateHasChanged();
    }

    private void FilterData()
    {
        if (string.IsNullOrWhiteSpace(searchString))
        {
            data = AllData.ToList();
        }
        else
        {
            var search = searchString.ToLower();
            data = AllData.Where(x =>
                (x.SerialNumber?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.ItemName?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.LocationName?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.Status?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.PartyName?.Contains(search, StringComparison.OrdinalIgnoreCase) == true)
            ).ToList();
        }

        StateHasChanged();
    }

    protected void Clear()
    {
        Action = "INSERT";
        record = new SerializedItemModel();
        record.OrganizationId = Globals.User.OrganizationId;
        record.Status = "AVAILABLE";
        _drawer?.OpenDrawerAsync();
        StateHasChanged();
    }

    protected async Task Edit(int id)
    {
        Action = "UPDATE";
        LoadingPanel = true;
        record = await Functions.GetAsync<SerializedItemModel>($"SerializedItems/Get/{id}", true) ?? new SerializedItemModel();
        LoadingPanel = false;
        _drawer?.OpenDrawerAsync();
        StateHasChanged();
    }

    protected async Task View(int id)
    {
        Action = "VIEW";
        LoadingPanel = true;
        record = await Functions.GetAsync<SerializedItemModel>($"SerializedItems/Get/{id}", true) ?? new SerializedItemModel();
        LoadingPanel = false;
        _drawer?.OpenDrawerAsync();
        StateHasChanged();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete this record?");
        if (res == false)
            return;

        LoadingPanel = true;
        record = await Functions.GetAsync<SerializedItemModel>($"SerializedItems/Get/{id}", true) ?? new SerializedItemModel();
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedFrom = Globals.ClientInfo;
        record.IsSoftDeleted = 1;

        var result = await Functions.PostAsync<SerializedItemModel>($"SerializedItems/SoftDelete", record, true);
        LoadingPanel = false;

        if (result.Success == false)
        {
            SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
        }
        else
        {
            SnackbarService.Add("Record Deleted Successfully", Severity.Success);
            await GetAll();
        }
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task Save()
    {
        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Globals.ClientInfo;

        LoadingPanel = true;
        var result = await Functions.PostAsync<SerializedItemModel>($"SerializedItems/{Action}", record, true);
        LoadingPanel = false;

        if (result.Success == false || result.Result == null)
        {
            SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
        }
        else
        {
            SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
            await GetAll();
            if (_drawer != null)
            {
                await _drawer.CloseDrawerAsync();
            }
        }
    }

    private async Task ChildSaved()
    {
        await GetAll();
        if (_drawer != null)
        {
            await _drawer.CloseDrawerAsync();
        }
        StateHasChanged();
    }

    private Color GetStatusColor(string? status)
    {
        return status?.ToUpper() switch
        {
            "AVAILABLE" => Color.Success,
            "RESERVED" => Color.Warning,
            "SOLD" => Color.Info,
            "DAMAGED" => Color.Error,
            "RETURNED" => Color.Secondary,
            _ => Color.Default
        };
    }
}

