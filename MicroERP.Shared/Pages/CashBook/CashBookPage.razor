@page "/CashBookPage/{Action}/{CurrentRecord?}"

@using MicroERP.Shared.Models
@using MicroERP.Shared.Pages.Invoices
@using Microsoft.AspNetCore.Components.Forms
@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject FileUploadService FileUploadService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">
    <EditForm Model="Model">
        <!-- Period Validation Warning -->
        @if (!string.IsNullOrWhiteSpace(PeriodValidationMessage))
        {
            <MudAlert Severity="Severity.Warning" Class="mb-2" Variant="Variant.Outlined" Dense="true">
                <MudText Typo="Typo.body2">@PeriodValidationMessage</MudText>
            </MudAlert>
        }
        else if (PeriodValidationChecked && Model?.TranDate != null && Model.OrganizationId > 0)
        {
            <MudAlert Severity="Severity.Success" Class="mb-2" Variant="Variant.Outlined" Dense="true">
                <MudText Typo="Typo.body2">âœ“ Period is OPEN - You can save transactions for this date.</MudText>
            </MudAlert>
        }

    <br />

    <MudExpansionPanel Text="Transaction Details" Expanded="true" Style="margin-bottom:10px;">
        <TitleContent>
            <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                <i class="fa fa-file-invoice"
                   style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                </i>
                <div class="ms-2">
                    <MudText Typo="Typo.h6" Class="fw-bold">Transaction Details</MudText>
                    <MudText Typo="Typo.caption" Class="text-muted">Enter all transaction information</MudText>
                </div>
            </div>
            
        </TitleContent>

        <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="string"
                                   @bind-Value="Model.TranType"
                                   Placeholder="Transaction Type"
                                   Variant="Variant.Outlined"
                                   Label="Transaction Type *"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1"
                                   @bind-Value:after="OnTransactionTypeChanged">
                            @if (Tra != null && Tra.Any())
                            {
                                if (string.IsNullOrWhiteSpace(Model.TranType))
                                {
                                    Model.TranType = Tra.First().ListValue;
                                }
                                foreach (var i in Tra)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.TranType)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudDatePicker @bind-Date="Model.TranDate"
                                       @bind-Date:after="OnTranDateChanged" DateFormat="dd MMM yyyy"
                                       placeholder="Transaction Date"
                                       ReadOnly="@isReadOnly" Variant="Variant.Outlined"
                                       Label="Transaction Date *"
                                       Class="flex-grow-1"></MudDatePicker>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.TranDate)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudNumericField @bind-Value="Model.Amount"
                                         placeholder="Amount"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         Label="Amount *"
                                         FullWidth="true"
                                         Class="flex-grow-1"></MudNumericField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.Amount)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        @if (Globals.User.GroupId == 1)
                        {
                            <AutoComplete TItem="LocationsModel"
                                          DataList="@Loc"
                                          DisplayProperty="@(p => p.Name)"
                                          IdProperty="@(p => p.Id)"
                                          @bind-SelectedId="Model.LocationId"
                                          Variant="Variant.Outlined"
                                          Label="Location *"
                                          FullWidth="true" />
                        }
                        else
                        {
                            <MudTextField Value="@(Loc.FirstOrDefault(l => l.Id == Model.LocationId)?.Name ?? "")"
                                          Variant="Variant.Outlined"
                                          Label="Location *"
                                          ReadOnly="true"
                                          FullWidth="true" />
                        }
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.LocationId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect @bind-Value="Model.AccountId"
                                   @key="Model.AccountId"
                                   @bind-Value:after="OnAccountChanged"
                                   Placeholder="@(string.IsNullOrEmpty(filterCOA) ? "Select Account" : filterCOA.Replace("'", "").Replace("InterfaceType=", ""))"
                                   Variant="Variant.Outlined"
                                   Label="Account *"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Acc != null && Acc.Any())
                            {
                                foreach (var i in Acc)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.AccountId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="string"
                                   @bind-Value="Model.PaymentMethod"
                                   Placeholder="Payment Method"
                                   Variant="Variant.Outlined"
                                   Label="Payment Method *"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (pm != null && pm.Any())
                            {
                                if (string.IsNullOrWhiteSpace(Model.PaymentMethod))
                                {
                                    Model.PaymentMethod = pm.First().Name ?? "";
                                }
                                foreach (var i in pm)
                                {
                                    <MudSelectItem T="string" Value="@i.Name">@i.Name</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.PaymentMethod)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-4 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1" style="font-size: 0.85rem;">Currency</label>
                        <div class="d-flex align-items-center gap-2">
                            <MudText Typo="Typo.body2" Class="fw-bold">
                                @(Currencies.FirstOrDefault(c => c.Id == Model.EnteredCurrencyId)?.DisplayName ?? Currencies.FirstOrDefault(c => c.Id == Model.BaseCurrencyId)?.DisplayName ?? "N/A")
                            </MudText>
                            @if (!isReadOnly)
                            {
                                <MudButton Size="Size.Small" 
                                           Variant="Variant.Text" 
                                           Color="Color.Primary"
                                           OnClick="ToggleCurrencySelection"
                                           StartIcon="@Icons.Material.Filled.Edit">
                                    Change
                                </MudButton>
                            }
                        </div>
                    </div>

                    @if (showCurrencySelection && !isReadOnly)
                    {
                        <div class="col-12 col-md-4 mb-3 d-flex flex-column" style="height: 95px;">
                            <label class="form-label fw-bold mb-1" style="font-size: 0.85rem;">Select Currency</label>
                            <AutoComplete TItem="CurrenciesModel"
                                          DataList="@Currencies"
                                          DisplayProperty="@(p => p.DisplayName)"
                                          IdProperty="@(p => p.Id)"
                                          @bind-SelectedId="Model.EnteredCurrencyId"
                                          @bind-SelectedId:after="OnEnteredCurrencyChanged"
                                          Label="Currency"
                                          Variant="Variant.Outlined"
                                          FullWidth="@true" />
                        </div>
                    }

                    @if (Model.EnteredCurrencyId != Model.BaseCurrencyId || showCurrencySelection)
                    {
                        <div class="col-12 col-md-4 mb-3 d-flex flex-column" style="height: 95px;">
                            <label class="form-label fw-bold mb-1" style="font-size: 0.85rem;">Exchange Rate</label>
                            <MudNumericField @bind-Value="Model.ExchangeRate"
                                             Format="#,##0.000000"
                                             placeholder="Exchange Rate"
                                             ReadOnly="@isReadOnly"
                                             Variant="Variant.Outlined"
                                             Dense="@true"
                                             FullWidth="@true" />
                        </div>
                    }

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        @if (isEmployeeAccount)
                        {
                            <AutoComplete TItem="EmployeesModel"
                                          DataList="@Emp"
                                          DisplayProperty="@(e => e.DisplayName ?? e.Fullname ?? "")"
                                          IdProperty="@(e => e.Id)"
                                          @bind-SelectedId="Model.PartyId"
                                          Variant="Variant.Outlined"
                                          Label="@GetPartyLabel()"
                                          FullWidth="true"
                                          @bind-SelectedId:after="OnPartyChanged" />
                        }
                        else
                        {
                            <AutoComplete TItem="PartiesModel"
                                          DataList="@Par"
                                          DisplayProperty="@(p => p.DisplayName)"
                                          IdProperty="@(p => p.Id)"
                                          @bind-SelectedId="Model.PartyId"
                                          Variant="Variant.Outlined"
                                          Label="@GetPartyLabel()"
                                          FullWidth="true"
                                          @bind-SelectedId:after="OnPartyChanged" />
                        }
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.PartyId)" />
                        </div>
                    </div>
                </div>

                <!-- Transaction Information Group -->
                <h5 class="fw-bold mt-4 mb-3" style="color: var(--mud-palette-primary); border-bottom: 2px solid var(--mud-palette-primary); padding-bottom: 8px;">
                    <i class="fa fa-exchange-alt me-2"></i>Transaction Information
                </h5>
                <div class="row" style="width:100%; display: flex;">
                    @if (Model.TranType == "RECEIPT" || Model.TranType == "PAYMENT")
                    {
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <AutoComplete TItem="InvoicesAllModel"
                                          DataList="@Invoices"
                                          DisplayProperty="@(i => $"{i.Code} - {i.PartyName} - {i.BillAmount:N2}")"
                                          IdProperty="@(i => i.ID)"
                                          SelectedId="selectedInvoiceId"
                                          SelectedIdChanged="OnInvoiceIdChanged"
                                          Variant="Variant.Outlined"
                                          Label="Invoice Reference (Optional)"
                                          FullWidth="true" />
                            <div class="validation-container" style="min-height: 22px;">
                            </div>
                        </div>
                    }
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="SeqNo"
                                      @bind-Value="Model.SeqNo"
                                      placeholder="Transaction #"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Label="Transaction #"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.SeqNo)" />
                        </div>
                    </div>

                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="Description"
                                      @bind-Value="Model.Description"
                                      placeholder="Description"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Label="Description"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => Model.Description)" />
                        </div>
                    </div>
                </div>

                <!-- Attachments Group -->
                <h5 class="fw-bold mt-4 mb-3" style="color: var(--mud-palette-primary); border-bottom: 2px solid var(--mud-palette-primary); padding-bottom: 8px;">
                    <i class="fa fa-paperclip me-2"></i>Document Attachment
                </h5>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">@(Model.TranType == "RECEIPT" || Model.TranType == "PAYMENT" ? "Invoice/Document Attachment (Optional)" : "Document Attachment (Optional)")</label>
                        <div class="mt-2 flex-grow-1">
                            @if (!isReadOnly)
                            {
                                <InputFile class="form-control" OnChange="OnFileInputChanged" />
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.FileAttachment))
                            {
                                <a href="@Model.FileAttachment" download class="btn btn-link" style="font-size: 12px; margin-top: 5px;">
                                    <i class="fas fa-download me-1"></i>@Model.FileAttachment
                                </a>
                            }
                        </div>
                    </div>
                </div>
        </ChildContent>
    </MudExpansionPanel>
    </EditForm>
</div>

@code
{
    [Parameter] public CashBookModel Model { get; set; } = new();
    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    // Internal state
    List<LocationsModel> Loc = new();
    List<PartiesModel> Par = new();
    List<EmployeesModel> Emp = new();
    List<ChartOfAccountsModel> Acc = new();
    List<TypeCodeModel> Tra = null!;
    List<ChartOfAccountsModel> pm = new();
    List<InvoicesAllModel> Invoices = new();
    List<CurrenciesModel> Currencies = new();
    int selectedInvoiceId = 0;
    bool isEmployeeAccount = false;
    private bool showCurrencySelection = false;
    public string? filterCOA { get; set; } = string.Empty;
    public string? filterParties { get; set; } = string.Empty;
    bool isReadOnly = false;
    private bool LoadingPanel { get; set; } = false;
    private string PeriodValidationMessage { get; set; } = string.Empty;
    private bool PeriodValidationChecked { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }
    
    protected override async Task OnParametersSetAsync()
    {
        if (Model != null)
        {
            // Show currency selection if different from base currency
            showCurrencySelection = Model.EnteredCurrencyId != Model.BaseCurrencyId;
            // Set read-only only if posted to GL; keep editable for INSERT and for EDIT when not posted
            isReadOnly = (Action == "VIEW") || (Model.IsPostedToGL == 1);

            // Refresh account list when Model changes (e.g. opening Edit) so dropdown matches current TranType
            var tranType = !string.IsNullOrWhiteSpace(Model.TranType) ? Model.TranType : (Tra != null && Tra.Any() ? Tra.First().ListValue : "RECEIPT");
            switch (tranType.ToUpperInvariant())
            {
                case "RECEIPT":
                    filterCOA = "(InterfaceType='REVENUE' OR InterfaceType='ACCOUNTS RECEIVABLE' OR InterfaceType='EMPLOYEE')";
                    break;
                case "PAYMENT":
                    filterCOA = "(InterfaceType='EXPENSE' OR InterfaceType='ACCOUNTS PAYABLE' OR InterfaceType='EMPLOYEE')";
                    break;
                default:
                    filterCOA = "(InterfaceType='Bank' OR InterfaceType='EMPLOYEE')";
                    break;
            }
            if (!string.IsNullOrWhiteSpace(filterCOA))
            {
                Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/{filterCOA.ToUpper()}", true) ?? new List<ChartOfAccountsModel>();
                await LoadPartiesOrEmployees();
            }

            // Check if account type is employee
            if (Model.AccountId > 0 && Acc.Any())
            {
                var selectedAccount = Acc.FirstOrDefault(a => a.Id == Model.AccountId);
                if (selectedAccount != null && selectedAccount.InterfaceType?.ToUpper() == "EMPLOYEE")
                    isEmployeeAccount = true;
            }

            await ValidatePeriodAsync();
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if(firstRender)
        {
             GetDefaultValues();
        }
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Loc = await Functions.GetAsync<List<LocationsModel>>($"Locations/Search", true) ?? new List<LocationsModel>();
        Tra = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/CASHBOOK TRAN TYPE", true) ?? new List<TypeCodeModel>();
        string PaymentMethods = "InterfaceType = 'PAYMENT METHOD'";
        pm = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/{PaymentMethods}", true) ?? new List<ChartOfAccountsModel>();
        Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search", true) ?? new List<PartiesModel>();
        Currencies = await Functions.GetAsync<List<CurrenciesModel>>($"Currencies/Search", true) ?? new List<CurrenciesModel>();

        // Load account list (Acc) on initial load so AccountId dropdown is filled
        var tranType = !string.IsNullOrWhiteSpace(Model?.TranType) ? Model.TranType : (Tra != null && Tra.Any() ? Tra.First().ListValue : "RECEIPT");
        switch (tranType?.ToUpperInvariant())
        {
            case "RECEIPT":
                filterCOA = "(InterfaceType='REVENUE' OR InterfaceType='ACCOUNTS RECEIVABLE' OR InterfaceType='EMPLOYEE')";
                break;
            case "PAYMENT":
                filterCOA = "(InterfaceType='EXPENSE' OR InterfaceType='ACCOUNTS PAYABLE' OR InterfaceType='EMPLOYEE')";
                break;
            default:
                filterCOA = "(InterfaceType='Bank' OR InterfaceType='EMPLOYEE')";
                break;
        }
        if (!string.IsNullOrWhiteSpace(filterCOA))
        {
            Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/{filterCOA.ToUpper()}", true) ?? new List<ChartOfAccountsModel>();
            await LoadPartiesOrEmployees();
        }

        if (Action == "INSERT" && Model.Id == 0)
        {
            if (string.IsNullOrWhiteSpace(Model.TranType) && Tra != null && Tra.Any())
                Model.TranType = Tra.First().ListValue;
            GetDefaultValues();
            isReadOnly = false;
            await ValidatePeriodAsync();
        }

        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        // Default Location: for admins pick first active location; for other users use their assigned location
        if (Model.LocationId == 0 && Loc != null && Loc.Any())
        {
            if (Globals.User.GroupId == 1)
                Model.LocationId = Loc.First().Id;
            else if (Globals.User.LocationId > 0)
                Model.LocationId = Globals.User.LocationId;
        }

        if (Acc != null && Acc.Any() && Model.AccountId == 0)
        {
            Model.AccountId = Acc.First().Id;
        }

        if (isEmployeeAccount)
        {
            if (Emp != null && Emp.Any() && Model.PartyId == 0)
            {
                Model.PartyId = Emp.First().Id;
            }
        }
        else
        {
            if (Par != null && Par.Any() && Model.PartyId == 0)
            {
                Model.PartyId = Par.First().Id;
            }
        }

        // Initialize currency fields if not set
        if (Currencies != null && Currencies.Any())
        {
            var baseCurrency = Currencies.FirstOrDefault(c => c.IsBaseCurrency == 1);
            if (baseCurrency != null)
            {
                if (Model.BaseCurrencyId == 0)
                    Model.BaseCurrencyId = baseCurrency.Id;
                if (Model.EnteredCurrencyId == 0)
                    Model.EnteredCurrencyId = baseCurrency.Id;
            }
        }
        if (Model.ExchangeRate == 0)
            Model.ExchangeRate = 1.0;

        StateHasChanged();
    }

    private async Task OnFileInputChanged(InputFileChangeEventArgs e)
    {
        try
        {
            var result = await Functions.FileUpload(e, FileUploadService, 25);

            if (result.Item1 == true)
            {
                Model.FileAttachment = result.Item2;
                string message = (Model.TranType == "RECEIPT" || Model.TranType == "PAYMENT") 
                    ? "Invoice/Document uploaded successfully" 
                    : "Document uploaded successfully";
                SnackbarService.Add(message, Severity.Success);
            }
            else
            {
                SnackbarService.Add($"Error: {result.Item2}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Exception: {ex.Message}", Severity.Error);
            Model.FileAttachment = null;
        }
    }

    private async Task OnTransactionTypeChanged()
    {
        //LoadingPanel = true;

        switch (Model.TranType)
        {
            case "RECEIPT":
                filterCOA = "(InterfaceType='REVENUE' OR InterfaceType='ACCOUNTS RECEIVABLE' OR InterfaceType='EMPLOYEE')";
                await LoadInvoices("SALE");
                break;

            case "PAYMENT":
                filterCOA = "(InterfaceType='EXPENSE' OR InterfaceType='ACCOUNTS PAYABLE' OR InterfaceType='EMPLOYEE')";
                await LoadInvoices("PURCHASE");
                break;

            default:
                filterCOA = "(InterfaceType='Bank' OR InterfaceType='EMPLOYEE')";
                Invoices = new List<InvoicesAllModel>();
                selectedInvoiceId = 0;
                break;
        }

        Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/{filterCOA.ToUpper()}", true) ?? new List<ChartOfAccountsModel>();
        await LoadPartiesOrEmployees();

        //LoadingPanel = false;
    }

    private async Task OnAccountChanged()
    {
        await LoadPartiesOrEmployees();
        StateHasChanged();
    }

    private async Task LoadPartiesOrEmployees()
    {
        //LoadingPanel = true;
        isEmployeeAccount = false;
        
        // Check if selected account is EMPLOYEE type
        if (Model.AccountId > 0)
        {
            var selectedAccount = Acc.FirstOrDefault(a => a.Id == Model.AccountId);
            if (selectedAccount != null && !string.IsNullOrWhiteSpace(selectedAccount.InterfaceType) && 
                selectedAccount.InterfaceType.ToUpper() == "EMPLOYEE")
            {
                // If account is EMPLOYEE type, load employees from Employees table
                isEmployeeAccount = true;
                Emp = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();
                Par = new List<PartiesModel>(); // Clear parties list
            }
            else if (selectedAccount != null && !string.IsNullOrWhiteSpace(selectedAccount.InterfaceType))
            {
                // Check account InterfaceType to determine party type
                string interfaceType = selectedAccount.InterfaceType.ToUpper();
                if (interfaceType == "ACCOUNTS RECEIVABLE")
                {
                    // Show Customers from Parties table
                    filterParties = "a.partytype='Customer'";
                    isEmployeeAccount = false;
                }
                else if (interfaceType == "ACCOUNTS PAYABLE")
                {
                    // Show Suppliers from Parties table
                    filterParties = "a.partytype='Supplier'";
                    isEmployeeAccount = false;
                }
                else
                {
                    // Use existing filter based on transaction type
                    filterParties = Model.TranType switch
                    {
                        "RECEIPT" => "a.partytype='Customer'",
                        "PAYMENT" => "a.partytype='Supplier'",
                        _ => "a.partytype='Bank'"
                    };
                    isEmployeeAccount = false;
                }
                
                if (!isEmployeeAccount)
                {
                    Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search/{filterParties.ToUpper()}", true) ?? new List<PartiesModel>();
                    Emp = new List<EmployeesModel>(); // Clear employees list
                }
            }
            else
            {
                // No InterfaceType, use transaction type filter
                filterParties = Model.TranType switch
                {
                    "RECEIPT" => "a.partytype='Customer'",
                    "PAYMENT" => "a.partytype='Supplier'",
                    _ => "a.partytype='Bank'"
                };
                Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search/{filterParties.ToUpper()}", true) ?? new List<PartiesModel>();
                Emp = new List<EmployeesModel>();
            }
        }
        else
        {
            // No account selected, use transaction type filter
            filterParties = Model.TranType switch
            {
                "RECEIPT" => "a.partytype='Customer'",
                "PAYMENT" => "a.partytype='Supplier'",
                _ => "a.partytype='Bank'"
            };
            Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search/{filterParties.ToUpper()}", true) ?? new List<PartiesModel>();
            Emp = new List<EmployeesModel>();
        }

        //LoadingPanel = false;
    }

    private async Task LoadInvoices(string invoiceType)
    {
        try
        {
            // Load invoices based on type and filter by balance > 0 (unpaid invoices)
            // BalanceAmount is a calculated field in the SQL query, so we can use it directly
            string filter = $"InvoiceType='{invoiceType}' AND BalanceAmount > 0";
            
            if (Model.PartyId > 0)
            {
                filter += $" AND PartyId={Model.PartyId}";
            }

            // Filter by location if set
            if (Model.LocationId > 0)
            {
                filter += $" AND LocationId={Model.LocationId}";
            }

            Invoices = await Functions.GetAsync<List<InvoicesAllModel>>($"Invoice/Search/{Uri.EscapeDataString(filter)}", true) ?? new List<InvoicesAllModel>();
            
            // Reset selection if current selected invoice is not in the list
            if (selectedInvoiceId > 0 && !Invoices.Any(i => i.ID == selectedInvoiceId))
            {
                selectedInvoiceId = 0;
            }
        }
        catch (Exception ex)
        {
            Invoices = new List<InvoicesAllModel>();
            System.Diagnostics.Debug.WriteLine($"Error loading invoices: {ex.Message}");
        }
    }

    private async Task OnInvoiceIdChanged(int invoiceId)
    {
        selectedInvoiceId = invoiceId;
        
        if (invoiceId > 0)
        {
            var invoice = Invoices.FirstOrDefault(i => i.ID == invoiceId);
            if (invoice != null)
            {
                Model.SeqNo = invoice.Code ?? string.Empty;
                // Optionally set party if not already set
                if (Model.PartyId == 0 && invoice.PartyId > 0)
                {
                    Model.PartyId = invoice.PartyId;
                }
                StateHasChanged();
            }
        }
        else
        {
            // Clear SeqNo if invoice is deselected
            if (string.IsNullOrWhiteSpace(Model.SeqNo))
            {
                Model.SeqNo = string.Empty;
            }
        }
    }

    private async Task OnPartyChanged()
    {
        // Reload invoices when party changes to filter by selected party
        if (Model.TranType == "RECEIPT" || Model.TranType == "PAYMENT")
        {
            string invoiceType = Model.TranType == "RECEIPT" ? "SALE" : "PURCHASE";
            await LoadInvoices(invoiceType);
        }
    }

    private string GetPartyLabel()
    {
        // Check if selected account is EMPLOYEE type
        if (Model.AccountId > 0)
        {
            var selectedAccount = Acc.FirstOrDefault(a => a.Id == Model.AccountId);
            if (selectedAccount != null && !string.IsNullOrWhiteSpace(selectedAccount.InterfaceType))
            {
                string interfaceType = selectedAccount.InterfaceType.ToUpper();
                if (interfaceType == "EMPLOYEE")
                {
                    return "Employee *";
                }
                else if (interfaceType == "ACCOUNTS RECEIVABLE")
                {
                    return "Customer *";
                }
                else if (interfaceType == "ACCOUNTS PAYABLE")
                {
                    return "Supplier *";
                }
            }
        }
        
        return Model.TranType switch
        {
            "RECEIPT" => "Customer *",
            "PAYMENT" => "Supplier *",
            _ => "Bank *"
        };
    }

