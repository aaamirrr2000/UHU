@code
{
    List<CashBookModel> data = new();
    CashBookModel record = new();
    List<CurrenciesModel> Currencies = new();

    public DateTime? startDate { get; set; } = DateTime.Today;
    public DateTime? endDate { get; set; } = DateTime.Today;

    public string? Action { get; set; } = "INSERT";
    
    private bool _isSaving = false;
    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "CashBookDashboard");
        Currencies = await Functions.GetAsync<List<CurrenciesModel>>($"Currencies/Search", true) ?? new List<CurrenciesModel>();
        await GetAll();
    }

    private string GetCurrencyCode(int currencyId)
    {
        if (currencyId == 0) return "-";
        var currency = Currencies.FirstOrDefault(c => c.Id == currencyId);
        return currency?.Code ?? "-";
    }

    protected async Task PrintSummary()
    {
        NavManager.NavigateTo("/CashBookSummary");
    }

    protected async Task GetAll()
    {
        try
        {
            if (startDate > endDate)
            {
                SnackbarService.Add("Start date must be earlier than end date.", Severity.Warning);
                return;
            }

            string formattedStartDate = startDate.Value.ToString("yyyy-MM-dd");
            string formattedEndDateNextDay = endDate.Value.Date.AddDays(1).ToString("yyyy-MM-dd");

            string Criteria = string.Empty;
            LoadingPanel = true;

            Criteria = $"TranDate >= CAST('{formattedStartDate}' AS DATE) AND TranDate < CAST('{formattedEndDateNextDay}' AS DATE)";

            if (Globals.User.GroupId != 1)
            {
                Criteria += $" and LocationId = {Globals.User.LocationId}";
            }

            string encodedCriteria = Uri.EscapeDataString(Criteria);
            string apiUrl = $"CashBook/Search/{encodedCriteria}";

            data = await Functions.GetAsync<List<CashBookModel>>(apiUrl, true) ?? new List<CashBookModel>();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading data: {ex.Message}", Severity.Error);
            data = new List<CashBookModel>();
        }
        finally
        {
            LoadingPanel = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<CashBookModel>($"CashBook/Get/{id}", true) ?? new CashBookModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new CashBookModel();
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE"; 
        isReadOnly = record.IsPostedToGL == 1;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        // Ensure record is loaded if deleting from grid
        if (record.Id != id) await Get(id);
        
        await Save();
    }

    protected void Print(int id)
    {
        NavManager.NavigateTo($"/CashBookReport/{id}");
    }

    protected async Task Save()
    {
        if (_isSaving) return;
        _isSaving = true;
        LoadingPanel = true;
        
        // Basic validation
        if (record.Amount <= 0)
        {
             SnackbarService.Add("Amount must be greater than 0", Severity.Warning);
             LoadingPanel = false;
             _isSaving = false;
             return;
        }

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Globals.ClientInfo;

        var result = await Functions.PostAsync<CashBookModel>($"CashBook/{Action}", record, true);
        if (result.Success == false)
        {
            SnackbarService.Add(result.Message ?? "Operation Failed", Severity.Error);
        }
        else
        {
            SnackbarService.Add("Operation Successful", Severity.Success);

            // For insert/update keep the drawer open and just refresh the bound record;
            // avoid calling Edit() which causes the drawer to close and reopen.
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
            {
                if (result.Result is not null)
                {
                    record = result.Result;
                    Action = "UPDATE";
                }
            }
            else
            {
                await _drawer.CloseDrawerAsync();
            }
        }

        await GetAll();
        LoadingPanel = false;
        _isSaving = false;
    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }
    
    private async Task CheckGLPreview()
    {
        LoadingPanel = true;
        var result = await Functions.PostAsync<GeneralLedgerHeaderModel>(
            "GeneralLedger/PreviewGLFromCashBook",
            record,
            true
        );
        LoadingPanel = false;

        if (result.Success && result.Result != null)
        {
            var parameters = new DialogParameters<InvoiceGLPreviewDialog>
            {
                { x => x.PreviewData, result.Result },
                { x => x.RecordId, record.Id },
                { x => x.IsPostedToGL, record.IsPostedToGL == 1 },
                { x => x.OnPostToGL, EventCallback.Factory.Create(this, async () =>
                {
                    if (record.Id == 0)
                    {
                        SnackbarService.Add("Please save the entry before posting to GL", Severity.Warning);
                        return;
                    }
                    await PostToGL(record.Id);
                }) }
            };
            var options = new DialogOptions
            {
                MaxWidth = MaxWidth.Large,
                FullWidth = true,
                CloseButton = true,
                CloseOnEscapeKey = true,
                BackdropClick = false,
                Position = DialogPosition.Center
            };
            await dialogService.ShowAsync<InvoiceGLPreviewDialog>("Accounting Entry Preview", parameters, options);
        }
        else
        {
            SnackbarService.Add($"Could not generate preview: {result.Message}", Severity.Warning);
        }
    }

    protected async Task PostToGL(int cashBookId)
    {
        try
        {
            var res = await Functions.ShowConfirmation(dialogService, "Do you want to post this cashbook entry to General Ledger? Once posted, it cannot be edited or deleted.");
            if (res == false)
                return;

            LoadingPanel = true;
            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>(
                $"GeneralLedger/CreateGLFromCashBook/{cashBookId}?userId={Globals.User.Id}&clientInfo={Uri.EscapeDataString(Globals.ClientInfo)}", 
                null, 
                true);
            LoadingPanel = false;

            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                SnackbarService.Add("Cashbook entry posted to General Ledger successfully", Severity.Success);
                await GetAll();
                await Edit(cashBookId); // Refresh the view to show locked state
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    protected async Task ViewGLEntry(int id, string glEntryNo)
    {
        if (string.IsNullOrWhiteSpace(glEntryNo)) return;

        try
        {
            var stub = new CashBookModel
            {
                Id = id,
                OrganizationId = Globals.User.OrganizationId,
                IsPostedToGL = 1,
                GLEntryNo = glEntryNo
            };

            LoadingPanel = true;
            // Using the same Preview endpoint but passing the stub might work if the backend supports it,
            // OR use a dedicated "GetGLEntry" endpoint if available.
            // Re-using the pattern from previous files:
            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>("GeneralLedger/PreviewGLFromCashBook", stub, true);
            LoadingPanel = false;

            if (result.Success == true && result.Result != null)
            {
                var parameters = new DialogParameters<InvoiceGLPostedDialog>
                {
                    { x => x.PostedData, result.Result }
                };
                var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Large, FullWidth = true };
                await dialogService.ShowAsync<InvoiceGLPostedDialog>("Posted Accounting Entry", parameters, options);
            }
            else
            {
                SnackbarService.Add($"Error loading GL entry: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error loading GL entry: {ex.Message}", Severity.Error);
        }
    }

    private async Task OnStartDateChanged()
    {
        await Task.Delay(300);
        if (startDate.HasValue && endDate.HasValue)
        {
            await GetAll();
        }
    }

    private async Task OnEndDateChanged()
    {
