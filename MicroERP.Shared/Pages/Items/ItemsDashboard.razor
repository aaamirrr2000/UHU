@page "/ItemsDashboard"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h5" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.Inventory" Class="me-2" Style="color: white;" />
                    Items Management
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Manage products and SKUs</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0">
                @if (Globals.AccessLevel == 1)
                {
                    <MudButton StartIcon="@Icons.Material.TwoTone.Add"
                               Size="Size.Small"
                               Variant="Variant.Filled"
                               Color="Color.Success"
                               Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                               OnClick="@(() => Clear())">
                        New
                    </MudButton>
                }
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh"
                           Size="Size.Small"
                           Variant="Variant.Filled"
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    <MyDrawer @ref="_drawer" Title="Items" FaIcon="fas fa-address-book">
        <HeaderContent>
            @if (Action != "VIEW")
            {
                <MudButton OnClick="@(() => Save())"
                           Variant="Variant.Filled"
                           Color="Color.Success"
                           StartIcon="@Icons.Material.Filled.Save"
                           Size="Size.Small"
                           Class="me-2">
                    @(Action == "INSERT" ? "Save" : "Update")
                </MudButton>

                @if (Action == "UPDATE")
                {
                    <MudButton OnClick="@(() => Delete(record.Id))"
                               Variant="Variant.Filled"
                               Color="Color.Error"
                               StartIcon="@Icons.Material.Filled.Delete"
                               Size="Size.Small">
                        Delete
                    </MudButton>
                }
            }
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <ItemsPage Action="@Action" Model="record" OnSaved="ChildSaved" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    <MyDrawer @ref="_drawerTaxItem" Title="Tax Items Mapping" FaIcon="fas fa-file-invoice-dollar">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <MicroERP.Shared.Pages.TaxItems.TaxItemsPage CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    <MyDrawer @ref="_drawerServingSize" Title="Serving Size" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <ItemServingSizePage CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (LoadingPanel || data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="ItemsModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="15"
                         Dense="true"
                         Striped="true"
                         Class="professional-grid elevation-8">

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 80px; min-width: 80px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(() => View(row.Item.Id))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View Details</span>
                                    </MudMenuItem>
                                    @if (Globals.AccessLevel == 1)
                                    {
                                        <MudMenuItem OnClick="@(() => Edit(row.Item.Id))"
                                                     Class="menu-item edit-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" />
                                            <span>Edit</span>
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => Delete(row.Item.Id))"
                                                     Color="Color.Error"
                                                     Class="menu-item delete-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" />
                                            <span>Delete</span>
                                        </MudMenuItem>
                                        <hr />
                                        <MudMenuItem OnClick="@(() => UpdateFavorite(row.Item))"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Favorite" Class="menu-icon" />
                                            <span>Favorite</span>
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => ServingSize(row.Item.Id))"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Settings" Class="menu-icon" />
                                            <span>Features / Serving Size</span>
                                        </MudMenuItem>
                                        @*   <hr />
                                        <MudMenuItem OnClick="@(() => ItemTax(row.Item.Id))"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Class="menu-icon" />
                                            <span>Taxes</span>
                                        </MudMenuItem> *@
                                    }
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Favorite"
                                    CellStyle="width: 50px; text-align: center;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @if (row.Item.IsFavorite == 1)
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Favorite" Color="Color.Error" Size="Size.Small" />
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Picture"
                                    CellStyle="width: 50px; min-width: 50px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            <AvatarDisplay Pic="@row.Item.Pic" Name="@row.Item.Name" Size="24" />
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Code"
                                    Title="Code"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Name"
                                    Title="Item Name"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.CategoryName"
                                    Title="Category"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.StockType"
                                    Title="Stock Type"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Unit"
                                    Title="Unit"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.BasePrice"
                                    Title="Retail Price"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="#,##0.00"
                                    CellStyle="text-align: right;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />
                    <TemplateColumn Title="Status"
                                    CellStyle="width: 70px; min-width: 70px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @if (row.Item.IsActive == 1)
                            {
                                <MudChip Color="Color.Success" Size="Size.Small" Variant="Variant.Filled">Active</MudChip>
                            }
                            else
                            {
                                <MudChip Color="Color.Error" Size="Size.Small" Variant="Variant.Filled">Locked</MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="ItemsModel" Class="grid-pager" />
                    </div>
                </PagerContent>

            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

<style>
    .dashboard-header {
        padding: 20px;
        background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 8px;
    }

        .dashboard-header .mud-typography {
            color: white !important;
        }

        .dashboard-header .text-muted {
            color: rgba(255, 255, 255, 0.85) !important;
        }

    /* Dark mode adjustments */
    .mud-theme-dark .dashboard-header {
        background: linear-gradient(135deg, var(--mud-palette-primary-darken) 0%, var(--mud-palette-primary) 100%);
    }
</style>

@code
{
    List<ItemsModel> data = new();
    ItemsModel record = new();

    public string? Action { get; set; } = "INSERT";


    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();
    private MyDrawer _drawerServingSize = new();
    private MyDrawer _drawerTaxItem = new();

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "ItemsDashboard");
        await GetAll();
    }

    protected async Task GetAll()
    {
        try
        {
            LoadingPanel = true;
            StateHasChanged(); // Ensure UI updates
            data = await Functions.GetAsync<List<ItemsModel>>($"Items/Search", true) ?? new List<ItemsModel>();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading items: {ex.Message}", Severity.Error);
            data = new List<ItemsModel>();
        }
        finally
        {
            LoadingPanel = false;
            StateHasChanged(); // Ensure UI updates
        }
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<ItemsModel>($"Items/Get/{id}", true) ?? new ItemsModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new ItemsModel();
        record.IsActive = 1;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task UpdateFavorite(ItemsModel item)
    {
        await Get(item.Id);
        if (record.IsFavorite == 0)
            record.IsFavorite = 1;
        else
            record.IsFavorite = 0;

        Action = "UPDATE";
        await Save();
        await Get(item.Id);
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async Task ServingSize(int id)
    {
        await Get(id);
        await _drawerServingSize.OpenDrawerAsync();
    }

    protected async Task ItemTax(int id)
    {
        await Get(id);
        await _drawerTaxItem.OpenDrawerAsync();
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Globals.ClientInfo;

        var result = await Functions.PostAsync<ItemsModel>($"Items/{Action}", record, true);
        if (result.Success == false)
        {
            string errorMessage = !string.IsNullOrWhiteSpace(result.Message)
                ? result.Message
                : "Record Not Updated";
            SnackbarService.Add(errorMessage, Severity.Error);
        }
        else
        {
            SnackbarService.Add($"Record Updated Successfully", Severity.Success);
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
        }

        data = await Functions.GetAsync<List<ItemsModel>>($"Items/Search", true) ?? new List<ItemsModel>();
        LoadingPanel = false;
        await _drawer.CloseDrawerAsync();

    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }
}


