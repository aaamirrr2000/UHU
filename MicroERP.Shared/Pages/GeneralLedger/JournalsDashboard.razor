@page "/JournalsDashboard"
@using MicroERP.Shared.Models
@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h5" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.MenuBook" Class="me-2" Style="color: white;" />
                    Journals
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Posted and unposted journal entries</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0 flex-wrap">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <MudDatePicker @bind-Date="startDate"
                                   Label="Start Date" DateFormat="dd MMM yyyy" Variant="Variant.Outlined" />
                    <MudDatePicker @bind-Date="endDate"
                                   Label="End Date" DateFormat="dd MMM yyyy" Variant="Variant.Outlined" />
                </div>
                <MudButton StartIcon="@Icons.Material.TwoTone.Search"
                           Size="Size.Small"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => GetAll())">
                    Search
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh"
                           Size="Size.Small"
                           Variant="Variant.Filled"
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    @if (LoadingPanel || data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="GeneralLedgerHeaderModel"
                        MultiSelection="false"
                        Items="@data"
                        SortMode="SortMode.Multiple"
                        Filterable="true"
                        Hideable="true"
                        RowsPerPage="15"
                        Dense="true"
                        Striped="true"
                        Hover="true"
                        Class="professional-grid elevation-8">

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 90px; min-width: 90px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(() => ReviewJournal(row.Item.Id))"
                                                 Class="menu-item review-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>Review journal</span>
                                    </MudMenuItem>
                                    @if (row.Item.IsPosted == 0)
                                    {
                                        <MudMenuItem OnClick="@(() => PostToGL(row.Item.EntryNo))"
                                                     Class="menu-item post-item">
                                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="menu-icon" />
                                            <span>Post to GL</span>
                                        </MudMenuItem>
                                    }
                                    @if (row.Item.IsPosted == 1)
                                    {
                                        <MudMenuItem OnClick="@(() => ViewJournal(row.Item.Id))"
                                                     Class="menu-item view-item">
                                            <MudIcon Icon="@Icons.Material.Filled.ReceiptLong" Class="menu-icon" />
                                            <span>View journal</span>
                                        </MudMenuItem>
                                    }
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.EntryNo"
                                    Title="Entry No"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="100px" />

                    <PropertyColumn Property="x => x.EntryDate"
                                    Title="Entry Date"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Format="dd-MMM-yyyy"
                                    Width="120px" />

                    <PropertyColumn Property="x => x.Source"
                                    Title="Source"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="100px" />

                    <PropertyColumn Property="x => x.Description"
                                    Title="Description"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="200px" />

                    <PropertyColumn Property="x => x.TotalDebit"
                                    Title="Amount"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Format="#,##0.00"
                                    Width="120px" />

                    <PropertyColumn Property="x => x.PartyName"
                                    Title="Party"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="150px" />

                    <PropertyColumn Property="x => x.ReferenceNo"
                                    Title="Reference #"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="120px" />

                    <TemplateColumn Title="Status"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="100px">
                        <CellTemplate Context="row">
                            @if (row.Item.IsPosted == 1)
                            {
                                <MudChip T="string" Size="Size.Small" Color="Color.Success" Variant="Variant.Filled">Posted</MudChip>
                            }
                            else
                            {
                                <MudChip T="string" Size="Size.Small" Color="Color.Warning" Variant="Variant.Filled">Unposted</MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Currency"
                                    Sortable="false"
                                    Filterable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="80px">
                        <CellTemplate>
                            @{
                                var currencyId = context.Item.EnteredCurrencyId > 0 ? context.Item.EnteredCurrencyId : context.Item.BaseCurrencyId;
                            }
                            @if (currencyId > 0)
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Text" Color="Color.Info">
                                    @(GetCurrencyCode(currencyId))
                                </MudChip>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="GeneralLedgerHeaderModel" Class="grid-pager" />
                    </div>
                </PagerContent>
            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

<style>
    .dashboard-header {
        padding: 20px;
        background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 8px;
    }

    .dashboard-header .mud-typography {
        color: white !important;
    }

    .dashboard-header .text-muted {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    .mud-theme-dark .dashboard-header {
        background: linear-gradient(135deg, var(--mud-palette-primary-darken) 0%, var(--mud-palette-primary) 100%);
    }
</style>

@code
{
    List<GeneralLedgerHeaderModel> data = new();
    List<CurrenciesModel> Currencies = new();

    private DateTime? startDate { get; set; } = DateTime.Today.AddDays(-30);
    private DateTime? endDate { get; set; } = DateTime.Today;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Globals.AccessLevel = Globals.PageAccess(NavManager, "GeneralLedgerDashboard");
            Currencies = await Functions.GetAsync<List<CurrenciesModel>>("Currencies/Search", true) ?? new List<CurrenciesModel>();
            await GetAll();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error initializing: {ex.Message}", Severity.Error);
        }
    }

    private string GetCurrencyCode(int currencyId)
    {
        if (currencyId == 0) return "-";
        var c = Currencies.FirstOrDefault(x => x.Id == currencyId);
        return c?.Code ?? "-";
    }

    protected async Task GetAll()
    {
        try
        {
            LoadingPanel = true;
            string criteria = string.Empty;
            if (startDate.HasValue && endDate.HasValue)
            {
                string formattedStartDate = startDate.Value.ToString("yyyy-MM-dd");
                string formattedEndDateNextDay = endDate.Value.Date.AddDays(1).ToString("yyyy-MM-dd");
                criteria = $"EntryDate >= CAST('{formattedStartDate}' AS DATE) AND EntryDate < CAST('{formattedEndDateNextDay}' AS DATE)";
            }
            else if (startDate.HasValue)
            {
                criteria = $"EntryDate >= CAST('{startDate.Value:yyyy-MM-dd}' AS DATE)";
            }
            else if (endDate.HasValue)
            {
                criteria = $"EntryDate < CAST('{endDate.Value.Date.AddDays(1):yyyy-MM-dd}' AS DATE)";
            }

            if (Globals.User.OrganizationId > 0)
                criteria = string.IsNullOrEmpty(criteria) ? $"OrganizationId = {Globals.User.OrganizationId}" : criteria + $" AND OrganizationId = {Globals.User.OrganizationId}";

            string url = "GeneralLedger/Search";
            if (!string.IsNullOrEmpty(criteria))
                url += $"/{Uri.EscapeDataString(criteria)}";

            data = await Functions.GetAsync<List<GeneralLedgerHeaderModel>>(url, true) ?? new List<GeneralLedgerHeaderModel>();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading journals: {ex.Message}", Severity.Error);
            data = new List<GeneralLedgerHeaderModel>();
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    protected async Task Refresh()
    {
        await GetAll();
        StateHasChanged();
    }

    protected void ReviewJournal(int id)
    {
        NavManager.NavigateTo($"/GeneralLedgerReport/{id}");
    }

    protected void ViewJournal(int id)
    {
        NavManager.NavigateTo($"/GeneralLedgerReport/{id}");
    }

    protected async Task PostToGL(string? entryNo)
    {
        if (string.IsNullOrWhiteSpace(entryNo))
        {
            SnackbarService.Add("Entry number is missing.", Severity.Warning);
            return;
        }
        var confirmed = await Functions.ShowConfirmation(dialogService, "Post this journal to General Ledger? Once posted, it cannot be modified.");
        if (confirmed != true)
            return;
        try
        {
            LoadingPanel = true;
            var result = await Functions.PostAsync<string>("GeneralLedger/PostEntry", entryNo, true);
            if (result.Success)
            {
                SnackbarService.Add("Journal posted successfully.", Severity.Success);
                await GetAll();
            }
            else
                SnackbarService.Add(result.Message ?? "Post failed.", Severity.Error);
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
