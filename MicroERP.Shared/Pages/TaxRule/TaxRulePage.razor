@page "/TaxRulePage/{Action}/{CurrentRecord?}"
@using Microsoft.AspNetCore.Components.Forms

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <EditForm Model="record">
    <MudExpansionPanels MultiExpansion="true">
        <MudGrid>
            <!-- Basic Details Panel -->
            <MudItem xs="12">
                <MudExpansionPanel Text="Basic Details" Expanded="true">
                    <TitleContent>
                        <div class="d-flex align-items-center">
                            <MudIcon Icon="@Icons.Material.Filled.Info" class="mr-3" />
                            <MudText Typo="Typo.h6" Class="mb-0">Basic Details</MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField Label="Rule Name"
                                     T="string"
                                     Value="@record.RuleName"
                                     ValueChanged="@((string v) => record.RuleName = v?.ToUpper())"
                                     Placeholder="Rule Name"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                        <ValidationMessage For="@(() => record.RuleName)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="string"
                                   Label="Applies To"
                                   @bind-Value="record.AppliesTo"
                                   Placeholder="Select Invoice Type"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            <MudSelectItem Value="@("SALE")">
                                <MudIcon Icon="@Icons.Material.Filled.Calculate" Size="Size.Small" Class="me-2" />
                                Sales
                            </MudSelectItem>
                            <MudSelectItem Value="@("PURCHASE")">
                                <MudIcon Icon="@Icons.Material.Filled.Calculate" Size="Size.Small" Class="me-2" />
                                Purchase
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.AppliesTo)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudDatePicker Label="Effective From"
                                      @bind-Date="record.EffectiveFrom" Variant="Variant.Outlined" DateFormat="dd MMM yyyy"
                                      Placeholder="Effective From"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.EffectiveFrom)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudDatePicker Label="Effective To"
                                      @bind-Date="record.EffectiveTo" Variant="Variant.Outlined" DateFormat="dd MMM yyyy"
                                      Placeholder="Effective To"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Activation Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Is Active"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>

                </MudGrid>
                    </ChildContent>
                </MudExpansionPanel>
        </MudItem>

        <!-- Tax Rule Details Grid Card -->
        @if (Action != "INSERT" && record.Id > 0)
        {
            <MudItem xs="12">
                <MudExpansionPanel Text="Tax Rule Details" Expanded="true">
                    <TitleContent>
                        <div class="d-flex align-items-center">
                            <MudIcon Icon="@Icons.Material.Filled.List" class="mr-3" />
                            <MudText Typo="Typo.h6" Class="mb-0">Tax Rule Details</MudText>
                        </div>
                    </TitleContent>
                    <ChildContent>

                    @if (data == null || data.Count == 0)
                    {
                        <MudAlert Severity="Severity.Info" Class="mt-3">
                            No tax details found for this rule. Add details from the dashboard.
                        </MudAlert>
                    }
                    else
                    {
                        <MudDataGrid T="TaxRuleDetailModel" 
                                    MultiSelection="false" 
                                    Items="@data" 
                                    SortMode="SortMode.Multiple" 
                                    Filterable="true" 
                                    Hideable="true" 
                                    RowsPerPage="10" 
                                    Dense="@true">
                            <Columns>
                                @if (Action != "VIEW" && Globals.AccessLevel == 1)
                                {
                                    <TemplateColumn Title="Actions" CellStyle="width: 80px; min-width: 80px;" HeaderClass="grid-header">
                                        <CellTemplate Context="row">
                                            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                                         Color="Color.Error"
                                                         Size="Size.Small"
                                                         OnClick="@(() => Details_Delete(row.Item.Id))"
                                                         Title="Delete" />
                                        </CellTemplate>
                                    </TemplateColumn>
                                }

                                <PropertyColumn Property="x => x.SequenceNo" Title="Sequence" Sortable="true" Filterable="true" Format="#,##0" CellStyle="text-align: right;" />

                                <PropertyColumn Property="x => x.TaxName" Title="Tax Name" Sortable="true" Filterable="true" />

                                <TemplateColumn Title="Rate/Amount" Sortable="true" Filterable="true" CellStyle="text-align: right;">
                                    <CellTemplate Context="row">
                                        @{
                                            var effectiveRate = row.Item.TaxAmount ?? 0;
                                        }
                                        @if (row.Item.TaxType == "PERCENTAGE")
                                        {
                                            <MudText>@($"{effectiveRate:N2}%")</MudText>
                                        }
                                        else
                                        {
                                            <MudText>@($"{effectiveRate:N2}")</MudText>
                                        }
                                    </CellTemplate>
                                </TemplateColumn>

                                <TemplateColumn Title="Tax Base" Sortable="true" Filterable="true">
                                    <CellTemplate Context="row">
                                        <MudChip T="string" Variant="Variant.Outlined"
                                                 Color="Color.Primary"
                                                 Size="Size.Small">
                                            @row.Item.TaxBaseType
                                        </MudChip>
                                    </CellTemplate>
                                </TemplateColumn>

                                <PropertyColumn Property="x => x.Account" Title="Account" Sortable="true" Filterable="true" />

                                @if (data.Any(d => !string.IsNullOrWhiteSpace(d.ConditionType)))
                                {
                                    <TemplateColumn Title="Is Registered"
                                                    Sortable="true"
                                                    Filterable="true"
                                                    CellStyle="text-align:center;">
                                        <CellTemplate Context="row">
                                            @if (!string.IsNullOrWhiteSpace(row.Item.ConditionType))
                                            {
                                                @if (row.Item.IsRegistered.HasValue)
                                                {
                                                    <MudChip Color="@(row.Item.IsRegistered.Value == 1 ? Color.Success : Color.Error)" 
                                                             Size="Size.Small" 
                                                             Variant="Variant.Filled">
                                                        @(row.Item.IsRegistered.Value == 1 ? "Yes" : "No")
                                                    </MudChip>
                                                }
                                                else
                                                {
                                                    <MudChip Color="Color.Info" Size="Size.Small" Variant="Variant.Outlined">
                                                        Inherit
                                                    </MudChip>
                                                }
                                            }
                                        </CellTemplate>
                                    </TemplateColumn>

                                    <TemplateColumn Title="Is Filer"
                                                    Sortable="true"
                                                    Filterable="true"
                                                    CellStyle="text-align:center;">
                                        <CellTemplate Context="row">
                                            @if (!string.IsNullOrWhiteSpace(row.Item.ConditionType))
                                            {
                                                @if (row.Item.IsFiler.HasValue)
                                                {
                                                    <MudChip Color="@(row.Item.IsFiler.Value == 1 ? Color.Success : Color.Error)" 
                                                             Size="Size.Small" 
                                                             Variant="Variant.Filled">
                                                        @(row.Item.IsFiler.Value == 1 ? "Yes" : "No")
                                                    </MudChip>
                                                }
                                                else
                                                {
                                                    <MudChip Color="Color.Info" Size="Size.Small" Variant="Variant.Outlined">
                                                        Inherit
                                                    </MudChip>
                                                }
                                            }
                                        </CellTemplate>
                                    </TemplateColumn>
                                }
                            </Columns>

                            <PagerContent>
                                <div class="pager-container">
                                    <MudDataGridPager T="TaxRuleDetailModel" />
                                </div>
                            </PagerContent>
                        </MudDataGrid>
                    }
                    </ChildContent>
                </MudExpansionPanel>
            </MudItem>
        }
        </MudGrid>
    </MudExpansionPanels>
    </EditForm>
</MudContainer>

<MyModelDialog Width="60%" Height="60%" @ref="_dialog" Title="Define Tax Rule">
    <HeaderContent>
    </HeaderContent>

    <ChildContent>
        <TaxRuleDetailPage Action="@detailsAction" CurrentRecord="@detailsCurrentRecord" OnSaved="ChildSaved" />
    </ChildContent>
    
    <FooterContent>
    </FooterContent>
</MyModelDialog>

@code
{
    TaxRuleModel record = new();

    public MyModelDialog? _dialog;
    [Parameter] public TaxRuleModel? Model { get; set; }
    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    List<TaxRuleDetailModel> data = new();
    TaxRuleDetailModel details_record = new();
    string detailsAction = "INSERT";
    int detailsCurrentRecord = 0;

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "TaxRuleDashboard");
        await GetAll();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Model != null)
        {
            record = Model;
        }
        else if (CurrentRecord > 0 && (record.Id != CurrentRecord || record.Id == 0))
        {
            await Get(CurrentRecord);
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Action == "INSERT" && Model == null)
        {
            record = new TaxRuleModel();
            record.IsActive = 1;
            data = new List<TaxRuleDetailModel>();
            isReadOnly = false;
        }
        else if (Action == "UPDATE" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW" && Model == null)
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<TaxRuleModel>($"TaxRule/Get/{id}", true) ?? new TaxRuleModel();
        
        // Load tax rule details for this tax rule
        if (record.Id > 0)
        {
            data = await Functions.GetAsync<List<TaxRuleDetailModel>>($"TaxRuleDetail/Search/a.TaxRuleId={record.Id}", true) ?? new List<TaxRuleDetailModel>();
        }
        else
        {
            data = new List<TaxRuleDetailModel>();
        }
        
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new TaxRuleModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        // This method is for editing tax rule details, not the header
        // Open the detail dialog for editing
        detailsCurrentRecord = id;
        detailsAction = "UPDATE";
        _dialog.Visible = true;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }


    protected async Task Save()
    {
        var errors = new List<string>();
        if (string.IsNullOrWhiteSpace(record.RuleName))
            errors.Add("â€¢ Rule Name is required");
        if (string.IsNullOrWhiteSpace(record.AppliesTo))
            errors.Add("â€¢ Applies To is required");

        if (errors.Count > 0)
        {
            SnackbarService.Add($"ERROR:\n{string.Join("\n", errors)}", Severity.Error);
            return;
        }

        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<TaxRuleModel>($"TaxRule/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                {
                    // Reload the tax rule data instead of opening dialog
                    CurrentRecord = result.Result!.Id;
                    Action = "UPDATE";
                    await Get(CurrentRecord);
                }
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    private async Task ChildSaved()
    {
        // Reload details after saving
        if (record.Id > 0)
        {
            data = await Functions.GetAsync<List<TaxRuleDetailModel>>($"TaxRuleDetail/Search/a.TaxRuleId={record.Id}", true) ?? new List<TaxRuleDetailModel>();
        }
        StateHasChanged();
    }

    protected async Task Details_Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete this tax detail?");
        if (res == false)
            return;

        try
        {
            LoadingPanel = true;
            // The Delete endpoint expects id as a query parameter - pass empty body but id in URL
            var result = await Functions.PostAsync<string>($"TaxRuleDetail/Delete?id={id}", "", true);
            if (result.Success == true)
            {
                SnackbarService.Add($"Tax detail deleted successfully", Severity.Success);
                // Reload details
                if (record.Id > 0)
                {
                    data = await Functions.GetAsync<List<TaxRuleDetailModel>>($"TaxRuleDetail/Search/a.TaxRuleId={record.Id}", true) ?? new List<TaxRuleDetailModel>();
                }
            }
            else
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}

