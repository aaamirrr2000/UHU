@page "/TaxRuleDetailPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Text="Basic Details" Expanded=true Style="margin-bottom:10px;">

            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">

                    <i class="fa fa-info-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>

                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.RuleName) ? "NO NAME" : record.RuleName)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Tax Rule Components</MudText>
                    </div>
                </div>
                
            </TitleContent>

            <ChildContent>

                @if (Action != "VIEW")
                {
                    <div class="row" style="width:100%; display: flex;">

                        <!-- 1. Tax Selection -->
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <AutoComplete TItem="TaxMasterModel"
                                DataList="@TaxMaster"
                                DisplayProperty="@(p => p.TaxName)"
                                IdProperty="@(p => p.Id)"
                                Label="Tax"
                                @bind-SelectedId="record.TaxId"
                                @bind-SelectedId:after="OnTaxSelected"
                                Variant="Variant.Outlined"
                                FullWidth="true" />
                                <ValidationMessage For="@(() => record.TaxId)" />
                        </div>

                        <!-- 2. Tax Type (Percentage/Flat) -->
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudSelect T="string"
                                       Label="Tax Type *"
                                       @bind-Value="record.TaxType"
                                       Placeholder="Select Tax Type"
                                       Variant="Variant.Outlined"
                                       Clearable="@true"
                                       FullWidth="@true"
                                       ReadOnly="@isReadOnly"
                                       Required="@true"
                                       Class="mb-3">
                                <MudSelectItem Value="@("PERCENTAGE")">
                                    <MudIcon Icon="@Icons.Material.Filled.Percent" Color="Color.Primary" Size="Size.Small" Class="me-2" />
                                    Percentage (%)
                                </MudSelectItem>
                                <MudSelectItem Value="@("FLAT")">
                                    <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                    Flat Amount
                                </MudSelectItem>
                            </MudSelect>
                            <ValidationMessage For="@(() => record.TaxType)" />
                        </div>

                        <!-- 3. Tax Base Type -->
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudSelect T="string"
                                       Label="Tax Calculation Type *"
                                       @bind-Value="record.TaxBaseType"
                                       Placeholder="Select Tax Base Type"
                                       Variant="Variant.Outlined"
                                       Clearable="@true"
                                       FullWidth="@true"
                                       ReadOnly="@isReadOnly"
                                       Required="@true"
                                       Class="mb-3">
                                <MudSelectItem Value="@("BASE_ONLY")">
                                    <MudIcon Icon="@Icons.Material.Filled.Calculate" Size="Size.Small" Class="me-2" />
                                    Base Amount Only
                                </MudSelectItem>
                                <MudSelectItem Value="@("BASE_PLUS_SELECTED")">
                                    <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Small" Class="me-2" />
                                    Base + Selected Taxes
                                </MudSelectItem>
                                <MudSelectItem Value="@("RUNNING_TOTAL")">
                                    <MudIcon Icon="@Icons.Material.Filled.ShowChart" Size="Size.Small" Class="me-2" />
                                    Running Total
                                </MudSelectItem>
                            </MudSelect>
                            <ValidationMessage For="@(() => record.TaxBaseType)" />
                        </div>

                        <!-- 4. Tax Amount/Rate -->
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudNumericField @bind-Value="record.TaxAmount" 
                                             Label="@($"Tax Amount/Rate * {((!string.IsNullOrEmpty(record.TaxType) && record.TaxType == "PERCENTAGE") ? "(%)" : "(Fixed)")}")" 
                                             Variant="Variant.Outlined" 
                                             Placeholder="Enter Tax Rate/Amount"
                                             ReadOnly="@isReadOnly" 
                                             Format="N2"
                                             Required="@true"></MudNumericField>
                            <ValidationMessage For="@(() => record.TaxAmount)" />
                        </div>

                        <!-- 5. Sequence/Order -->
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudNumericField @bind-Value="record.SequenceNo" Label="Order/Sequence *" Variant="Variant.Outlined" placeholder="Calculation Sequence" ReadOnly="@isReadOnly" Format="#,##0" Required="@true"></MudNumericField>
                            <ValidationMessage For="@(() => record.SequenceNo)" />
                        </div>

                        @if (selectedTaxIsConditional)
                        {
                            <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                                <MudSelect T="int?"
                                           Label="Is Registered (Override)"
                                           @bind-Value="record.IsRegistered"
                                           Placeholder="Inherit from Rule"
                                           Variant="Variant.Outlined"
                                           Clearable="@true"
                                           FullWidth="@true"
                                           ReadOnly="@isReadOnly"
                                           Class="mb-3">
                                    <MudSelectItem T="int?" Value="@((int?)1)">
                                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                        Yes
                                    </MudSelectItem>
                                    <MudSelectItem T="int?" Value="@((int?)0)">
                                        <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                        No
                                    </MudSelectItem>
                                    <MudSelectItem T="int?" Value="@((int?)null)">
                                        <MudIcon Icon="@Icons.Material.Filled.Remove" Color="Color.Info" Size="Size.Small" Class="me-2" />
                                        Inherit from Rule
                                    </MudSelectItem>
                                </MudSelect>
                                <MudText Typo="Typo.caption" Class="text-muted">Leave empty if condition is not applicable</MudText>
                            </div>

                            <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                                <MudSelect T="int?"
                                           Label="Is Filer"
                                           @bind-Value="record.IsFiler"
                                           Placeholder="Not Applicable"
                                           Variant="Variant.Outlined"
                                           Clearable="@true"
                                           FullWidth="@true"
                                           ReadOnly="@isReadOnly"
                                           Class="mb-3">
                                    <MudSelectItem T="int?" Value="@((int?)1)">
                                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                        Yes
                                    </MudSelectItem>
                                    <MudSelectItem T="int?" Value="@((int?)0)">
                                        <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                        No
                                    </MudSelectItem>
                                    <MudSelectItem T="int?" Value="@((int?)null)">
                                        <MudIcon Icon="@Icons.Material.Filled.Remove" Color="Color.Info" Size="Size.Small" Class="me-2" />
                                        Not Applicable
                                    </MudSelectItem>
                                </MudSelect>
                                <MudText Typo="Typo.caption" Class="text-muted">Leave empty if condition is not applicable</MudText>
                            </div>
                        }

                    </div>
                }

                @if (RuleData == null)
                {
                    <SimpleLoading />
                }
                else
                {
                    <MudTabs Rounded="true" Elevation="1" PanelClass="mt-3">

                        <MudTabPanel Text="Rule Components" Icon="@Icons.Material.Filled.Rule">

                            <MudPaper Class="pa-3" Elevation="0">

                                <MudDataGrid T="TaxRuleDetailModel"
                                             Items="@RuleData"
                                             Dense="true"
                                             RowsPerPage="10"
                                             SortMode="SortMode.Multiple"
                                             Filterable="true"
                                             Hideable="true"
                                             MultiSelection="false">

                                    <!-- Toolbar -->
                                    <ToolBarContent>
                                        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="w-100">

                                            <MudText Typo="Typo.h6">
                                                Rule Components
                                            </MudText>

                                            <MudTextField @bind-Value="searchString"
                                                          @bind-Value:after="FilterData"
                                                          Placeholder="Search"
                                                          Variant="Variant.Outlined"
                                                          Adornment="Adornment.Start"
                                                          AdornmentIcon="@Icons.Material.Filled.Search"
                                                          Immediate="true"
                                                          Margin="Margin.Dense"
                                                          Style="width:240px;" />
                                        </MudStack>
                                    </ToolBarContent>

                                    <!-- Columns -->
                                    <Columns>

                                        <!-- Actions -->
                                        <TemplateColumn Title="Actions"
                                                        CellStyle="width:60px;"
                                                        HeaderClass="text-center">
                                            <CellTemplate Context="row">
                                                    @if (Globals.AccessLevel == 1)
                                                    {
                                                        <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                                                       Color="Color.Error"
                                                                       Size="Size.Small"
                                                                       OnClick="@(() => Delete(row.Item.Id))" />

                                                    }
                                            </CellTemplate>
                                        </TemplateColumn>

                                        <!-- Tax Name -->
                                        <PropertyColumn Property="x => x.TaxName"
                                                        Title="Tax Name"
                                                        Sortable="true"
                                                        Filterable="true" />

                                       
                                        <!-- Sequence -->
                                        <PropertyColumn Property="x => x.SequenceNo"
                                                        Title="Seq"
                                                        Sortable="true"
                                                        Filterable="true"
                                                        CellStyle="text-align:right;" />

                                        <!-- Rate -->
                                        <TemplateColumn Title="Rate"
                                                        CellStyle="width:90px; text-align:right;">
                                            <CellTemplate Context="row">
                                                @if (row.Item.TaxType == "PERCENTAGE")
                                                {
                                                    <MudText>@($"{row.Item.TaxAmount:0.##}%")</MudText>
                                                }
                                                else
                                                {
                                                    <MudText>@($"{row.Item.TaxAmount:0.##}")</MudText>
                                                }
                                            </CellTemplate>
                                        </TemplateColumn>

                                        <!-- Tax Base -->
                                        <TemplateColumn Title="Base"
                                                        Sortable="true"
                                                        Filterable="true">
                                            <CellTemplate Context="row">
                                                <MudChip T="string" Variant="Variant.Outlined"
                                                         Color="Color.Primary"
                                                         Size="Size.Small">
                                                    @row.Item.TaxBaseType
                                                </MudChip>
                                            </CellTemplate>
                                        </TemplateColumn>

                                        <!-- Conditions (if conditional) -->
                                        @if (RuleData.Any(r => !string.IsNullOrWhiteSpace(r.ConditionType)))
                                        {
                                            <TemplateColumn Title="Is Registered"
                                                            Sortable="true"
                                                            Filterable="true"
                                                            CellStyle="text-align:center;">
                                                <CellTemplate Context="row">
                                                    @if (!string.IsNullOrWhiteSpace(row.Item.ConditionType))
                                                    {
                                                        @if (row.Item.IsRegistered.HasValue)
                                                        {
                                                            <MudChip Color="@(row.Item.IsRegistered.Value == 1 ? Color.Success : Color.Error)" 
                                                                     Size="Size.Small" 
                                                                     Variant="Variant.Filled">
                                                                @(row.Item.IsRegistered.Value == 1 ? "Yes" : "No")
                                                            </MudChip>
                                                        }
                                                        else
                                                        {
                                                            <MudChip Color="Color.Info" Size="Size.Small" Variant="Variant.Outlined">
                                                                N/A
                                                            </MudChip>
                                                        }
                                                    }
                                                </CellTemplate>
                                            </TemplateColumn>

                                            <TemplateColumn Title="Is Filer"
                                                            Sortable="true"
                                                            Filterable="true"
                                                            CellStyle="text-align:center;">
                                                <CellTemplate Context="row">
                                                    @if (!string.IsNullOrWhiteSpace(row.Item.ConditionType))
                                                    {
                                                        @if (row.Item.IsFiler.HasValue)
                                                        {
                                                            <MudChip Color="@(row.Item.IsFiler.Value == 1 ? Color.Success : Color.Error)" 
                                                                     Size="Size.Small" 
                                                                     Variant="Variant.Filled">
                                                                @(row.Item.IsFiler.Value == 1 ? "Yes" : "No")
                                                            </MudChip>
                                                        }
                                                        else
                                                        {
                                                            <MudChip Color="Color.Info" Size="Size.Small" Variant="Variant.Outlined">
                                                                N/A
                                                            </MudChip>
                                                        }
                                                    }
                                                </CellTemplate>
                                            </TemplateColumn>
                                        }


                                    </Columns>

                                    <!-- Pager -->
                                    <PagerContent>
                                        <MudDataGridPager T="TaxRuleDetailModel" />
                                    </PagerContent>

                                </MudDataGrid>

                            </MudPaper>

                        </MudTabPanel>

                    </MudTabs>
                }

                <ul style="list-style: none; padding-left: 0; margin: 0;">
                    <li class="d-flex align-items-start mb-1">
                        <i class="fas fa-layer-group me-2 text-primary"></i>
                        <strong class="me-1">BASE_ONLY:</strong>
                        <span>Tax applies only to the base amount.</span>
                    </li>

                    <li class="d-flex align-items-start mb-1">
                        <i class="fas fa-plus-circle me-2 text-success"></i>
                        <strong class="me-1">BASE_PLUS_SELECTED:</strong>
                        <span>Tax applies to base plus selected prior taxes.</span>
                    </li>

                    <li class="d-flex align-items-start">
                        <i class="fas fa-chart-line me-2 text-warning"></i>
                        <strong class="me-1">RUNNING_TOTAL:</strong>
                        <span>Tax applies to the continuously updated total.</span>
                    </li>
                </ul>


            </ChildContent>

        </MudExpansionPanel>
    </MudExpansionPanels>
</div>

@code
{
    TaxRuleDetailModel record = new();
    List<TaxMasterModel> TaxMaster = new();
    List<TaxRuleModel> TaxRule = new();
    List<TaxRuleDetailModel> AllData = new();
    List<TaxRuleDetailModel> RuleData = new();
    private string searchString = "";
    bool selectedTaxIsConditional = false;

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "TaxRuleDashboard");
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        AllData = await Functions.GetAsync<List<TaxRuleDetailModel>>($"TaxRuleDetail/Search/a.TaxRuleId={CurrentRecord}", true) ?? new List<TaxRuleDetailModel>();
        RuleData = AllData;
        TaxMaster = await Functions.GetAsync<List<TaxMasterModel>>($"TaxMaster/Search", true) ?? new List<TaxMasterModel>();
        TaxRule = await Functions.GetAsync<List<TaxRuleModel>>($"TaxRule/Search", true) ?? new List<TaxRuleModel>();
        await Get(CurrentRecord);

        if (Action == "INSERT")
        {
            record = new TaxRuleDetailModel();
            selectedTaxIsConditional = false;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
        StateHasChanged();
    }

    private void FilterData()
    {
        if (string.IsNullOrWhiteSpace(searchString))
        {
            RuleData = AllData.ToList();
        }
        else
        {
            var search = searchString.ToLower();
            RuleData = AllData.Where(x =>
                (x.RuleName.ToString()?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.TaxName.ToString()?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.Description?.Contains(search, StringComparison.OrdinalIgnoreCase) == true)
            ).ToList();
        }

        StateHasChanged();
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<TaxRuleDetailModel>($"TaxRuleDetail/Get/{id}", true) ?? new TaxRuleDetailModel();
        
        // Check if the tax has "FILER AND REGISTER CHECK APPLIED" condition type
        if (record.TaxId > 0)
        {
            var tax = TaxMaster.FirstOrDefault(t => t.Id == record.TaxId);
            selectedTaxIsConditional = tax != null && 
                !string.IsNullOrWhiteSpace(tax.ConditionType) &&
                tax.ConditionType.Equals("FILER AND REGISTER CHECK APPLIED", StringComparison.OrdinalIgnoreCase);
        }
        else
        {
            selectedTaxIsConditional = false;
        }
        
        LoadingPanel = false;
    }

    private void OnTaxSelected()
    {
        // Check if selected tax is conditional
        if (record.TaxId > 0)
        {
            var tax = TaxMaster.FirstOrDefault(t => t.Id == record.TaxId);
            
            // If tax not found in list, try to find it by reloading (shouldn't happen normally)
            if (tax == null && TaxMaster.Count > 0)
            {
                // Tax might not be in the list yet, wait for it to be available
                // This should be rare, but we'll handle it
                selectedTaxIsConditional = false;
            }
            else
            {
                // Check if the tax has "FILER AND REGISTER CHECK APPLIED" condition type
                selectedTaxIsConditional = tax != null && 
                    !string.IsNullOrWhiteSpace(tax.ConditionType) &&
                    tax.ConditionType.Equals("FILER AND REGISTER CHECK APPLIED", StringComparison.OrdinalIgnoreCase);
                
                // If tax is not conditional, clear condition overrides
                if (!selectedTaxIsConditional)
                {
                    record.IsRegistered = null;
                    record.IsFiler = null;
                }
            }
        }
        else
        {
            selectedTaxIsConditional = false;
            record.IsRegistered = null;
            record.IsFiler = null;
        }
        
        // Force UI update to show/hide conditional fields
        InvokeAsync(StateHasChanged);
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new TaxRuleDetailModel();
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        if (record.Id == 0)
        {
            SnackbarService.Add("No record selected to delete", Severity.Warning);
            return;
        }

        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete this tax detail?");
        if (res == false)
            return;

        try
        {
            LoadingPanel = true;
            // The Delete endpoint expects id as a query parameter
            var result = await Functions.PostAsync<string>($"TaxRuleDetail/Delete?id={record.Id}", "", true);
            if (result.Success == true)
            {
                SnackbarService.Add($"Tax detail deleted successfully", Severity.Success);
                await OnSaved.InvokeAsync();
                await Clear();
            }
            else
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete this tax detail?");
        if (res == false)
            return;

        try
        {
            LoadingPanel = true;
            // The Delete endpoint expects id as a query parameter
            var result = await Functions.PostAsync<string>($"TaxRuleDetail/Delete?id={id}", "", true);
            if (result.Success == true)
            {
                SnackbarService.Add($"Tax detail deleted successfully", Severity.Success);
                await OnSaved.InvokeAsync();
                // Reload the data
                await GetAll();
            }
            else
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    protected async Task Save()
    {
        var errors = new List<string>();
        if (record.TaxId == 0)
            errors.Add("• Tax is required");
        
        if (string.IsNullOrWhiteSpace(record.TaxType))
            errors.Add("• Tax Type is required");
        
        if (string.IsNullOrWhiteSpace(record.TaxBaseType))
            errors.Add("• Tax Calculation Type is required");
        
        if (!record.TaxAmount.HasValue || record.TaxAmount.Value <= 0)
            errors.Add("• Tax Amount/Rate must be greater than 0");
        
        if (record.SequenceNo <= 0)
            errors.Add("• Sequence/Order must be greater than 0");

        if (errors.Count > 0)
        {
            SnackbarService.Add($"ERROR:\n{string.Join("\n", errors)}", Severity.Error);
            return;
        }

        try
        {
            LoadingPanel = true;
            record.TaxRuleId = CurrentRecord;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<TaxRuleDetailModel>($"TaxRuleDetail/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                
                // Refresh the grid data to show the new/updated record
                await GetAll();
                
                // For INSERT: Clear the form and keep drawer open for next record
                if (Action == "INSERT" && url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                {
                    record = new TaxRuleDetailModel();
                    record.TaxRuleId = CurrentRecord; // Keep the TaxRuleId
                    selectedTaxIsConditional = false;
                }
                else if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == true)
                {
                    await Clear();
                }
                
                // Notify parent (but don't close drawer for INSERT)
                await OnSaved.InvokeAsync();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}

