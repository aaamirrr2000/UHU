<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:NG.MicroERP.Shared.Models;assembly=NG.MicroERP.Shared"
        x:Class="Avalonia.Pages.Invoices.ItemPickerWindow"
        Title="Select Item"
        Width="500"
        Height="450"
        Background="#0c0e12"
        WindowStartupLocation="CenterOwner">

    <Grid RowDefinitions="Auto,Auto,*" Margin="16">
        <TextBox Grid.Row="0" x:Name="TxtSearch" Watermark="Search by name or code..." Background="#1e232b" Foreground="#e8eaed" Margin="0,0,0,8" KeyUp="OnSearchKeyUp" />
        <TextBlock Grid.Row="1" x:Name="StatusLabel" Text="Loading itemsâ€¦" Foreground="#8b929a" Margin="0,0,0,8" />
        <ListBox Grid.Row="2" x:Name="ListItems" Background="Transparent" BorderThickness="0" SelectionMode="Single" DoubleTapped="OnItemDoubleTapped">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ItemsModel}">
                    <Border Background="#1e232b" CornerRadius="6" Padding="10,8" Margin="0,0,0,4">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <TextBlock Text="{Binding Name}" Foreground="#e8eaed" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="1" Text="{Binding Code}" Foreground="#8b929a" VerticalAlignment="Center" Margin="8,0,0,0" />
                            <TextBlock Grid.Column="2" Text="{Binding BasePrice, StringFormat=N2}" Foreground="#5dd0c4" VerticalAlignment="Center" Margin="8,0,0,0" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
