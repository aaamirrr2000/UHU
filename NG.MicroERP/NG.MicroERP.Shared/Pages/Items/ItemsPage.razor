@page "/ItemsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject FileUploadService FileUploadService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

	<div class="text-end" style="margin-top:10px;">
		@if (Action != "VIEW")
		{
			<MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
				<MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
				@(Action == "INSERT" ? "Save" : "Update")
			</MudButton>

			@if (Action == "UPDATE")
			{
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
			}
		}
	</div>

	<br />
    <MudExpansionPanels MultiExpansion="true">

        <!-- Panel 1: Basic Details with Image on Right -->
        <MudExpansionPanel Text="Basic Details" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-box-open"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.Name) ? "NO NAME" : record.Name)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Item Identification & Classification</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                    <!-- Left Column: Form Fields -->
                    <div class="col-12 col-md-8">
                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <MudTextField id="Code" @bind-Value="record.Code" placeholder="Auto-generated"
                                              Label="Item Code *" ReadOnly="@isReadOnly" Variant="Variant.Outlined" FullWidth="true" Required="true"></MudTextField>
                                <ValidationMessage For="@(() => record.Code)" />
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <MudTextField id="HsCode" @bind-Value="record.HsCode" placeholder="Harmonized System Code"
                                              Label="HS Code" ReadOnly="@isReadOnly" Variant="Variant.Outlined" FullWidth="true"></MudTextField>
                                <ValidationMessage For="@(() => record.HsCode)" />
                            </div>

                            <div class="col-12 mb-3">
                                <MudTextField id="Name" @bind-Value="record.Name" placeholder="Enter item name"
                                              Label="Item Name *" ReadOnly="@isReadOnly" Variant="Variant.Outlined" FullWidth="true" Required="true"></MudTextField>
                                <ValidationMessage For="@(() => record.Name)" />
                            </div>

                            <div class="col-12 mb-3">
                                <MudTextField id="Description" @bind-Value="record.Description" placeholder="Item description"
                                              Label="Description" ReadOnly="@isReadOnly" Variant="Variant.Outlined" FullWidth="true" Lines="2"></MudTextField>
                                <ValidationMessage For="@(() => record.Description)" />
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <MudSelect @bind-Value="record.CategoryId" Placeholder="Select category"
                                           Label="Category *" Variant="Variant.Outlined" Clearable="true" FullWidth="true" Required="true">
                                    @if (Cat != null && Cat.Any())
                                    {
                                        foreach (var i in Cat)
                                        {
                                            <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                        }
                                    }
                                    else
                                    {
                                        <MudSelectItem T="int" Value="0" Disabled="true">No categories available</MudSelectItem>
                                    }
                                </MudSelect>
                                <ValidationMessage For="@(() => record.CategoryId)" />
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <MudSelect T="string" @bind-Value="record.StockType" Placeholder="Select stock type"
                                           Label="Stock Type" Variant="Variant.Outlined" Clearable="true" FullWidth="true">
                                    @if (Sto != null && Sto.Any())
                                    {
                                        if (string.IsNullOrWhiteSpace(record.StockType))
                                        {
                                            record.StockType = Sto.First().ListValue;
                                        }
                                        foreach (var i in Sto)
                                        {
                                            <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                        }
                                    }
                                </MudSelect>
                                <ValidationMessage For="@(() => record.StockType)" />
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <MudSelect T="string" @bind-Value="record.Unit" Placeholder="Select unit"
                                           Label="Unit of Measure" Variant="Variant.Outlined" Clearable="true" FullWidth="true">
                                    @if (Unit != null && Unit.Any())
                                    {
                                        if (string.IsNullOrWhiteSpace(record.Unit))
                                        {
                                            record.Unit = Unit.First().ListValue;
                                        }
                                        foreach (var i in Unit)
                                        {
                                            <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                        }
                                    }
                                </MudSelect>
                                <ValidationMessage For="@(() => record.Unit)" />
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <MudTextField id="ServingSize" @bind-Value="record.ServingSize" placeholder="Serving size details"
                                              Label="Serving Size" ReadOnly="@isReadOnly" Variant="Variant.Outlined" FullWidth="true"></MudTextField>
                                <ValidationMessage For="@(() => record.ServingSize)" />
                            </div>
                        </div>
                    </div>

                    <!-- Right Column: Picture -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="p-3 border rounded">
                                    <label class="small fw-bold text-uppercase d-block mb-2 text-center">Item Image</label>

                                    <div class="d-flex justify-content-center align-items-center mb-3" style="height: 150px;">
                                        @if (!string.IsNullOrEmpty(record.Pic))
                                        {
                                            <img src="@Globals.GetImageUrl(record.Pic)"
                                                 class="img-fluid rounded"
                                                 alt="Party Image"
                                                 style="max-height: 100%; max-width: 100%; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center justify-content-center bg-secondary rounded-circle"
                                                 style="width: 120px; height: 120px;">
                                                <i class="fas fa-user-circle text-white fs-3"></i>
                                            </div>
                                        }
                                    </div>

                                    <InputFile OnChange="OnFileInputChanged" class="form-control form-control-sm" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Panel 2: Inventory Settings -->
        <MudExpansionPanel Text="Inventory Settings" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-warehouse"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Inventory Control</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Stock levels and reorder settings</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #2196F3; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                   
                    <div class="col-12 col-md-6 mb-3">
                        <MudSelect T="int" @bind-Value="record.IsFavorite" Placeholder="Select"
                                   Label="Favorite Item" Variant="Variant.Outlined" Clearable="true" FullWidth="true">
                            @if (record.IsFavorite != 0 && record.IsFavorite != 1)
                            {
                                record.IsFavorite = 0;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Size="Size.Small" Class="me-2" />
                                Yes - Mark as Favorite
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.StarOutline" Color="Color.Default" Size="Size.Small" Class="me-2" />
                                No - Regular Item
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsFavorite)" />
                    </div>

                    <div class="col-12 mb-3">
                        <MudDivider Class="my-3">
                            <MudText Typo="Typo.subtitle2" Class="text-muted">Stock Level Settings</MudText>
                        </MudDivider>
                    </div>

                    <div class="col-12 col-md-4 mb-3">
                        <MudNumericField @bind-Value="record.MinQty" placeholder="0.00" ReadOnly="@isReadOnly"
                                         Label="Minimum Quantity *" Variant="Variant.Outlined" FullWidth="true" Format="#,##0.00" Min="0" Required="true"></MudNumericField>
                        <ValidationMessage For="@(() => record.MinQty)" />
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">Alert when stock falls below this level</MudText>
                    </div>

                    <div class="col-12 col-md-4 mb-3">
                        <MudNumericField @bind-Value="record.MaxQty" placeholder="0.00" ReadOnly="@isReadOnly"
                                         Label="Maximum Quantity" Variant="Variant.Outlined" FullWidth="true" Format="#,##0.00" Min="0"></MudNumericField>
                        <ValidationMessage For="@(() => record.MaxQty)" />
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">Maximum stock capacity</MudText>
                    </div>

                    <div class="col-12 col-md-4 mb-3">
                        <MudNumericField @bind-Value="record.ReorderQty" placeholder="0.00" ReadOnly="@isReadOnly"
                                         Label="Reorder Quantity *" Variant="Variant.Outlined" FullWidth="true" Format="#,##0.00" Min="0" Required="true"></MudNumericField>
                        <ValidationMessage For="@(() => record.ReorderQty)" />
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">Quantity to order when restocking</MudText>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Panel 3: Pricing & Taxation -->
        <MudExpansionPanel Text="Pricing & Taxation" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-tag"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Price Management</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Cost, pricing, and tax settings</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row g-3">

                    <!-- Cost Price -->
                    <div class="col-12 col-md-6">
                        <MudNumericField @bind-Value="record.CostPrice"
                                         Placeholder="0.00"
                                         Label="Cost Price (Average) *"
                                         ReadOnly="@isReadOnly"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Format="#,##0.00"
                                         Min="0"
                                         Required="true" />
                        <ValidationMessage For="@(() => record.CostPrice)" />
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">
                            Average purchase cost per unit
                        </MudText>
                    </div>

                    <!-- Base Price -->
                    <div class="col-12 col-md-6">
                        <MudNumericField @bind-Value="record.BasePrice"
                                         Placeholder="0.00"
                                         Label="Base Price (Current) *"
                                         ReadOnly="@isReadOnly"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Format="#,##0.00"
                                         Min="0"
                                         Required="true" />
                        <ValidationMessage For="@(() => record.BasePrice)" />
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">
                            Current selling price per unit
                        </MudText>
                    </div>

                    <!-- Divider for Discount & Tax -->
                    <div class="col-12">
                        <MudDivider Class="my-3">
                            <MudText Typo="Typo.subtitle2" Class="text-muted">Discount & Tax Settings</MudText>
                        </MudDivider>
                    </div>

                    <!-- Discount -->
                    <div class="col-12 col-md-6">
                        <MudNumericField @bind-Value="record.DefaultDiscount"
                                         Placeholder="0.00"
                                         Label="Overall Sale Invoice Discount (%)"
                                         ReadOnly="@isReadOnly"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Format="#,##0.000000"
                                         Min="0"
                                         Max="100" />
                        <ValidationMessage For="@(() => record.DefaultDiscount)" />
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">
                            Default discount percentage
                        </MudText>
                    </div>

                    <!-- Transaction Type -->
                    <div>
                        @if (_taxRuleAppliedOnInvoiceLevel)
                        {
                            <MudAlert Severity="Severity.Warning" Class="mb-3" Variant="Variant.Filled">
                                <MudText Typo="Typo.body2">
                                    <MudIcon Icon="@Icons.Material.Filled.Warning" Class="me-2" />
                                    <strong>Warning:</strong> Tax is currently applied at invoice level. Item-level tax rules will not be used in sale invoices.
                                </MudText>
                            </MudAlert>
                        }
                        <MudSelect T="int?"
                                   @bind-Value="record.TaxRuleId"
                                   Placeholder="Transaction Type"
                                   Label="Tax Rule"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   @bind-Value:after="OnTaxRuleChange">
                            @if (TaxRule != null && TaxRule.Any())
                            {
                                @foreach (var rule in TaxRule)
                                {
                                    <MudSelectItem T="int?" Value="@rule.Id">@rule.RuleName</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.TaxRuleId)" />

                        
                    </div>

                    <div>
                        @if (SelectedTaxRule != null && SelectedTaxRule.Any())
                        {
                            <MudPaper Class="pa-3 mt-2" Elevation="1">
                                <MudText Typo="Typo.subtitle1" Class="mb-2">
                                    <MudIcon Icon="@Icons.Material.Filled.Info" Class="me-1" />
                                    Tax Rule Details
                                </MudText>

                                <MudTable Items="SelectedTaxRule" Elevation="0" Bordered="true" Hover="true" Striped="true">
                                    <HeaderContent>
                                        <MudTh>Seq</MudTh>
                                        <MudTh>Tax Name</MudTh>
                                        <MudTh>Base Type</MudTh>
                                        <MudTh>Rate</MudTh>
                                    </HeaderContent>
                                    <RowTemplate>
                                        <MudTd>@context.SequenceNo</MudTd>
                                        <MudTd>
                                            <MudIcon Icon="@Icons.Material.Filled.ConfirmationNumber" Class="me-1" />
                                            @context.TaxName
                                        </MudTd>
                                        <MudTd>
                                            <MudChip T="string" Size="Size.Small" Variant="Variant.Filled"
                                                     Color=Color.Primary>
                                                @context.TaxBaseType
                                            </MudChip>
                                        </MudTd>
                                        <MudTd>
                                            <MudChip T="int" Size="Size.Small" Variant="Variant.Filled"
                                                     Color="@(context.TaxType == "PERCENTAGE" ? Color.Primary : Color.Info)">
                                                @(context.TaxType == "PERCENTAGE" ? $"{context.TaxAmount:0.##}%" : $"{context.TaxAmount:0.##}")
                                            </MudChip>
                                        </MudTd>
                                    </RowTemplate>
                                </MudTable>
                            </MudPaper>
                        }
                    </div>
                </div>
            </ChildContent>

        </MudExpansionPanel>

        <!-- Panel 4: GL Accounting -->
        <MudExpansionPanel Text="GL Accounting" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-book"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">General Ledger Mapping</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">GL accounts for expense and revenue posting</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #673AB7; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row g-3">

                    <!-- Expense Account (PURCHASE) -->
                    <div class="col-12 col-md-6">
                        <MudSelect T="int?"
                                   Label="Expense Account"
                                   Value="record.ExpenseAccountId"
                                   ValueChanged="(int? value) => record.ExpenseAccountId = value"
                                   Variant="Variant.Outlined"
                                   Dense="@true"
                                   FullWidth="@true"
                                   Margin="Margin.Dense"
                                   Clearable="true"
                                   Class="invoice-field-input">
                            @foreach (var option in ExpenseAccounts)
                            {
                                <MudSelectItem T="int?" Value="@((int?)option.Id)">@option.DisplayName</MudSelectItem>
                            }
                        </MudSelect>
                    </div>

                    <!-- Revenue Account (SALE) -->
                    <div class="col-12 col-md-6">
                        <MudSelect T="int?"
                                   Label="Revenue Account"
                                   Value="record.RevenueAccountId"
                                   ValueChanged="(int? value) => record.RevenueAccountId = value"
                                   Variant="Variant.Outlined"
                                   Dense="@true"
                                   FullWidth="@true"
                                   Margin="Margin.Dense"
                                   Clearable="true"
                                   Class="invoice-field-input">
                            @foreach (var option in RevenueAccounts)
                            {
                                <MudSelectItem T="int?" Value="@((int?)option.Id)">@option.DisplayName</MudSelectItem>
                            }
                        </MudSelect>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Panel 5: Status & System -->
        <MudExpansionPanel Text="Status & System">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-cog"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">System Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Activation and system preferences</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #9C27B0; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <MudSelect T="int" @bind-Value="record.IsActive" Placeholder="Select status"
                                   Label="Status" Variant="Variant.Outlined" Clearable="true" FullWidth="true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Active
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Inactive
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </div>

                </div>
            </ChildContent>
        </MudExpansionPanel>

    </MudExpansionPanels>

</div>

@code
{
    static ItemsModel record = new();
    List<CategoriesModel> Cat = new();
    List<TypeCodeModel> Sto = null!;
    List<TypeCodeModel> Unit = null!;
    List<TaxRuleModel> TaxRule = new();
    List<TaxRuleDetailModel> SelectedTaxRule = new();
    List<ChartOfAccountsModel> ExpenseAccounts = new();
    List<ChartOfAccountsModel> RevenueAccounts = new();
    
    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    private bool _taxRuleAppliedOnInvoiceLevel = false;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadInterfaceSettings();
        await GetAll();
    }
    
    private async Task LoadInterfaceSettings()
    {
        try
        {
            var settings = await Functions.GetAsync<List<InterfaceSettingsModel>>(
                $"InterfaceSettings/Search/OrganizationId={Globals.User.OrganizationId} and Category='Sale Invoice' and SettingKey='TaxRuleAppliedOnInvoiceLevel'", true)
                ?? new List<InterfaceSettingsModel>();
            
            var setting = settings.FirstOrDefault(s => s.IsActive == 1 && s.IsSoftDeleted == 0);
            _taxRuleAppliedOnInvoiceLevel = setting?.SettingValue?.ToLower() == "true";
        }
        catch
        {
            _taxRuleAppliedOnInvoiceLevel = false;
        }
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        TaxRule = await Functions.GetAsync<List<TaxRuleModel>>($"TaxRule/Search", true) ?? new List<TaxRuleModel>();
        Cat = await Functions.GetAsync<List<CategoriesModel>>($"Categories/Search", true) ?? new List<CategoriesModel>();
        Sto = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/STOCK TYPE", true) ?? new List<TypeCodeModel>();
        Unit = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/UNIT TYPE", true) ?? new List<TypeCodeModel>();
        
        // Fetch GL Accounts for expense and revenue
        ExpenseAccounts = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/InterfaceType='ITEM EXPENSE'", true) ?? new List<ChartOfAccountsModel>();
        RevenueAccounts = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/InterfaceType='ITEM REVENUE'", true) ?? new List<ChartOfAccountsModel>();

        if (Action == "INSERT")
        {
            record = new ItemsModel();
            record.IsActive = 1;
            record.MinQty = 10;
            record.MaxQty = 100;
            record.ReorderQty = 50;
            record.ServingSize = "";
            isReadOnly = false;
        }
        else  if (Action != "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action != "EDIT")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<ItemsModel>($"Items/Get/{id}", true) ?? new ItemsModel();
        LoadingPanel = false;
    }

    private async Task OnTaxRuleChange()
    {
        if (record.TaxRuleId.HasValue && record.TaxRuleId.Value > 0)
        {
            SelectedTaxRule = await Functions.GetAsync<List<TaxRuleDetailModel>>($"TaxRuleDetail/Search/a.TaxRuleId={record.TaxRuleId.Value}",true) ?? new List<TaxRuleDetailModel>();
        }
        else
        {
            SelectedTaxRule = new List<TaxRuleDetailModel>();
        }
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new ItemsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<ItemsModel>($"Items/{url}", record, true);
            if (result.Success == false)
            {
                string errorMessage = !string.IsNullOrWhiteSpace(result.Message) 
                    ? result.Message 
                    : "Record Not Saved";
                SnackbarService.Add(errorMessage, Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;

        }
    }

    private async Task OnFileInputChanged(InputFileChangeEventArgs e)
    {
        try
        {
            var result = await Functions.FileUpload(e, FileUploadService);

            if (result.Item1 == true)
            {
                record.Pic = result.Item2;
                SnackbarService.Add("File uploaded successfully!", Severity.Success);
            }
            else
            {
                SnackbarService.Add($"Error: {result.Item2}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Exception: {ex.Message}", Severity.Error);
            record.Pic = null;
        }
    }
