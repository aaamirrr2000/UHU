@page "/UsersPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />
    <MudExpansionPanels MultiExpansion="true">

        <!-- User Authentication Panel -->
        <MudExpansionPanel Text="User Authentication" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-user-lock"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.Username) ? "NO NAME" : record.Username)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Users</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">User Name</label>
                        <MudTextField id="Username"
                                      @bind-Value="record.Username"
                                      placeholder="User Name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Username)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">User Type</label>
                        <MudSelect T="string"
                                   @bind-Value="record.UserType"
                                   Placeholder="User Type"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Use != null && Use.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.UserType))
                                {
                                    record.UserType = Use.First().ListValue;
                                }
                                foreach (var i in Use)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.UserType)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- User Assignment Panel -->
        <MudExpansionPanel Text="User Assignment" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-id-card"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">User Assignment</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Employee and group assignment</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #2196F3; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Employee</label>
                        <div class="flex-grow-1">
                            <AutoComplete TItem="EmployeesModel"
                                          DataList="@Emp"
                                          IdProperty="@(e => e.Id)"
                                          DisplayProperty="@(e => e.Fullname)"
                                          SelectedId="@record.EmpId"
                                          SelectedIdChanged="@(id => record.EmpId = id)"
                                          Variant="Variant.Outlined"
                                          FullWidth="true" />
                        </div>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.EmpId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Group</label>
                        <MudSelect @bind-Value="record.GroupId"
                                   Placeholder="Group"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Gro != null && Gro.Any())
                            {
                                foreach (var i in Gro)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.GroupId)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Access & Status Panel -->
        <MudExpansionPanel Text="Access & Status" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-shield-alt"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Access & Status</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Location access and activation status</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Location</label>
                        <MudSelect @bind-Value="record.LocationId"
                                   Placeholder="Location"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Loc != null && Loc.Any())
                            {
                                foreach (var i in Loc)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.LocationId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Active</label>
                        <MudSelect T="int"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Active"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.IsActive)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

    </MudExpansionPanels>

</div>

@code
{
    UsersModel record = new();
    List<TypeCodeModel> Use = null!;
    List<EmployeesModel> Emp = new();
    List<GroupsModel> Gro = new();
    List<LocationsModel> Loc = new();

    private string? searchTerm;
    private EmployeesModel? SelectedEmployee;
    
    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Use = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/USER TYPE", true) ?? new List<TypeCodeModel>();
        Emp = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();
        Gro = await Functions.GetAsync<List<GroupsModel>>($"Groups/Search", true) ?? new List<GroupsModel>();
        Loc = await Functions.GetAsync<List<LocationsModel>>($"Locations/Search", true) ?? new List<LocationsModel>();

        if (Action == "INSERT")
        {
            record = new UsersModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<UsersModel>($"Users/Get/{id}", true) ?? new UsersModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {

        // if (Emp != null && Emp.Any() && record.EmpId == 0)
        //     record.EmpId = Emp.First().Id;
        if (Gro != null && Gro.Any() && record.GroupId == 0)
            record.GroupId = Gro.First().Id;
        if (Loc != null && Loc.Any() && record.LocationId == 0)
            record.LocationId = Loc.First().Id;


        StateHasChanged();
    }

    protected async void Clear()
    {
        Action = "INSERT";
        record = new UsersModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<UsersModel>($"Users/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    Clear();
                }
            }

        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}

