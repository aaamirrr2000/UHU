@page "/UsersDashboard"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="row" style="margin: 2px; height: 90vh; display: flex;">
    <MyDrawer @ref="_drawer" Title="Users" FaIcon="fas fa-user-cog" >
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <UsersPage Action="@Action" CurrentRecord="record.Id" OnSaved="ChildSaved"/>
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <div class="row">
            <MudDataGrid T="UsersModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="10"
                         Dense="true"
                         Striped="true"
                         Class="professional-grid elevation-8">

                <ToolBarContent>
                    <div class="grid-toolbar-wrapper">
                        <div class="grid-toolbar">
                            <div class="toolbar-left">
                                <MudIcon Icon="@Icons.Material.Filled.Person" Class="toolbar-icon" />
                                <MudText Typo="Typo.h6" Class="toolbar-title">
                                    Users Management
                                </MudText>
                            </div>

                            <div class="toolbar-right">
                                @if (AccessLevel == 1)
                                {
                                    <MudButton StartIcon="@Icons.Material.TwoTone.Add"
                                               Size="MudBlazor.Size.Small"
                                               Variant="Variant.Filled"
                                               Color="Color.Success"
                                               Class="action-btn new-btn"
                                               OnClick="@(() => Clear())">
                                        New User
                                    </MudButton>
                                }

                                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh"
                                           Size="MudBlazor.Size.Small"
                                           Variant="Variant.Filled"
                                           Color="Color.Info"
                                           Class="action-btn refresh-btn"
                                           OnClick="@(() => Refresh())">
                                    Refresh
                                </MudButton>
                            </div>
                        </div>
                    </div>
                </ToolBarContent>

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 80px; min-width: 80px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(() => View(row.Item.Id))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View Details</span>
                                    </MudMenuItem>
                                    @if (AccessLevel == 1)
                                    {
                                        <MudMenuItem OnClick="@(() => Edit(row.Item.Id))"
                                                     Class="menu-item edit-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" />
                                            <span>Edit</span>
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => Delete(row.Item.Id))"
                                                     Color="Color.Error"
                                                     Class="menu-item delete-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" />
                                            <span>Delete</span>
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => ResetPassword(row.Item.Id))"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Key" Class="menu-icon" />
                                            <span>Reset Password</span>
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => ShowPassword(row.Item.Id))"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                            <span>Show Password</span>
                                        </MudMenuItem>
                                    }
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Username"
                                    Title="Username"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.UserType"
                                    Title="User Type"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <TemplateColumn Title="Theme"
                                    CellStyle="width: 70px; min-width: 70px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @if (row.Item.DarKLightTheme == 1)
                            {
                                <MudChip Color="Color.Default" Size="Size.Small" Variant="Variant.Filled">
                                    <MudIcon Icon="@Icons.Material.Filled.DarkMode" Size="Size.Small" Class="me-1" />
                                    Dark
                                </MudChip>
                            }
                            else
                            {
                                <MudChip Color="Color.Warning" Size="Size.Small" Variant="Variant.Filled">
                                    <MudIcon Icon="@Icons.Material.Filled.LightMode" Size="Size.Small" Class="me-1" />
                                    Light
                                </MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.FullName"
                                    Title="Employee"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.GroupName"
                                    Title="Group"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.LocationName"
                                    Title="Location"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <TemplateColumn Title="Status"
                                    CellStyle="width: 70px; min-width: 70px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @if (row.Item.IsActive == 1)
                            {
                                <MudChip Color="Color.Success" Size="Size.Small" Variant="Variant.Filled">Active</MudChip>
                            }
                            else
                            {
                                <MudChip Color="Color.Error" Size="Size.Small" Variant="Variant.Filled">Locked</MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="UsersModel" Class="grid-pager" />
                    </div>
                </PagerContent>

            </MudDataGrid>
        </div>
    }
</div>

@code
{
    List<UsersModel> data = new();
    UsersModel record = new();

    public string? Action { get; set; } = "INSERT";

    bool isReadOnly = true;
    public int AccessLevel { get; set; } = 0;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        AccessLevel = Globals.PageAccess(NavManager, "UsersDashboard");
        await GetAll();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        data = await Functions.GetAsync<List<UsersModel>>($"Users/Search", true) ?? new List<UsersModel>();
        LoadingPanel = false;
    }

    protected async Task Get(int id, bool ShowLoading=true)
    {
        if (ShowLoading)
            LoadingPanel = true;
        
            record = await Functions.GetAsync<UsersModel>($"Users/Get/{id}", true) ?? new UsersModel();

        if (ShowLoading)
            LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new UsersModel();
        record.IsActive = 1;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async void ResetPassword(int id)
    {
        try
        {
            await Get(id, false);

            LoadingPanel = false;
            var res = await Functions.ShowConfirmation(dialogService, $"Do you want to Reset Password? of '{record.Username}'");
            if (res == false)
                return;

            LoadingPanel = true;
            var result = await Functions.GetAsync<UsersModel>($"Login/ResetPassword/{id}", false);
            LoadingPanel = false;

            if (result != null)
            {
                SnackbarService.Add("New Password sent to your email.", Severity.Success);
            }
            else
            {
                SnackbarService.Add("Failed to send reset link. Please try again.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add("An error occurred while resetting password.", Severity.Error);
        }
    }

    protected async void ShowPassword(int id)
    {
        try
        {
            await Get(id, false);
            await Functions.ShowMessage(dialogService, "warning", $"Password is {Globals.Decrypt(record.Password)}");
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add("An error occurred while showing password.", Severity.Error);
        }
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Globals.ClientInfo;

        var result = await Functions.PostAsync<UsersModel>($"Users/{Action}", record, true);
        if (result.Success == true)
        {
            SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
        }
        else
        {
            SnackbarService.Add($"Record Not Deleted", Severity.Error);
        }

        await GetAll();
        LoadingPanel = false;
        await _drawer.CloseDrawerAsync();

    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }
}

