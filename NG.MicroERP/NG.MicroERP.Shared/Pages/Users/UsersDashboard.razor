@page "/UsersDashboard"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService

<Loading IsLoading="@LoadingPanel" />

<div class="row" style="margin: 2px; height: 90vh; display: flex;">
    <MyDrawer @ref="_drawer" Title="Users" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <UsersPage Action="@Action" CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <div class="row">
            <MudDataGrid T="UsersModel" MultiSelection="false" Items="@data" SortMode="SortMode.Multiple" Filterable="true" Hideable="true" RowsPerPage="10" Dense="true">
                <ToolBarContent>
                    <MudText Typo="Typo.h6">Users Managment</MudText>
                    <MudSpacer />
                    <MudButton StartIcon="@Icons.Material.TwoTone.Add" Size="MudBlazor.Size.Small" Class="mx-1" Variant="Variant.Filled" Color="Color.Success" OnClick="@(() => Clear())">New</MudButton>
                    <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" Size="MudBlazor.Size.Small" Class="mx-1" Variant="Variant.Filled" Color="Color.Info" OnClick="@(() => Refresh())">Refresh</MudButton>
                </ToolBarContent>

                <Columns>
                    <TemplateColumn Title="Actions" CellStyle="width: 60px; min-width: 60px;">
                        <CellTemplate Context="row">
                            <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Dense="true">
                                <MudMenuItem OnClick="@(() => View(row.Item.Id))">
                                    <MudIcon Icon="@Icons.Material.Filled.Search" Class="me-2" /> View
                                </MudMenuItem>
                                <MudMenuItem OnClick="@(() => Edit(row.Item.Id))">
                                    <MudIcon Icon="@Icons.Material.Filled.Edit" Class="me-2" /> Edit
                                </MudMenuItem>
                                <MudMenuItem OnClick="@(() => Delete(row.Item.Id))" Color="Color.Error">
                                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="me-2" /> Delete
                                </MudMenuItem>
                                <hr />
                                <MudMenuItem OnClick="@(() => ResetPassword(row.Item.Id))" Color="Color.Error">
                                    <MudIcon Icon="@Icons.Material.Filled.Key" Class="me-2" /> Reset Password
                                </MudMenuItem>
                            </MudMenu>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Username" Title="User Name" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.UserType" Title="User Type" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.DarKLightTheme" Title="Theme" Sortable="true" Filterable="true"/>
                    <PropertyColumn Property="x => x.FullName" Title="Employee" Sortable="true" Filterable="true"  />
                    <PropertyColumn Property="x => x.GroupName" Title="Group" Sortable="true" Filterable="true"  />
                    <PropertyColumn Property="x => x.LocationName" Title="Location" Sortable="true" Filterable="true"  />
                    <TemplateColumn Title="Active" CellStyle="width: 50px; min-width: 50px;">
                        <CellTemplate Context="row">
                            @((row.Item.IsActive == 1) ? "" : "Locked")
                        </CellTemplate>
                    </TemplateColumn>


                </Columns>

                <PagerContent>
                    <MudDataGridPager T="UsersModel" />
                </PagerContent>
            </MudDataGrid>
        </div>
    }
</div>

@code
{
    List<UsersModel> data = new();
    UsersModel record = new();

    public string Action { get; set; } = "INSERT";

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        data = await Functions.GetAsync<List<UsersModel>>($"Users/Search", true) ?? new List<UsersModel>();
        LoadingPanel = false;
    }

    protected async Task Get(int id, bool ShowLoading=true)
    {
        if (ShowLoading)
            LoadingPanel = true;
        
            record = await Functions.GetAsync<UsersModel>($"Users/Get?Id={id}", true) ?? new UsersModel();

        if (ShowLoading)
            LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new UsersModel();
        record.IsActive = 1;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async void ResetPassword(int id)
    {
        try
        {
            await Get(id, false);

            LoadingPanel = false;
            var res = await Functions.ShowConfirmation(dialogService, $"Do you want to Reset Password? of '{record.Username}'");
            if (res == false)
                return;

            LoadingPanel = true;
            var result = await Functions.GetAsync<UsersModel>($"Login/ResetPassword/{id}", false);
            LoadingPanel = false;

            if (result != null)
            {
                SnackbarService.Add("New Password sent to your email.", Severity.Success);
            }
            else
            {
                SnackbarService.Add("Failed to send reset link. Please try again.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add("An error occurred while resetting password.", Severity.Error);
        }
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Functions.GetComputerDetails();
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Functions.GetComputerDetails();

        var result = await Functions.PostAsync<UsersModel>($"Users/{Action}", record, true);
        if (result.Success == true)
        {
            SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
        }
        else
        {
            SnackbarService.Add($"Record Not Deleted", Severity.Error);
            record = new();
            isReadOnly = true;
        }

        await GetAll();
        LoadingPanel = false;
        await _drawer.CloseDrawer();

    }

}

