@page "/ShiftsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Shift Information Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Shift Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Basic shift details</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="Shift Name"
                                      @bind-Value="record.ShiftName"
                                      Placeholder="Enter shift name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true"
                                      Required="@true" />
                        <ValidationMessage For="@(() => record.ShiftName)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Shift Timing Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.AccessTime" 
                             Size="Size.Large" 
                             Color="Color.Info" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Shift Timing</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Start and end times</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTimePicker Label="Start Time"
                                       Placeholder="Start Time"
                                       AmPm="@true"
                                       @bind-Time="StartTime"
                                       Variant="Variant.Outlined"
                                       ReadOnly="@isReadOnly"
                                       FullWidth="@true"
                                       Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTimePicker Label="End Time"
                                       Placeholder="End Time"
                                       AmPm="@true"
                                       @bind-Time="EndTime"
                                       Variant="Variant.Outlined"
                                       ReadOnly="@isReadOnly"
                                       FullWidth="@true" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Shift Settings Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" 
                             Size="Size.Large" 
                             Color="Color.Warning" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Shift Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Flexibility and activation</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudNumericField Label="Flexi Time (Minutes)"
                                         @bind-Value="record.FlexiTime"
                                         Placeholder="0"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        <ValidationMessage For="@(() => record.FlexiTime)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    ShiftsModel record = new();
    List<OrganizationsModel> Org = new();

    public TimeSpan? StartTime { get; set; }
    public TimeSpan? EndTime { get; set; }

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Action == "INSERT")
        {
            record = new ShiftsModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;

        record = await Functions.GetAsync<ShiftsModel>($"Shifts/Get/{id}", true) ?? new ShiftsModel();
        StartTime = TimeSpan.Parse(record.StartTime);
        EndTime = TimeSpan.Parse(record.EndTime);

        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (Org != null && Org.Any() && record.OrganizationId == 0)
            record.OrganizationId = Org.First().Id;

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new ShiftsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        if (StartTime.HasValue && EndTime.HasValue && StartTime.Value >= EndTime.Value)
        {
            SnackbarService.Add("Start time must be earlier than end time.", Severity.Warning);
            return;
        }

        try
        {
            LoadingPanel = true;
            record.StartTime = StartTime.ToString();
            record.EndTime = EndTime.ToString();
            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<ShiftsModel>($"Shifts/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
