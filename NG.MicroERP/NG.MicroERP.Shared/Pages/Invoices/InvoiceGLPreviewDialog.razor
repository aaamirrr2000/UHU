@using NG.MicroERP.Shared.Models
@inject Functions Functions

<MudDialog>
    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <MudText Typo="Typo.h6" Class="mb-0">
                    <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="me-2" />
                    @(IsPostedToGL ? "Posted Accounting Entry" : "Accounting Entry Preview")
                </MudText>
                <MudText Typo="Typo.caption" Color="@(IsPostedToGL ? Color.Success : Color.Info)">
                    @(IsPostedToGL ? "This is the actual GL entry that was posted" : "This is a preview of the GL entries that will be created")
                </MudText>
            </div>
            
            @if (IsPostedToGL)
            {
                <MudAlert Severity="Severity.Success" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="me-2" />
                    This entry has already been posted to General Ledger. Entry No: @PreviewData?.EntryNo
                </MudAlert>
            }

            @if (PreviewData != null && PreviewData.HasWarnings)
            {
                <MudAlert Severity="Severity.Warning" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Warning" Class="me-2" />
                    <MudText Typo="Typo.body2" Class="fw-bold mb-2">Missing Accounts or Configuration Issues Detected:</MudText>
                    <ul style="margin: 0; padding-left: 20px;">
                        @foreach (var warning in PreviewData.Warnings)
                        {
                            <li><MudText Typo="Typo.body2">@warning</MudText></li>
                        }
                    </ul>
                    <MudText Typo="Typo.body2" Class="mt-2 fw-semibold">
                        Please configure the missing accounts in Chart of Accounts before posting to GL. The "Transfer to GL" button is disabled until all accounts are configured.
                    </MudText>
                </MudAlert>
            }

            @if (PreviewData != null)
            {
                <MudPaper Elevation="2" Class="pa-3 mb-3">
                    <MudText Typo="Typo.subtitle1" Class="mb-2 fw-bold">Entry Information</MudText>
                    <MudGrid>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.body2"><strong>Entry No:</strong> @PreviewData.EntryNo</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.body2"><strong>Date:</strong> @PreviewData.EntryDate?.ToString("yyyy-MM-dd")</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.body2"><strong>Reference:</strong> @PreviewData.ReferenceNo</MudText>
                        </MudItem>
                        <MudItem xs="12" sm="6">
                            <MudText Typo="Typo.body2"><strong>Description:</strong> @PreviewData.Description</MudText>
                        </MudItem>
                    </MudGrid>
                </MudPaper>

                <MudPaper Elevation="2" Class="pa-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <MudText Typo="Typo.subtitle1" Class="mb-0 fw-bold">Account Entries</MudText>
                        <MudButtonGroup Variant="Variant.Outlined" Size="Size.Small">
                            <MudButton Variant="@(IsDetailedView ? Variant.Filled : Variant.Text)"
                                      Color="@(IsDetailedView ? Color.Primary : Color.Default)"
                                      OnClick="() => IsDetailedView = true"
                                      StartIcon="@Icons.Material.Filled.List">
                                Detailed
                            </MudButton>
                            <MudButton Variant="@(!IsDetailedView ? Variant.Filled : Variant.Text)"
                                      Color="@(!IsDetailedView ? Color.Primary : Color.Default)"
                                      OnClick="() => IsDetailedView = false"
                                      StartIcon="@Icons.Material.Filled.ViewList">
                                Consolidated
                            </MudButton>
                        </MudButtonGroup>
                    </div>
                    <MudTable Items="@DisplayDetails" Hover="true" Dense="true" Bordered="true">
                        <HeaderContent>
                            <MudTh>Account</MudTh>
                            <MudTh Class="text-end">Debit</MudTh>
                            <MudTh Class="text-end">Credit</MudTh>
                            <MudTh>Description</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd>
                                <div>
                                    @if (context.AccountId == 0 || context.AccountCode == "MISSING")
                                    {
                                        <MudText Typo="Typo.body2" Class="fw-semibold" Color="Color.Warning">
                                            <MudIcon Icon="@Icons.Material.Filled.Warning" Size="Size.Small" Class="me-1" />
                                            @context.AccountCode - @context.AccountName
                                        </MudText>
                                    }
                                    else
                                    {
                                        <MudText Typo="Typo.body2" Class="fw-semibold">@context.AccountCode - @context.AccountName</MudText>
                                    }
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">@context.AccountType</MudText>
                                </div>
                            </MudTd>
                            <MudTd Class="text-end">
                                @if (context.DebitAmount > 0)
                                {
                                    <MudText Typo="Typo.body2" Color="Color.Error" Class="fw-semibold">
                                        @context.DebitAmount.ToString("#,##0.00")
                                    </MudText>
                                }
                            </MudTd>
                            <MudTd Class="text-end">
                                @if (context.CreditAmount > 0)
                                {
                                    <MudText Typo="Typo.body2" Color="Color.Success" Class="fw-semibold">
                                        @context.CreditAmount.ToString("#,##0.00")
                                    </MudText>
                                }
                            </MudTd>
                            <MudTd>
                                <MudText Typo="Typo.body2">@context.Description</MudText>
                            </MudTd>
                        </RowTemplate>
                        <FooterContent>
                            <MudTd Class="fw-bold">TOTAL</MudTd>
                            <MudTd Class="text-end fw-bold">
                                <MudText Typo="Typo.body1" Color="Color.Error">
                                    @PreviewData.TotalDebit.ToString("#,##0.00")
                                </MudText>
                            </MudTd>
                            <MudTd Class="text-end fw-bold">
                                <MudText Typo="Typo.body1" Color="Color.Success">
                                    @PreviewData.TotalCredit.ToString("#,##0.00")
                                </MudText>
                            </MudTd>
                            <MudTd></MudTd>
                        </FooterContent>
                    </MudTable>

                    @if (Math.Abs(PreviewData.TotalDebit - PreviewData.TotalCredit) < 0.01)
                    {
                        <MudAlert Severity="Severity.Success" Class="mt-3">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Class="me-2" />
                            Entry is balanced: Debit = Credit
                        </MudAlert>
                    }
                    else
                    {
                        <MudAlert Severity="Severity.Warning" Class="mt-3">
                            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="me-2" />
                            Entry is not balanced: Debit (@PreviewData.TotalDebit.ToString("#,##0.00")) â‰  Credit (@PreviewData.TotalCredit.ToString("#,##0.00"))
                        </MudAlert>
                    }
                </MudPaper>
            }
            else
            {
                <MudAlert Severity="Severity.Info">
                    Unable to generate preview. Please ensure all entry details are complete.
                </MudAlert>
            }
        </MudContainer>
    </DialogContent>
    <DialogActions>
        @if (!IsPostedToGL && RecordId > 0)
        {
            <MudButton Variant="Variant.Filled"
                      Color="Color.Success"
                      StartIcon="@Icons.Material.Filled.AccountBalance"
                      OnClick="PostToGL"
                      Disabled="@(IsPosting || RecordId == 0 || (PreviewData != null && PreviewData.HasWarnings))">
                @(IsPosting ? "Posting..." : "Transfer to GL")
            </MudButton>
            @if (PreviewData != null && PreviewData.HasWarnings)
            {
                <MudTooltip Text="Cannot post to GL when there are missing accounts or configuration issues. Please resolve all warnings first.">
                    <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Warning" Class="ms-2" />
                </MudTooltip>
            }
        }
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }
    [Parameter] public GeneralLedgerHeaderModel? PreviewData { get; set; }
    [Parameter] public int RecordId { get; set; } = 0;
    [Parameter] public bool IsPostedToGL { get; set; } = false;
    [Parameter] public EventCallback OnPostToGL { get; set; }
    
    [Inject] private IDialogService DialogService { get; set; } = null!;
    [Inject] private Globals Globals { get; set; } = null!;
    [Inject] private ISnackbar SnackbarService { get; set; } = null!;
    
    private bool IsPosting { get; set; } = false;
    private bool IsDetailedView { get; set; } = false; // Default to consolidated view

    /// <summary>
    /// Returns sorted details with debits first, then credits
    /// </summary>
    private IEnumerable<GeneralLedgerDetailModel> SortedDetails
    {
        get
        {
            if (PreviewData?.Details == null || !PreviewData.Details.Any())
                return Enumerable.Empty<GeneralLedgerDetailModel>();

            // Sort: Debits first (DebitAmount > 0 and CreditAmount == 0), then Credits (CreditAmount > 0)
            // Within each group, sort by amount descending, then by account code for consistency
            var debits = PreviewData.Details
                .Where(d => d.DebitAmount > 0 && d.CreditAmount == 0)
                .OrderByDescending(d => d.DebitAmount)
                .ThenBy(d => d.AccountCode ?? string.Empty)
                .ThenBy(d => d.AccountName ?? string.Empty);

            var credits = PreviewData.Details
                .Where(d => d.CreditAmount > 0 && d.DebitAmount == 0)
                .OrderByDescending(d => d.CreditAmount)
                .ThenBy(d => d.AccountCode ?? string.Empty)
                .ThenBy(d => d.AccountName ?? string.Empty);

            // Handle edge case: entries with both debit and credit (shouldn't happen but handle gracefully)
            var invalidEntries = PreviewData.Details
                .Where(d => d.DebitAmount > 0 && d.CreditAmount > 0)
                .OrderByDescending(d => d.DebitAmount)
                .ThenBy(d => d.AccountCode ?? string.Empty);

            // Debits first, then credits, then invalid entries (if any)
            return debits.Concat(credits).Concat(invalidEntries);
        }
    }

    /// <summary>
    /// Returns either detailed or consolidated view based on IsDetailedView flag
    /// </summary>
    private IEnumerable<GeneralLedgerDetailModel> DisplayDetails
    {
        get
        {
            if (IsDetailedView)
            {
                return SortedDetails;
            }
            else
            {
                // Consolidated view: Group by AccountId and sum amounts
                return SortedDetails
                    .GroupBy(d => d.AccountId)
                    .Select(g => new GeneralLedgerDetailModel
                    {
                        AccountId = g.Key,
                        AccountCode = g.First().AccountCode,
                        AccountName = g.First().AccountName,
                        AccountType = g.First().AccountType,
                        DebitAmount = g.Sum(d => d.DebitAmount),
                        CreditAmount = g.Sum(d => d.CreditAmount),
                        Description = g.Count() > 1 
                            ? $"{g.Count()} entries consolidated" 
                            : g.First().Description
                    })
                    .OrderByDescending(d => d.DebitAmount > 0 ? d.DebitAmount : d.CreditAmount)
                    .ThenBy(d => d.AccountCode ?? string.Empty);
            }
        }
    }

    private void Close()
    {
        MudDialog?.Close();
    }
    
    private async Task PostToGL()
    {
        if (RecordId == 0)
        {
            SnackbarService.Add("Record ID is required", Severity.Warning);
            return;
        }

        var confirmed = await Functions.ShowConfirmation(DialogService, 
            "Do you want to transfer this entry to General Ledger? Once posted, it cannot be edited or deleted.");
        
        if (!confirmed)
            return;

        IsPosting = true;
        try
        {
            if (OnPostToGL.HasDelegate)
            {
                await OnPostToGL.InvokeAsync();
            }
            else
            {
                SnackbarService.Add("Post to GL callback not configured", Severity.Warning);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error posting to GL: {ex.Message}", Severity.Error);
        }
        finally
        {
            IsPosting = false;
        }
    }
}

