    /// <summary>
    /// Calculate item tax using the same rule-based RUNNING_TOTAL logic as the GL breakdown,
    /// so Advance Tax is on (base + GST) not on full base (fixes 252 vs 124 mismatch from view).
    /// </summary>
    private async Task<double> CalculateItemTax(ItemsModel item, double quantity, double unitPrice = 0, double discountAmount = 0)
    {
        if (record?.Invoice?.PartyId == 0 || SelectedParty == null) return 0;
        decimal lineBase = unitPrice > 0
            ? (decimal)((unitPrice * quantity) - discountAmount)
            : (decimal)(item.BasePrice * quantity);
        if (lineBase <= 0) return 0;

        int? ruleId = item.TaxRuleId ?? _categories.FirstOrDefault(c => c.Id == item.CategoryId)?.TaxRuleId;
        if (ruleId == null || ruleId.Value <= 0) return 0;

        var applicableDetails = await GetApplicableTaxRuleDetailsForPartyAsync(ruleId.Value);
        if (applicableDetails == null || !applicableDetails.Any()) return 0;

        bool isReturn = !string.IsNullOrEmpty(InvoiceType) && InvoiceType.ToUpper().Contains("RETURN");
        var breakdown = ComputeTaxBreakdownForBase(applicableDetails, lineBase, isReturn);
        decimal total = breakdown.Sum(x => x.TaxAmount);
        return (double)total;
    }

    private double CalculateItemTotal(ItemsModel item, double quantity, double discountAmount, double taxAmount)
    {
        return (item.BasePrice * quantity) - discountAmount + taxAmount;
    }

    /// <summary>
    /// Calculate tax at invoice level (when TaxRuleAppliedOnInvoiceLevel setting is enabled)
    /// Uses the first active tax rule for SALE and applies it to the invoice total
    /// </summary>
    private async Task<decimal> CalculateTaxAtInvoiceLevel(decimal invoiceBaseAmount)
    {
        try
        {
            if (record.Invoice.PartyId == 0 || SelectedParty == null || invoiceBaseAmount <= 0)
                return 0;

            // Get the first active tax rule for SALE that applies to this organization
            var taxRules = await Functions.GetAsync<List<TaxRuleModel>>(
                $"TaxRule/Search/OrganizationId={Globals.User.OrganizationId} and AppliesTo='SALE' and IsActive=1 and IsSoftDeleted=0", true)
                ?? new List<TaxRuleModel>();

            // Filter by effective dates
            var today = DateTime.Today;
            var applicableRule = taxRules
                .Where(tr =>
                    tr.EffectiveFrom <= today &&
                    (tr.EffectiveTo == null || tr.EffectiveTo >= today)
                )
                .OrderBy(tr => tr.Id)
                .FirstOrDefault();

            if (applicableRule == null)
                return 0;

            // Get tax rule details
            var taxRuleDetails = await Functions.GetAsync<List<TaxRuleDetailModel>>(
                $"TaxRuleDetail/Search/TaxRuleId={applicableRule.Id}", true)
                ?? new List<TaxRuleDetailModel>();

            if (!taxRuleDetails.Any())
                return 0;

            // Filter by party conditions and order by sequence
            var applicableDetails = new List<TaxRuleDetailModel>();
            foreach (var detail in taxRuleDetails.OrderBy(trd => trd.SequenceNo))
            {
                var taxMaster = await Functions.GetAsync<TaxMasterModel>($"TaxMaster/Get/{detail.TaxId}", true);
                if (taxMaster == null) continue;

                // Apply party filter when detail has IsRegistered/IsFiler so only GST + one Advance Tax (matching party) apply
                bool hasPartyCondition = detail.IsRegistered.HasValue || detail.IsFiler.HasValue || !string.IsNullOrWhiteSpace(taxMaster.ConditionType);
                bool shouldApply = true;
                if (hasPartyCondition)
                {
                    bool registeredMatch = detail.IsRegistered == null || detail.IsRegistered == (SelectedParty.IsRegistered == 1 ? 1 : 0);
                    bool filerMatch = detail.IsFiler == null || detail.IsFiler == (SelectedParty.IsFiler == 1 ? 1 : 0);
                    shouldApply = registeredMatch && filerMatch;
                }

                if (shouldApply)
                    applicableDetails.Add(detail);
            }

            if (!applicableDetails.Any())
                return 0;

            // Calculate tax for each detail using TaxBaseType (BASE_ONLY, BASE_PLUS_SELECTED, RUNNING_TOTAL)
            decimal totalTax = 0;
            decimal runningTotal = invoiceBaseAmount;
            decimal basePlusSelectedTotal = invoiceBaseAmount;

            foreach (var detail in applicableDetails)
            {
                decimal taxableAmount = GetTaxableAmountByBaseType(detail.TaxBaseType, invoiceBaseAmount, basePlusSelectedTotal, runningTotal);
                decimal taxAmount = 0;
                if (detail.TaxType == "PERCENTAGE" && detail.TaxAmount.HasValue)
                    taxAmount = taxableAmount * (decimal)detail.TaxAmount.Value / 100m;
                else if (detail.TaxType == "FLAT" && detail.TaxAmount.HasValue)
                    taxAmount = (decimal)detail.TaxAmount.Value;

                if (!string.IsNullOrEmpty(InvoiceType) && InvoiceType.ToUpper().Contains("RETURN"))
                    taxAmount = -taxAmount;

                totalTax += taxAmount;
                runningTotal += taxAmount;
                if (detail.TaxBaseType == "BASE_ONLY" || detail.TaxBaseType == "BASE_PLUS_SELECTED")
                    basePlusSelectedTotal += taxAmount;
            }

            return totalTax;
        }
        catch
        {
            return 0;
        }
    }

