                }
            }
            
            invoiceItem.DiscountAmount = string.Equals(InvoiceType, "PURCHASE", StringComparison.OrdinalIgnoreCase)
                ? 0
                : item.DefaultDiscount * invoiceItem.Qty;

            // Check if tax should be applied at invoice level
            bool isSaleInvoice = !InvoiceType.Equals("PURCHASE", StringComparison.OrdinalIgnoreCase);
            bool applyTaxAtInvoiceLevel = isSaleInvoice && _taxRuleAppliedOnInvoiceLevel;

            if (applyTaxAtInvoiceLevel)
            {
                invoiceItem.TaxAmount = 0; // Tax will be calculated at invoice level
            }
            else
            {
                invoiceItem.TaxAmount = await CalculateItemTax(item, invoiceItem.Qty);
            }

            invoiceItem.ItemTotalAmount = (invoiceItem.Qty * invoiceItem.UnitPrice) + invoiceItem.TaxAmount - invoiceItem.DiscountAmount;
            await CalculateInvoiceTotalsAsync();
        }
    }

