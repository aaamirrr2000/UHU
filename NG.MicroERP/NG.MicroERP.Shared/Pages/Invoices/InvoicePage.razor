                    }
                }
            }
            catch { /* ignore */ }
        }

        // If tax is applied at invoice level, populate InvoiceTaxes from invoice-level breakdown only (mutual exclusivity).
        if (_taxRuleAppliedOnInvoiceLevel)
        {
            await PopulateInvoiceLevelTaxBreakdownAsync();
            return;
        }

        // For each invoice detail, use rule-based RUNNING_TOTAL tax (same as CalculateItemTax) so Advance Tax is correct.
        bool isReturn = !string.IsNullOrEmpty(InvoiceType) && InvoiceType.ToUpper().Contains("RETURN");
