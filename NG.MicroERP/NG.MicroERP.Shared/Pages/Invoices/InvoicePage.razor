    private readonly object _invoiceDetailsLock = new object();
    private bool _isAddingToCart = false;
    
    private async Task AddToCart(ItemsModel selectedItem)
    {
        EnsureInvoiceInitialized();
        if (selectedItem == null || selectedItem.BasePrice == 0) return;
        
        // Prevent adding items if invoice is posted to GL
        if (record?.Invoice?.IsPostedToGL == 1)
        {
            Snackbar.Add("Cannot modify invoice after it has been posted to General Ledger", Severity.Warning);
            return;
        }
        
        // Prevent concurrent additions
        if (_isAddingToCart)
        {
            return;
        }
        
        // Prevent adding items when no party is selected
        if (SelectedParty == null || SelectedParty.Id == 0)
        {
            Snackbar.Add("Please select a party before adding items", Severity.Warning);
            return;
        }

        try
        {
            _isAddingToCart = true;
            
            // Check for price list price if party has a price list (only for sale invoices)
            double itemPrice = selectedItem.BasePrice;
            if (SelectedParty?.PriceListId > 0 && 
                !string.Equals(InvoiceType, "PURCHASE", StringComparison.OrdinalIgnoreCase))
            {
                try
                {
                    // Get TypeCode ListValue from PriceListId
                    var typeCode = await Functions.GetAsync<TypeCodeModel>($"TypeCode/Get/{SelectedParty.PriceListId}", true);
                    if (typeCode != null && !string.IsNullOrWhiteSpace(typeCode.ListValue))
                    {
                        var priceListItem = await Functions.GetAsync<PriceListModel>(
                            $"PriceList/GetByItemAndPriceList/{selectedItem.Id}/{Uri.EscapeDataString(typeCode.ListValue)}/{Globals.User.OrganizationId}", true);
                        
                        if (priceListItem != null && priceListItem.OneQuantityPrice > 0)
                        {
                            itemPrice = priceListItem.OneQuantityPrice;
                        }
                    }
                }
                catch
                {
                    // If price list lookup fails, use default price
                }
            }
            
            // Check if tax should be applied at invoice level
            bool isSaleInvoice = !InvoiceType.Equals("PURCHASE", StringComparison.OrdinalIgnoreCase);
            bool applyTaxAtInvoiceLevel = isSaleInvoice && _taxRuleAppliedOnInvoiceLevel;
            
            double discountAmount = CalculateItemDiscount(selectedItem);
            double taxAmount = applyTaxAtInvoiceLevel ? 0 : await CalculateItemTax(selectedItem, selectedItem.Qty, itemPrice, discountAmount);
            double itemTotalAmount = (selectedItem.Qty * itemPrice) + taxAmount - discountAmount;

            var row = CreateInvoiceItem(selectedItem, taxAmount, discountAmount, itemTotalAmount);
            row.UnitPrice = itemPrice; // Set the price list price or default price
            
            // Ensure collection modification is thread-safe
            lock (_invoiceDetailsLock)
            {
                if (record.InvoiceDetails == null)
                {
                    record.InvoiceDetails = new ObservableCollection<InvoiceItemReportModel>();
                }
                record.InvoiceDetails.Add(row);
            }

            await _itemDetailsDialog.Close();
            await CalculateInvoiceTotalsAsync();
            CheckForChanges();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            ShowError($"Error adding item to cart: {ex.Message}");
        }
        finally
        {
            _isAddingToCart = false;
        }
    }

