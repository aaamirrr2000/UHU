                int? ruleId = item.TaxRuleId ?? _categories.FirstOrDefault(c => c.Id == item.CategoryId)?.TaxRuleId;
                if (ruleId == null || ruleId.Value <= 0) continue;

                if (!ruleDetailsCache.TryGetValue(ruleId.Value, out var applicableDetails))
                {
                    applicableDetails = await GetApplicableTaxRuleDetailsForPartyAsync(ruleId.Value);
                    ruleDetailsCache[ruleId.Value] = applicableDetails ?? new List<TaxRuleDetailModel>();
                }
                if (applicableDetails == null || !applicableDetails.Any()) continue;

                decimal lineBase = (decimal)((detail.UnitPrice * detail.Qty) - detail.DiscountAmount);
                var lineBreakdown = ComputeTaxBreakdownForBase(applicableDetails, lineBase, isReturn);

                foreach (var (taxId, taxAmount, rate) in lineBreakdown)
                {
                    var taxEntry = new InvoiceDetailTaxesModel
                    {
                        Id = 0,
                        InvoiceDetailId = detail.ItemId,
                        TaxId = taxId.ToString(),
                        TaxRate = rate,
                        TaxableAmount = lineBase,
                        TaxAmount = taxAmount
                    };
                    record.InvoiceTaxes.Add(taxEntry);

                    try
                    {
                        var applied = detail.GetType().GetProperty("AppliedTaxes");
                        if (applied != null)
                        {
                            var list = applied.GetValue(detail) as IList<InvoiceDetailTaxesModel>;
                            if (list != null)
                                list.Add(new InvoiceDetailTaxesModel
                                {
                                    Id = 0,
                                    InvoiceDetailId = detail.ItemId,
                                    TaxId = taxId.ToString(),
                                    TaxRate = rate,
                                    TaxableAmount = lineBase,
                                    TaxAmount = taxAmount
                                });
                        }
                    }
                    catch { /* ignore */ }
                }
            }
            catch { /* ignore per-line errors */ }
        }
    }

    /// <summary>
    /// Populate record.InvoiceTaxes with tax breakdown (GST, Advance Tax, etc.) so GL preview shows one line per tax.
    /// For invoice-level tax: compute from tax rule on invoice total. For item-level tax: aggregate from each line's GetItemTaxes.
    /// </summary>
    private async Task PopulateInvoiceTaxBreakdownForPreviewAsync()
    {
        if (record?.Invoice == null || record.Invoice.PartyId == 0 || SelectedParty == null)
            return;
        bool isSale = !string.Equals(InvoiceType, "PURCHASE", StringComparison.OrdinalIgnoreCase);
        if (!isSale || record.Invoice.TaxAmount <= 0)
            return;

        if (_taxRuleAppliedOnInvoiceLevel)
        {
            await PopulateInvoiceLevelTaxBreakdownAsync();
            return;
        }

        // Item-level tax: use same rule-based breakdown as invoice-level (GST + Advance Tax, RUNNING_TOTAL, party conditions)
        // so both taxes show in the journal. Get each line's tax rule (item or category), compute breakdown per line, aggregate by TaxId.
        if (record.InvoiceDetails == null || !record.InvoiceDetails.Any())
            return;

        if (record.InvoiceTaxes == null)
            record.InvoiceTaxes = new ObservableCollection<InvoiceDetailTaxesModel>();
        else
            record.InvoiceTaxes.Clear();

        var aggregatedByTaxId = new Dictionary<int, (decimal Amount, double Rate)>();
        bool isReturn = !string.IsNullOrEmpty(InvoiceType) && InvoiceType.ToUpper().Contains("RETURN");
        var ruleDetailsCache = new Dictionary<int, List<TaxRuleDetailModel>>();

        foreach (var detail in record.InvoiceDetails)
        {
            if (detail.ItemId == 0) continue;
            var item = ItemsData.FirstOrDefault(i => i.Id == detail.ItemId);
            if (item == null) continue;

            int? ruleId = item.TaxRuleId ?? _categories.FirstOrDefault(c => c.Id == item.CategoryId)?.TaxRuleId;
            if (ruleId == null || ruleId.Value <= 0) continue;

            if (!ruleDetailsCache.TryGetValue(ruleId.Value, out var applicableDetails))
            {
                applicableDetails = await GetApplicableTaxRuleDetailsForPartyAsync(ruleId.Value);
                ruleDetailsCache[ruleId.Value] = applicableDetails ?? new List<TaxRuleDetailModel>();
            }
            if (applicableDetails == null || !applicableDetails.Any()) continue;

            decimal lineBase = (decimal)((detail.UnitPrice * detail.Qty) - detail.DiscountAmount);
            var lineBreakdown = ComputeTaxBreakdownForBase(applicableDetails, lineBase, isReturn);

            foreach (var (taxId, taxAmount, rate) in lineBreakdown)
            {
                if (!aggregatedByTaxId.TryGetValue(taxId, out var existing))
                    aggregatedByTaxId[taxId] = (taxAmount, rate);
                else
                    aggregatedByTaxId[taxId] = (existing.Amount + taxAmount, existing.Rate);
            }
        }

        foreach (var kv in aggregatedByTaxId.OrderBy(x => x.Key))
        {
            if (kv.Value.Amount == 0) continue;
            record.InvoiceTaxes.Add(new InvoiceDetailTaxesModel
            {
                TaxId = kv.Key.ToString(),
                TaxRate = kv.Value.Rate,
                TaxableAmount = 0,
                TaxAmount = kv.Value.Amount
            });
        }

        // Scale breakdown so sum equals invoice total tax (no separate account; correct rounding)
        decimal sumBreakdown = record.InvoiceTaxes.Sum(t => t.TaxAmount);
        decimal totalTax = record.Invoice.TaxAmount;
        if (sumBreakdown > 0.01m && Math.Abs(sumBreakdown - totalTax) > 0.01m)
        {
            decimal scale = totalTax / sumBreakdown;
            decimal allocated = 0m;
            var list = record.InvoiceTaxes.ToList();
            record.InvoiceTaxes.Clear();
            for (int i = 0; i < list.Count; i++)
            {
                decimal amt = i == list.Count - 1 ? (totalTax - allocated) : Math.Round(list[i].TaxAmount * scale, 2, MidpointRounding.AwayFromZero);
                allocated += amt;
                record.InvoiceTaxes.Add(new InvoiceDetailTaxesModel
                {
                    TaxId = list[i].TaxId,
                    TaxRate = list[i].TaxRate,
                    TaxableAmount = list[i].TaxableAmount,
                    TaxAmount = amt
                });
            }
        }
    }

    /// <summary>
    /// Get tax rule details for a rule ID, filtered by party (IsRegistered, IsFiler). Used for item-level tax breakdown.
    /// </summary>
    private async Task<List<TaxRuleDetailModel>?> GetApplicableTaxRuleDetailsForPartyAsync(int taxRuleId)
    {
        var taxRuleDetails = await Functions.GetAsync<List<TaxRuleDetailModel>>(
            $"TaxRuleDetail/Search/TaxRuleId={taxRuleId}", true)
            ?? new List<TaxRuleDetailModel>();
        if (!taxRuleDetails.Any()) return null;

        var applicable = new List<TaxRuleDetailModel>();
        foreach (var detail in taxRuleDetails.OrderBy(trd => trd.SequenceNo))
        {
            var taxMaster = await Functions.GetAsync<TaxMasterModel>($"TaxMaster/Get/{detail.TaxId}", true);
            if (taxMaster == null) continue;
            // Apply party filter when rule detail has IsRegistered/IsFiler (e.g. one GST + three Advance Taxes; only the Advance that matches party applies)
            bool hasPartyCondition = detail.IsRegistered.HasValue || detail.IsFiler.HasValue || !string.IsNullOrWhiteSpace(taxMaster.ConditionType);
            bool shouldApply = true;
            if (hasPartyCondition)
            {
                bool registeredMatch = detail.IsRegistered == null || detail.IsRegistered == (SelectedParty.IsRegistered == 1 ? 1 : 0);
                bool filerMatch = detail.IsFiler == null || detail.IsFiler == (SelectedParty.IsFiler == 1 ? 1 : 0);
                shouldApply = registeredMatch && filerMatch;
            }
            if (shouldApply) applicable.Add(detail);
        }
        return applicable.Any() ? applicable : null;
    }

    /// <summary>
    /// Compute tax breakdown for a single base amount using rule details.
    /// TaxBaseType: BASE_ONLY = original base; BASE_PLUS_SELECTED = base + BASE_ONLY/BASE_PLUS_SELECTED taxes so far; RUNNING_TOTAL = base + all previous taxes.
    /// </summary>
    private static List<(int TaxId, decimal TaxAmount, double Rate)> ComputeTaxBreakdownForBase(
        List<TaxRuleDetailModel> applicableDetails,
        decimal baseAmount,
        bool isReturn)
    {
        var result = new List<(int, decimal, double)>();
        decimal runningTotal = baseAmount;           // base + all previous taxes
        decimal basePlusSelectedTotal = baseAmount;  // base + BASE_ONLY and BASE_PLUS_SELECTED taxes so far
        foreach (var detail in applicableDetails)
        {
            decimal taxableAmount = GetTaxableAmountByBaseType(detail.TaxBaseType, baseAmount, basePlusSelectedTotal, runningTotal);
            decimal taxAmount = 0;
            if (detail.TaxType == "PERCENTAGE" && detail.TaxAmount.HasValue)
                taxAmount = taxableAmount * (decimal)detail.TaxAmount.Value / 100m;
            else if (detail.TaxType == "FLAT" && detail.TaxAmount.HasValue)
                taxAmount = (decimal)detail.TaxAmount.Value;
            if (isReturn) taxAmount = -taxAmount;
            result.Add((detail.TaxId, taxAmount, (double)(detail.TaxAmount ?? 0)));
            runningTotal += taxAmount;
            if (detail.TaxBaseType == "BASE_ONLY" || detail.TaxBaseType == "BASE_PLUS_SELECTED")
                basePlusSelectedTotal += taxAmount;
        }
        return result;
    }

    /// <summary>
    /// Return taxable amount for a tax detail based on TaxBaseType (aligned with ManualLineDialog / TaxRuleTestPage).
    /// </summary>
    private static decimal GetTaxableAmountByBaseType(string? taxBaseType, decimal baseAmount, decimal basePlusSelectedTotal, decimal runningTotal)
    {
        if (string.Equals(taxBaseType, "BASE_ONLY", StringComparison.OrdinalIgnoreCase))
            return baseAmount;
        if (string.Equals(taxBaseType, "BASE_PLUS_SELECTED", StringComparison.OrdinalIgnoreCase))
            return basePlusSelectedTotal;
        if (string.Equals(taxBaseType, "RUNNING_TOTAL", StringComparison.OrdinalIgnoreCase))
            return runningTotal;
        return baseAmount;
    }

