@page "/InvoiceDashboard/{InvoiceType?}"
@using NG.MicroERP.Shared.Models

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h4" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.Receipt" Class="me-2" Style="color: white;" />
                    @InvoiceType Invoice Management
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Create and manage @InvoiceType.ToLower() invoices</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0 flex-wrap">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <MudDatePicker @bind-Date="startDate"
                                   Label="Start Date"
                                   DateFormat="dd MMM yyyy"
                                   Variant="Variant.Outlined" />
                    <MudDatePicker @bind-Date="endDate"
                                   Label="End Date"
                                   DateFormat="dd MMM yyyy"
                                   Variant="Variant.Outlined" />
                </div>
                <div class="dashboard-search-container">
                    <MudTextField @bind-Value="searchString"
                                @bind-Value:after="FilterData"
                                Placeholder="Search invoices..."
                                Adornment="Adornment.Start"
                                AdornmentIcon="@Icons.Material.Filled.Search"
                                IconSize="Size.Small"
                                Variant="Variant.Outlined"
                                Immediate="true"
                                Margin="Margin.Dense"
                                Class="dashboard-search-field"
                                Style="background: rgba(255,255,255,0.95);" />
                </div>
                <MudButton StartIcon="@Icons.Material.TwoTone.Search" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Primary"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => GetAll())">
                    Search
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Add" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Success" 
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Clear())">
                    New
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    <MyDrawer @ref="_drawer" Title="Invoice" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <InvoicePage Action="@Action" CurrentRecord="record.Id" OnSaved="ChildSaved" InvoiceType="InvoiceType" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="InvoiceModel" MultiSelection="false" Items="@data" SortMode="SortMode.Multiple" Filterable="true" Hideable="true" RowsPerPage="10" Dense="true">

                <Columns>
                    <TemplateColumn Title="Actions" CellStyle="width: 80px; min-width: 80px;" HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(async () => await View(row.Item.Id))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View Details</span>
                                    </MudMenuItem>
                                    @if (row.Item.IsPostedToGL == 1 && !string.IsNullOrWhiteSpace(row.Item.GLEntryNo))
                                    {
                                        <MudMenuItem OnClick="@(() => ViewGLEntry(row.Item.GLEntryNo))"
                                                     Class="menu-item gl-item">
                                            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="menu-icon" />
                                            <span>View GL Entry: @row.Item.GLEntryNo</span>
                                        </MudMenuItem>
                                    }
                                    @if (Globals.AccessLevel == 1)
                                    {
                                        @if (row.Item.IsPostedToGL == 0)
                                        {
                                            <MudMenuItem OnClick="@(async () => await Edit(row.Item.Id))"
                                                         Class="menu-item edit-item">
                                                <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" />
                                                <span>Edit</span>
                                            </MudMenuItem>
                                            <MudMenuItem OnClick="@(async () => await Delete(row.Item.Id))"
                                                         Color="Color.Error"
                                                         Class="menu-item delete-item">
                                                <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" />
                                                <span>Delete</span>
                                            </MudMenuItem>
                                            <hr />
                                            <MudMenuItem OnClick="@(async () => await PostToGL(row.Item.Id))"
                                                         Class="menu-item post-item">
                                                <MudIcon Icon="@Icons.Material.Filled.PostAdd" Class="menu-icon" />
                                                <span>Post to General Ledger</span>
                                            </MudMenuItem>
                                        }
                                        else
                                        {
                                            <MudMenuItem Disabled="true"
                                                         Class="menu-item disabled-item">
                                                <MudIcon Icon="@Icons.Material.Filled.Lock" Class="menu-icon" />
                                                <span>Posted to GL - Cannot Edit/Delete</span>
                                            </MudMenuItem>
                                        }
                                    }
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Code" Title="Code" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.Source" Title="Source" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.PartyName" Title="Party Name" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.PartyPhone" Title="Party Phone" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.PartyEmail" Title="Party Email" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.PartyAddress" Title="Party Address" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.TranDate" Title="Tran Date" Sortable="true" Filterable="true" Format="dd-MMM-yyy" />
                    <PropertyColumn Property="x => x.Description" Title="Description" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.Status" Title="Status" Sortable="true" Filterable="true" />
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="InvoiceModel" />
                    </div>
                </PagerContent>
            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

