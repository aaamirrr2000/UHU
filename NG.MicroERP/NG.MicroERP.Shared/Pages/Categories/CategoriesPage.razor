@page "/CategoriesPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Basic Information Card -->
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Category" 
                             Size="Size.Large" 
                             Color="Color.Info" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Basic Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Category identification and details</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField Label="Code"
                                      @bind-Value="record.Code"
                                      Placeholder="Auto-generated"
                                      ReadOnly="true"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Code)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Name"
                                      @bind-Value="record.Name"
                                      Placeholder="Enter category name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Name)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Parent Category"
                                   @bind-Value="record.ParentId"
                                   Placeholder="Select parent category"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="mb-3">
                            @if (Par != null && Par.Any())
                            {
                                foreach (var i in Par)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.ParentId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="string"
                                   Label="Category Type"
                                   @bind-Value="record.CategoryType"
                                   Placeholder="Select category type"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="mb-3">
                            @if (Cat != null && Cat.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.CategoryType))
                                {
                                    record.CategoryType = Cat.First().ListValue;
                                }
                                foreach (var i in Cat)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.CategoryType)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        @if (_taxRuleAppliedOnInvoiceLevel)
                        {
                            <MudAlert Severity="Severity.Warning" Class="mb-3" Variant="Variant.Filled">
                                <MudText Typo="Typo.body2">
                                    <MudIcon Icon="@Icons.Material.Filled.Warning" Class="me-2" />
                                    <strong>Warning:</strong> Tax is currently applied at invoice level. Category-level tax rules will not be used in sale invoices.
                                </MudText>
                            </MudAlert>
                        }
                        <MudSelect T="int?"
                                   Label="Tax Rule"
                                   @bind-Value="record.TaxRuleId"
                                   Placeholder="Select tax rule (optional)"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   @bind-Value:after="OnTaxRuleChange">
                            @if (TaxRule != null && TaxRule.Any())
                            {
                                @foreach (var rule in TaxRule)
                                {
                                    <MudSelectItem T="int?" Value="@rule.Id">@(rule.RuleName ?? $"Rule {rule.Id}")</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">
                            Tax rule applied to all items in this category (if item doesn't have its own tax rule)
                        </MudText>
                        <ValidationMessage For="@(() => record.TaxRuleId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                    
                    @if (SelectedTaxRule != null && SelectedTaxRule.Any())
                    {
                        <MudItem xs="12">
                            <MudPaper Class="pa-3 mt-2" Elevation="1">
                                <MudText Typo="Typo.subtitle1" Class="mb-2">
                                    <MudIcon Icon="@Icons.Material.Filled.Info" Class="me-1" />
                                    Tax Rule Details
                                </MudText>

                                <MudTable Items="SelectedTaxRule" Elevation="0" Bordered="true" Hover="true" Striped="true">
                                    <HeaderContent>
                                        <MudTh>Seq</MudTh>
                                        <MudTh>Tax Name</MudTh>
                                        <MudTh>Base Type</MudTh>
                                        <MudTh>Rate</MudTh>
                                    </HeaderContent>
                                    <RowTemplate>
                                        <MudTd>@context.SequenceNo</MudTd>
                                        <MudTd>
                                            <MudIcon Icon="@Icons.Material.Filled.ConfirmationNumber" Class="me-1" />
                                            @context.TaxName
                                        </MudTd>
                                        <MudTd>
                                            <MudChip T="string" Size="Size.Small" Variant="Variant.Filled"
                                                     Color="Color.Primary">
                                                @context.TaxBaseType
                                            </MudChip>
                                        </MudTd>
                                        <MudTd>
                                            <MudChip T="int" Size="Size.Small" Variant="Variant.Filled"
                                                     Color="@(context.TaxType == "PERCENTAGE" ? Color.Primary : Color.Info)">
                                                @(context.TaxType == "PERCENTAGE" ? $"{context.TaxAmount:0.##}%" : $"{context.TaxAmount:0.##}")
                                            </MudChip>
                                        </MudTd>
                                    </RowTemplate>
                                </MudTable>
                            </MudPaper>
                        </MudItem>
                    }
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    static CategoriesModel record = new();
    List<CategoriesModel> Par = new();
    List<TypeCodeModel> Cat = null!;
    List<TaxRuleModel> TaxRule = new();
    List<TaxRuleDetailModel> SelectedTaxRule = new();

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadInterfaceSettings();
        await GetAll();
    }
    
    private bool _taxRuleAppliedOnInvoiceLevel = false;
    
    private async Task LoadInterfaceSettings()
    {
        try
        {
            var settings = await Functions.GetAsync<List<InterfaceSettingsModel>>(
                $"InterfaceSettings/Search/OrganizationId={Globals.User.OrganizationId} and Category='Sale Invoice' and SettingKey='TaxRuleAppliedOnInvoiceLevel'", true)
                ?? new List<InterfaceSettingsModel>();
            
            var setting = settings.FirstOrDefault(s => s.IsActive == 1 && s.IsSoftDeleted == 0);
            _taxRuleAppliedOnInvoiceLevel = setting?.SettingValue?.ToLower() == "true";
        }
        catch
        {
            _taxRuleAppliedOnInvoiceLevel = false;
        }
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Cat = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/CATEGORY TYPE", true) ?? new List<TypeCodeModel>();
        Par = await Functions.GetAsync<List<CategoriesModel>>($"Categories/Search", true) ?? new List<CategoriesModel>();
        TaxRule = await Functions.GetAsync<List<TaxRuleModel>>($"TaxRule/Search/IsActive=1", true) ?? new List<TaxRuleModel>();

        if (Action == "INSERT")
        {
            record = new CategoriesModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action != "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action != "EDIT")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<CategoriesModel>($"Categories/Get/{id}", true) ?? new CategoriesModel();
        // Normalize 0 to null so Tax Rule dropdown shows placeholder instead of first option
        if (record.TaxRuleId == 0)
            record.TaxRuleId = null;

        // Load tax rule details if TaxRuleId is set
        if (record.TaxRuleId.HasValue && record.TaxRuleId.Value > 0)
        {
            SelectedTaxRule = await Functions.GetAsync<List<TaxRuleDetailModel>>($"TaxRuleDetail/Search/a.TaxRuleId={record.TaxRuleId.Value}", true) ?? new List<TaxRuleDetailModel>();
        }
        else
        {
            SelectedTaxRule = new List<TaxRuleDetailModel>();
        }
        
        LoadingPanel = false;
    }

    private async Task OnTaxRuleChange()
    {
        if (record.TaxRuleId.HasValue && record.TaxRuleId.Value > 0)
        {
            SelectedTaxRule = await Functions.GetAsync<List<TaxRuleDetailModel>>($"TaxRuleDetail/Search/a.TaxRuleId={record.TaxRuleId.Value}", true) ?? new List<TaxRuleDetailModel>();
        }
        else
        {
            SelectedTaxRule = new List<TaxRuleDetailModel>();
        }
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new CategoriesModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<CategoriesModel>($"Categories/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
