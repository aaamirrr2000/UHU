@page "/PartiesDashboard"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="row" style="margin: 2px; height: 90vh; display: flex;">

    <MyDrawer @ref="_drawer" Title="Parties" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <PartiesPage Action="@Action" CurrentRecord="record.Id" OnSaved="ChildSaved"/>
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    <MyDrawer @ref="_drawerBankDetails" Title="Party Bank Details" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <PartyBankDetailsPage Action="NO ACTION" CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    <MyDrawer @ref="_drawerContacts" Title="Party Contact" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <PartyContactsPage Action="NO ACTION" CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    <MyDrawer @ref="_drawerDocuments" Title="Party Documents" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <PartyDocumentsPage Action="NO ACTION" CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    <MyDrawer @ref="_drawerFinancials" Title="Party Financials" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <PartyFinancialsPage Action="NO ACTION" CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    <MyDrawer @ref="_drawerVehicles" Title="Party Financials" FaIcon="fas fa-address-book">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <PartyVehiclesPage Action="NO ACTION" CurrentRecord="record.Id" />
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <div class="row">
            <MudDataGrid T="PartiesModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="10"
                         Dense="true"
                         Striped="true"
                         Class="professional-grid elevation-8">

                <ToolBarContent>
                    <div class="grid-toolbar-wrapper">
                        <div class="grid-toolbar">
                            <div class="toolbar-left">
                                <MudIcon Icon="@Icons.Material.Filled.Groups" Class="toolbar-icon" />
                                <MudText Typo="Typo.h6" Class="toolbar-title">
                                    Parties Management
                                </MudText>
                            </div>

                            <div class="toolbar-right">
                                @if (AccessLevel == 1)
                                {
                                    <MudButton StartIcon="@Icons.Material.TwoTone.Add"
                                               Size="MudBlazor.Size.Small"
                                               Variant="Variant.Filled"
                                               Color="Color.Success"
                                               Class="action-btn new-btn"
                                               OnClick="@(() => Clear())">
                                        New Party
                                    </MudButton>
                                }

                                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh"
                                           Size="MudBlazor.Size.Small"
                                           Variant="Variant.Filled"
                                           Color="Color.Info"
                                           Class="action-btn refresh-btn"
                                           OnClick="@(() => Refresh())">
                                    Refresh
                                </MudButton>
                            </div>
                        </div>
                    </div>
                </ToolBarContent>

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 80px; min-width: 80px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(() => View(row.Item.Id))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View Details</span>
                                    </MudMenuItem>
                                    @if (AccessLevel == 1)
                                    {
                                        <MudMenuItem OnClick="@(() => Edit(row.Item.Id))"
                                                     Color="Color.Primary"
                                                     Class="menu-item edit-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" Color="Color.Primary" />
                                            <span>Edit</span>
                                        </MudMenuItem>

                                        <MudMenuItem OnClick="@(() => Delete(row.Item.Id))"
                                                     Color="Color.Error"
                                                     Class="menu-item delete-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" Color="Color.Error" />
                                            <span>Delete</span>
                                        </MudMenuItem>

                                        <hr />

                                        <MudMenuItem OnClick="@(() => Contacts(row.Item.Id))"
                                                     Color="Color.Info"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Contacts" Class="menu-icon" Color="Color.Info" />
                                            <span>Contacts</span>
                                        </MudMenuItem>

                                        <MudMenuItem OnClick="@(() => Documents(row.Item.Id))"
                                                     Color="Color.Secondary"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Description" Class="menu-icon" Color="Color.Secondary" />
                                            <span>Documents</span>
                                        </MudMenuItem>

                                        <MudMenuItem OnClick="@(() => Vehicles(row.Item.Id))"
                                                     Color="Color.Warning"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.DirectionsCar" Class="menu-icon" Color="Color.Warning" />
                                            <span>Vehicles</span>
                                        </MudMenuItem>

                                        <hr />

                                        <MudMenuItem OnClick="@(() => BankDetails(row.Item.Id))"
                                                     Color="Color.Success"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="menu-icon" Color="Color.Success" />
                                            <span>Banking Details</span>
                                        </MudMenuItem>

                                        <MudMenuItem OnClick="@(() => Financials(row.Item.Id))"
                                                     Color="Color.Info"
                                                     Class="menu-item">
                                            <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Class="menu-icon" Color="Color.Info" />
                                            <span>Financials</span>
                                        </MudMenuItem>
                                    }
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Photo"
                                    CellStyle="width: 50px; min-width: 50px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            <AvatarDisplay Pic="@row.Item.Pic" Name="@row.Item.Name" Size="24" />
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Code"
                                    Title="Code"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Name"
                                    Title="Party Name"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.PartyType"
                                    Title="Party Type"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.PartyTypeCode"
                                    Title="Type Code"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ParentName"
                                    Title="Parent"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Address"
                                    Title="Address"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.AreaName"
                                    Title="City"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <TemplateColumn Title="Status"
                                    CellStyle="width: 70px; min-width: 70px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @if (row.Item.IsActive == 1)
                            {
                                <MudChip Color="Color.Success" Size="Size.Small" Variant="Variant.Filled">Active</MudChip>
                            }
                            else
                            {
                                <MudChip Color="Color.Error" Size="Size.Small" Variant="Variant.Filled">Locked</MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="PartiesModel" Class="grid-pager" />
                    </div>
                </PagerContent>

            </MudDataGrid>
        </div>
    }
</div>

@code
{
    List<PartiesModel> data = new();
    PartiesModel record = new();

    public string? Action { get; set; } = "INSERT";
    public int AccessLevel { get; set; } = 0;

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();
    private MyDrawer _drawerBankDetails = new();
    private MyDrawer _drawerContacts = new();
    private MyDrawer _drawerDocuments = new();
    private MyDrawer _drawerFinancials = new();
    private MyDrawer _drawerVehicles = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected async Task GetAll()
    {
        AccessLevel = Globals.PageAccess(NavManager, "PartiesDashboard");
        LoadingPanel = true;
        data = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search", true) ?? new List<PartiesModel>();
        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PartiesModel>($"Parties/Get/{id}", true) ?? new PartiesModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PartiesModel();
        record.IsActive = 1;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task BankDetails(int id)
    {
        await Get(id);
        Action = "INSERT";
        isReadOnly = false;
        await _drawerBankDetails.OpenDrawerAsync();
    }

     protected async Task Contacts(int id)
    {
        await Get(id);
        Action = "INSERT";
        isReadOnly = false;
        await _drawerContacts.OpenDrawerAsync();
    }

    protected async Task Documents(int id)
    {
        await Get(id);
        Action = "INSERT";
        isReadOnly = false;
        await _drawerDocuments.OpenDrawerAsync();
    }

    protected async Task Financials(int id)
    {
        await Get(id);
        Action = "INSERT";
        isReadOnly = false;
        await _drawerFinancials.OpenDrawerAsync();
    }

    protected async Task Vehicles(int id)
    {
        await Get(id);
        Action = "INSERT";
        isReadOnly = false;
        await _drawerVehicles.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Globals.ClientInfo;

        var result = await Functions.PostAsync<PartiesModel>($"Parties/{Action}", record, true);
        if (result.Success == true)
        {
            SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);

        }
        else
        {
            SnackbarService.Add($"Record Not Deleted", Severity.Error);
        }

        await GetAll();
        LoadingPanel = false;
        await _drawer.CloseDrawerAsync();

    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }
}

