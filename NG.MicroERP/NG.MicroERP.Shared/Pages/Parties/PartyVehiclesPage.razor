@page "/PartyVehiclesPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Clear" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-1" />
                New
            </MudButton>

            @if(Action!="NO ACTION")
            {
                <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                    <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                    @(Action == "INSERT" ? "Save" : "Update")
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Text="Basic Details" Expanded=true Style="margin-bottom:10px;">

            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">

                    <i class="fa fa-info-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>

                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Party's Vehicles</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Party's Vehicles</MudText>
                    </div>
                </div>
                <hr />
            </TitleContent>

            <ChildContent>
                @if (IsVisible)
                {
                    <div class="row" style="width:100%; display: flex;">
                        <div class="col-6 flex-input">
                            <label class="form-label" style="font-weight: bold;">Registration No.</label>
                            <MudTextField id="VehicleRegNo" @bind-Value="record.VehicleRegNo" placeholder="Vehicle Registration No." ReadOnly="@isReadOnly"></MudTextField>
                            <ValidationMessage For="@(() => record.VehicleRegNo)" />
                        </div>
                        <div class="col-6 flex-input">
                            <label class="form-label" style="font-weight: bold;">Engine No.</label>
                            <MudTextField id="EngineNo" @bind-Value="record.EngineNo" placeholder="Engine No" ReadOnly="@isReadOnly"></MudTextField>
                            <ValidationMessage For="@(() => record.EngineNo)" />
                        </div>
                        <div class="col-6 flex-input">
                            <label class="form-label" style="font-weight: bold;">Chasis No.</label>
                            <MudTextField id="ChasisNo" @bind-Value="record.ChasisNo" placeholder="Chasis No" ReadOnly="@isReadOnly"></MudTextField>
                            <ValidationMessage For="@(() => record.ChasisNo)" />
                        </div>
                        <div class="col-6 flex-input">
                            <label class="form-label" style="font-weight: bold;">Vehicle Type</label>

                            <MudSelect T="string"
                                       @bind-Value="record.VehicleType"
                                       Placeholder="Vehicle Type"
                                       Clearable="true">

                                @if (Veh != null && Veh.Any())
                                {
                                    if (string.IsNullOrWhiteSpace(record.VehicleType))
                                    {
                                        record.VehicleType = Veh.First().ListValue;
                                    }

                                    foreach (var i in Veh)
                                    {
                                        <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                    }
                                }
                            </MudSelect>

                            <ValidationMessage For="@(() => record.VehicleType)" />
                        </div>
                        <div class="col-6 flex-input">
                            <label class="form-label" style="font-weight: bold;">Make</label>

                            <MudSelect T="string"
                                       @bind-Value="record.MakeType"
                                       Placeholder="Make"
                                       Clearable="true">

                                @if (Mak != null && Mak.Any())
                                {
                                    if (string.IsNullOrWhiteSpace(record.MakeType))
                                    {
                                        record.MakeType = Mak.First().ListValue;
                                    }

                                    foreach (var i in Mak)
                                    {
                                        <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                    }
                                }
                            </MudSelect>

                            <ValidationMessage For="@(() => record.MakeType)" />
                        </div>
                        <div class="col-6 flex-input">
                            <label class="form-label" style="font-weight: bold;">Model</label>
                            <MudTextField id="Model" @bind-Value="record.Model" placeholder="Model" ReadOnly="@isReadOnly"></MudTextField>
                            <ValidationMessage For="@(() => record.Model)" />
                        </div>
                        <div class="col-6 flex-input">
                            <label class="form-label" style="font-weight: bold;">Active</label>

                            <MudSelect T="int"
                                       @bind-Value="record.IsActive"
                                       Placeholder="Active"
                                       Clearable="true">

                                @if (record.IsActive != 0 && record.IsActive != 1)
                                {
                                    record.IsActive = 1;
                                }

                                <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                                <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                            </MudSelect>

                            <ValidationMessage For="@(() => record.IsActive)" />
                        </div>
                     

                    </div>
                }
                @if (data == null)
                {
                    <SimpleLoading />
                }
                else
                {
                    <div class="row">

                        <MudTable T="PartyVehiclesModel"
                                  Items="@data"
                                  Hover="true"
                                  Dense="true"
                                  Striped="true"
                                  Virtualize="true"
                                  Style="border-radius: 0px; box-shadow: none; border: none; overflow: hidden; margin: 0; min-height:500px;">

                            <ToolBarContent>

                            </ToolBarContent>

                            <HeaderContent>
                                <MudTh>Actions</MudTh>
                                <MudTh>Registration No</MudTh>
                                <MudTh>Engine No</MudTh>
                                <MudTh>Chasis No</MudTh>
                                <MudTh>Vehicle Type</MudTh>
                                <MudTh>MakeType</MudTh>
                                <MudTh>Model</MudTh>
                                <MudTh>IsActive</MudTh>

                            </HeaderContent>

                            <RowTemplate>
                                <MudTd DataLabel="Actions" Style="width: 60px; min-width: 60px;">
                                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Dense="true">
                                        <MudMenuItem OnClick="@(() => View(context.Id))">
                                            <MudIcon Icon="@Icons.Material.Filled.Search" Class="me-2" /> View
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => Edit(context.Id))">
                                            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="me-2" /> Edit
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => Delete(context.Id))" Color="Color.Error">
                                            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="me-2" /> Delete
                                        </MudMenuItem>
                                    </MudMenu>
                                </MudTd>

                                <MudTd DataLabel="Registration No." Style="text-align: left; white-space: nowrap; width: auto;">
                                    @context.VehicleRegNo
                                </MudTd>
                                <MudTd DataLabel="Engine No." Style="text-align: left; white-space: nowrap; width: auto;">
                                    @context.EngineNo
                                </MudTd>
                                <MudTd DataLabel="Chasis No." Style="text-align: left; white-space: nowrap; width: auto;">
                                    @context.ChasisNo
                                </MudTd>
                                <MudTd DataLabel="Vehicle Type" Style="text-align: left; white-space: nowrap; width: auto;">
                                    @context.VehicleType
                                </MudTd>
                                <MudTd DataLabel="Make" Style="text-align: left; white-space: nowrap; width: auto;">
                                    @context.MakeType
                                </MudTd>
                                <MudTd DataLabel="Model" Style="text-align: left; white-space: nowrap; width: auto;">
                                    @context.Model
                                </MudTd>
                                <MudTd DataLabel="Active" Style="white-space: nowrap; width: auto;">
                                    @(context.IsActive == 1 ? "" : "Locked")
                                </MudTd>
                            </RowTemplate>
                        </MudTable>
                    </div>
                }
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

</div>

@code
{
    PartiesModel MasterRecord = new();
    PartyVehiclesModel record = new();
    List<PartiesModel> Par = new();
    List<TypeCodeModel> Veh = null!;
    List<TypeCodeModel> Mak = null!;

    List<PartyVehiclesModel> data = new();

    [Parameter] public string Action { get; set; }
    [Parameter] public int CurrentRecord { get; set; } = 0;

    bool isReadOnly = true;
    private bool IsVisible { get; set; } = false;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        try
        {
            LoadingPanel = true;

            Par = await Functions.GetAsync<List<PartiesModel>>($"Party/Search", true) ?? new List<PartiesModel>();
            Veh = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/VEHICLE TYPE", true) ?? new List<TypeCodeModel>();
            Mak = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/VEHICLE MAKE TYPE", true) ?? new List<TypeCodeModel>();

            switch (Action)
            {
                case "INSERT":
                    await Clear();
                    isReadOnly = false;
                    break;
                case "UPDATE":
                case "VIEW":
                    await Get(CurrentRecord);
                    isReadOnly = (Action == "VIEW");
                    break;
                default:
                    isReadOnly = true;
                    break;
            }

            data = await Functions.GetAsync<List<PartyVehiclesModel>>($"PartyVehicles/Search/partyid={CurrentRecord}", true) ?? new List<PartyVehiclesModel>();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
            StateHasChanged();
        }
    }

    protected async Task Get(int id)
    {
        try
        {
            LoadingPanel = true;
            MasterRecord = await Functions.GetAsync<PartiesModel>($"Parties/Get/{id}", true) ?? new PartiesModel();
            record = await Functions.GetAsync<PartyVehiclesModel>($"PartyVehicles/Get/{id}", true) ?? new PartyVehiclesModel();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading record: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    protected void GetDefaultValues()
    {
        if (CurrentRecord > 0 && record.PartyId == 0)
            record.PartyId = CurrentRecord;

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PartyVehiclesModel();
        record.PartyId = CurrentRecord;
        record.IsActive = 1;
        record.IsSoftDeleted = 0;
        isReadOnly = false;
        IsVisible = true;
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        IsVisible = true;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        IsVisible = true;
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        await Get(id);
        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Functions.GetComputerDetails();
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Functions.GetComputerDetails();

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<PartyVehiclesModel>($"PartyVehicles/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                await GetAll();
                await Clear();
                IsVisible = false;
            }

        }
        catch (Exception ex)
        {
            await Functions.ShowMessage(dialogService, "error", $"Record Not Saved, {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;
        }

    }
}

