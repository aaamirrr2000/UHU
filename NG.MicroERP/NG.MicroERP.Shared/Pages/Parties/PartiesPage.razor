@page "/PartiesPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals
@inject FileUploadService FileUploadService

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Text="Basic Details & Identification" Expanded=true Style="margin-bottom:10px;">
                <TitleContent>
                    <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">

                        <i class="fa fa-info-circle"
                           style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                        </i>

                        <div class="ms-2">
                            <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.Name) ? "NO NAME" : record.Name)</MudText>
                            <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Parties</MudText>
                        </div>
                    </div>
                    <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
                </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <!-- Code -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="Code"
                                      Label="Code *"
                                      Variant="Variant.Outlined"
                                      Value="@record.Code"
                                      ValueChanged="@((string v) => record.Code = v?.ToUpper())"
                                      Placeholder="Code"
                                      ReadOnly="true"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>	<ValidationMessage For="@(() => record.Code)" />
                    </div>

                    <!-- Name -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="Name"
                                      Label="Name *"
                                      Variant="Variant.Outlined"
                                      Value="@record.Name"
                                      ValueChanged="@((string v) => record.Name = v?.ToUpper())"
                                      Placeholder="Name"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>	<ValidationMessage For="@(() => record.Name)" />
                    </div>

                    <!-- Party Type -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="string"
                                   Value="record.PartyType"
                                   ValueChanged="@((string v) => { record.PartyType = v; OnPartyTypeChange(); })"
                                   Label="Party Type *"
                                   Placeholder="Party Type"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true"
                                   Class="flex-grow-1">
                            <MudSelectItem T="string" Value="@("CUSTOMER")">Customer</MudSelectItem>
                            <MudSelectItem T="string" Value="@("SUPPLIER")">Supplier</MudSelectItem>
                            <MudSelectItem T="string" Value="@("BANK")">Bank</MudSelectItem>
                        </MudSelect>
                    </div>

                    <!-- Parent Party -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="PartiesModel"
                                      DataList="@Par"
                                      DisplayProperty="@(p => p.Name)"
                                      IdProperty="@(p => p.Id)"
                                      @bind-SelectedId="record.ParentId"
                                      Variant="Variant.Outlined"
                                      Label="Parent Party"
                                      FullWidth="@true" />
                    </div>

                    <!-- NTN -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="NTN"
                                      Label="NTN"
                                      Variant="Variant.Outlined"
                                      Value="@record.NTN"
                                      ValueChanged="@((string v) => record.NTN = v?.ToUpper())"
                                      Placeholder="NTN"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <!-- STN -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="STN"
                                      Label="STN"
                                      Variant="Variant.Outlined"
                                      Value="@record.STN"
                                      ValueChanged="@((string v) => record.STN = v?.ToUpper())"
                                      Placeholder="STN"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="int"
                                   @bind-Value="record.IsRegistered"
                                   Label="Is Registered"
                                   Placeholder="Is Registered"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="@true"
                                   Class="flex-grow-1">
                            @if (record.IsRegistered != 0 && record.IsRegistered != 1)
                            {
                                record.IsRegistered = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Yes
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                No
                            </MudSelectItem>
                        </MudSelect>

                    </div>
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="int"
                                   @bind-Value="record.IsFiler"
                                   Label="Is Filer"
                                   Placeholder="Is Filer"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="@true"
                                   Class="flex-grow-1">
                            @if (record.IsFiler != 0 && record.IsFiler != 1)
                            {
                                record.IsFiler = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Yes
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                No
                            </MudSelectItem>
                        </MudSelect>

                    </div>
                    <!-- Is Active -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="int"
                                   @bind-Value="record.IsActive"
                                   Label="Activation Status *"
                                   Placeholder="Is Active"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="@true"
                                   Class="flex-grow-1">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <MudExpansionPanel Text="Party Class" Expanded=true Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">

                    <i class="fa fa-info-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>

                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Rating</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Parties</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>
            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <!-- Rating -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudNumericField @bind-Value="record.CustomerRating" 
                                         Label="Rating"
                                         Variant="Variant.Outlined" 
                                         Placeholder="Rating" 
                                         ReadOnly="@isReadOnly" 
                                         Format="#,##0.00"
                                         FullWidth="@true"
                                         Class="flex-grow-1"></MudNumericField>
                    </div>

                    <!-- Class -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="string"
                                   @bind-Value="record.CustomerClass"
                                   Label="Class"
                                   Placeholder="Class"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="@true"
                                   Class="flex-grow-1">
                            @if (Cc != null && Cc.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.CustomerClass))
                                {
                                    record.CustomerClass = Cc.First().ListValue;
                                }
                                foreach (var i in Cc)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.CustomerClass)" />
                        </div>
                    </div>

                    <!-- With Us Since -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudDatePicker @bind-Date="record.CustomerSince" 
                                       Label="With Us Since"
                                       Variant="Variant.Outlined" 
                                       DateFormat="yyyy-MM-dd" 
                                       Placeholder="With Us Since" 
                                       ReadOnly="@isReadOnly"
                                       FullWidth="@true"
                                       Class="flex-grow-1"></MudDatePicker>
                    </div>

                    <!-- Sales Person Id -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="EmployeesModel"
                                      DataList="@Sal"
                                      DisplayProperty="@(p => p.Fullname)"
                                      IdProperty="@(p => p.Id)"
                                      @bind-SelectedId="record.SalesPersonId"
                                      Variant="Variant.Outlined"
                                      Label="Sales Person"
                                      FullWidth="@true" />
                    </div>

                    <!-- Credit Limit -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudNumericField @bind-Value="record.CreditLimit" 
                                         Label="Credit Limit"
                                         Variant="Variant.Outlined" 
                                         Placeholder="CreditLimit" 
                                         ReadOnly="@isReadOnly" 
                                         Format="#,##0.00"
                                         FullWidth="@true"
                                         Class="flex-grow-1"></MudNumericField>
                    </div>

                    <!-- Payment Terms Id -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="PaymentTermsModel"
                                      DataList="@Pay"
                                      DisplayProperty="@(p => p.Description)"
                                      IdProperty="@(p => p.Id)"
                                      @bind-SelectedId="record.PaymentTermsId"
                                      Variant="Variant.Outlined"
                                      Label="Payment Terms"
                                      FullWidth="@true" />
                    </div>

                    <!-- Price List -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="int"
                                   Value="record.PriceListId"
                                   ValueChanged="@((int v) => record.PriceListId = v)"
                                   Label="Price List"
                                   Placeholder="Select Price List"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true"
                                   Class="flex-grow-1">
                            @if (PriceLists != null && PriceLists.Any())
                            {
                                @foreach (var priceList in PriceLists)
                                {
                                    <MudSelectItem T="int" Value="@priceList.Id">@priceList.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">
                            Price list to use for this party in sale invoices
                        </MudText>
                    </div>

                    <!-- Account Id -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="ChartOfAccountsModel"
                                      DataList="@Acc"
                                      DisplayProperty="@(p => p.Name)"
                                      IdProperty="@(p => p.Id)"
                                      @bind-SelectedId="record.AccountId"
                                      Variant="Variant.Outlined"
                                      Label="Account"
                                      FullWidth="@true" />
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <MudExpansionPanel Text="Party Details" Expanded=true Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">

                    <i class="fa fa-info-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>

                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Parties</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>
            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <!-- Address -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="Address"
                                      Label="Address"
                                      Variant="Variant.Outlined"
                                      Value="@record.Address"
                                      ValueChanged="@((string v) => record.Address = v?.ToUpper())"
                                      Placeholder="Address"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <!-- City Id -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="AreasModel"
                                      DataList="@Cit"
                                      DisplayProperty="@(p => p.AreaName)"
                                      IdProperty="@(p => p.Id)"
                                      @bind-SelectedId="record.CityId"
                                      Variant="Variant.Outlined"
                                      Label="City/Area"
                                      FullWidth="@true" />
                    </div>

                    <!-- Contact Person -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="ContactPerson"
                                      Label="Contact Person"
                                      Variant="Variant.Outlined"
                                      Value="@record.ContactPerson"
                                      ValueChanged="@((string v) => record.ContactPerson = v?.ToUpper())"
                                      Placeholder="Contact Person"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <!-- Contact Designation -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="ContactDesignation"
                                      Label="Contact Designation"
                                      Variant="Variant.Outlined"
                                      Value="@record.ContactDesignation"
                                      ValueChanged="@((string v) => record.ContactDesignation = v?.ToUpper())"
                                      Placeholder="Contact Designation"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <!-- Contact Email -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="ContactEmail"
                                      Label="Contact Email"
                                      Variant="Variant.Outlined"
                                      Value="@record.ContactEmail"
                                      ValueChanged="@((string v) => record.ContactEmail = v?.ToUpper())"
                                      Placeholder="Contact Email"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <!-- Latitude -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="Latitude"
                                      Label="Latitude"
                                      Variant="Variant.Outlined"
                                      Value="@record.Latitude"
                                      ValueChanged="@((string v) => record.Latitude = v?.ToUpper())"
                                      Placeholder="Latitude"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <!-- Longitude -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField id="Longitude"
                                      Label="Longitude"
                                      Variant="Variant.Outlined"
                                      Value="@record.Longitude"
                                      ValueChanged="@((string v) => record.Longitude = v?.ToUpper())"
                                      Placeholder="Longitude"
                                      ReadOnly="@isReadOnly"
                                      FullWidth="@true"
                                      Class="flex-grow-1">
                        </MudTextField>
                    </div>

                    <!-- Radius -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudNumericField @bind-Value="record.Radius" 
                                         Label="Radius"
                                         Variant="Variant.Outlined" 
                                         Placeholder="Radius" 
                                         ReadOnly="@isReadOnly" 
                                         Format="#,##0.00"
                                         FullWidth="@true"
                                         Class="flex-grow-1"></MudNumericField>
                    </div>

                    <!-- Image Upload Section -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="p-3 border rounded">
                                    <label class="small fw-bold text-uppercase d-block mb-2 text-center">Item Image</label>
                                    <div class="d-flex justify-content-center align-items-center mb-3" style="height: 150px;">
                                        @if (!string.IsNullOrEmpty(record.Pic))
                                        {
                                            <img src="@Globals.GetImageUrl(record.Pic)"
                                                 class="img-fluid rounded"
                                                 alt="Party Image"
                                                 style="max-height: 100%; max-width: 100%; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center justify-content-center bg-secondary rounded-circle"
                                                 style="width: 120px; height: 120px;">
                                                <i class="fas fa-user-circle text-white fs-3"></i>
                                            </div>
                                        }
                                    </div>
                                    <InputFile OnChange="OnFileInputChanged" class="form-control form-control-sm" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

</div>

@code
{
    PartiesModel record = new();
    List<OrganizationsModel> Org = new();
    List<PartiesModel> Par = new();
    List<EmployeesModel> Sal = new();
    List<PaymentTermsModel> Pay = new();
    List<ChartOfAccountsModel> Acc = new();
    List<AreasModel> Cit = new();
    List<TypeCodeModel> Cc = null!;
    List<TypeCodeModel> PriceLists = new();

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "PartiesDashboard");
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        try
        {
            LoadingPanel = true;
            Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search", true) ?? new List<PartiesModel>();
            Sal = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();
            Pay = await Functions.GetAsync<List<PaymentTermsModel>>($"PaymentTerms/Search", true) ?? new List<PaymentTermsModel>();
            Cit = await Functions.GetAsync<List<AreasModel>>($"Areas/Search", true) ?? new List<AreasModel>();
            Cc = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/PARTY CLASS", true) ?? new List<TypeCodeModel>();
            PriceLists = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/PRICE LIST", true) ?? new List<TypeCodeModel>();

            // Load accounts based on party type if set
            if (!string.IsNullOrWhiteSpace(record.PartyType))
            {
                await OnPartyTypeChange();
            }
            else
            {
                // Load all active accounts if no party type is set
                Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search", true) ?? new List<ChartOfAccountsModel>();
            }

            if (Action == "INSERT")
            {
                record = new PartiesModel();
                record.IsActive = 1;
                isReadOnly = false;
            }
            else if (Action == "EDIT" || Action == "UPDATE")
            {
                await Get(CurrentRecord);
                isReadOnly = false;
                // Reload accounts based on party type after getting the record
                if (!string.IsNullOrWhiteSpace(record.PartyType))
                {
                    await OnPartyTypeChange();
                }
            }
            else if (Action == "VIEW")
            {
                await Get(CurrentRecord);
                isReadOnly = true;
                // Reload accounts based on party type after getting the record
                if (!string.IsNullOrWhiteSpace(record.PartyType))
                {
                    await OnPartyTypeChange();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading data: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PartiesModel>($"Parties/Get/{id}", true) ?? new PartiesModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {

        if (Pay != null && Pay.Any() && record.PaymentTermsId == 0)
            record.PaymentTermsId = Pay.First().Id;

        if (Acc != null && Acc.Any() && record.AccountId == 0)
            record.AccountId = Acc.First().Id;

        if (Cit != null && Cit.Any() && record.CityId == 0)
            record.CityId = Cit.First().Id;


        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PartiesModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    private async Task OnFileInputChanged(InputFileChangeEventArgs e)
    {
        try
        {
            var result = await Functions.FileUpload(e, FileUploadService);

            if (result.Item1 == true)
            {
                record.Pic = result.Item2;
                SnackbarService.Add("File uploaded successfully!", Severity.Success);
            }
            else
            {
                SnackbarService.Add($"Error: {result.Item2}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Exception: {ex.Message}", Severity.Error);
            record.Pic = null;
        }
    }

    protected async Task Save()
    {

        var errors = new List<string>();
        if (string.IsNullOrWhiteSpace(record.Code))
            errors.Add("• Code is required");
        if (string.IsNullOrWhiteSpace(record.Name))
            errors.Add("• Name is required");
        if (string.IsNullOrWhiteSpace(record.PartyType))
            errors.Add("• Party Type is required");

        if (errors.Count > 0)
        {
            SnackbarService.Add($"ERROR:\n{string.Join("\n", errors)}", Severity.Error);
            return;
        }

        try
        {
            LoadingPanel = true;

            if (Globals.User != null)
            {
                record.OrganizationId = Globals.User.OrganizationId;
                record.CreatedBy = Globals.User.Id;
                record.UpdatedBy = Globals.User.Id;
            }
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo ?? string.Empty;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo ?? string.Empty;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<PartiesModel>($"Parties/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    private async Task OnPartyTypeChange()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(record.PartyType))
            {
                Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search", true) ?? new List<ChartOfAccountsModel>();
                return;
            }

            string filter_Acc = "";

            switch (record.PartyType.ToUpper())
            {
                case "CUSTOMER":
                    filter_Acc = "InterfaceType='ACCOUNTS RECEIVABLE'";
                    break;

                case "SUPPLIER":
                    filter_Acc = "InterfaceType='ACCOUNTS PAYABLE'";
                    break;

                case "BANK":
                    filter_Acc = "InterfaceType='BANK'";
                    break;
                default:
                    filter_Acc = "";
                    break;
            }

            if (!string.IsNullOrWhiteSpace(filter_Acc))
            {
                Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/{filter_Acc}", true) ?? new List<ChartOfAccountsModel>();
            }
            else
            {
                Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search", true) ?? new List<ChartOfAccountsModel>();
            }

            // Reset AccountId if current selection is not in the filtered list
            if (record.AccountId > 0 && !Acc.Any(a => a.Id == record.AccountId))
            {
                record.AccountId = 0;
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading accounts: {ex.Message}", Severity.Error);
        }
    }
