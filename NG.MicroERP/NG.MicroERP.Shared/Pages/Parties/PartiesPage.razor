@page "/PartiesPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Globals Globals
@inject Functions Functions
@inject FileUploadService FileUploadService

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="d-flex justify-content-end flex-wrap gap-2">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">
        <!-- Party Information Panel -->
        <MudExpansionPanel Text="Party Information" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-info-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Party Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Basic party details and identification</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                    <!-- Left Column: Form Fields -->
                    <div class="col-12 col-md-8">
                        <div class="row">
                            <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                                <label class="form-label fw-bold mb-1">Code</label>
                                <MudTextField id="Code"
                                              @bind-Value="record.Code"
                                              placeholder="Auto-generated"
                                              ReadOnly="true"
                                              Variant="Variant.Outlined"
                                              FullWidth="true"
                                              Class="flex-grow-1"></MudTextField>
                                <div class="validation-container" style="min-height: 22px;">
                                    <ValidationMessage For="@(() => record.Code)" />
                                </div>
                            </div>

                            <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                                <label class="form-label fw-bold mb-1">Name *</label>
                                <MudTextField id="Name"
                                              @bind-Value="record.Name"
                                              placeholder="Enter party name"
                                              ReadOnly="@isReadOnly"
                                              Variant="Variant.Outlined"
                                              FullWidth="true"
                                              Required="true"
                                              Class="flex-grow-1"></MudTextField>
                                <div class="validation-container" style="min-height: 22px;">
                                    <ValidationMessage For="@(() => record.Name)" />
                                </div>
                            </div>

                            <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                                <label class="form-label fw-bold mb-1">Party Type *</label>
                                <MudSelect T="string"
                                           @bind-Value="record.PartyType"
                                           Placeholder="Select type"
                                           Variant="Variant.Outlined"
                                           Clearable="true"
                                           FullWidth="true"
                                           @bind-Value:after="OnPartyTypeChanged"
                                           Class="flex-grow-1">
                                    @if (Pat != null && Pat.Any())
                                    {
                                        if (string.IsNullOrWhiteSpace(record.PartyType))
                                        {
                                            record.PartyType = Pat.First().ListValue;
                                        }
                                        foreach (var i in Pat)
                                        {
                                            <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                        }
                                    }
                                </MudSelect>
                                <div class="validation-container" style="min-height: 22px;">
                                    <ValidationMessage For="@(() => record.PartyType)" />
                                </div>
                            </div>

                            <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                                <label class="form-label fw-bold mb-1">Parent Party</label>
                                <MudSelect @bind-Value="record.ParentId"
                                           Placeholder="Select parent party"
                                           Variant="Variant.Outlined"
                                           Clearable="true"
                                           FullWidth="true"
                                           Class="flex-grow-1">
                                    @if (Par != null && Par.Any())
                                    {
                                        foreach (var i in Par)
                                        {
                                            <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                        }
                                    }
                                </MudSelect>
                                <div class="validation-container" style="min-height: 22px;">
                                    <ValidationMessage For="@(() => record.ParentId)" />
                                </div>
                            </div>

                            <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                                <label class="form-label fw-bold mb-1">Party Type Code</label>
                                <MudTextField id="PartyTypeCode"
                                              @bind-Value="record.PartyTypeCode"
                                              placeholder="Enter type code"
                                              ReadOnly="@isReadOnly"
                                              Variant="Variant.Outlined"
                                              FullWidth="true"
                                              Class="flex-grow-1"></MudTextField>
                                <div class="validation-container" style="min-height: 22px;">
                                    <ValidationMessage For="@(() => record.PartyTypeCode)" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column: Picture -->
                    <div class="col-12 col-md-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="p-3 border rounded">
                                    <label class="small fw-bold text-uppercase d-block mb-2 text-center">Party Image</label>

                                    <div class="d-flex justify-content-center align-items-center mb-3" style="height: 150px;">
                                        @if (!string.IsNullOrEmpty(record.Pic))
                                        {
                                            <img src="@record.Pic"
                                                 class="img-fluid rounded"
                                                 alt="Party Image"
                                                 style="max-height: 100%; max-width: 100%; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center justify-content-center bg-secondary rounded-circle"
                                                 style="width: 120px; height: 120px;">
                                                <i class="fas fa-user-circle text-white fs-3"></i>
                                            </div>
                                        }
                                    </div>

                                    <InputFile OnChange="OnFileInputChanged" class="form-control form-control-sm" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Customer Information Panel -->
        <MudExpansionPanel Text="Customer Information" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-user-tag"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Customer Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Customer classification and rating</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #2196F3; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                    <!-- Customer Rating - Fixed decimal precision -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Customer Rating *</label>
                        <MudNumericField @bind-Value="record.CustomerRating"
                                         placeholder="0.00 - 5.00"
                                         ReadOnly="@isReadOnly"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Min="0"
                                         Max="5"
                                         Step="0.05"
                                         Required="true"
                                         Class="flex-grow-1">
                        </MudNumericField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.CustomerRating)" />
                        </div>
                        <MudText Typo="Typo.caption" Class="text-muted mt-1">Rating from 0.00 to 5.00 (increments of 0.05)</MudText>
                    </div>

                    <!-- Customer Class - Based on your actual data -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Customer Class</label>
                        <MudSelect T="string"
                                   @bind-Value="record.CustomerClass"
                                   Placeholder="Select class"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            <MudSelectItem T="string" Value=@("A")>Class A</MudSelectItem>
                            <MudSelectItem T="string" Value=@("B")>Class B</MudSelectItem>
                            <MudSelectItem T="string" Value=@("C")>Class C</MudSelectItem>
                            <MudSelectItem T="string" Value=@("D")>Class D</MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.CustomerClass)" />
                        </div>
                    </div>

                    <!-- Customer Since - Fixed -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Customer Since</label>
                        <MudDatePicker @bind-Value="record.CustomerSince"
                                       DateFormat="yyyy-MM-dd"
                                       placeholder="Select date"
                                       ReadOnly="@isReadOnly"
                                       Variant="Variant.Outlined"
                                       Class="flex-grow-1">
                        </MudDatePicker>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.CustomerSince)" />
                        </div>
                    </div>

                    <!-- Sales Person - OK -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Sales Person</label>
                        <MudSelect @bind-Value="record.SalesPersonId"
                                   Placeholder="Select sales person"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Sal != null && Sal.Any())
                            {
                                foreach (var i in Sal)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.Fullname</MudSelectItem>
                                }
                            }
                            else
                            {
                                <MudSelectItem T="int" Value="0" Disabled="true">No sales persons available</MudSelectItem>
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.SalesPersonId)" />
                        </div>
                    </div>

                    <!-- Credit Limit - Consider moving to Financial panel -->
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Credit Limit</label>
                        <MudNumericField @bind-Value="record.CreditLimit"
                                         placeholder="0.00"
                                         ReadOnly="@isReadOnly"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Format="#,##0.0000"
                                         Min="0"
                                         Class="flex-grow-1">
                        </MudNumericField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.CreditLimit)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Financial & Tax Panel -->
        <MudExpansionPanel Text="Financial & Tax" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-money-bill-wave"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Financial & Tax</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Account and tax information</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Tax Category</label>
                        <MudTextField id="TaxCategory"
                                      @bind-Value="record.TaxCategory"
                                      placeholder="Tax category"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.TaxCategory)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Tax Number</label>
                        <MudTextField id="TaxNumber"
                                      @bind-Value="record.TaxNumber"
                                      placeholder="Tax registration number"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.TaxNumber)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">NTN</label>
                        <MudTextField id="NTN"
                                      @bind-Value="record.NTN"
                                      placeholder="National Tax Number"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.NTN)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Location & Contact Panel -->
        <MudExpansionPanel Text="Location & Contact" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-map-marker-alt"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Location & Contact</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Address and contact details</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #9C27B0; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Address</label>
                        <MudTextField id="Address"
                                      @bind-Value="record.Address"
                                      placeholder="Full address"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Lines="2"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Address)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">City/Area</label>
                        <MudSelect @bind-Value="record.CityId"
                                   Placeholder="Select city/area"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Cit != null && Cit.Any())
                            {
                                foreach (var i in Cit)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.AreaName</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.CityId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-3 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Latitude</label>
                        <MudTextField id="Latitude"
                                      @bind-Value="record.Latitude"
                                      placeholder="00.000000"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Latitude)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-3 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Longitude</label>
                        <MudTextField id="Longitude"
                                      @bind-Value="record.Longitude"
                                      placeholder="00.000000"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Longitude)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Radius (meters)</label>
                        <MudNumericField @bind-Value="record.Radius"
                                         placeholder="Delivery radius"
                                         ReadOnly="@isReadOnly"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Format="#,##0"
                                         Class="flex-grow-1"></MudNumericField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Radius)" />
                        </div>
                    </div>

                    <div class="col-12 mb-3">
                        <MudDivider Class="my-4">
                            <MudText Typo="Typo.subtitle2" Class="text-muted">Contact Person</MudText>
                        </MudDivider>
                    </div>

                    <div class="col-12 col-md-4 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Contact Person</label>
                        <MudTextField id="ContactPerson"
                                      @bind-Value="record.ContactPerson"
                                      placeholder="Contact person name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.ContactPerson)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-4 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Designation</label>
                        <MudTextField id="ContactDesignation"
                                      @bind-Value="record.ContactDesignation"
                                      placeholder="Designation"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.ContactDesignation)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-4 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Contact Email</label>
                        <MudTextField id="ContactEmail"
                                      @bind-Value="record.ContactEmail"
                                      placeholder="email@example.com"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.ContactEmail)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Status & Settings Panel -->
        <MudExpansionPanel Text="Status & Settings">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fas fa-cog"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.Name) ? "NO NAME" : record.Name)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Activation and system preferences</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #F44336; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Status</label>
                        <MudSelect T="int"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Active
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Inactive
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.IsActive)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Approval Status</label>
                        <MudSelect T="int"
                                   @bind-Value="record.IsApproved"
                                   Placeholder="Approval status"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   ReadOnly="true"
                                   Class="flex-grow-1">
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.Verified" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Approved
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Pending" Color="Color.Warning" Size="Size.Small" Class="me-2" />
                                Pending
                            </MudSelectItem>
                        </MudSelect>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>
</div>

@code
{
    PartiesModel record = new();
    List<TypeCodeModel> Pat = null!;
    List<PartiesModel> Par = new();
    List<EmployeesModel> Sal = new();
    List<PaymentTermsModel> Pay = new();
    List<ChartOfAccountsModel> Acc = new();
    List<AreasModel> Cit = new();

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Pat = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/PARTY TYPE", true) ?? new List<TypeCodeModel>();
        Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search", true) ?? new List<PartiesModel>();
        Sal = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();
        Pay = await Functions.GetAsync<List<PaymentTermsModel>>($"PaymentTerms/Search", true) ?? new List<PaymentTermsModel>();
        Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search", true) ?? new List<ChartOfAccountsModel>();
        Cit = await Functions.GetAsync<List<AreasModel>>($"Areas/Search", true) ?? new List<AreasModel>();

        if (Action == "INSERT")
        {
            record = new PartiesModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PartiesModel>($"Parties/Get/{id}", true) ?? new PartiesModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (Par != null && Par.Any() && record.ParentId == 0)
            record.ParentId = Par.First().Id;
        if (Sal != null && Sal.Any() && record.SalesPersonId == 0)
            record.SalesPersonId = Sal.First().Id;
        if (Pay != null && Pay.Any() && record.PaymentTermsId == 0)
            record.PaymentTermsId = Pay.First().Id;
        if (Acc != null && Acc.Any() && record.AccountId == 0)
            record.AccountId = Acc.First().Id;
        if (Cit != null && Cit.Any() && record.CityId == 0)
            record.CityId = Cit.First().Id;


        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PartiesModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Functions.GetComputerDetails();
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Functions.GetComputerDetails();

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<PartiesModel>($"Parties/{url}", record, true);
            if (result.Success == false)
            {
                await Functions.ShowMessage(dialogService, "error", $"Record Not Saved");
            }
            else
            {
                await OnSaved.InvokeAsync();
                await Functions.ShowMessage(dialogService, "success", $"Record {Action} Successfully");
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }


        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    private async void OnPartyTypeChanged()
    {
        string AccountType = "";
        if (record.PartyType != "SUPPLIER")
        {
            AccountType = "ACCOUNTS RECEIVABLE";
        }
        else
        {
            AccountType = "ACCOUNTS PAYABLE";
        }

        Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/InterfaceType='{AccountType}'", true) ?? new List<ChartOfAccountsModel>();
        if (Acc != null && Acc.Any())
            record.AccountId = Acc.First().Id;
    }

    private async Task OnFileInputChanged(InputFileChangeEventArgs e)
    {
        try
        {
            var result = await Functions.FileUpload(e, FileUploadService);

            if (result.Item1 == true)
            {
                record.Pic = result.Item2;
                SnackbarService.Add("File uploaded successfully!", Severity.Success);
            }
            else
            {
                SnackbarService.Add($"Error: {result.Item2}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Exception: {ex.Message}", Severity.Error);
            record.Pic = null;
        }
    }
