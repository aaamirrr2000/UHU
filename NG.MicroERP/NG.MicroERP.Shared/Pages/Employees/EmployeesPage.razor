@page "/EmployeesPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject FileUploadService FileUploadService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Personal Information Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Person" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Personal Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Employee personal details</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="Name"
                                      @bind-Value="record.Fullname"
                                      Placeholder="Enter full name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true"
                                      Required="@true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Fullname)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Employee Id/Code"
                                      @bind-Value="record.EmpId"
                                      Placeholder="Enter employee ID"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.EmpId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="CNIC/SSN"
                                      @bind-Value="record.Cnic"
                                      Placeholder="Enter CNIC/SSN"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true" />
                        <ValidationMessage For="@(() => record.Cnic)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Contact Information Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.ContactPhone" 
                             Size="Size.Large" 
                             Color="Color.Info" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Contact Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Employee contact details</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField Label="Phone"
                                      @bind-Value="record.Phone"
                                      Placeholder="Enter phone number"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Phone)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Email"
                                      @bind-Value="record.Email"
                                      Placeholder="Enter email address"
                                      InputType="InputType.Email"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Email)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Address"
                                      @bind-Value="record.Address"
                                      Placeholder="Enter address"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Lines="2"
                                      FullWidth="@true" />
                        <ValidationMessage For="@(() => record.Address)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Employment Details Card -->
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Work" 
                             Size="Size.Large" 
                             Color="Color.Warning" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Employment Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Job role and department information</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudSelect T="string"
                                   Label="Employee Type"
                                   @bind-Value="record.EmpType"
                                   Placeholder="Select employee type"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true"
                                   Class="mb-3">
                            @if (Emp != null && Emp.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.EmpType))
                                {
                                    record.EmpType = Emp.First().ListValue;
                                }
                                foreach (var i in Emp)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.EmpType)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        @if (isReadOnly)
                        {
                            <MudTextField Label="Department"
                                          Value="@(Dep?.FirstOrDefault(d => d.Id == record.DepartmentId)?.DepartmentName ?? "")"
                                          ReadOnly="@true"
                                          Variant="Variant.Outlined"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                        else
                        {
                            <AutoComplete TItem="DepartmentsModel"
                                          DataList="@Dep"
                                          IdProperty="@(e => e.Id)"
                                          DisplayProperty="@(e => e.DepartmentName)"
                                          @bind-SelectedId="record.DepartmentId"
                                          Variant="Variant.Outlined"
                                          Label="Department"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                        <ValidationMessage For="@(() => record.DepartmentId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        @if (isReadOnly)
                        {
                            <MudTextField Label="Designation"
                                          Value="@(Des?.FirstOrDefault(d => d.Id == record.DesignationId)?.DesignationName ?? "")"
                                          ReadOnly="@true"
                                          Variant="Variant.Outlined"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                        else
                        {
                            <AutoComplete TItem="DesignationsModel"
                                          DataList="@Des"
                                          IdProperty="@(e => e.Id)"
                                          DisplayProperty="@(e => e.DesignationName)"
                                          @bind-SelectedId="record.DesignationId"
                                          Variant="Variant.Outlined"
                                          Label="Designation"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                        <ValidationMessage For="@(() => record.DesignationId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Shift"
                                   @bind-Value="record.ShiftId"
                                   Placeholder="Select shift"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true"
                                   Class="mb-3">
                            @if (Shi != null && Shi.Any())
                            {
                                foreach (var i in Shi)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.ShiftName</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.ShiftId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        @if (isReadOnly)
                        {
                            <MudTextField Label="Location"
                                          Value="@(Loc?.FirstOrDefault(l => l.Id == record.LocationId)?.Name ?? "")"
                                          ReadOnly="@true"
                                          Variant="Variant.Outlined"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                        else
                        {
                            <AutoComplete TItem="LocationsModel"
                                          DataList="@Loc"
                                          IdProperty="@(e => e.Id)"
                                          DisplayProperty="@(e => e.Name)"
                                          @bind-SelectedId="record.LocationId"
                                          Variant="Variant.Outlined"
                                          Label="Location"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                        <ValidationMessage For="@(() => record.LocationId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        @if (isReadOnly)
                        {
                            <MudTextField Label="Report To"
                                          Value="@(Par?.FirstOrDefault(p => p.Id == record.ParentId)?.Fullname ?? "")"
                                          ReadOnly="@true"
                                          Variant="Variant.Outlined"
                                          FullWidth="@true" />
                        }
                        else
                        {
                            <AutoComplete TItem="EmployeesModel"
                                          DataList="@Par"
                                          IdProperty="@(e => e.Id)"
                                          DisplayProperty="@(e => e.Fullname)"
                                          @bind-SelectedId="record.ParentId"
                                          Variant="Variant.Outlined"
                                          Label="Report To"
                                          FullWidth="@true" />
                        }
                        <ValidationMessage For="@(() => record.ParentId)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Profile Picture Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.CameraAlt" 
                             Size="Size.Large" 
                             Color="Color.Secondary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Profile Picture</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Employee photo upload</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <div class="d-flex justify-content-center">
                    <div class="p-3 border rounded" style="width: 100%; max-width: 300px;">
                        <MudText Typo="Typo.body2" Class="fw-bold text-center mb-3">Picture</MudText>

                        <div class="d-flex justify-content-center align-items-center mb-3" style="height: 200px; background: var(--mud-palette-grey-lighteren); border-radius: 8px;">
                            @if (!string.IsNullOrEmpty(record.Pic))
                            {
                                <img src="@record.Pic"
                                     class="img-fluid rounded"
                                     alt="Employee Picture"
                                     style="max-height: 100%; max-width: 100%; object-fit: cover; border-radius: 8px;" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-secondary rounded-circle"
                                     style="width: 120px; height: 120px;">
                                    <MudIcon Icon="@Icons.Material.Filled.Person" 
                                             Size="Size.Large" 
                                             Style="color: white; font-size: 3rem;" />
                                </div>
                            }
                        </div>

                        @if (!isReadOnly)
                        {
                            <InputFile OnChange="OnFileInputChanged" />
                        }
                    </div>
                </div>
            </MudPaper>
        </MudItem>

        <!-- Settings & Status Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" 
                             Size="Size.Large" 
                             Color="Color.Error" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Settings & Status</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Employee settings and activation</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Exclude From Attendance"
                                   @bind-Value="record.ExcludeFromAttendance"
                                   Placeholder="Select option"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true"
                                   Class="mb-3">
                            @if (record.ExcludeFromAttendance != 0 && record.ExcludeFromAttendance != 1)
                            {
                                record.ExcludeFromAttendance = 0;
                            }
                            <MudSelectItem T="int" Value="1">Yes</MudSelectItem>
                            <MudSelectItem T="int" Value="0">No</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.ExcludeFromAttendance)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    EmployeesModel record = new();
    List<OrganizationsModel> Org = new();
    List<TypeCodeModel> Emp = null!;
    List<DepartmentsModel> Dep = new();
    List<DesignationsModel> Des = new();
    List<ShiftsModel> Shi = new();
    List<LocationsModel> Loc = new();
    List<EmployeesModel> Par = new();

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Emp = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/EMPLOYEE TYPE", true) ?? new List<TypeCodeModel>();
        Dep = await Functions.GetAsync<List<DepartmentsModel>>($"Departments/Search", true) ?? new List<DepartmentsModel>();
        Des = await Functions.GetAsync<List<DesignationsModel>>($"Designations/Search", true) ?? new List<DesignationsModel>();
        Shi = await Functions.GetAsync<List<ShiftsModel>>($"Shifts/Search", true) ?? new List<ShiftsModel>();
        Loc = await Functions.GetAsync<List<LocationsModel>>($"Locations/Search", true) ?? new List<LocationsModel>();
        Par = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();

        if (Action == "INSERT")
        {
            record = new EmployeesModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<EmployeesModel>($"Employees/Get/{id}", true) ?? new EmployeesModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (Dep != null && Dep.Any() && record.DepartmentId == 0)
            record.DepartmentId = Dep.First().Id;
        if (Des != null && Des.Any() && record.DesignationId == 0)
            record.DesignationId = Des.First().Id;
        if (Shi != null && Shi.Any() && record.ShiftId == 0)
            record.ShiftId = Shi.First().Id;
        if (Loc != null && Loc.Any() && record.LocationId == 0)
            record.LocationId = Loc.First().Id;
        if (Par != null && Par.Any() && record.ParentId == 0)
            record.ParentId = Par.First().Id;

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new EmployeesModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<EmployeesModel>($"Employees/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    private async Task OnFileInputChanged(InputFileChangeEventArgs e)
    {
        try
        {
            var result = await Functions.FileUpload(e, FileUploadService);

            if (result.Item1 == true)
            {
                record.Pic = result.Item2;
                SnackbarService.Add("File uploaded successfully!", Severity.Success);
            }
            else
            {
                SnackbarService.Add($"Error: {result.Item2}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Exception: {ex.Message}", Severity.Error);
            record.Pic = null;
        }
    }
}
