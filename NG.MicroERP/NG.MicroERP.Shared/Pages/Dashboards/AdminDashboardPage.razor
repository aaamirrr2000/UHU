@page "/AdminDashboardPage"
@using MudBlazor

<MudPaper Class="pa-4 ma-3 d-flex align-items-center justify-content-between" Elevation="3" Rounded="true" Style="background-color:#f9fafb;">
    <MudText Typo="Typo.h6" Class="ml-2" Color="Color.Primary">
        Select Date
    </MudText>

    <MudDatePicker Value="selectedDate"
                   ValueChanged="@OnDateChanged"
                   Format="yyyy-MM-dd"
                   Label="Attendance Date"
                   Variant="Variant.Outlined"
                   Adornment="Adornment.Start"
                   AdornmentIcon="@Icons.Material.Filled.CalendarToday"
                   Class="ml-3"
                   Style="min-width: 250px;" />
</MudPaper>


<div class="row">
    <div class="col-6">
        <OverallAttendanceReport selectedDate="@selectedDate"></OverallAttendanceReport>
    </div>
    <div class="col-4">
    </div>
    <div class="col-4">
    </div>
</div>


@code {
    public DateTime selectedDate { get; set; } = new DateTime(2025, 10, 22);


    private void OnDateChanged(DateTime newDate)
    {
        selectedDate = newDate;
    }
}

                       