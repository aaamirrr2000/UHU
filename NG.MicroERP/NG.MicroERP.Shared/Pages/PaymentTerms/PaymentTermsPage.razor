@page "/PaymentTermsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Payment Term Information Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Receipt" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Payment Term Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Payment Terms</MudText>
                    </div>
                </div>
                <hr style="height: 3px; border: none; background: linear-gradient(90deg, var(--mud-palette-primary) 0%, var(--mud-palette-primary-lighten) 100%); border-radius: 10px; margin: 0 0 24px 0;" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="Code"
                                     @bind-Value="record.Code"
                                     Placeholder="Code"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                        <ValidationMessage For="@(() => record.Code)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Description"
                                     @bind-Value="record.Description"
                                     Placeholder="Description"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                        <ValidationMessage For="@(() => record.Description)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Payment Settings Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.CalendarToday" 
                             Size="Size.Large" 
                             Color="Color.Info" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Payment Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Payment terms and due days configuration</MudText>
                    </div>
                </div>
                <hr style="height: 3px; border: none; background: linear-gradient(90deg, var(--mud-palette-info) 0%, var(--mud-palette-info-lighten) 100%); border-radius: 10px; margin: 0 0 24px 0;" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudNumericField T="int"
                                         Label="Days Due"
                                         @bind-Value="record.DaysDue"
                                         Placeholder="Days Due"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        <ValidationMessage For="@(() => record.DaysDue)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Default & Status Settings Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Settings" 
                             Size="Size.Large" 
                             Color="Color.Warning" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Default & Status Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Default and activation status</MudText>
                    </div>
                </div>
                <hr style="height: 3px; border: none; background: linear-gradient(90deg, var(--mud-palette-warning) 0%, var(--mud-palette-warning-lighten) 100%); border-radius: 10px; margin: 0 0 24px 0;" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="IsDefault"
                                   @bind-Value="record.IsDefault"
                                   Placeholder="Default"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            @if (record.IsDefault != 0 && record.IsDefault != 1)
                            {
                                record.IsDefault = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.StarOutline" Color="Color.Default" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsDefault)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="IsActive"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Active"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code
{
    PaymentTermsModel record = new();

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Action == "INSERT")
        {
            record = new PaymentTermsModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PaymentTermsModel>($"PaymentTerms/Get/{id}", true) ?? new PaymentTermsModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PaymentTermsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<PaymentTermsModel>($"PaymentTerms/{url}", record, true);
            if (result.Success == false)
            {
                await Functions.ShowMessage(dialogService, "error", $"Record Not Saved");
            }
            else
            {
                await OnSaved.InvokeAsync();
                await Functions.ShowMessage(dialogService, "success", $"Record {Action} Successfully");
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
