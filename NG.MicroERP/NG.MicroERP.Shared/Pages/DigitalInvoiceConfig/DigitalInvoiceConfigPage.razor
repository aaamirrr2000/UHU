@page "/DigitalInvoiceConfigPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Text="Basic Details" Expanded=true Style="margin-bottom:10px;">

            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded shadow-sm" style="gap: 10px;">
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold text-dark">@record.Target</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">@record.Target ENVIRONMENT</MudText>
                    </div>
                </div>
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-6 mb-3">
                        <MudTextField Label="Country" id="Country" @bind-Value="record.Country" Variant="Variant.Filled" placeholder="Country" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.Country)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="PosId" id="PosId" @bind-Value="record.PosId" Variant="Variant.Filled" placeholder="PosId" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.PosId)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="ClientId" id="ClientId" @bind-Value="record.ClientId" Variant="Variant.Filled" placeholder="ClientId" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.ClientId)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="ClientSecret" id="ClientSecret" @bind-Value="record.ClientSecret" Variant="Variant.Filled" placeholder="ClientSecret" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.ClientSecret)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="Username" id="Username" @bind-Value="record.Username" Variant="Variant.Filled" placeholder="Username" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.Username)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="Password" id="Password" @bind-Value="record.Password" Variant="Variant.Filled" placeholder="Password" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.Password)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="Target" id="Target" @bind-Value="record.Target" Variant="Variant.Filled" placeholder="Target" ReadOnly="true"></MudTextField>
                        <ValidationMessage For="@(() => record.Target)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="TargetApi" id="TargetApi" @bind-Value="record.TargetApi" Variant="Variant.Filled" placeholder="TargetApi" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.TargetApi)" />
                    </div>
                    <div class="col-6 mb-3">

                        <MudSelect T="int"
                                   @bind-Value="record.IsDefault"
                                   Label="Default"
                                   Variant="Variant.Filled"
                                   Dense="true"
                                   Placeholder="Default"
                                   HelperText="Select Default"
                                   HelperTextOnFocus="true"
                                   Clearable="true">

                            @if (record.IsDefault != 0 && record.IsDefault != 1)
                            {
                                record.IsDefault = 1;
                            }

                            <MudSelectItem T="int" Value="1">Yes</MudSelectItem>
                            <MudSelectItem T="int" Value="0">No</MudSelectItem>
                        </MudSelect>

                        <ValidationMessage For="@(() => record.IsDefault)" />
                    </div>
                </div>
            </ChildContent>

        </MudExpansionPanel>
    </MudExpansionPanels>

</div>

@code
{
    static DigitalInvoiceConfigModel record = new();

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Action == "INSERT")
        {
            record.IsDefault = 0;
            isReadOnly = false;
        }
        else if (Action != "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action != "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<DigitalInvoiceConfigModel>($"DigitalInvoiceConfig/Get?Id={id}", true) ?? new DigitalInvoiceConfigModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async void Clear()
    {
        Action = "INSERT";
        record = new DigitalInvoiceConfigModel();
        record.IsDefault = 0;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Functions.GetComputerDetails();
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Functions.GetComputerDetails();

        string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
        var result = await Functions.PostAsync<DigitalInvoiceConfigModel>($"DigitalInvoiceConfig/{url}", record, true);
        if (result.Success == false)
        {
            await Functions.ShowMessage(dialogService, "error", $"Record Not Saved");
        }
        else
        {
            await Functions.ShowMessage(dialogService, "success", $"Record {Action} Successfully");
            record = new();
            isReadOnly = true;
        }

        LoadingPanel = false;
        await _drawer.CloseDrawer();

    }
}

