</style>

@code
{
    List<TaxRuleModel> AllData = new();
    List<TaxRuleModel> data = new();
    TaxRuleModel record = new();


    TaxRuleDetailModel RuleRecord = new();

    public string Action { get; set; } = "INSERT";
    private string searchString = "";

    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();
    private MyDrawer _RuleDrawer = new();

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "TaxRuleDashboard");
        await GetAll();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        AllData = await Functions.GetAsync<List<TaxRuleModel>>($"TaxRule/Search", true) ?? new List<TaxRuleModel>();
        data = AllData;
        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<TaxRuleModel>($"TaxRule/Get/{id}", true) ?? new TaxRuleModel();
        LoadingPanel = false;
    }

    private void FilterData()
    {
        if (string.IsNullOrWhiteSpace(searchString))
        {
            data = AllData.ToList();
        }
        else
        {
            var search = searchString.ToLower();
            data = AllData.Where(x =>
                (x.RuleName.ToString()?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.AppliesTo?.Contains(search, StringComparison.OrdinalIgnoreCase) == true)
            ).ToList();
        }

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new TaxRuleModel();
        record.IsActive = 1;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    //---------------------------------------------------------------------------------------------------------------------------------------------


    protected async Task GetRule(int id)
    {
        LoadingPanel = true;
        RuleRecord = await Functions.GetAsync<TaxRuleDetailModel>($"TaxRuleDetail/Get/{id}", true) ?? new TaxRuleDetailModel();
        LoadingPanel = false;
    }

    protected async Task ViewRule(int id)
    {
        await GetRule(id);
        Action = "VIEW";
        await _RuleDrawer.OpenDrawerAsync();
    }

    protected async Task EditRule(int id)
    {
        await GetRule(id);
        Action = "INSERT";
        await _RuleDrawer.OpenDrawerAsync();
    }

    //---------------------------------------------------------------------------------------------------------------------------------------------

    protected async Task Save()
    {
        try
        {
            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            var result = await Functions.PostAsync<TaxRuleModel>($"TaxRule/{Action}", record, true);
            if (result.Success == true)
            {
                SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
                await GetAll();
                if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
            }
            else
            {
                SnackbarService.Add($"{result.Message}", Severity.Error);
                record = new();
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
            await _drawer.CloseDrawerAsync();
        }
    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        await _RuleDrawer.CloseDrawerAsync();
        StateHasChanged();
    }

}

