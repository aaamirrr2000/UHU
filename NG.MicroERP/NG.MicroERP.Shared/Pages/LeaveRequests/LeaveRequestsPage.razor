@page "/LeaveRequestsPage/{Action}/{CurrentRecord?}/"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />
    <MudExpansionPanels MultiExpansion="true">

        <!-- Leave Request Information Panel -->
        <MudExpansionPanel Text="Leave Request Information" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-calendar-check"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.LeaveName) ? "NO NAME" : record.LeaveName)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Leave Requests</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    @if (Globals.MyLeave == false)
                    {
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <label class="form-label fw-bold mb-1">Employee</label>
                            <MudSelect T="int"
                                       @bind-Value="record.EmpId"
                                       Placeholder="Employee"
                                       Variant="Variant.Outlined"
                                       FullWidth="true"
                                       Class="flex-grow-1">
                                @if (Emp != null && Emp.Any())
                                {
                                    foreach (var i in Emp)
                                    {
                                        <MudSelectItem T="int" Value="@i.Id">@i.Fullname</MudSelectItem>
                                    }
                                }
                            </MudSelect>
                            <div class="validation-container" style="min-height: 22px;">
                                <ValidationMessage For="@(() => record.EmpId)" />
                            </div>
                        </div>
                    }

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Leave Type</label>
                        <MudSelect @bind-Value="record.LeaveTypeId"
                                   Placeholder="Leave Type"
                                   Variant="Variant.Outlined"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Lea != null && Lea.Any())
                            {
                                foreach (var i in Lea)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.LeaveName</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.LeaveTypeId)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Leave Period Panel -->
        <MudExpansionPanel Text="Leave Period" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-calendar-day"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Leave Period</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Leave start and end dates</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #2196F3; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">From</label>
                        <MudDatePicker @bind-Date="record.StartDate"
                                       DateFormat="yyyy-MM-dd"
                                       placeholder="From"
                                       ReadOnly="@isReadOnly"
                                       Variant="Variant.Outlined"
                                       Class="flex-grow-1"></MudDatePicker>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.StartDate)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">To</label>
                        <MudDatePicker @bind-Date="record.EndDate"
                                       DateFormat="yyyy-MM-dd"
                                       placeholder="To"
                                       ReadOnly="@isReadOnly"
                                       Variant="Variant.Outlined"
                                       Class="flex-grow-1"></MudDatePicker>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.EndDate)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Contact & Details Panel -->
        <MudExpansionPanel Text="Contact & Details" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-address-card"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Contact & Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Reason and contact information</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Reason</label>
                        <MudTextField id="Reason"
                                      @bind-Value="record.Reason"
                                      placeholder="Reason"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Reason)" />
                        </div>
                    </div>

                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Address</label>
                        <MudTextField id="ContactAddress"
                                      @bind-Value="record.ContactAddress"
                                      placeholder="Address"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.ContactAddress)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Mobile #</label>
                        <MudTextField id="ContactNumber"
                                      @bind-Value="record.ContactNumber"
                                      placeholder="Mobile #"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.ContactNumber)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Approval Details Panel (Conditional) -->
        @if (Globals.MyLeave == false)
        {
            <MudExpansionPanel Text="Approval Details" Style="margin-bottom:10px;">
                <TitleContent>
                    <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                        <i class="fa fa-check-circle"
                           style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                        </i>
                        <div class="ms-2">
                            <MudText Typo="Typo.h6" Class="fw-bold">Approval Details</MudText>
                            <MudText Typo="Typo.caption" Class="text-muted">Approval information and dates</MudText>
                        </div>
                    </div>
                    <hr style="height: 6px; border: none; background: #9C27B0; border-radius: 10px;" />
                </TitleContent>

                <ChildContent>
                    <div class="row" style="width:100%; display: flex;">
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <label class="form-label fw-bold mb-1">Approved By</label>
                            <MudSelect T="int?"
                                       @bind-Value="record.ApprovedBy"
                                       Placeholder="Approved By"
                                       Variant="Variant.Outlined"
                                       FullWidth="true"
                                       Class="flex-grow-1">
                                <MudSelectItem T="int?" Value="null">-- Select Approver --</MudSelectItem>
                                @if (EmpApproved != null && EmpApproved.Any())
                                {
                                    foreach (var i in EmpApproved)
                                    {
                                        <MudSelectItem T="int?" Value="@i.Id">@i.Fullname</MudSelectItem>
                                    }
                                }
                            </MudSelect>
                            <div class="validation-container" style="min-height: 22px;">
                                <ValidationMessage For="@(() => record.ApprovedBy)" />
                            </div>
                        </div>

                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <label class="form-label fw-bold mb-1">Approved Date</label>
                            <MudDatePicker @bind-Date="record.ApprovedDate"
                                           DateFormat="yyyy-MM-dd"
                                           placeholder="Approved Date"
                                           ReadOnly="@isReadOnly"
                                           Variant="Variant.Outlined"
                                           Class="flex-grow-1"></MudDatePicker>
                            <div class="validation-container" style="min-height: 22px;">
                                <ValidationMessage For="@(() => record.ApprovedDate)" />
                            </div>
                        </div>
                    </div>
                </ChildContent>
            </MudExpansionPanel>
        }

    </MudExpansionPanels>

</div>

@code
{
    LeaveRequestsModel record = new();
    List<OrganizationsModel> Org = new();
    List<EmployeesModel> Emp = new();
    List<EmployeesModel> EmpApproved = new();
    List<LeaveTypesModel> Lea = new();

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Emp = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();
        EmpApproved = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();
        Lea = await Functions.GetAsync<List<LeaveTypesModel>>($"LeaveTypes/Search", true) ?? new List<LeaveTypesModel>();

        if (Action == "INSERT")
        {
            record = new LeaveRequestsModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<LeaveRequestsModel>($"LeaveRequests/Get/{id}", true) ?? new LeaveRequestsModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {

        if (Emp != null && Emp.Any() && record.EmpId == 0)
            record.EmpId = Emp.First().Id;

        if (Lea != null && Lea.Any() && record.LeaveTypeId == 0)
            record.LeaveTypeId = Lea.First().Id;


        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new LeaveRequestsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        if (record.StartDate.HasValue && record.EndDate.HasValue && record.StartDate.Value >= record.EndDate.Value)
        {
            SnackbarService.Add("Start time must be earlier than end time.", Severity.Warning);
            return;
        }

        try
        {
            LoadingPanel = true;

            if(Globals.MyLeave == false)
            {
                record.Status = "APPROVED";
            }
            else
            {
                record.Status = "PENDING";
            }

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<LeaveRequestsModel>($"LeaveRequests/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;


        }


    }
}

