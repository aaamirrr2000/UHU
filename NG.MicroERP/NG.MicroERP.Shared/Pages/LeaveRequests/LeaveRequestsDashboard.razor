@page "/LeaveRequestsDashboard/{MyLeave?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h4" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.EventBusy" Class="me-2" Style="color: white;" />
                    @if (Globals.MyLeave == true)
                    {
                        <span>My Leave Requests</span>
                    }
                    else
                    {
                        <span>Leave Requests Management</span>
                    }
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Manage employee leave requests</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0">
                @if (Globals.AccessLevel == 1 && record.CreatedOn.Date == DateTime.Now.Date && (record.CreatedBy == Globals.User.Id || Globals.User.GroupId==1))
                {
                    <MudButton StartIcon="@Icons.Material.TwoTone.Add" 
                               Size="Size.Small" 
                               Variant="Variant.Filled" 
                               Color="Color.Success" 
                               Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                               OnClick="@(() => Clear())">
                        New
                    </MudButton>
                }
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    <MyDrawer @ref="_drawer" Title="Leave Requests" FaIcon="fas fa-umbrella-beach" >
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <LeaveRequestsPage Action="@Action" CurrentRecord="record.Id" OnSaved="ChildSaved"/>
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="LeaveRequestsModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="12"
                         Dense="true"
                         Striped="true"
                         Class="professional-grid elevation-8">

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 80px; min-width: 80px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(() => View(row.Item.Id))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View Details</span>
                                    </MudMenuItem>
                                    @if (Globals.AccessLevel == 1)
                                    {
                                        <MudMenuItem OnClick="@(() => Edit(row.Item.Id))"
                                                     Class="menu-item edit-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" />
                                            <span>Edit</span>
                                        </MudMenuItem>
                                        <MudMenuItem OnClick="@(() => Delete(row.Item.Id))"
                                                     Color="Color.Error"
                                                     Class="menu-item delete-item">
                                            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" />
                                            <span>Delete</span>
                                        </MudMenuItem>
                                    }
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    @if (!Globals.MyLeave)
                    {
                        <PropertyColumn Property="x => x.Fullname"
                                        Title="Employee"
                                        Sortable="true"
                                        Filterable="true"
                                        HeaderClass="grid-header"
                                        CellClass="grid-cell" />
                    }

                    <PropertyColumn Property="x => x.LeaveName"
                                    Title="Leave Type"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.StartDate"
                                    Title="Start Date"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="dd-MMM-yyyy"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.EndDate"
                                    Title="End Date"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="dd-MMM-yyyy"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Reason"
                                    Title="Reason"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ContactAddress"
                                    Title="Address"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ContactNumber"
                                    Title="Mobile #"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <TemplateColumn Title="Status"
                                    CellStyle="width: 90px; min-width: 90px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @{
                                var statusColor = row.Item.Status?.ToLower() switch
                                {
                                    "approved" => Color.Success,
                                    "pending" => Color.Warning,
                                    "rejected" => Color.Error,
                                    _ => Color.Default
                                };
                            }
                            <MudChip Color="@statusColor" Size="Size.Small" Variant="Variant.Filled">
                                @row.Item.Status
                            </MudChip>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.AppliedDate"
                                    Title="Applied Date"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="dd-MMM-yyyy"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ApprovedByName"
                                    Title="Approved By"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ApprovedDate"
                                    Title="Approved Date"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="dd-MMM-yyyy"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Remarks"
                                    Title="Remarks"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="LeaveRequestsModel" Class="grid-pager" />
                    </div>
                </PagerContent>
            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

<style>
    .dashboard-header {
        padding: 20px;
        background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 8px;
    }

    .dashboard-header .mud-typography {
        color: white !important;
    }

    .dashboard-header .text-muted {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    /* Dark mode adjustments */
    .mud-theme-dark .dashboard-header {
        background: linear-gradient(135deg, var(--mud-palette-primary-darken) 0%, var(--mud-palette-primary) 100%);
    }
</style>

@code
{
    List<LeaveRequestsModel> data = new();
    LeaveRequestsModel record = new();
    [Parameter] public string? MyLeave { get; set; } = "T";
    public string? Action { get; set; } = "INSERT";

    bool isReadOnly = true;
    
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "LeaveRequestsDashboard");
        //await GetAll();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (MyLeave == "T")
        {
            Globals.MyLeave = true;
        }
        else
        {
            Globals.MyLeave = false;
        }

        await GetAll();
    }

    protected async Task GetAll()
    {
        try
        {
            LoadingPanel = true;
            data = null;

            if (Globals.MyLeave == false)
            {
                data = await Functions.GetAsync<List<LeaveRequestsModel>>($"LeaveRequests/Search", true) ?? new List<LeaveRequestsModel>();
            }
            else
            {
                data = await Functions.GetAsync<List<LeaveRequestsModel>>($"LeaveRequests/Search/a.EmpId={Globals.User.EmpId}", true) ?? new List<LeaveRequestsModel>();
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading data: {ex.Message}", Severity.Error);
            data = new List<LeaveRequestsModel>();
        }
        finally
        {
            LoadingPanel = false;
            StateHasChanged();
        }
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<LeaveRequestsModel>($"LeaveRequests/Get/{id}", true) ?? new LeaveRequestsModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new LeaveRequestsModel();
        record.IsActive = 1;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE"; 
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async Task Save()
    {
        LoadingPanel = true;
         
        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Globals.ClientInfo;

        var result = await Functions.PostAsync<LeaveRequestsModel>($"LeaveRequests/{Action}", record, true);
        if (result.Success == true)
        {
            SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
        }
        else
        {
            SnackbarService.Add($"Record Not Deleted", Severity.Error);
        }
    
        await GetAll();
        LoadingPanel = false;
        await _drawer.CloseDrawerAsync();
     
    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }

}

