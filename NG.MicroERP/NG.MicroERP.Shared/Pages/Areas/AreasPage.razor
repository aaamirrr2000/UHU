@page "/AreasPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Text="Basic Details" Expanded="true" Class="mb-2">
            <TitleContent>
                <div class="d-flex align-items-center p-1 rounded" style="gap: 8px;">
                    <i class="fas fa-map-marker-alt"
                       style="display:inline-block; width:32px; height:32px; font-size:16px; line-height:32px; text-align:center; border-radius:4%; color: #667eea;">
                    </i>
                    <div>
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.AreaName) ? "NO NAME" : record.AreaName)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted" Style="font-size: 0.75rem;">Geographical area information</MudText>
                    </div>
                </div>
                <div style="height: 2px; background: #667eea; border-radius: 2px; margin: 4px 0;"></div>
            </TitleContent>

            <ChildContent>
                <div class="row mt-2">
                    <div class="col-12 col-md-8">
                        <div class="row">
                            <div class="col-12 mb-2">
                                <MudTextField id="AreaName"
                                              @bind-Value="record.AreaName"
                                              Label="Area Name"
                                              ReadOnly="@isReadOnly"
                                              Variant="Variant.Outlined"
                                              FullWidth="true"
                                              Margin="Margin.Dense">
                                </MudTextField>
                                <ValidationMessage For="@(() => record.AreaName)" />
                            </div>

                            <div class="col-12 col-md-6 mb-2">
                                <MudSelect T="string"
                                           @bind-Value="record.AreaType"
                                           Label="Type"
                                           Variant="Variant.Outlined"
                                           Clearable="true"
                                           FullWidth="true"
                                           Margin="Margin.Dense">

                                    @if (Are != null && Are.Any())
                                    {
                                        if (string.IsNullOrWhiteSpace(record.AreaType))
                                        {
                                            record.AreaType = Are.First().ListValue;
                                        }

                                        foreach (var i in Are)
                                        {
                                            <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                        }
                                    }
                                </MudSelect>
                                <ValidationMessage For="@(() => record.AreaType)" />
                            </div>

                            <div class="col-12 col-md-6 mb-2">
                                <MudSelect T="int"
                                           @bind-Value="record.IsActive"
                                           Label="Status"
                                           Variant="Variant.Outlined"
                                           Clearable="true"
                                           FullWidth="true"
                                           Margin="Margin.Dense">

                                    @if (record.IsActive != 0 && record.IsActive != 1)
                                    {
                                        record.IsActive = 1;
                                    }

                                    <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                                    <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                                </MudSelect>
                                <ValidationMessage For="@(() => record.IsActive)" />
                            </div>
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>
</div>

@code
{
    AreasModel record = new();
    List<OrganizationsModel> Org = new();
    List<TypeCodeModel> Are = null!;

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Are = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/AREA TYPE", true) ?? new List<TypeCodeModel>();

        if (Action == "INSERT")
        {
            record = new AreasModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action != "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action != "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<AreasModel>($"Areas/Get/{id}", true) ?? new AreasModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new AreasModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected void GetDefaultValues()
    {
        if (Org != null && Org.Any() && record.OrganizationId == 0)
            record.OrganizationId = Org.First().Id;

        StateHasChanged();
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<AreasModel>($"Areas/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");        
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}

