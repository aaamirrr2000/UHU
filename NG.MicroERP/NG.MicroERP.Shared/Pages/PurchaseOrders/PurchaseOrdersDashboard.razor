    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <div class="row">
            <MudDataGrid T="PurchaseOrdersModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="10"
                         Dense="true"
                         Striped="true"
                         Class="professional-grid elevation-8">

                <ToolBarContent>
                    <div class="grid-toolbar-wrapper">
                        <div class="grid-toolbar">
                            <div class="toolbar-left">
                                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="toolbar-icon" />
                                <MudText Typo="Typo.h6" Class="toolbar-title">
                                    Purchase Orders Management
                                </MudText>
                            </div>

                            <div class="toolbar-right">
                                @if (AccessLevel == 1)
                                {
                                    <MudButton StartIcon="@Icons.Material.TwoTone.Add"
                                               Size="MudBlazor.Size.Small"
                                               Variant="Variant.Filled"
                                               Color="Color.Success"
                                               Class="action-btn new-btn"
                                               OnClick="@(() => Clear())">
                                        New PO
                                    </MudButton>
                                }

                                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh"
                                           Size="MudBlazor.Size.Small"
                                           Variant="Variant.Filled"
                                           Color="Color.Info"
                                           Class="action-btn refresh-btn"
                                           OnClick="@(() => Refresh())">
                                    Refresh
                                </MudButton>
                            </div>
                        </div>
                    </div>
                </ToolBarContent>

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 120px; min-width: 120px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudIconButton Icon="@Icons.Material.Filled.Visibility"
                                               Size="Size.Small"
                                               OnClick="@(() => View(row.Item.Id))"
                                               Variant="Variant.Outlined"
                                               Color="Color.Secondary"
                                               Class="action-icon view-icon" />

                                @if (AccessLevel == 1)
                                {
                                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                                   Size="Size.Small"
                                                   OnClick="@(() => Edit(row.Item.Id))"
                                                   Variant="Variant.Outlined"
                                                   Color="Color.Primary"
                                                   Class="action-icon edit-icon" />

                                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                                   Size="Size.Small"
                                                   OnClick="@(() => Delete(row.Item.Id))"
                                                   Variant="Variant.Outlined"
                                                   Color="Color.Error"
                                                   Class="action-icon delete-icon" />
                                }
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.PONumber"
                                    Title="PO Number"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.PODate"
                                    Title="PO Date"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="dd-MMM-yyyy"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ExpectedDelivery"
                                    Title="Expected Delivery"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="dd-MMM-yyyy"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ReferenceNo"
                                    Title="Reference No"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                 @*    <TemplateColumn Title="Status"
                                    CellStyle="width: 90px; min-width: 90px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @{
                                var statusColor = row.Item.Status?.ToLower() switch
                                {
                                    "approved" or "completed" => Color.Success,
                                    "pending" or "draft" => Color.Warning,
                                    "cancelled" or "rejected" => Color.Error,
