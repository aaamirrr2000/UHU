                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Priority"
                                    CellStyle="width: 90px; min-width: 90px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @{
                                var priorityColor = row.Item.Priority?.ToLower() switch
                                {
                                    "high" => Color.Error,
                                    "medium" => Color.Warning,
                                    "low" => Color.Success,
                                    _ => Color.Default
                                };
                            }
                            <MudChip Color="@priorityColor" Size="Size.Small" Variant="Variant.Filled">
                                @row.Item.Priority
                            </MudChip>
                        </CellTemplate>
                    </TemplateColumn> *@

                    <PropertyColumn Property="x => x.PaymentTerms"
                                    Title="Payment Terms"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.DeliveryAddress"
                                    Title="Delivery Address"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Remarks"
                                    Title="Remarks"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="PurchaseOrdersModel" Class="grid-pager" />
                    </div>
                </PagerContent>

            </MudDataGrid>
        </div>
    }
</div>

@code
{
    List<PurchaseOrdersModel> data = new();
    PurchaseOrdersModel record = new();

    public string Action { get; set; } = "INSERT";
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();
    public int AccessLevel { get; set; } = 0;

    protected override async Task OnInitializedAsync()
    {
        AccessLevel = Globals.PageAccess(NavManager, "PurchaseOrdersDashboard");
        await GetAll();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        data = await Functions.GetAsync<List<PurchaseOrdersModel>>($"PurchaseOrders/Search", true) ?? new List<PurchaseOrdersModel>();
        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PurchaseOrdersModel>($"PurchaseOrders/Get?Id={id}", true) ?? new PurchaseOrdersModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        NavManager.NavigateTo("/PurchaseOrdersPage/INSERT/0");
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE"; 
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async Task Save()
    {
        LoadingPanel = true;
         
        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Functions.GetComputerDetails();
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Functions.GetComputerDetails();

        var result = await Functions.PostAsync<PurchaseOrdersModel>($"PurchaseOrders/{Action}", record, true);
        if (result.Success == true)
        {
            SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
        }
        else
        {
            SnackbarService.Add($"Record Not Deleted", Severity.Error);
            record = new();
        }
    
        await GetAll();
        LoadingPanel = false;
     
    }

    private async Task ChildSaved()
    {
        await GetAll();           
        await _drawer.CloseDrawerAsync();
        StateHasChanged(); 
    }

}

