    }
</style>

@code
{
    List<InventoryModel> AllData = new();
    List<InventoryModel> data = new();
    InventoryModel record = new();

    public string Action { get; set; } = "INSERT";
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();
    private string searchString = "";

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "InventoryDashboard");
        await GetAll();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        AllData = await Functions.GetAsync<List<InventoryModel>>($"Inventory/Search", true) ?? new List<InventoryModel>();
        data = AllData;
        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<InventoryModel>($"Inventory/Get/{id}", true) ?? new InventoryModel();
        LoadingPanel = false;
    }

    private void FilterData()
    {
        if (string.IsNullOrWhiteSpace(searchString))
        {
            data = AllData.ToList();
        }
        else
        {
            var search = searchString.ToLower();
            data = AllData.Where(x =>
                (x.LocationName?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.ItemCode?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.ItemName?.Contains(search, StringComparison.OrdinalIgnoreCase) == true) ||
                (x.StockCondition?.Contains(search, StringComparison.OrdinalIgnoreCase) == true)
            ).ToList();
        }

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new InventoryModel();
        record.StockCondition = "NEW";
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            LoadingPanel = true;
            var result = await Functions.PostAsync<InventoryModel>($"Inventory/{Action}", record, true);
            LoadingPanel = false;

            if (result.Success == false || result.Result == null)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                var res = result.Result;
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                await ChildSaved();
                
                await Get(res.Id);
                Action = "UPDATE";
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error saving Inventory: {ex.Message}", Severity.Error);
        }
    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }
}
