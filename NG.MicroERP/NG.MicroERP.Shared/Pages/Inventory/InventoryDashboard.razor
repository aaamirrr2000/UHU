        margin-bottom: 8px;
    }

    .inventory-header .mud-typography {
        color: white !important;
    }

    .inventory-header .text-muted {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    .inventory-search-field .mud-input-root {
        color: var(--mud-palette-text-primary) !important;
        border-radius: 28px !important;
        overflow: hidden !important;
    }

    .inventory-search-field .mud-input-root input {
        color: var(--mud-palette-text-primary) !important;
        border-radius: 28px !important;
        padding-left: 48px !important;
    }

    .inventory-search-field .mud-input-root::before {
        border-color: rgba(0,0,0,0.2) !important;
        border-radius: 28px !important;
    }

    .inventory-search-field .mud-input-root:hover::before {
        border-color: var(--mud-palette-primary) !important;
