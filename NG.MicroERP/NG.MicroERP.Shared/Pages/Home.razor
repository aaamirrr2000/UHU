@page "/Home"
@using NG.MicroERP.Shared.Services
@inject IFormFactor FormFactor
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary" style="font-size: 36px;">Welcome to NexGen Tech Studio</h1>
        <h3 class="text-secondary" style="font-size: 24px;">Micro ERP System - Project: <strong>Swift Serve</strong></h3>
    </div>

    <div class="row justify-content-center mb-5">
        
        <div class="col-md-5 text-center mb-3">
            <img src="_content/NG.MicroERP.Shared/images/webadmin.png" class="img-fluid fixed-height-img" alt="Web Admin Module" />
            <h5 class="mt-3 text-muted">Web Admin Dashboard</h5>
        </div>
        <div class="col-md-5 text-center mb-3">
            <img src="_content/NG.MicroERP.Shared/images/dinein.png" class="img-fluid fixed-height-img" alt="Dine-In Module" />
            <h5 class="mt-3 text-muted">Dine-In Mobile App</h5>
        </div>
    </div>

    <div class="text-center mt-4" style="font-size: 18px;">
        <p class="lead">
            You're using the system on a <strong>@factor</strong> device using <strong>@platform</strong> platform.
        </p>
        <p class="text-muted">
            Swift Serve empowers your business with real-time billing, inventory tracking, and sales performance tools.
        </p>
    </div>
</div>


@code {
    private string factor => FormFactor.GetFormFactor();
    private string platform => FormFactor.GetPlatform();
}

<style>
.fixed-height-img {
    height: 500px; 
    width: auto; 
    object-fit: contain; 
    margin-left: auto;
    margin-right: auto;
    border: 0px solid black; 
    border-radius: 5px;
    align-content: center;
    padding: 0; 
}
</style>