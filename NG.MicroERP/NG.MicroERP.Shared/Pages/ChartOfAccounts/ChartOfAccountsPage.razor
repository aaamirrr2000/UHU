@page "/ChartOfAccountsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton  OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton  Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

 <MudExpansionPanels MultiExpansion="true">
    
    <!-- Account Information Panel -->
    <MudExpansionPanel Text="Account Information" Expanded="true" Style="margin-bottom:10px;">
        <TitleContent>
            <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                <i class="fa fa-id-card"
                   style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                </i>
                <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.Name) ? "NO NAME" : record.Name)</MudText>
                    <MudText Typo="Typo.caption" Class="text-muted">Account identification details</MudText>
                </div>
            </div>
            <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
        </TitleContent>
        
        <ChildContent>
            <div class="row" style="width:100%; display: flex;">
                <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Code</label>
                    <MudTextField id="Code" 
                                  @bind-Value="record.Code" 
                                  placeholder="Code" 
                                  ReadOnly="@CodeYN"
                                  Variant="Variant.Outlined"
                                  FullWidth="true"
                                  Class="flex-grow-1"></MudTextField>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.Code)" />
                    </div>
                </div>
                
                <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Name</label>
                    <MudTextField id="Name" 
                                  @bind-Value="record.Name"  
                                  placeholder="Name" 
                                  ReadOnly="@isReadOnly"
                                  Variant="Variant.Outlined"
                                  FullWidth="true"
                                  Class="flex-grow-1"></MudTextField>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.Name)" />
                    </div>
                </div>
                
                <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Description</label>
                    <MudTextField id="Description" 
                                  @bind-Value="record.Description" 
                                  placeholder="Description" 
                                  ReadOnly="@isReadOnly"
                                  Variant="Variant.Outlined"
                                  FullWidth="true"
                                  Class="flex-grow-1"></MudTextField>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.Description)" />
                    </div>
                </div>
            </div>
        </ChildContent>
    </MudExpansionPanel>

    <!-- Account Classification Panel -->
    <MudExpansionPanel Text="Account Classification" Style="margin-bottom:10px;">
        <TitleContent>
            <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                <i class="fa fa-sitemap"
                   style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                </i>
                <div class="ms-2">
                    <MudText Typo="Typo.h6" Class="fw-bold">Account Classification</MudText>
                    <MudText Typo="Typo.caption" Class="text-muted">Account type and interface</MudText>
                </div>
            </div>
            <hr style="height: 6px; border: none; background: #2196F3; border-radius: 10px;" />
        </TitleContent>
        
        <ChildContent>
            <div class="row" style="width:100%; display: flex;">
                <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Nature</label>
                    <MudSelect T="string"
                               @bind-Value="record.Type"
                               Placeholder="Nature"
                               Variant="Variant.Outlined"
                               Clearable="true"
                               ReadOnly="true"
                               FullWidth="true"
                               Class="flex-grow-1">
                            <MudSelectItem T="string" Value="@("ASSET")">ASSET</MudSelectItem>
                            <MudSelectItem T =" string" Value="@("LIABILITY")">LIABILITY</MudSelectItem>
                            <MudSelectItem T=" string" Value="@("EXPENSE")">EXPENSE</MudSelectItem>
                            <MudSelectItem T=" string" Value="@("REVENUE")">REVENUE</MudSelectItem>
                            <MudSelectItem T=" string" Value="@("EQUITY")">EQUITY</MudSelectItem>
                    </MudSelect>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.Type)" />
                    </div>
                </div>
                
                <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Interface</label>
                    <MudSelect T="string"
                               @bind-Value="record.InterfaceType"
                               Placeholder="Interface Type"
                               Variant="Variant.Outlined"
                               Clearable="true"
                               FullWidth="true"
                               Class="flex-grow-1">
                        @if (Int != null && Int.Any())
                        {
                            if (string.IsNullOrWhiteSpace(record.InterfaceType))
                            {
                                record.InterfaceType = Int.First().ListValue;
                            }
                            foreach (var i in Int)
                            {
                                <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                            }
                        }
                    </MudSelect>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.InterfaceType)" />
                    </div>
                </div>
            </div>
        </ChildContent>
    </MudExpansionPanel>

    <!-- Account Hierarchy & Balance Panel -->
    <MudExpansionPanel Text="Hierarchy & Balance" Style="margin-bottom:10px;">
        <TitleContent>
            <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                <i class="fa fa-balance-scale"
                   style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                </i>
                <div class="ms-2">
                    <MudText Typo="Typo.h6" Class="fw-bold">Hierarchy & Balance</MudText>
                    <MudText Typo="Typo.caption" Class="text-muted">Account structure and opening balance</MudText>
                </div>
            </div>
            <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
        </TitleContent>
        
        <ChildContent>
            <div class="row" style="width:100%; display: flex;">
                <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Parent Account</label>
                    <MudSelect @bind-Value="record.ParentId"
                               Placeholder="Parent Account"
                               Variant="Variant.Outlined"
                               Clearable="true"
                               ReadOnly="true"
                               FullWidth="true"
                               Class="flex-grow-1">
                        @if (Par != null && Par.Any())
                        {
                            foreach (var i in Par)
                            {
                                <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                            }
                        }
                    </MudSelect>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.ParentId)" />
                    </div>
                </div>
                
                <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Opening Balance</label>
                    <MudNumericField @bind-Value="record.OpeningBalance"  
                                     placeholder="Opening Balance" 
                                     ReadOnly="@isReadOnly" 
                                     Format="#,##0.00"
                                     Variant="Variant.Outlined"
                                     FullWidth="true"
                                     Class="flex-grow-1"></MudNumericField>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.OpeningBalance)" />
                    </div>
                </div>
            </div>
        </ChildContent>
    </MudExpansionPanel>

    <!-- Status Panel -->
    <MudExpansionPanel Text="Status" Style="margin-bottom:10px;">
        <TitleContent>
            <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                <i class="fa fa-toggle-on"
                   style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                </i>
                <div class="ms-2">
                    <MudText Typo="Typo.h6" Class="fw-bold">Status</MudText>
                    <MudText Typo="Typo.caption" Class="text-muted">Account activation status</MudText>
                </div>
            </div>
            <hr style="height: 6px; border: none; background: #9C27B0; border-radius: 10px;" />
        </TitleContent>
        
        <ChildContent>
            <div class="row" style="width:100%; display: flex;">
                <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                    <label class="form-label fw-bold mb-1">Active</label>
                    <MudSelect T="int"
                               @bind-Value="record.IsActive"
                               Placeholder="Active"
                               Variant="Variant.Outlined"
                               Clearable="true"
                               FullWidth="true"
                               Class="flex-grow-1">
                        @if (record.IsActive != 0 && record.IsActive != 1)
                        {
                            record.IsActive = 1;
                        }
                        <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                        <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                    </MudSelect>
                    <div class="validation-container" style="min-height: 22px;">
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </div>
                </div>
            </div>
        </ChildContent>
    </MudExpansionPanel>

</MudExpansionPanels>

</div>

@code
{
    ChartOfAccountsModel record = new();
    List<OrganizationsModel> Org = new();
    List<TypeCodeModel> Int = null!;
    List<ChartOfAccountsModel> Par = new();

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    [Parameter] public Func<Task>? CloseDrawer { get; set; }
    private MyDrawer _drawer = new();
    public bool CodeYN { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Int = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/INTERFACE TYPE", true) ?? new List<TypeCodeModel>();
        Par = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search", true) ?? new List<ChartOfAccountsModel>();

        if (Action == "INSERT")
        {
            await Get(CurrentRecord);
            var atype = record.Type;
            var parent = record.Id;
            record = new ChartOfAccountsModel();
            record.Type = atype;
            record.ParentId = parent;
            record.IsActive = 1;
            isReadOnly = false;
            CodeYN = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
            CodeYN = true;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
            CodeYN = false;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<ChartOfAccountsModel>($"ChartOfAccounts/Get/{id}", true) ?? new ChartOfAccountsModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new ChartOfAccountsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected void GetDefaultValues()
    {

        if (Org != null && Org.Any() && record.OrganizationId == 0)
            record.OrganizationId = Org.First().Id;
        if (Par != null && Par.Any() && record.ParentId == 0)
            record.ParentId = Par.First().Id;


        StateHasChanged();
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<ChartOfAccountsModel>($"ChartOfAccounts/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;


        }
    }
}

