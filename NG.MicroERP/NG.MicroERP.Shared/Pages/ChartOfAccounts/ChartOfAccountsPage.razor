@page "/ChartOfAccountsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Account Information Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.AccountCircle" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Account Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Basic account details</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="Code"
                                      @bind-Value="record.Code"
                                      Placeholder="Enter account code"
                                      ReadOnly="@CodeYN"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Code)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Name"
                                      @bind-Value="record.Name"
                                      Placeholder="Enter account name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.Name)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudTextField Label="Description"
                                      @bind-Value="record.Description"
                                      Placeholder="Enter description"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Lines="3"
                                      FullWidth="true" />
                        <ValidationMessage For="@(() => record.Description)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Account Classification Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Category" 
                             Size="Size.Large" 
                             Color="Color.Info" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Account Classification</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Type and interface settings</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="string"
                                   Label="Nature"
                                   @bind-Value="record.Type"
                                   Placeholder="Select account nature"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="mb-3">
                            <MudSelectItem T="string" Value="@("ASSET")">ASSET</MudSelectItem>
                            <MudSelectItem T="string" Value="@("LIABILITY")">LIABILITY</MudSelectItem>
                            <MudSelectItem T="string" Value="@("EXPENSE")">EXPENSE</MudSelectItem>
                            <MudSelectItem T="string" Value="@("REVENUE")">REVENUE</MudSelectItem>
                            <MudSelectItem T="string" Value="@("EQUITY")">EQUITY</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.Type)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudSelect T="string"
                                   Label="Interface Type"
                                   @bind-Value="record.InterfaceType"
                                   Placeholder="Select interface type"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="mb-3">
                            @if (Int != null && Int.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.InterfaceType))
                                {
                                    record.InterfaceType = Int.First().ListValue;
                                }
                                foreach (var i in Int)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.InterfaceType)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Hierarchy & Balance Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.AccountTree" 
                             Size="Size.Large" 
                             Color="Color.Warning" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Hierarchy & Balance</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Parent account and opening balance</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="int"
                                   Label="Parent Account"
                                   @bind-Value="record.ParentId"
                                   Placeholder="Select parent account"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="mb-3">
                            @if (Par != null && Par.Any())
                            {
                                foreach (var i in Par)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@($"{i.Code} - {i.Name}")</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.ParentId)" />
                    </MudItem>

                    <MudItem xs="12">
                        <MudNumericField Label="Opening Balance"
                                         @bind-Value="record.OpeningBalance"
                                         Placeholder="0.00"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="true" />
                        <ValidationMessage For="@(() => record.OpeningBalance)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Status Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.ToggleOn" 
                             Size="Size.Large" 
                             Color="Color.Success" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Status</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Account activation status</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    ChartOfAccountsModel record = new();
    List<OrganizationsModel> Org = new();
    List<TypeCodeModel> Int = null!;
    List<ChartOfAccountsModel> Par = new();

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    [Parameter] public Func<Task>? CloseDrawer { get; set; }
    private MyDrawer _drawer = new();
    public bool CodeYN { get; set; } = true;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Int = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/INTERFACE TYPE", true) ?? new List<TypeCodeModel>();
        Par = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search", true) ?? new List<ChartOfAccountsModel>();

        if (Action == "INSERT")
        {
            await Get(CurrentRecord);
            var atype = record.Type;
            var parent = record.Id;
            record = new ChartOfAccountsModel();
            record.Type = atype;
            record.ParentId = parent;
            record.IsActive = 1;
            isReadOnly = false;
            CodeYN = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
            CodeYN = true;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
            CodeYN = false;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<ChartOfAccountsModel>($"ChartOfAccounts/Get/{id}", true) ?? new ChartOfAccountsModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new ChartOfAccountsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected void GetDefaultValues()
    {
        if (Org != null && Org.Any() && record.OrganizationId == 0)
            record.OrganizationId = Org.First().Id;
        if (Par != null && Par.Any() && record.ParentId == 0)
            record.ParentId = Par.First().Id;

        StateHasChanged();
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<ChartOfAccountsModel>($"ChartOfAccounts/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
                await GetAll();
                if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
