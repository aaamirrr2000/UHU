@page "/ForgotPasswordPage"
@layout BlankLayout
@inject NavigationManager Nav
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="login-page" style="background: url('_content/NG.MicroERP.Shared/images/background.jpg') no-repeat center center fixed; background-size: cover;">
    <div class="top-bar">
        <div class="clock-container">
            <div id="clock" class="clock"></div>
            <div id="date" class="date"></div>
        </div>
    </div>
    <div class="login-container">
        <div class="login-header">
            <h2 style="font-size:16px;letter-spacing:2px;">NexGen Tech Studios</h2>
            <p>Reset your password</p>
            <p style="font-size:12px;" class="expiry">AI Enabled</p>
        </div>
        <div class="login-form">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Enter your email address" @bind="@Email" style="color:gray;" />
            </div>
            <button type="button" class="btn btn-primary btn-block" @onclick="async () => await SendResetLink()">Change Password</button>

            <div class="forgot-password">
                <button type="button" class="btn btn-link" @onclick="BackToLogin" style="color: gray;">Back to Login</button>
            </div>
        </div>
    </div>
</div>

@code {
    public string? Email { get; set; } = string.Empty;
    private bool LoadingPanel { get; set; } = false;

    private async Task SendResetLink()
    {
        if (string.IsNullOrWhiteSpace(Email))
        {
            SnackbarService.Add("Please enter your email address.", Severity.Warning);
            return;
        }

        if (!IsValidEmail(Email))
        {
            SnackbarService.Add("Please enter a valid email address.", Severity.Warning);
            return;
        }

        try
        {
            LoadingPanel = true;

            var result = await Functions.GetAsync<UsersModel>($"Login/ForgotPassword/{Email}", false);

            LoadingPanel = false;

            if (result != null)
            {
                SnackbarService.Add("New Password sent to your email.", Severity.Success);
                Email = string.Empty;
                await Task.Delay(2000);
                BackToLogin();
            }
            else
            {
                SnackbarService.Add("Failed to send reset link. Please try again.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            Log.Error(ex, "Failed to send password reset email.");
            SnackbarService.Add("An error occurred while sending reset link.", Severity.Error);
        }
    }

    private bool IsValidEmail(string email)
    {
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private void BackToLogin()
    {
        Nav.NavigateTo("/");
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize clock and date if needed
            InitializeClock();
        }
    }

    private void InitializeClock()
    {
        // Add your clock initialization logic here if needed
        // This would be similar to what you have in your login page
    }
}

