@page "/ChangePasswordPage"
@inject NavigationManager Nav
@inject ISnackbar SnackbarService

<Loading IsLoading="@LoadingPanel" />

<div class="reset-page">
    <div class="reset-container animate__animated animate__fadeInDown">
        <div class="reset-header">
            <i class="fas fa-key fa-3x" style="color:#0078d7;"></i>
            <h2>Reset Your Password</h2>
            <p>Please enter and confirm your new password.</p>
        </div>

        <div class="reset-form">
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Existing Password" @bind="@ExistingPassword" />
            </div>
            <br />
            <div class="form-group">
                <input type="password" class="form-control" placeholder="New Password" @bind="@NewPassword" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Confirm Password" @bind="@ConfirmPassword" />
            </div>
            <button type="button" class="btn-primary" @onclick="async () => await ResetPassword()">Reset Password</button>
         
        </div>
    </div>
</div>

@code {
    public string? ExistingPassword { get; set; } = string.Empty;
    public string? NewPassword { get; set; } = string.Empty;
    public string? ConfirmPassword { get; set; } = string.Empty;
    private bool LoadingPanel { get; set; } = false;

    [Parameter, SupplyParameterFromQuery] public string? Token { get; set; }
    [Parameter, SupplyParameterFromQuery] public string? Email { get; set; }

    private async Task ResetPassword()
    {
        if (string.IsNullOrWhiteSpace(NewPassword))
        {
            SnackbarService.Add("Please enter a new password.", Severity.Warning);
            return;
        }

        if (NewPassword != ConfirmPassword)
        {
            SnackbarService.Add("Passwords do not match.", Severity.Warning);
            return;
        }

        if (ExistingPassword != Globals.User.Password)
        {
            SnackbarService.Add("Existing Passwords is incorrect.", Severity.Warning);
            return;
        }
       
        // if (!IsPasswordValid(NewPassword))
        // {
        //     SnackbarService.Add("Password must be at least 6 characters long.", Severity.Warning);
        //     return;
        // }

        try
        {
            LoadingPanel = true;

            var result = await Functions.GetAsync<UsersModel>($"Login/ChangePassword/{Globals.User.Id}/{NewPassword}", false);

            LoadingPanel = false;

            if (result != null)
            {
                SnackbarService.Add("New Password sent to your email.", Severity.Success);
                Email = string.Empty;
                BackToLogin();
            }
            else
            {
                SnackbarService.Add("Failed to send reset link. Please try again.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            Log.Error(ex, "Failed to reset password.");
            SnackbarService.Add("An error occurred while resetting password.", Severity.Error);
        }
    }

    private bool IsPasswordValid(string password)
        => !string.IsNullOrEmpty(password) && password.Length >= 6;

    private void BackToLogin() => Nav.NavigateTo("/");
}

