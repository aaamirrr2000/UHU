@page "/PettyCashDashboard"
@using NG.MicroERP.Shared.Models

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h5" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.AccountBalanceWallet" Class="me-2" Style="color: white;" />
                    Petty Cash Management
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Manage petty cash transactions and entries</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0 flex-wrap">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <MudDatePicker @bind-Date="startDate"
                                   @bind-Date:after="OnStartDateChanged"
                                   Label="Start Date"
                                   DateFormat="dd MMM yyyy"
                                   Variant="Variant.Outlined" />
                    <MudDatePicker @bind-Date="endDate"
                                   @bind-Date:after="OnEndDateChanged"
                                   Label="End Date"
                                   DateFormat="dd MMM yyyy"
                                   Variant="Variant.Outlined" />
                </div>
                @if (Globals.AccessLevel == 1)
                {
                    <MudButton StartIcon="@Icons.Material.TwoTone.Add"
                               Size="Size.Small"
                               Variant="Variant.Filled"
                               Color="Color.Success"
                               Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                               OnClick="@(() => Clear())">
                        New
                    </MudButton>
                }
                <MudButton StartIcon="@Icons.Material.TwoTone.Print" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => PrintSummary())">
                    Print
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    <MyDrawer @ref="_drawer" Title="Petty Cash" FaIcon="fas fa-money-bill-wave">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                    <PettyCashPage Action="@Action" CurrentRecord="record.Id" OnSaved="ChildSaved"/>
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="PettyCashModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="10"
                         Dense="true"
                         Striped="true"
                         Hover="true"
                         Class="professional-grid elevation-8">

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 80px; min-width: 80px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudMenu Icon="@Icons.Material.Filled.MoreVert"
                                         Color="Color.Primary"
                                         Dense="true"
                                         Class="actions-menu">
                                    <MudMenuItem OnClick="@(() => View(row.Item.Id))"
                                                 Class="menu-item view-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Visibility" Class="menu-icon" />
                                        <span>View</span>
                                    </MudMenuItem>
                                    @if (row.Item.IsPostedToGL == 1 && !string.IsNullOrWhiteSpace(row.Item.GLEntryNo))
                                    {
                                        <MudMenuItem OnClick="@(() => ViewGLEntry(row.Item.GLEntryNo))"
                                                     Class="menu-item gl-item">
                                            <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="menu-icon" />
                                            <span>View GL Entry: @row.Item.GLEntryNo</span>
                                        </MudMenuItem>
                                    }
                                    @if (row.Item.Source == "PETTY CASH")
                                    {
                                        @if (row.Item.IsPostedToGL == 0)
                                        {
                                            @if (Globals.AccessLevel == 1)
                                            {
                                                <MudMenuItem OnClick="@(() => Edit(row.Item.Id))"
                                                             Class="menu-item edit-item">
                                                    <MudIcon Icon="@Icons.Material.Filled.Edit" Class="menu-icon" />
                                                    <span>Edit</span>
                                                </MudMenuItem>
                                            
                                                <MudMenuItem OnClick="@(() => Delete(row.Item.Id))"
                                                Color="Color.Error"
                                                Class="menu-item delete-item">
                                                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="menu-icon" />
                                                    <span>Delete</span>
                                                </MudMenuItem>
                                                <hr />
                                            }
                                            @if (Globals.AccessLevel == 1)
                                            {
                                                <MudMenuItem OnClick="@(() => PostToGL(row.Item.Id))"
                                                             Class="menu-item post-item">
                                                    <MudIcon Icon="@Icons.Material.Filled.PostAdd" Class="menu-icon" />
                                                    <span>Post to General Ledger</span>
                                                </MudMenuItem>
                                            }
                                        }
                                        else
                                        {
                                            <MudMenuItem Disabled="true"
                                                         Class="menu-item disabled-item">
                                                <MudIcon Icon="@Icons.Material.Filled.Lock" Class="menu-icon" />
                                                <span>Posted to GL - Cannot Edit/Delete</span>
                                            </MudMenuItem>
                                        }
                                    }
                                    <hr />
                                    <MudMenuItem OnClick="@(() => Print(row.Item.Id))"
                                                 Class="menu-item print-item">
                                        <MudIcon Icon="@Icons.Material.Filled.Print" Class="menu-icon" />
                                        <span>Print</span>
                                    </MudMenuItem>
                                </MudMenu>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.SeqNo"
                                    Title="Seq No"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="80px" />

                    <PropertyColumn Property="x => x.TranDate"
                                    Title="Transaction Date"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Format="dd MMM yyyy"
                                    Width="120px" />

                    @if (Globals.User.GroupId == 1)
                    {
                        <PropertyColumn Property="x => x.LocationName"
                                        Title="Location"
                                        Sortable="true"
                                        Filterable="true"
                                        HeaderClass="grid-header"
                                        CellClass="grid-cell"
                                        Width="200px" />
                    }

                    <PropertyColumn Property="x => x.EmployeeName"
                                    Title="Employee"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="200px" />

                    <PropertyColumn Property="x => x.Description"
                                    Title="Description"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="200px" />

                    <TemplateColumn Title="Account"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="150px">
                        <CellTemplate>
                            @if (!string.IsNullOrWhiteSpace(context.Item.AccountName))
                            {
                                <MudChip Size="Size.Small" Color="Color.Info" Variant="Variant.Outlined">
                                    @context.Item.AccountName
                                </MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Transaction Type"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="120px">
                        <CellTemplate>
                            @if (context.Item.TranType?.ToUpper() == "RECEIPT")
                            {
                                <MudChip Size="Size.Small" Color="Color.Success" Variant="Variant.Filled">
                                    @context.Item.TranType
                                </MudChip>
                            }
                            else if (context.Item.TranType?.ToUpper() == "PAYMENT")
                            {
                                <MudChip Size="Size.Small" Color="Color.Error" Variant="Variant.Filled">
                                    @context.Item.TranType
                                </MudChip>
                            }
                            else
                            {
                                <MudChip Size="Size.Small" Color="Color.Default" Variant="Variant.Filled">
                                    @context.Item.TranType
                                </MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.PaymentMethod"
                                    Title="Payment Method"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="130px" />

                    <PropertyColumn Property="x => x.RefNo"
                                    Title="Reference #"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="120px" />

                    <TemplateColumn Title="Receipts"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell text-end"
                                    Width="120px">
                        <CellTemplate>
                            @if (context.Item.TranType?.ToUpper() == "RECEIPT")
                            {
                                <span class="text-success fw-bold">@Math.Abs((decimal)context.Item.Amount).ToString("N2")</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Payments"
                                    Sortable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell text-end"
                                    Width="120px">
                        <CellTemplate>
                            @if (context.Item.TranType?.ToUpper() == "PAYMENT")
                            {
                                <span class="text-danger fw-bold">@Math.Abs((decimal)context.Item.Amount).ToString("N2")</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Currency"
                                    Sortable="false"
                                    Filterable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell"
                                    Width="100px">
                        <CellTemplate>
                            @{
                                var currencyId = context.Item.EnteredCurrencyId > 0 ? context.Item.EnteredCurrencyId : context.Item.BaseCurrencyId;
                            }
                            @if (currencyId > 0)
                            {
                                <MudChip Size="Size.Small" Variant="Variant.Text" Color="Color.Info">
                                    @(GetCurrencyCode(currencyId))
                                </MudChip>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Rate"
                                    Sortable="false"
                                    Filterable="false"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell text-end"
                                    Width="100px">
                        <CellTemplate>
                            @if (context.Item.ExchangeRate != 1.0)
                            {
                                <span class="fw-semibold">@context.Item.ExchangeRate.ToString("N6")</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>

                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="PettyCashModel" Class="grid-pager" />
                    </div>
                </PagerContent>

            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

<style>
    .dashboard-header {
        padding: 20px;
        background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 8px;
    }

    .dashboard-header .mud-typography {
        color: white !important;
    }

    .dashboard-header .text-muted {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    /* Dark mode adjustments */
    .mud-theme-dark .dashboard-header {
        background: linear-gradient(135deg, var(--mud-palette-primary-darken) 0%, var(--mud-palette-primary) 100%);
    }
</style>

@code
{
    List<PettyCashModel> data = new();
    PettyCashModel record = new();
    List<CurrenciesModel> Currencies = new();

    public DateTime? startDate { get; set; } = DateTime.Today;
    public DateTime? endDate { get; set; } = DateTime.Today;

    public string? Action { get; set; } = "INSERT";

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "PettyCashDashboard");
        Currencies = await Functions.GetAsync<List<CurrenciesModel>>($"Currencies/Search", true) ?? new List<CurrenciesModel>();
        await GetAll();
    }

    private string GetCurrencyCode(int currencyId)
    {
        if (currencyId == 0) return "-";
        var currency = Currencies.FirstOrDefault(c => c.Id == currencyId);
        return currency?.Code ?? "-";
    }

    protected async Task PrintSummary()
    {
        NavManager.NavigateTo("/PettyCashSummary");
    }

    protected async Task GetAll()
    {
        try
        {
            if (!startDate.HasValue || !endDate.HasValue)
            {
                SnackbarService.Add("Please select both start and end dates.", Severity.Warning);
                return;
            }

            if (startDate > endDate)
            {
                SnackbarService.Add("Start date must be earlier than end date.", Severity.Warning);
                return;
            }

            // Format dates for SQL comparison - use CAST to ensure proper date comparison
            string formattedStartDate = startDate.Value.ToString("yyyy-MM-dd");
            // Add 1 day to end date to include the entire end date in the range
            string formattedEndDateNextDay = endDate.Value.Date.AddDays(1).ToString("yyyy-MM-dd");

            string Criteria = string.Empty;
            LoadingPanel = true;

            // Use CAST for explicit date type conversion as requested
            // Format: TranDate >= CAST('date' AS DATE) AND TranDate < CAST('date' AS DATE)
            Criteria = $"TranDate >= CAST('{formattedStartDate}' AS DATE) AND TranDate < CAST('{formattedEndDateNextDay}' AS DATE)";

            // Add location filter if needed
            if (Globals.User.GroupId != 1)
            {
                Criteria += $" AND LocationId = {Globals.User.LocationId}";
            }

            string encodedCriteria = Uri.EscapeDataString(Criteria);
            string apiUrl = $"PettyCash/Search/{encodedCriteria}";

            data = await Functions.GetAsync<List<PettyCashModel>>(apiUrl, true) ?? new List<PettyCashModel>();
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading data: {ex.Message}", Severity.Error);
            data = new List<PettyCashModel>();
        }
        finally
        {
            LoadingPanel = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PettyCashModel>($"PettyCash/Get/{id}", true) ?? new PettyCashModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PettyCashModel();
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE"; 
        // Make read-only if posted to GL
        isReadOnly = record.IsPostedToGL == 1;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected void Print(int id)
    {
        NavManager.NavigateTo($"/PettyCashReport/{id}");
    }

    protected async Task Save()
    {
        LoadingPanel = true;
         
        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Globals.ClientInfo;

        var result = await Functions.PostAsync<PettyCashModel>($"PettyCash/{Action}", record, true);
        if (result.Success == false)
        {
            SnackbarService.Add($"Record Not Deleted", Severity.Error);
        }
        else
        {
            SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
        }
    
        // Reload data with current date criteria instead of fetching all records
        await GetAll();
        LoadingPanel = false;
        await _drawer.CloseDrawerAsync();
    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }

    protected async Task PostToGL(int pettyCashId)
    {
        try
        {
            var res = await Functions.ShowConfirmation(dialogService, "Do you want to post this pettycash entry to General Ledger? Once posted, it cannot be edited or deleted.");
            if (res == false)
                return;

            LoadingPanel = true;
            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>(
                $"GeneralLedger/CreateGLFromPettyCash/{pettyCashId}?userId={Globals.User.Id}&clientInfo={Uri.EscapeDataString(Globals.ClientInfo)}", 
                null, 
                true);
            LoadingPanel = false;

            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                SnackbarService.Add("Pettycash entry posted to General Ledger successfully", Severity.Success);
                await GetAll();
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    protected void ViewGLEntry(string glEntryNo)
    {
        NavManager.NavigateTo($"/GeneralLedgerDashboard");
    }

    private async Task OnStartDateChanged()
    {
        // Debounce to avoid multiple calls during date selection
        await Task.Delay(300);
        if (startDate.HasValue && endDate.HasValue)
        {
            await GetAll();
        }
    }

    private async Task OnEndDateChanged()
    {
        // Debounce to avoid multiple calls during date selection
        await Task.Delay(300);
        if (startDate.HasValue && endDate.HasValue)
        {
            await GetAll();
        }
    }
}
