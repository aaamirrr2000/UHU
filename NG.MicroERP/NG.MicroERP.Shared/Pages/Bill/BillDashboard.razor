@page "/BillDashboard/{InvoiceType}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService

<Loading IsLoading="@LoadingPanel" />

<div class="row" style="margin: 2px; height: 90vh; display: flex;">

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <div class="row">
            <MudDataGrid T="BillModel" MultiSelection="false" Items="@data" SortMode="SortMode.Multiple" Filterable="true" Hideable="true" RowsPerPage="10" Dense="true">
                <ToolBarContent>
                    <MudText Typo="Typo.h6">Bill</MudText>
                    <MudSpacer />
                    <MudButton StartIcon="@Icons.Material.TwoTone.Add" Size="MudBlazor.Size.Small" Class="mx-1" Variant="Variant.Filled" Color="Color.Success" OnClick="@(() => Clear())">New</MudButton>
                    <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" Size="MudBlazor.Size.Small" Class="mx-1" Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => GetAll())">Refresh</MudButton>
                    <MudButton StartIcon="@Icons.Material.TwoTone.Search" Size="MudBlazor.Size.Small" Class="mx-1" Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(() => GetAll())">Search</MudButton>

                        <MudDateRangePicker @bind-DateRange="_dateRange"
                                        AutoClose="true"
                                        Variant="Variant.Text"
                                        Margin="Margin.Dense"
                                        DateFormat="dd.MMMM.yyyy"
                                        TitleDateFormat="dd MMMM"
                                        Modal="false"
                                        Style="width:320px;"
                                        PlaceholderStart="Start Date"
                                        PlaceholderEnd="End Date"
                                        MinDate=@(Globals.Organization.CreatedOn)
                                        MaxDate=@(Globals.Organization.Expiry)
                                        Class="mx-1" />
                </ToolBarContent>

                <Columns>
                    <TemplateColumn Title="Actions" CellStyle="width: 220px; min-width: 220px;">
                        <CellTemplate Context="row">
                            <MudIconButton Icon="@Icons.Material.TwoTone.Search" Size="MudBlazor.Size.Small" OnClick="@(() => View(row.Item.Id))" Variant="Variant.Filled" Color="Color.Secondary" />
                            <MudIconButton Icon="@Icons.Material.TwoTone.Edit" Size="MudBlazor.Size.Small" OnClick="@(() => Edit(row.Item.Id))" Variant="Variant.Filled" Color="Color.Primary" />
                            <MudIconButton Icon="@Icons.Material.TwoTone.DeleteSweep" Size="MudBlazor.Size.Small" OnClick="@(() => Delete(row.Item.Id))" Variant="Variant.Filled" Color="Color.Error" />
                            <MudIconButton Icon="@Icons.Material.TwoTone.Print" Size="MudBlazor.Size.Small" OnClick="@(() => Print(row.Item.Id))" Variant="Variant.Filled" Color="Color.Success" />
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.SeqNo" Title="Bill#" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.TranDate" Title="Transaction Date" Sortable="true" Filterable="true" Format="dd-MMM-yyyy" />
                    <PropertyColumn Property="x => x.BillType" Title="Bill Type" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.Source" Title="Source" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.PartyName" Title="Customer" Sortable="true" Filterable="true" />
                    <PropertyColumn Property="x => x.SubTotalAmount" Title="Sub Total" Sortable="true" Filterable="true" CellStyle="text-align: right;" />
                    <PropertyColumn Property="x => x.TotalServiceChargeAmount" Title="Charges" Sortable="true" Filterable="true" CellStyle="text-align: right;" />
                    <PropertyColumn Property="x => x.TotalTaxAmount" Title="Tax" Sortable="true" Filterable="true" CellStyle="text-align: right;" />
                    <PropertyColumn Property="x => x.TotalPaidAmount" Title="Payment" Sortable="true" Filterable="true" CellStyle="text-align: right;" />

                    <!-- Balance column either from model or computed here -->
                    <TemplateColumn Title="Balance" CellStyle="text-align: right;">
                        <CellTemplate Context="row">
                            @((row.Item.SubTotalAmount + row.Item.TotalServiceChargeAmount + row.Item.TotalTaxAmount - row.Item.TotalPaidAmount).ToString("N2"))
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Status" Title="Status" Sortable="true" Filterable="true" />
                </Columns>

                <PagerContent>
                    <MudDataGridPager T="BillModel" />
                </PagerContent>
            </MudDataGrid>

        </div>
    }
</div>

@code
{
	[Parameter] public string InvoiceType { get; set; } = "SALE";
    static List<BillModel> data = new();
    static BillModel record = new();

    public string Action { get; set; } = "INSERT";

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    private DateRange _dateRange { get; set; } = new DateRange(DateTime.Now.Date, DateTime.Now.AddDays(5).Date);

    private void OnValueChanged(PickerVariant variant)
    {
        _dateRange = null;
    }

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected async Task GetAll()
    {
        var formattedStartDate = _dateRange.Start?.ToString("yyyy-MM-dd") ?? string.Empty;
        var formattedEndDate = _dateRange.End?.ToString("yyyy-MM-dd") ?? string.Empty;


        string criteria = $" AND BillType LIKE '%{InvoiceType}%'";

        LoadingPanel = true;

        if (Globals.User.GroupId != 1)
        {
            criteria = $" AND LocationId = {Globals.User.LocationId}";
        }

        // Ensure proper SQL formatting and avoid unnecessary string interpolation
        if (!string.IsNullOrEmpty(formattedStartDate) && !string.IsNullOrEmpty(formattedEndDate))
        {
            criteria = $"CAST(TranDate AS DATE) >= '{formattedStartDate}' AND CAST(TranDate AS DATE) <= '{formattedEndDate}' {criteria}";
        }

        // Fetch data asynchronously with proper null handling
        data = await Functions.GetAsync<List<BillModel>>($"Bill/Search/{criteria}", true) ?? new List<BillModel>();

        LoadingPanel = false;

        await InvokeAsync(StateHasChanged);
    }


    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<BillModel>($"Bill/Get?Id={id}", true) ?? new BillModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        record = new BillModel();
        isReadOnly = false;
        NewBill("INSERT", 0, InvoiceType);
    }

    protected async Task Refresh()
    {
        data = await Functions.GetAsync<List<BillModel>>($"Bill/Search", true) ?? new List<BillModel>();
    }

    protected async Task View(int id)
    {
        await Get(id);
        isReadOnly = true;
        NewBill("VIEW", id, InvoiceType);
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        isReadOnly = false;
        NewBill("UPDATE", id, InvoiceType);
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async Task Print(int id)
    {
        var url = $"/BillReport/{id}";
        JSRuntime.InvokeVoidAsync("open", url, "_blank");
    }

    protected void NewBill(string Action, int Id, string invoiceType = "SALE")
    {
        var url = $"/BillPage/{invoiceType}/{Action}/{Id}";
        JSRuntime.InvokeVoidAsync("open", url, "_blank");
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Functions.GetComputerDetails();
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Functions.GetComputerDetails();

        var result = await Functions.PostAsync<BillModel>($"Bill/{Action}", record, true);
        if (result.Success == true)
        {
            SnackbarService.Add($"Record Not Deleted", Severity.Error);
        }
        else
        {
            SnackbarService.Add($"Record Deleted Successfully", Severity.Success);
            record = new();
            isReadOnly = true;
        }

        data = await Functions.GetAsync<List<BillModel>>($"Bill/Search", true) ?? new List<BillModel>();
        LoadingPanel = false;
        await _drawer.CloseDrawer();

    }

}

