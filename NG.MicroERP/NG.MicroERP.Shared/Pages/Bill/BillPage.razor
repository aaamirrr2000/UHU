    private async Task CalculateTotalNetAmountAsync()
    {
        // Step 1: Calculate Billed Amount (sum of bill details)
        TotalBilledDetailAmount = BillDetailTotal();

        // Step 2: Fetch charges from API using billed amount
        var billCharges = await Functions.GetAsync<List<BillChargeModel>>($"Bill/CalculateBillCharges/{TotalBilledDetailAmount}", true);
        record.BillCharges = new ObservableCollection<BillChargeModel>(billCharges ?? new List<BillChargeModel>());

        // Step 3: Calculate categorized totals
        TotalServiceCharges = record.BillCharges
            .Where(c => c.ChargeCategory == "SERVICE" && c.RuleType == "CHARGE")
            .Sum(c => c.CalculatedAmount);

        TotalTax = record.BillCharges
            .Where(c => c.ChargeCategory == "TAX" && c.RuleType == "CHARGE")
            .Sum(c => c.CalculatedAmount);

        record.Bill.DiscountAmount = record.BillCharges
            .Where(c => c.ChargeCategory == "DISCOUNT" && c.RuleType == "DISCOUNT")
            .Sum(c => c.CalculatedAmount);

        TotalPayment = record.BillPayments.Sum(c => c.AmountPaid);

        // Step 4: Calculate Total Net Amount after applying charges and discount
        TotalBilledAmount = TotalBilledDetailAmount + TotalServiceCharges + TotalTax - Convert.ToDecimal(record.Bill.DiscountAmount);
        TotalNetAmount = TotalBilledAmount - TotalPayment;

        StateHasChanged();
    }



