@page "/TaxMasterPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Basic Details Card -->
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Info" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Basic Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain TaxMaster</MudText>
                    </div>
                </div>
                <hr style="height: 3px; border: none; background: linear-gradient(90deg, var(--mud-palette-primary) 0%, var(--mud-palette-primary-lighten) 100%); border-radius: 10px; margin: 0 0 24px 0;" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        @if (isReadOnly)
                        {
                            <MudTextField Label="Account"
                                         T="string"
                                         Value="@(Acc.FirstOrDefault(a => a.Id == record.AccountId)?.Name ?? string.Empty)"
                                         ReadOnly="@true"
                                         Variant="Variant.Outlined"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        }
                        else
                        {
                            <label class="form-label fw-bold mb-1">Account</label>
                            <AutoComplete TItem="ChartOfAccountsModel"
                                          DataList="@Acc"
                                          DisplayProperty="@(p => p.Name)"
                                          IdProperty="@(p => p.Id)"
                                          @bind-SelectedId="record.AccountId"
                                          Variant="Variant.Outlined"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Tax Name"
                                     T="string"
                                     Value="@record.TaxName"
                                     ValueChanged="@((string v) => record.TaxName = v?.ToUpper())"
                                     Placeholder="Tax Name"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                        <ValidationMessage For="@(() => record.TaxName)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="string"
                                   Label="Tax Rate Type"
                                   @bind-Value="record.TaxType"
                                   Placeholder="Select Tax Type"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            <MudSelectItem Value="@("PERCENTAGE")">
                                <MudIcon Icon="@Icons.Material.Filled.Percent" Size="Size.Small" Class="me-2" />
                                Percentage
                            </MudSelectItem>
                            <MudSelectItem Value="@("FIXED")">
                                <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Size="Size.Small" Class="me-2" />
                                Fixed Amount
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.TaxType)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="string"
                                   Label="Tax Calculation Type"
                                   @bind-Value="record.TaxBaseType"
                                   Placeholder="Select Tax Base Type"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            <MudSelectItem Value="@("BASE_ONLY")">
                                <MudIcon Icon="@Icons.Material.Filled.Calculate" Size="Size.Small" Class="me-2" />
                                Base Amount Only
                            </MudSelectItem>
                            <MudSelectItem Value="@("BASE_PLUS_SELECTED")">
                                <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Small" Class="me-2" />
                                Base + Selected Taxes
                            </MudSelectItem>
                            <MudSelectItem Value="@("RUNNING_TOTAL")">
                                <MudIcon Icon="@Icons.Material.Filled.ShowChart" Size="Size.Small" Class="me-2" />
                                Running Total
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.TaxBaseType)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudNumericField T="double"
                                         Label="Rate"
                                         @bind-Value="record.Rate"
                                         Variant="Variant.Outlined"
                                         Placeholder="Rate"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        <ValidationMessage For="@(() => record.Rate)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Description"
                                     T="string"
                                     Value="@record.Description"
                                     ValueChanged="@((string v) => record.Description = v?.ToUpper())"
                                     Placeholder="Description"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Activation Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Is Active"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code
{
    TaxMasterModel record = new();
    List<ChartOfAccountsModel> Acc = new();

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "TaxMasterDashboard");
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"Account/Search", true) ?? new List<ChartOfAccountsModel>();

        if (Action == "INSERT")
        {
            record = new TaxMasterModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<TaxMasterModel>($"TaxMaster/Get/{id}", true) ?? new TaxMasterModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (Acc != null && Acc.Any() && record.AccountId == 0)
            record.AccountId = Acc.First().Id;

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new TaxMasterModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        var errors = new List<string>();
        if (string.IsNullOrWhiteSpace(record.TaxName))
            errors.Add("• Tax Name is required");

        if (errors.Count > 0)
        {
            SnackbarService.Add($"ERROR:\n{string.Join("\n", errors)}", Severity.Error);
            return;
        }

        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<TaxMasterModel>($"TaxMaster/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
