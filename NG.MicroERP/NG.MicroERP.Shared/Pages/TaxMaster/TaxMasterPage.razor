@page "/TaxMasterPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Text="Basic Details" Expanded=true Style="margin-bottom:10px;">

            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded shadow-sm" style="gap: 10px;">
                  
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold text-dark">@record.TaxType</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">@record.TaxType</MudText>
                    </div>
                </div>
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">

                   
                    <div class="col-6 mb-3">

                        <MudSelect T="string"
                                   @bind-Value="record.TaxType"
                                   Label="TaxType"
                                   Variant="Variant.Filled"
                                   Dense="true"
                                   Placeholder="TaxType"
                                   HelperText="Select TaxType"
                                   HelperTextOnFocus="true"
                                   Clearable="true">

                            @if (Tax != null && Tax.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.TaxType))
                                {
                                    record.TaxType = Tax.First().ListValue;
                                }

                                foreach (var i in Tax)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>

                        <ValidationMessage For="@(() => record.TaxType)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudTextField Label="Name/Label" @bind-Value="record.TaxName" Variant="Variant.Filled" placeholder="Tax Name" ReadOnly="@isReadOnly"></MudTextField>
                        <ValidationMessage For="@(() => record.TaxName)" />
                    </div>
                    <div class="col-6 mb-3">
                        <MudNumericField Label="TaxRate" @bind-Value="record.TaxRate" Variant="Variant.Filled" placeholder="TaxRate" ReadOnly="@isReadOnly" Format="#,##0.00"></MudNumericField>
                        <ValidationMessage For="@(() => record.TaxRate)" />
                    </div>
                    <div class="col-6 mb-3">

                        <MudSelect T="int"
                                   @bind-Value="record.IsActive"
                                   Label="Active"
                                   Variant="Variant.Filled"
                                   Dense="true"
                                   Placeholder="Active"
                                   HelperText="Select Active"
                                   HelperTextOnFocus="true"
                                   Clearable="true">

                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }

                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>

                        <ValidationMessage For="@(() => record.IsActive)" />
                    </div>

                </div>
            </ChildContent>

        </MudExpansionPanel>
    </MudExpansionPanels>

</div>

@code
{
    static TaxMasterModel record = new();
    List<OrganizationsModel> Org = new();
    List<TypeCodeModel> Inv = null!;
    List<TypeCodeModel> Tax = null!;


    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Inv = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/BILL TYPE", true) ?? new List<TypeCodeModel>();
        Tax = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/TAX TYPE", true) ?? new List<TypeCodeModel>();

        if (Action == "INSERT")
        {
            record = new TaxMasterModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action != "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action != "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<TaxMasterModel>($"TaxMaster/Get/{id}", true) ?? new TaxMasterModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async void Clear()
    {
        Action = "INSERT";
        record = new TaxMasterModel();
        record.IsActive = 1;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.OrganizationId = Globals.User.OrganizationId;
        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedFrom = Functions.GetComputerDetails();
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedFrom = Functions.GetComputerDetails();

        string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
        var result = await Functions.PostAsync<TaxMasterModel>($"TaxMaster/{url}", record, true);
        if (result.Success == false)
        {
            SnackbarService.Add($"Record Not Saved", Severity.Error);
        }
        else
        {
            SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
            record = new();
            isReadOnly = true;
        }

        LoadingPanel = false;
        await _drawer.CloseDrawerAsync();

    }
}

