@page "/OrganizationsDashboard"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject FileUploadService FileUploadService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h4" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.Business" Class="me-2" Style="color: white;" />
                    Organizations Management
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Manage organizational structure and hierarchy</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0">
                <MudButton StartIcon="@Icons.Material.TwoTone.Refresh" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => Refresh())">
                    Refresh
                </MudButton>
            </div>
        </div>
    </div>

    <MyDrawer @ref="_drawer" Title="ORGANIZATION" FaIcon="fa fa-building">
        <HeaderContent>
        </HeaderContent>
        <ChildContent>
            <EditForm Model="record" OnSubmit="Save">
                <MudForm>
                     <OrganizationsPage Action="@Action" CurrentRecord="record.Id" OnSaved="ChildSaved"/>
                </MudForm>
            </EditForm>
        </ChildContent>
        <FooterContent>
        </FooterContent>
    </MyDrawer>

    @if (data == null)
    {
        <SimpleLoading />
    }
    else
    {
        <MudPaper Elevation="3" Style="border-radius: 12px; overflow: hidden;">
            <MudDataGrid T="OrganizationsModel"
                         MultiSelection="false"
                         Items="@data"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         RowsPerPage="10"
                         Dense="true"
                         Striped="true"
                         Class="professional-grid elevation-8">

                <Columns>
                    <TemplateColumn Title="Actions"
                                    CellStyle="width: 80px; min-width: 80px;"
                                    HeaderClass="grid-header">
                        <CellTemplate Context="row">
                            <div class="actions-cell">
                                <MudButton StartIcon="@Icons.Material.Filled.Edit"
                                           Size="Size.Small"
                                           Variant="Variant.Outlined"
                                           Color="Color.Primary"
                                           Class="action-btn edit-btn"
                                           OnClick="@(() => Edit(row.Item.Id))">
                                    Edit
                                </MudButton>
                            </div>
                        </CellTemplate>
                    </TemplateColumn>

                    <TemplateColumn Title="Logo"
                                    CellStyle="width: 50px; min-width: 50px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            <img src="@(!string.IsNullOrWhiteSpace(row.Item.Logo) ? Globals.GetImageUrl(row.Item.Logo) : "images/no-image.png")"
                                 alt="Logo"
                                 style="width: 35px; height: 35px; border-radius: 50%; object-fit: cover; border: 1px solid #ddd;" />
                        </CellTemplate>
                    </TemplateColumn>

                    <PropertyColumn Property="x => x.Code"
                                    Title="Code"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Name"
                                    Title="Organization"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.ParentOrganizationName"
                                    Title="Parent Organization"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Phone"
                                    Title="Phone"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Email"
                                    Title="Email"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Industry"
                                    Title="Industry"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Website"
                                    Title="Website"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.TimeZone"
                                    Title="Time Zone"
                                    Sortable="true"
                                    Filterable="true"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <PropertyColumn Property="x => x.Expiry"
                                    Title="Expiry"
                                    Sortable="true"
                                    Filterable="true"
                                    Format="dd-MMM-yyyy"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell" />

                    <TemplateColumn Title="Type"
                                    CellStyle="width: 70px; min-width: 70px;"
                                    HeaderClass="grid-header"
                                    CellClass="grid-cell">
                        <CellTemplate Context="row">
                            @if (row.Item.ParentId == 0)
                            {
                                <MudChip Color="Color.Warning" Size="Size.Small" Variant="Variant.Filled">
                                    <MudIcon Icon="@Icons.Material.Filled.AutoFixHigh" Size="Size.Small" Class="me-1" />
                                    Parent
                                </MudChip>
                            }
                            else
                            {
                                <MudChip Color="Color.Info" Size="Size.Small" Variant="Variant.Outlined">Child</MudChip>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>

                <PagerContent>
                    <div class="pager-container">
                        <MudDataGridPager T="OrganizationsModel" Class="grid-pager" />
                    </div>
                </PagerContent>

            </MudDataGrid>
        </MudPaper>
    }
</MudContainer>

<style>
    .dashboard-header {
        padding: 20px;
        background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 8px;
    }

    .dashboard-header .mud-typography {
        color: white !important;
    }

    .dashboard-header .text-muted {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    /* Dark mode adjustments */
    .mud-theme-dark .dashboard-header {
        background: linear-gradient(135deg, var(--mud-palette-primary-darken) 0%, var(--mud-palette-primary) 100%);
    }
</style>

@code
{
    static List<OrganizationsModel> data = new();
    static OrganizationsModel record = new();

    public string? Action { get; set; } = "INSERT";
    

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "OrganizationsDashboard");
        await GetAll();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        data = await Functions.GetAsync<List<OrganizationsModel>>($"Organizations/Search", true) ?? new List<OrganizationsModel>();
        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<OrganizationsModel>($"Organizations/Get/{id}", true) ?? new OrganizationsModel();
        LoadingPanel = false;
    }

    protected async Task Refresh()
    {
        await GetAll();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new OrganizationsModel();
        record.IsActive = 1;
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
        StateHasChanged();
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Delete(int id)
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Get(id);
        await Save();
    }

    protected async Task Save()
    {
        LoadingPanel = true;

        record.CreatedBy = Globals.User.Id;
        record.CreatedOn = DateTime.Now;
        record.CreatedSource = Globals.ClientInfo;
        record.UpdatedBy = Globals.User.Id;
        record.UpdatedOn = DateTime.Now;
        record.UpdatedSource = Globals.ClientInfo;

        var result = await Functions.PostAsync<OrganizationsModel>($"Organizations/{Action}", record, true);
        if (result.Success == false)
        {
            SnackbarService.Add($"Record Not {Action.Replace("Soft", "")}", Severity.Error);
        }
        else
        {
            SnackbarService.Add($"Record {Action.Replace("Soft", "")} Successfully", Severity.Success);
            if (Action?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false) await Edit(result.Result!.Id);
        }
        
        data = await Functions.GetAsync<List<OrganizationsModel>>($"Organizations/Search", true) ?? new List<OrganizationsModel>();
        Globals.Organization = data.FirstOrDefault()!;
        LoadingPanel = false;
        await _drawer.CloseDrawerAsync();

    }

    protected async Task SetParent(int id)
    {
        await Get(id);
        record.ParentId = 0;
        isReadOnly = false;
        await Save();
    }

    private async Task OnFileInputChanged(InputFileChangeEventArgs e)
    {
        try
        {
            var result = await Functions.FileUpload(e, FileUploadService);

            if (result.Item1 == true)
            {
                record.Logo = result.Item2;
                SnackbarService.Add("File uploaded successfully!", Severity.Success);
            }
            else
            {
                SnackbarService.Add($"Error: {result.Item2}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Exception: {ex.Message}", Severity.Error);
            record.Logo = null;
        }
    }

    private async Task ChildSaved()
    {
        await GetAll();
        await _drawer.CloseDrawerAsync();
        StateHasChanged();
    }
}

