@page "/RosterPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW" && Globals.AccessLevel == 1)
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">

        <!-- Basic Mandatory Details Panel -->
        <MudExpansionPanel Text="Basic Details" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-check-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Basic Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Required mandatory information</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="EmployeesModel"
                                      DataList="@Emp"
                                      DisplayProperty="@(e => e.DisplayName ?? e.Fullname ?? "")"
                                      IdProperty="@(e => e.Id)"
                                      @bind-SelectedId="record.EmployeeId"
                                      Variant="Variant.Outlined"
                                      Label="Employee *"
                                      FullWidth="true"
                                      ReadOnly="@isReadOnly"
                                      Class="flex-grow-1" />
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.EmployeeId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="ShiftsModel"
                                      DataList="@Shifts"
                                      DisplayProperty="@(s => s.ShiftName ?? "")"
                                      IdProperty="@(s => s.Id)"
                                      @bind-SelectedId="record.ShiftId"
                                      Variant="Variant.Outlined"
                                      Label="Shift *"
                                      FullWidth="true"
                                      ReadOnly="@isReadOnly"
                                      Class="flex-grow-1" />
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.ShiftId)" />
                        </div>
                    </div>

                    @if (Action == "INSERT")
                    {
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudSelect T="string"
                                       Label="Period Type *"
                                       Value="@periodType"
                                       ValueChanged="@((string value) => { periodType = value; UpdateEndDate(); })"
                                       Variant="Variant.Outlined"
                                       Clearable="false"
                                       ReadOnly="@isReadOnly"
                                       FullWidth="true"
                                       Class="flex-grow-1">
                                <MudSelectItem Value=@("Day")>Day</MudSelectItem>
                                <MudSelectItem Value=@("Week")>Week</MudSelectItem>
                                <MudSelectItem Value=@("Month")>Month</MudSelectItem>
                            </MudSelect>
                            <div class="validation-container" style="min-height: 22px;">
                            </div>
                        </div>
                    }

                    @if (Action == "INSERT" && periodType == "Day")
                    {
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudDatePicker Date="@record.RosterDate"
                                           DateChanged="@((DateTime? value) => record.RosterDate = value ?? DateTime.Today)"
                                           DateFormat="dd MMM yyyy"
                                           placeholder="Roster Date"
                                           ReadOnly="@isReadOnly"
                                           Variant="Variant.Outlined"
                                           Label="Roster Date *"
                                           Class="flex-grow-1" />
                            <div class="validation-container" style="min-height: 22px;">
                                <ValidationMessage For="@(() => record.RosterDate)" />
                            </div>
                        </div>
                    }

                    @if (Action == "INSERT" && (periodType == "Week" || periodType == "Month"))
                    {
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudDatePicker Date="@startDate"
                                           DateChanged="@((DateTime? value) => { startDate = value ?? DateTime.Today; UpdateEndDate(); })"
                                           DateFormat="dd MMM yyyy"
                                           placeholder="Start Date"
                                           ReadOnly="@isReadOnly"
                                           Variant="Variant.Outlined"
                                           Label="Start Date *"
                                           Class="flex-grow-1" />
                            <div class="validation-container" style="min-height: 22px;">
                            </div>
                        </div>

                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudDatePicker Date="@endDate"
                                           DateChanged="@((DateTime? value) => endDate = value ?? DateTime.Today)"
                                           DateFormat="dd MMM yyyy"
                                           placeholder="End Date"
                                           ReadOnly="@isReadOnly"
                                           Variant="Variant.Outlined"
                                           Label="End Date *"
                                           Class="flex-grow-1" />
                            <div class="validation-container" style="min-height: 22px;">
                            </div>
                        </div>
                    }

                    @if (Action != "INSERT")
                    {
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <MudDatePicker Date="@record.RosterDate"
                                           DateChanged="@((DateTime? value) => record.RosterDate = value ?? DateTime.Today)"
                                           DateFormat="dd MMM yyyy"
                                           placeholder="Roster Date"
                                           ReadOnly="@isReadOnly"
                                           Variant="Variant.Outlined"
                                           Label="Roster Date *"
                                           Class="flex-grow-1" />
                            <div class="validation-container" style="min-height: 22px;">
                                <ValidationMessage For="@(() => record.RosterDate)" />
                            </div>
                        </div>
                    }

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <AutoComplete TItem="LocationsModel"
                                      DataList="@Loc"
                                      DisplayProperty="@(l => l.Name ?? "")"
                                      IdProperty="@(l => l.Id)"
                                      SelectedId="@(record.LocationId ?? 0)"
                                      SelectedIdChanged="@((int value) => record.LocationId = value > 0 ? value : null)"
                                      Variant="Variant.Outlined"
                                      Label="Location"
                                      FullWidth="true"
                                      ReadOnly="@isReadOnly"
                                      Class="flex-grow-1" />
                        <div class="validation-container" style="min-height: 22px;">
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Active</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Inactive</MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.IsActive)" />
                        </div>
                    </div>

                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <MudTextField Label="Notes"
                                      @bind-Value="record.Notes"
                                      placeholder="Enter any additional notes"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      Lines="4"
                                      FullWidth="true"
                                      Class="flex-grow-1" />
                        <div class="validation-container" style="min-height: 22px;">
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>
</div>

@code
{
    RosterModel record = new();
    List<EmployeesModel> Emp = new();
    List<ShiftsModel> Shifts = new();
    List<LocationsModel> Loc = new();

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private string periodType = "Day";
    private DateTime startDate = DateTime.Today;
    private DateTime endDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        Emp = await Functions.GetAsync<List<EmployeesModel>>($"Employees/Search", true) ?? new List<EmployeesModel>();
        Shifts = await Functions.GetAsync<List<ShiftsModel>>($"Shifts/Search", true) ?? new List<ShiftsModel>();
        Loc = await Functions.GetAsync<List<LocationsModel>>($"Locations/Search", true) ?? new List<LocationsModel>();

        if (Action == "INSERT")
        {
            record = new RosterModel();
            record.RosterDate = DateTime.Today;
            record.IsActive = 1;
            record.OrganizationId = Globals.User.OrganizationId;
            periodType = "Day";
            startDate = DateTime.Today;
            endDate = DateTime.Today;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<RosterModel>($"Roster/Get/{id}", true) ?? new RosterModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (record.OrganizationId == 0)
            record.OrganizationId = Globals.User.OrganizationId;

        StateHasChanged();
    }

    protected void UpdateEndDate()
    {
        if (periodType == "Week")
        {
            endDate = startDate.AddDays(6);
        }
        else if (periodType == "Month")
        {
            endDate = startDate.AddMonths(1).AddDays(-1);
        }
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new RosterModel();
        record.RosterDate = DateTime.Today;
        record.IsActive = 1;
        record.OrganizationId = Globals.User.OrganizationId;
        periodType = "Day";
        startDate = DateTime.Today;
        endDate = DateTime.Today;
        isReadOnly = false;
    }

    protected async Task View(int id)
    {
        await Get(id);
        Action = "VIEW";
        isReadOnly = true;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        if (record.EmployeeId == 0)
        {
            SnackbarService.Add("Please select an employee.", Severity.Warning);
            return;
        }

        if (record.ShiftId == 0)
        {
            SnackbarService.Add("Please select a shift.", Severity.Warning);
            return;
        }

        if (Action == "INSERT")
        {
            if (string.IsNullOrEmpty(periodType))
            {
                SnackbarService.Add("Please select a period type.", Severity.Warning);
                return;
            }

            if (periodType == "Week" || periodType == "Month")
            {
                if (endDate < startDate)
                {
                    SnackbarService.Add("End date cannot be before start date.", Severity.Warning);
                    return;
                }
            }
        }

        try
        {
            LoadingPanel = true;
            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            if (Action == "INSERT" && (periodType == "Week" || periodType == "Month"))
            {
                // Create multiple roster entries for date range
                int successCount = 0;
                int duplicateCount = 0;
                int errorCount = 0;
                List<string> errorMessages = new();

                DateTime currentDate = startDate;
                while (currentDate <= endDate)
                {
                    var rosterEntry = new RosterModel
                    {
                        OrganizationId = record.OrganizationId,
                        EmployeeId = record.EmployeeId,
                        ShiftId = record.ShiftId,
                        RosterDate = currentDate,
                        LocationId = record.LocationId,
                        Notes = record.Notes,
                        IsActive = record.IsActive,
                        CreatedBy = record.CreatedBy,
                        CreatedOn = record.CreatedOn,
                        CreatedFrom = record.CreatedFrom,
                        IsSoftDeleted = 0
                    };

                    var result = await Functions.PostAsync<RosterModel>($"Roster/Insert", rosterEntry, true);
                    if (result.Success)
                    {
                        successCount++;
                    }
                    else
                    {
                        if (result.Message.Contains("Duplicate", StringComparison.OrdinalIgnoreCase))
                        {
                            duplicateCount++;
                        }
                        else
                        {
                            errorCount++;
                            errorMessages.Add($"{currentDate:dd MMM yyyy}: {result.Message}");
                        }
                    }

                    currentDate = currentDate.AddDays(1);
                }

                await OnSaved.InvokeAsync();
                
                string message = $"Created {successCount} roster(s) successfully.";
                if (duplicateCount > 0)
                    message += $" {duplicateCount} duplicate(s) skipped.";
                if (errorCount > 0)
                    message += $" {errorCount} error(s) occurred.";

                if (errorCount > 0)
                {
                    SnackbarService.Add(message, Severity.Warning);
                    if (errorMessages.Any())
                    {
                        SnackbarService.Add($"Errors: {string.Join("; ", errorMessages.Take(3))}", Severity.Error);
                    }
                }
                else if (duplicateCount > 0)
                {
                    SnackbarService.Add(message, Severity.Info);
                }
                else
                {
                    SnackbarService.Add(message, Severity.Success);
                }

                await Clear();
            }
            else
            {
                // Single roster entry (Day or Update)
                if (Action == "INSERT" && periodType == "Day")
                {
                    record.RosterDate = record.RosterDate.Date;
                }

                string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
                var result = await Functions.PostAsync<RosterModel>($"Roster/{url}", record, true);
                if (result.Success == false)
                {
                    SnackbarService.Add($"Record Not Saved: {result.Message}", Severity.Error);
                }
                else
                {
                    await OnSaved.InvokeAsync();
                    SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                    if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                        await Edit(result.Result!.Id);
                    else
                    {
                        await Clear();
                    }
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
