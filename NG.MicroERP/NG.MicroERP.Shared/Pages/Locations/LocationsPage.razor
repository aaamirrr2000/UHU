@page "/LocationsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">

        <!-- Location Information Panel -->
        <MudExpansionPanel Text="Location Information" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-map-marker-alt"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.Name) ? "NO NAME" : record.Name)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Location basic information</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Code</label>
                        <MudTextField id="Code"
                                      @bind-Value="record.Code"
                                      placeholder="Code"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Code)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Name</label>
                        <MudTextField id="Name"
                                      @bind-Value="record.Name"
                                      placeholder="Name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Name)" />
                        </div>
                    </div>

                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Address</label>
                        <MudTextField id="Address"
                                      @bind-Value="record.Address"
                                      placeholder="Address"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Address)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Contact Person Panel -->
        <MudExpansionPanel Text="Contact Person" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-user-tie"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Contact Person</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Point of contact details</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #2196F3; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">POC Name</label>
                        <MudTextField id="PocName"
                                      @bind-Value="record.PocName"
                                      placeholder="POC Name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.PocName)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">POC Email</label>
                        <MudTextField id="PocEmail"
                                      @bind-Value="record.PocEmail"
                                      placeholder="POC Email"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.PocEmail)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">POC Phone</label>
                        <MudTextField id="PocPhone"
                                      @bind-Value="record.PocPhone"
                                      placeholder="POC Phone"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.PocPhone)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Location Type & Classification Panel -->
        <MudExpansionPanel Text="Location Type & Classification" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-sitemap"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Location Type & Classification</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Location type and categorization</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Location Type</label>
                        <MudSelect T="string"
                                   @bind-Value="record.LocationType"
                                   Placeholder="Location Type"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Loc != null && Loc.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.LocationType))
                                {
                                    record.LocationType = Loc.First().ListValue;
                                }
                                foreach (var i in Loc)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.LocationType)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Geolocation Settings Panel -->
        <MudExpansionPanel Text="Geolocation Settings" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-globe"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Geolocation Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Geographic coordinates and radius</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #9C27B0; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Latitude</label>
                        <MudTextField id="Latitude"
                                      @bind-Value="record.Latitude"
                                      placeholder="Latitude"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Latitude)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Longitude</label>
                        <MudTextField id="Longitude"
                                      @bind-Value="record.Longitude"
                                      placeholder="Longitude"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Longitude)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Radius</label>
                        <MudNumericField @bind-Value="record.Radius"
                                         placeholder="Radius"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Class="flex-grow-1"></MudNumericField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Radius)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Status Panel -->
        <MudExpansionPanel Text="Status" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-toggle-on"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Status</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Location activation status</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #F44336; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Active</label>
                        <MudSelect T="int"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Active"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.IsActive)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

    </MudExpansionPanels>
</div>

@code
{
    LocationsModel record = new();
    List<TypeCodeModel> Loc = null!;


    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {

        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Loc = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/LOCATION TYPE", true) ?? new List<TypeCodeModel>();


        if (Action == "INSERT")
        {
            record = new LocationsModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<LocationsModel>($"Locations/Get/{id}", true) ?? new LocationsModel();
        LoadingPanel = false;
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new LocationsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<LocationsModel>($"Locations/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;


        }


    }
}

