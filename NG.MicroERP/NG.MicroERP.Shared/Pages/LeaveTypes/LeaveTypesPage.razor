@page "/LeaveTypesPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW")
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

    <br />

    <MudExpansionPanels MultiExpansion="true">

        <!-- Leave Type Information Panel -->
        <MudExpansionPanel Text="Leave Type Information" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-calendar-alt"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">@(string.IsNullOrWhiteSpace(record.LeaveName) ? "NO NAME" : record.LeaveName)</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain Leave Types</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Leave Type Name</label>
                        <MudTextField id="LeaveName"
                                      @bind-Value="record.LeaveName"
                                      placeholder="Leave Type Name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.LeaveName)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Description</label>
                        <MudTextField id="Description"
                                      @bind-Value="record.Description"
                                      placeholder="Description"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Description)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Leave Policy Settings Panel -->
        <MudExpansionPanel Text="Leave Policy Settings" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-cogs"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Leave Policy Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Leave policy configuration</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #2196F3; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Max Days Per Year</label>
                        <MudNumericField @bind-Value="record.MaxDaysPerYear"
                                         placeholder="Max Days Per Year"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Class="flex-grow-1"></MudNumericField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.MaxDaysPerYear)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Carry Forward</label>
                        <MudSelect T="int"
                                   @bind-Value="record.CarryForward"
                                   Placeholder="Carry Forward"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.CarryForward != 0 && record.CarryForward != 1)
                            {
                                record.CarryForward = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.Forward" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Yes
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Block" Color="Color.Default" Size="Size.Small" Class="me-2" />
                                No
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.CarryForward)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Payment & Status Panel -->
        <MudExpansionPanel Text="Payment & Status" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-money-bill-wave"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Payment & Status</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Payment settings and activation status</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Is Paid Leave</label>
                        <MudSelect T="int"
                                   @bind-Value="record.IsPaid"
                                   Placeholder="Is Paid Leave"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.IsPaid != 0 && record.IsPaid != 1)
                            {
                                record.IsPaid = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.AttachMoney" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Yes
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.MoneyOff" Color="Color.Warning" Size="Size.Small" Class="me-2" />
                                No
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.IsPaid)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Active</label>
                        <MudSelect T="int"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Active"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Yes
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                No
                            </MudSelectItem>
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.IsActive)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

    </MudExpansionPanels>

</div>

@code
{
    LeaveTypesModel record = new();
    List<OrganizationsModel> Org = new();

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;

        if (Action == "INSERT")
        {
            record = new LeaveTypesModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<LeaveTypesModel>($"LeaveTypes/Get/{id}", true) ?? new LeaveTypesModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new LeaveTypesModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<LeaveTypesModel>($"LeaveTypes/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;


        }


    }
}

