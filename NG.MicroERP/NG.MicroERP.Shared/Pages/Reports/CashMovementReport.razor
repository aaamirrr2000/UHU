@page "/CashMovementReport"
@using NG.MicroERP.Shared.Models
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals
@inject IJSRuntime JSRuntime

<PageTitle>Cash Movement Report</PageTitle>
<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 2px;">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div>
                <MudText Typo="Typo.h5" Class="mb-0 fw-bold">
                    <MudIcon Icon="@Icons.Material.Filled.AccountBalanceWallet" Class="me-2" Style="color: white;" />
                    Cash Movement Report
                </MudText>
                <MudText Typo="Typo.body2" Class="text-muted mt-1" Style="color: rgba(255,255,255,0.85) !important;">Cash receipts and payments over time period</MudText>
            </div>
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0 flex-wrap">
                <div style="display: flex; align-items: center; gap: 8px;">
                    <MudDatePicker @bind-Date="startDate"
                                   Label="Start Date"
                                   DateFormat="dd MMM yyyy"
                                   Variant="Variant.Outlined"
                                   Style="background: rgba(255,255,255,0.95); width: 160px;" />
                    <MudDatePicker @bind-Date="endDate"
                                   Label="End Date"
                                   DateFormat="dd MMM yyyy"
                                   Variant="Variant.Outlined"
                                   Style="background: rgba(255,255,255,0.95); width: 160px;" />
                </div>
                @if (Globals.User.GroupId == 1)
                {
                    <MudSelect @bind-Value="selectedLocationId"
                               Label="Location"
                               Variant="Variant.Outlined"
                               Style="background: rgba(255,255,255,0.95); width: 200px;"
                               Clearable="true">
                        @foreach (var loc in Locations)
                        {
                            <MudSelectItem Value="@loc.Id">@loc.Name</MudSelectItem>
                        }
                    </MudSelect>
                }
                <MudButton StartIcon="@Icons.Material.TwoTone.Search" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Primary"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => LoadReport())">
                    Generate
                </MudButton>
                <MudButton StartIcon="@Icons.Material.TwoTone.Print" 
                           Size="Size.Small" 
                           Variant="Variant.Filled" 
                           Color="Color.Info"
                           Style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;"
                           OnClick="@(() => PrintReport())">
                    Print
                </MudButton>
            </div>
        </div>
    </div>

    @if (reportData != null && reportData.Any())
    {
        <MudPaper Elevation="3" Class="pa-4" Style="border-radius: 12px;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <MudText Typo="Typo.h6">Cash Movement Report</MudText>
                <MudText Typo="Typo.body2" Class="text-muted">
                    Period: @startDate.Value.ToString("dd MMM yyyy") - @endDate.Value.ToString("dd MMM yyyy")
                    @if (selectedLocationId.HasValue && selectedLocationId.Value > 0)
                    {
                        <span> | Location: @Locations.FirstOrDefault(l => l.Id == selectedLocationId.Value)?.Name</span>
                    }
                </MudText>
            </div>
            
            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <MudPaper Elevation="2" Class="pa-3 text-center" Style="background: linear-gradient(135deg, rgba(76, 175, 80, 0.1) 0%, rgba(76, 175, 80, 0.05) 100%); border-left: 4px solid #4CAF50;">
                        <MudText Typo="Typo.caption" Class="text-muted">Total Receipts</MudText>
                        <MudText Typo="Typo.h5" Class="fw-bold" Style="color: #4CAF50;">@totalReceipts.ToString("#,##0.00")</MudText>
                    </MudPaper>
                </div>
                <div class="col-md-4">
                    <MudPaper Elevation="2" Class="pa-3 text-center" Style="background: linear-gradient(135deg, rgba(244, 67, 54, 0.1) 0%, rgba(244, 67, 54, 0.05) 100%); border-left: 4px solid #F44336;">
                        <MudText Typo="Typo.caption" Class="text-muted">Total Payments</MudText>
                        <MudText Typo="Typo.h5" Class="fw-bold" Style="color: #F44336;">@totalPayments.ToString("#,##0.00")</MudText>
                    </MudPaper>
                </div>
                <div class="col-md-4">
                    <MudPaper Elevation="2" Class="pa-3 text-center" Style="background: linear-gradient(135deg, rgba(33, 150, 243, 0.1) 0%, rgba(33, 150, 243, 0.05) 100%); border-left: 4px solid #2196F3;">
                        <MudText Typo="Typo.caption" Class="text-muted">Net Cash Flow</MudText>
                        <MudText Typo="Typo.h5"
                                 Class="fw-bold"
                                 Color="@(netCashFlow >= 0 ? Color.Success : Color.Error)">
                            @netCashFlow.ToString("#,##0.00")
                        </MudText>

                    </MudPaper>
                </div>
            </div>
            
            <MudDataGrid T="CashMovementModel"
                         Items="@reportData"
                         SortMode="SortMode.Multiple"
                         Filterable="true"
                         Hideable="true"
                         Dense="true"
                         Striped="true"
                         Hover="true">
                <Columns>
                    <PropertyColumn Property="x => x.TranDate" Title="Date" Sortable="true" Format="dd-MMM-yyyy" />
                    <PropertyColumn Property="x => x.LocationName" Title="Location" Sortable="true" />
                    <PropertyColumn Property="x => x.Source" Title="Source" Sortable="true" />
                    <PropertyColumn Property="x => x.Description" Title="Description" Sortable="true" />
                    <PropertyColumn Property="x => x.Reference" Title="Reference" Sortable="true" />
                    <TemplateColumn Title="Receipts" Sortable="true" Filterable="false" CellClass="text-end">
                        <CellTemplate>
                            @if (context.Item.Receipts > 0)
                            {
                                <MudText Typo="Typo.body2" Class="fw-semibold" Style="color: #4CAF50;">
                                    @context.Item.Receipts.ToString("#,##0.00")
                                </MudText>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="Payments" Sortable="true" Filterable="false" CellClass="text-end">
                        <CellTemplate>
                            @if (context.Item.Payments > 0)
                            {
                                <MudText Typo="Typo.body2" Class="fw-semibold" Style="color: #F44336;">
                                    @context.Item.Payments.ToString("#,##0.00")
                                </MudText>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </CellTemplate>
                    </TemplateColumn>
                    <TemplateColumn Title="Balance" Sortable="true" Filterable="false" CellClass="text-end">
                        <CellTemplate>
                            <MudText Typo="Typo.body2"
                                     Class="fw-bold"
                                     Style="@(context.Item.Balance >= 0
                                                         ? "color:#4CAF50;"
                                                         : "color:#F44336;")">

                                @context.Item.Balance.ToString("#,##0.00")
                            </MudText>
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
            </MudDataGrid>
        </MudPaper>
    }
    else if (!LoadingPanel && startDate.HasValue && endDate.HasValue)
    {
        <MudPaper Elevation="2" Class="pa-6 text-center">
            <MudText Typo="Typo.body1">No cash movement data available for the selected period.</MudText>
        </MudPaper>
    }
</MudContainer>

<style>
    .dashboard-header {
        padding: 20px;
        background: linear-gradient(135deg, var(--mud-palette-primary-lighten) 0%, var(--mud-palette-primary) 100%);
        border-radius: 12px;
        color: white;
        margin-bottom: 8px;
    }
</style>

@code
{
    public DateTime? startDate { get; set; } = DateTime.Today.AddDays(-30);
    public DateTime? endDate { get; set; } = DateTime.Today;
    private int? selectedLocationId { get; set; }
    private bool LoadingPanel { get; set; } = false;
    private List<CashMovementModel> reportData = new();
    private List<LocationsModel> Locations = new();
    private decimal totalReceipts = 0;
    private decimal totalPayments = 0;
    private decimal netCashFlow = 0;

    protected override async Task OnInitializedAsync()
    {
        if (Globals.User.GroupId == 1)
        {
            Locations = await Functions.GetAsync<List<LocationsModel>>($"Locations/Search", true) ?? new List<LocationsModel>();
        }
        await LoadReport();
    }

    private async Task LoadReport()
    {
        if (!startDate.HasValue || !endDate.HasValue)
        {
            SnackbarService.Add("Please select both start and end dates", Severity.Warning);
            return;
        }

        if (startDate.Value > endDate.Value)
        {
            SnackbarService.Add("Start date cannot be after end date", Severity.Warning);
            return;
        }

        LoadingPanel = true;
        try
        {
            var startDateStr = startDate.Value.ToString("yyyy-MM-dd");
            var endDateStr = endDate.Value.ToString("yyyy-MM-dd");
            var locationParam = selectedLocationId.HasValue && selectedLocationId.Value > 0 ? $"?locationId={selectedLocationId.Value}" : "";
            
            reportData = await Functions.GetAsync<List<CashMovementModel>>(
                $"Reports/CashMovement/{Globals.User.OrganizationId}/{startDateStr}/{endDateStr}{locationParam}", 
                true) ?? new List<CashMovementModel>();
            
            // Calculate totals
            totalReceipts = reportData.Sum(x => x.Receipts);
            totalPayments = reportData.Sum(x => x.Payments);
            netCashFlow = totalReceipts - totalPayments;
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error loading report: {ex.Message}", Severity.Error);
            reportData = new List<CashMovementModel>();
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    private void PrintReport()
    {
        JSRuntime.InvokeVoidAsync("window.print");
    }
}
