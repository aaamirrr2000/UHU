@page "/GroupsPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Group Information Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Group" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Group Information</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Basic group details</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField Label="Group Name"
                                      @bind-Value="record.Name"
                                      Placeholder="Enter group name"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true"
                                      Required="@true" />
                        <ValidationMessage For="@(() => record.Name)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Dashboard Settings Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Dashboard" 
                             Size="Size.Large" 
                             Color="Color.Info" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Dashboard Settings</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Group dashboard configuration</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="string"
                                   Label="Home Page"
                                   @bind-Value="record.Dashboard"
                                   Placeholder="Select dashboard"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true">
                            @if (Dashboards != null && Dashboards.Any())
                            {
                                foreach (var i in Dashboards)
                                {
                                    <MudSelectItem T="string" Value="@i">@i</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <ValidationMessage For="@(() => record.Dashboard)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>

        <!-- Status Card -->
        <MudItem xs="12" md="6">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px; height: 100%;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.ToggleOn" 
                             Size="Size.Large" 
                             Color="Color.Success" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Status</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Group activation status</MudText>
                    </div>
                </div>
                <MudDivider Class="mb-4" />

                <MudGrid>
                    <MudItem xs="12">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Select status"
                                   Variant="Variant.Outlined"
                                   Clearable="false"
                                   ReadOnly="@isReadOnly"
                                   FullWidth="@true">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">Enable</MudSelectItem>
                            <MudSelectItem T="int" Value="0">Disable</MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .mud-paper {
        transition: box-shadow 0.3s ease;
    }

    .mud-paper:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
    }
</style>

@code
{
    GroupsModel record = new();
    List<OrganizationsModel> Org = new();
    private List<string>? Dashboards;

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();

    protected override async Task OnInitializedAsync()
    {
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Dashboards = Functions.GetFilesFromFolder();

        if (Action == "INSERT")
        {
            record = new GroupsModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<GroupsModel>($"Groups/Get/{id}", true) ?? new GroupsModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (Org != null && Org.Any() && record.OrganizationId == 0)
            record.OrganizationId = Org.First().Id;

        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new GroupsModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<GroupsModel>($"Groups/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"Record Not Saved", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
