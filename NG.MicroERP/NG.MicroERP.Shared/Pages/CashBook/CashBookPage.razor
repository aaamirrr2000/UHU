@page "/CashBookPage/{Action}/{CurrentRecord?}"

@using NG.MicroERP.Shared.Models
@using NG.MicroERP.Shared.Pages.Invoices
@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject FileUploadService FileUploadService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<div class="d-flex flex-column" style="margin: 5px; height: 80vh;">

    <div class="text-end" style="margin-top:10px;">
        @if (Action != "VIEW" && Globals.AccessLevel == 1)
        {
            <MudButton Variant="Variant.Filled" OnClick="Save" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px; width: 100px;">
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1" />
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            <!-- Preview GL Entry - Available before and after saving -->
            <MudButton Variant="Variant.Filled" OnClick="ShowGLPreview" Color="Color.Info" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;"
                       Disabled="@(record?.AccountId == 0 || record?.PartyId == 0 || record?.Amount == 0 || string.IsNullOrWhiteSpace(record?.TranType))">
                <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="mr-1" />
                @(CurrentRecord > 0 && record?.IsPostedToGL == 1 ? "View GL Entry" : "Preview GL Entry")
            </MudButton>

            @if (Action == "UPDATE" && record.IsPostedToGL == 0)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Delete" Class="px-2 py-2 mt-1 mr-2" Style="height:40px;">
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-1" />
                    Delete
                </MudButton>
            }
        }
    </div>

        <!-- Period Validation Warning -->
        @if (!string.IsNullOrWhiteSpace(PeriodValidationMessage))
        {
            <MudAlert Severity="Severity.Warning" Class="mb-2" Variant="Variant.Outlined" Dense="true">
                <MudText Typo="Typo.body2">@PeriodValidationMessage</MudText>
            </MudAlert>
        }
        else if (PeriodValidationChecked && record?.TranDate != null && record.OrganizationId > 0)
        {
            <MudAlert Severity="Severity.Success" Class="mb-2" Variant="Variant.Outlined" Dense="true">
                <MudText Typo="Typo.body2">✓ Period is OPEN - You can save transactions for this date.</MudText>
            </MudAlert>
        }

    <br />

    <MudExpansionPanels MultiExpansion="true">

        <!-- Basic Mandatory Details Panel -->
        <MudExpansionPanel Text="Basic Details" Expanded="true" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-check-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Basic Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Required mandatory information</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #4CAF50; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Transaction Type <span style='color:red;'>*</span></label>
                        <MudSelect T="string"
                                   @bind-Value="record.TranType"
                                   Placeholder="Transaction Type"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1"
                                   @bind-Value:after="OnTransactionTypeChanged">
                            @if (Tra != null && Tra.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.TranType))
                                {
                                    record.TranType = Tra.First().ListValue;
                                }
                                foreach (var i in Tra)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.TranType)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Transaction Date <span style='color:red;'>*</span></label>
                        <MudDatePicker @bind-Date="record.TranDate"
                                       @bind-Date:after="OnTranDateChanged"
                                       DateFormat="dd MMM yyyy"
                                       placeholder="Transaction Date"
                                       ReadOnly="@isReadOnly"
                                       Variant="Variant.Outlined"
                                       Class="flex-grow-1"></MudDatePicker>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.TranDate)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Amount <span style='color:red;'>*</span></label>
                        <MudNumericField @bind-Value="record.Amount"
                                         placeholder="Amount"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         Variant="Variant.Outlined"
                                         FullWidth="true"
                                         Class="flex-grow-1"></MudNumericField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Amount)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Location <span style='color:red;'>*</span></label>
                        @if (Globals.User.GroupId == 1)
                        {
                            <AutoComplete TItem="LocationsModel"
                                          DataList="@Loc"
                                          DisplayProperty="@(p => p.Name)"
                                          IdProperty="@(p => p.Id)"
                                          @bind-SelectedId="record.LocationId"
                                          Variant="Variant.Outlined"
                                          Label=""
                                          FullWidth="true" />
                        }
                        else
                        {
                            <MudTextField Value="@(Loc.FirstOrDefault(l => l.Id == record.LocationId)?.Name ?? "")"
                                          Variant="Variant.Outlined"
                                          ReadOnly="true"
                                          FullWidth="true" />
                        }
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.LocationId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Account <span style='color:red;'>*</span></label>
                        <MudSelect @bind-Value="record.AccountId"
                                   @key="record.AccountId"
                                   Placeholder="@filterCOA.Replace("'", "").Replace("InterfaceType=", "")"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (Acc != null && Acc.Any())
                            {
                                foreach (var i in Acc)
                                {
                                    <MudSelectItem T="int" Value="@i.Id">@i.Name</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.AccountId)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Payment Method <span style='color:red;'>*</span></label>
                        <MudSelect T="string"
                                   @bind-Value="record.PaymentMethod"
                                   Placeholder="Payment Method"
                                   Variant="Variant.Outlined"
                                   Clearable="true"
                                   FullWidth="true"
                                   Class="flex-grow-1">
                            @if (pm != null && pm.Any())
                            {
                                if (string.IsNullOrWhiteSpace(record.PaymentMethod))
                                {
                                    record.PaymentMethod = pm.First().ListValue;
                                }
                                foreach (var i in pm)
                                {
                                    <MudSelectItem T="string" Value="@i.ListValue">@i.ListValue</MudSelectItem>
                                }
                            }
                        </MudSelect>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.PaymentMethod)" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">@GetPartyLabel()</label>
                        <AutoComplete TItem="PartiesModel"
                                      DataList="@Par"
                                      DisplayProperty="@(p => p.DisplayName)"
                                      IdProperty="@(p => p.Id)"
                                      @bind-SelectedId="record.PartyId"
                                      Variant="Variant.Outlined"
                                      Label=""
                                      FullWidth="true"
                                      @bind-SelectedId:after="OnPartyChanged" />
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.PartyId)" />
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>

        <!-- Additional Details Panel -->
        <MudExpansionPanel Text="Additional Details" Style="margin-bottom:10px;">
            <TitleContent>
                <div class="d-flex align-items-center p-2 rounded" style="gap: 10px;">
                    <i class="fa fa-info-circle"
                       style="display:inline-block; width:40px; height:40px; font-size:24px; line-height:40px; text-align:center; border-radius:5%;">
                    </i>
                    <div class="ms-2">
                        <MudText Typo="Typo.h6" Class="fw-bold">Additional Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Optional transaction information</MudText>
                    </div>
                </div>
                <hr style="height: 6px; border: none; background: #FF9800; border-radius: 10px;" />
            </TitleContent>

            <ChildContent>
                <!-- Transaction Information Group -->
                <h5 class="fw-bold mt-3 mb-3" style="color: var(--mud-palette-primary); border-bottom: 2px solid var(--mud-palette-primary); padding-bottom: 8px;">
                    <i class="fa fa-exchange-alt me-2"></i>Transaction Information
                </h5>
                <div class="row" style="width:100%; display: flex;">
                    @if (record.TranType == "RECEIPT" || record.TranType == "PAYMENT")
                    {
                        <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                            <label class="form-label fw-bold mb-1">Invoice Reference (Optional)</label>
                            <AutoComplete TItem="InvoicesAllModel"
                                          DataList="@Invoices"
                                          DisplayProperty="@(i => $"{i.Code} - {i.PartyName} - {i.BillAmount:N2}")"
                                          IdProperty="@(i => i.ID)"
                                          SelectedId="selectedInvoiceId"
                                          SelectedIdChanged="OnInvoiceIdChanged"
                                          Variant="Variant.Outlined"
                                          Label=""
                                          FullWidth="true" />
                            <div class="validation-container" style="min-height: 22px;">
                            </div>
                        </div>
                    }
                    <div class="col-12 col-md-6 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Transaction #</label>
                        <MudTextField id="SeqNo"
                                      @bind-Value="record.SeqNo"
                                      placeholder="Transaction #"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.SeqNo)" />
                        </div>
                    </div>

                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">Description</label>
                        <MudTextField id="Description"
                                      @bind-Value="record.Description"
                                      placeholder="Description"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Class="flex-grow-1"></MudTextField>
                        <div class="validation-container" style="min-height: 22px;">
                            <ValidationMessage For="@(() => record.Description)" />
                        </div>
                    </div>
                </div>

                <!-- Attachments Group -->
                <h5 class="fw-bold mt-4 mb-3" style="color: var(--mud-palette-primary); border-bottom: 2px solid var(--mud-palette-primary); padding-bottom: 8px;">
                    <i class="fa fa-paperclip me-2"></i>Document Attachment
                </h5>
                <div class="row" style="width:100%; display: flex;">
                    <div class="col-12 mb-3 d-flex flex-column" style="height: 95px;">
                        <label class="form-label fw-bold mb-1">@(record.TranType == "RECEIPT" || record.TranType == "PAYMENT" ? "Invoice/Document Attachment (Optional)" : "Document Attachment (Optional)")</label>
                        <div class="mt-2 flex-grow-1">
                            @if (!isReadOnly)
                            {
                                <InputFile class="form-control" OnChange="OnFileInputChanged" />
                            }
                            @if (!string.IsNullOrWhiteSpace(record.FileAttachment))
                            {
                                <a href="@record.FileAttachment" download class="btn btn-link" style="font-size: 12px; margin-top: 5px;">
                                    <i class="fas fa-download me-1"></i>@record.FileAttachment
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>

</div>

@code
{
    CashBookModel record = new();
    List<LocationsModel> Loc = new();
    List<PartiesModel> Par = new();
    List<ChartOfAccountsModel> Acc = new();
    List<TypeCodeModel> Tra = null!;
    List<TypeCodeModel> pm = null!;
    List<InvoicesAllModel> Invoices = new();
    int selectedInvoiceId = 0;

    public bool isReportVisible { get; set; } = false;
    public int Report_id { get; set; }
    public string? filterCOA { get; set; } = string.Empty;
    public string? filterParties { get; set; } = string.Empty;

    [Parameter] public string? Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;
    private MyDrawer _drawer = new();
    private string PeriodValidationMessage { get; set; } = string.Empty;
    private bool PeriodValidationChecked { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "CashBookDashboard");
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Loc = await Functions.GetAsync<List<LocationsModel>>($"Locations/Search", true) ?? new List<LocationsModel>();
        Tra = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/CASHBOOK TRAN TYPE", true) ?? new List<TypeCodeModel>();
        pm = await Functions.GetAsync<List<TypeCodeModel>>($"TypeCode/Search/PAYMENT METHOD", true) ?? new List<TypeCodeModel>();
        Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search", true) ?? new List<PartiesModel>();

        if (Action == "INSERT")
        {
            Clear();
            GetDefaultValues();
            isReadOnly = false;
            await ValidatePeriodAsync();
        }
        else
        {
            await Get(CurrentRecord);
        }

        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        if (Acc != null && Acc.Any() && record.AccountId == 0)
        {
            record.AccountId = Acc.First().Id;
        }

        if (Par != null && Par.Any() && record.PartyId == 0)
        {
            record.PartyId = Par.First().Id;
        }

        StateHasChanged();
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<CashBookModel>($"CashBook/Get/{id}", true) ?? new CashBookModel();
        // Lock location for non-admin users
        if (Globals.User.GroupId != 1 && record.LocationId != Globals.User.LocationId)
        {
            record.LocationId = Globals.User.LocationId;
        }
        selectedInvoiceId = 0; // Reset invoice selection when loading existing record
        await OnTransactionTypeChanged();
        // Set read-only if posted to GL
        isReadOnly = record.IsPostedToGL == 1;
        await ValidatePeriodAsync();
        LoadingPanel = false;
    }

    protected async void Clear()
    {
        Action = "INSERT";
        record = new CashBookModel();
        isReadOnly = false;
        record.TranType = "RECEIPT";
        record.LocationId = Globals.User.LocationId;
        record.TranDate = DateTime.Now;
        selectedInvoiceId = 0;
        await OnTransactionTypeChanged();
        await _drawer.OpenDrawerAsync();
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        if (record.IsPostedToGL == 1)
        {
            SnackbarService.Add("This entry has been posted to General Ledger and cannot be edited.", Severity.Warning);
            isReadOnly = true;
            return;
        }
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action![0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<CashBookModel>($"CashBook/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message ?? "Record Not Saved"}", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    Clear();
                }
            }
        }
        catch (Exception ex)
        {
            Log.Warning($"Error: {ex.Message}");
        }
        finally
        {
            LoadingPanel = false;
        }
    }

    protected void Print()
    {
        var url = $"/CashBookReport/{record.Id}";
        NavManager.NavigateTo(url);
    }

    private async Task OnFileInputChanged(InputFileChangeEventArgs e)
    {
        try
        {
            var result = await Functions.FileUpload(e, FileUploadService, 25);

            if (result.Item1 == true)
            {
                record.FileAttachment = result.Item2;
                string message = (record.TranType == "RECEIPT" || record.TranType == "PAYMENT") 
                    ? "Invoice/Document uploaded successfully" 
                    : "Document uploaded successfully";
                SnackbarService.Add(message, Severity.Success);
            }
            else
            {
                SnackbarService.Add($"Error: {result.Item2}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"Exception: {ex.Message}", Severity.Error);
            record.FileAttachment = null;
        }
    }

    private async Task OnTransactionTypeChanged()
    {
        LoadingPanel = true;

        switch (record.TranType)
        {
            case "RECEIPT":
                filterCOA = "(InterfaceType='REVENUE' OR InterfaceType='ACCOUNTS RECEIVABLE')";
                filterParties = "a.partytype='Customer'";
                await LoadInvoices("SALE");
                break;

            case "PAYMENT":
                filterCOA = "(InterfaceType='EXPENSE' OR InterfaceType='ACCOUNTS PAYABLE')";
                filterParties = "a.partytype='Supplier'";
                await LoadInvoices("PURCHASE");
                break;

            default:
                filterCOA = "InterfaceType='Bank'";
                filterParties = "a.partytype='Bank'";
                Invoices = new List<InvoicesAllModel>();
                selectedInvoiceId = 0;
                break;
        }

        Acc = await Functions.GetAsync<List<ChartOfAccountsModel>>($"ChartOfAccounts/Search/{filterCOA.ToUpper()}", true) ?? new List<ChartOfAccountsModel>();
        Par = await Functions.GetAsync<List<PartiesModel>>($"Parties/Search/{filterParties.ToUpper()}", true) ?? new List<PartiesModel>();

        LoadingPanel = false;
    }

    private async Task LoadInvoices(string invoiceType)
    {
        try
        {
            // Load invoices based on type and filter by balance > 0 (unpaid invoices)
            // BalanceAmount is a calculated field in the SQL query, so we can use it directly
            string filter = $"InvoiceType='{invoiceType}' AND BalanceAmount > 0";
            
            if (record.PartyId > 0)
            {
                filter += $" AND PartyId={record.PartyId}";
            }

            // Filter by location if set
            if (record.LocationId > 0)
            {
                filter += $" AND LocationId={record.LocationId}";
            }

            Invoices = await Functions.GetAsync<List<InvoicesAllModel>>($"Invoice/Search/{Uri.EscapeDataString(filter)}", true) ?? new List<InvoicesAllModel>();
            
            // Reset selection if current selected invoice is not in the list
            if (selectedInvoiceId > 0 && !Invoices.Any(i => i.ID == selectedInvoiceId))
            {
                selectedInvoiceId = 0;
            }
        }
        catch (Exception ex)
        {
            Invoices = new List<InvoicesAllModel>();
            System.Diagnostics.Debug.WriteLine($"Error loading invoices: {ex.Message}");
        }
    }

    private async Task OnInvoiceIdChanged(int invoiceId)
    {
        selectedInvoiceId = invoiceId;
        
        if (invoiceId > 0)
        {
            var invoice = Invoices.FirstOrDefault(i => i.ID == invoiceId);
            if (invoice != null)
            {
                record.SeqNo = invoice.Code ?? string.Empty;
                // Optionally set party if not already set
                if (record.PartyId == 0 && invoice.PartyId > 0)
                {
                    record.PartyId = invoice.PartyId;
                }
                StateHasChanged();
            }
        }
        else
        {
            // Clear SeqNo if invoice is deselected
            if (string.IsNullOrWhiteSpace(record.SeqNo))
            {
                record.SeqNo = string.Empty;
            }
        }
    }

    private async Task OnPartyChanged()
    {
        // Reload invoices when party changes to filter by selected party
        if (record.TranType == "RECEIPT" || record.TranType == "PAYMENT")
        {
            string invoiceType = record.TranType == "RECEIPT" ? "SALE" : "PURCHASE";
            await LoadInvoices(invoiceType);
        }
    }

    private string GetPartyLabel()
    {
        return record.TranType switch
        {
            "RECEIPT" => "Customer",
            "PAYMENT" => "Supplier",
            _ => "Bank"
        };
    }

    protected async Task ShowGLPreview()
    {
        try
        {
            // Validate required fields for preview (works before saving)
            if (record?.AccountId == 0)
            {
                SnackbarService.Add("Please select an account first", Severity.Warning);
                return;
            }

            if (record?.PartyId == 0)
            {
                SnackbarService.Add("Please select a party first", Severity.Warning);
                return;
            }

            if (record?.Amount == 0)
            {
                SnackbarService.Add("Please enter an amount first", Severity.Warning);
                return;
            }

            if (string.IsNullOrWhiteSpace(record?.TranType))
            {
                SnackbarService.Add("Please select a transaction type first", Severity.Warning);
                return;
            }

            // Validate organization is set
            if (record.OrganizationId == 0)
            {
                record.OrganizationId = Globals.User.OrganizationId;
            }

            // If record is saved, ensure we have latest data, otherwise use current form data
            if (CurrentRecord > 0)
            {
                await Get(CurrentRecord);
            }

            LoadingPanel = true;
            try
            {
                var result = await Functions.PostAsync<GeneralLedgerHeaderModel>("GeneralLedger/PreviewGLFromCashBook", record, true);
                LoadingPanel = false;

                if (result.Success && result.Result != null)
                {
                    var parameters = new DialogParameters<InvoiceGLPreviewDialog>
                    {
                        { x => x.PreviewData, result.Result },
                        { x => x.RecordId, CurrentRecord },
                        { x => x.IsPostedToGL, record.IsPostedToGL == 1 },
                        { x => x.OnPostToGL, EventCallback.Factory.Create(this, async () => 
                        {
                            if (CurrentRecord == 0)
                            {
                                SnackbarService.Add("Please save the cashbook entry before posting to GL", Severity.Warning);
                                return;
                            }
                            await PostToGL();
                            // Refresh preview after posting
                            await ShowGLPreview();
                        }) }
                    };

                    var options = new DialogOptions()
                    {
                        MaxWidth = MaxWidth.Large,
                        FullWidth = true,
                        CloseButton = true,
                        CloseOnEscapeKey = true,
                        BackdropClick = false
                    };

                    await dialogService.ShowAsync<InvoiceGLPreviewDialog>("Accounting Entry Preview", parameters, options);
                }
                else
                {
                    string errorMsg = !string.IsNullOrWhiteSpace(result.Message) 
                        ? result.Message 
                        : "Unable to generate preview. Please ensure all required accounts are configured in Chart of Accounts.";
                    SnackbarService.Add(errorMsg, Severity.Error);
                }
            }
            catch (Exception ex)
            {
                LoadingPanel = false;
                SnackbarService.Add($"Error generating preview: {ex.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    protected async Task PostToGL()
    {
        try
        {
            if (CurrentRecord == 0)
            {
                SnackbarService.Add("Please save the cashbook entry before posting to GL", Severity.Warning);
                return;
            }

            if (record.IsPostedToGL == 1)
            {
                SnackbarService.Add("This cashbook entry is already posted to General Ledger", Severity.Info);
                return;
            }

            var res = await Functions.ShowConfirmation(dialogService, "Do you want to post this cashbook entry to General Ledger? Once posted, it cannot be edited or deleted.");
            if (res == false)
                return;

            LoadingPanel = true;
            var result = await Functions.PostAsync<GeneralLedgerHeaderModel>(
                $"GeneralLedger/CreateGLFromCashBook/{CurrentRecord}?userId={Globals.User.Id}&clientInfo={Uri.EscapeDataString(Globals.ClientInfo)}", 
                null, 
                true);
            LoadingPanel = false;

            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                SnackbarService.Add("Cashbook entry posted to General Ledger successfully", Severity.Success);
                // Reload cashbook to get updated IsPostedToGL status
                await Get(CurrentRecord);
            }
        }
        catch (Exception ex)
        {
            LoadingPanel = false;
            SnackbarService.Add($"Error posting to GL: {ex.Message}", Severity.Error);
        }
    }

    private async Task OnTranDateChanged()
    {
        await ValidatePeriodAsync();
    }

    private async Task ValidatePeriodAsync()
    {
        PeriodValidationChecked = false;
        PeriodValidationMessage = string.Empty;
        
        if (record?.TranDate == null || record.OrganizationId == 0)
        {
            PeriodValidationMessage = string.Empty;
            await InvokeAsync(StateHasChanged);
            return;
        }

        try
        {
            string moduleType = "CASHBOOK"; // CashBook module type
            string dateStr = record.TranDate.Value.ToString("yyyy-MM-dd");
            var result = await Functions.GetAsync<PeriodCloseModel>(
                $"PeriodClose/GetOpenPeriod/{record.OrganizationId}/{dateStr}/{moduleType}", 
                true);

            PeriodValidationChecked = true;

            // Period is OPEN if we get a valid result with Id > 0 and Status is OPEN or OPEN_PENDING
            // Period is CLOSED if result is null, Id is 0, or Status is CLOSE
            if (result != null && result.Id > 0 && 
                (result.Status?.ToUpper() == "OPEN" || result.Status?.ToUpper() == "OPEN_PENDING"))
            {
                // Period is open - clear any warning
                PeriodValidationMessage = string.Empty;
            }
            else
            {
                // Period is closed - show warning
                PeriodValidationMessage = $"⚠️ Period is CLOSED for {moduleType} module on {dateStr}. You cannot save transactions for this date. Please ensure the period is open before saving.";
            }
        }
        catch (Exception ex)
        {
            PeriodValidationChecked = true;
            PeriodValidationMessage = $"Error checking period status: {ex.Message}";
            SnackbarService.Add(PeriodValidationMessage, Severity.Error);
        }
        
        await InvokeAsync(StateHasChanged);
    }

