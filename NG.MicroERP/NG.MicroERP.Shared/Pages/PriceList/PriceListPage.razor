@page "/PriceListPage/{Action}/{CurrentRecord?}"

@inject IJSRuntime JSRuntime
@inject IDialogService dialogService
@inject NavigationManager NavManager
@inject ISnackbar SnackbarService
@inject Functions Functions
@inject Globals Globals

<Loading IsLoading="@LoadingPanel" />

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <!-- Action Buttons Header -->
    <div class="d-flex justify-content-end align-items-center mb-4 gap-2">
        @if (Action != "VIEW")
        {
            <MudButton OnClick="Save" 
                       Color="Color.Success" 
                       Variant="Variant.Filled"
                       StartIcon="@Icons.Material.Filled.Save"
                       Size="Size.Medium">
                @(Action == "INSERT" ? "Save" : "Update")
            </MudButton>

            @if (Action == "UPDATE")
            {
                <MudButton Color="Color.Error" 
                           OnClick="Delete" 
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Material.Filled.Delete"
                           Size="Size.Medium">
                    Delete
                </MudButton>
            }
        }
    </div>

    <MudGrid>
        <!-- Basic Details Card -->
        <MudItem xs="12">
            <MudPaper Elevation="2" Class="pa-4 mb-4" Style="border-radius: 12px;">
                <div class="d-flex align-items-center mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Info" 
                             Size="Size.Large" 
                             Color="Color.Primary" 
                             Class="me-3" />
                    <div>
                        <MudText Typo="Typo.h6" Class="mb-0 fw-bold">Basic Details</MudText>
                        <MudText Typo="Typo.caption" Class="text-muted">Manage & Maintain PriceList</MudText>
                    </div>
                </div>
                <hr style="height: 3px; border: none; background: linear-gradient(90deg, var(--mud-palette-primary) 0%, var(--mud-palette-primary-lighten) 100%); border-radius: 10px; margin: 0 0 24px 0;" />

                <MudGrid>
                    <MudItem xs="12" md="6">
                        @if (isReadOnly)
                        {
                            <MudTextField Label="Item"
                                         T="string"
                                         Value="@(Ite.FirstOrDefault(i => i.Id == record.ItemId)?.DisplayName ?? string.Empty)"
                                         ReadOnly="@true"
                                         Variant="Variant.Outlined"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        }
                        else
                        {
                            <label class="form-label fw-bold mb-1">Item <span style='color:red;'>*</span></label>
                            <AutoComplete TItem="ItemsModel"
                                          DataList="@Ite"
                                          DisplayProperty="@(p => p.DisplayName)"
                                          IdProperty="@(p => p.Id)"
                                          @bind-SelectedId="record.ItemId"
                                          Variant="Variant.Outlined"
                                          FullWidth="@true"
                                          Class="mb-3" />
                        }
                        <ValidationMessage For="@(() => record.ItemId)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudTextField Label="Price List Name"
                                     T="string"
                                     Value="@record.PriceListName"
                                     ValueChanged="@((string v) => record.PriceListName = v?.ToUpper())"
                                     Placeholder="Price List Name"
                                     ReadOnly="@isReadOnly"
                                     Variant="Variant.Outlined"
                                     FullWidth="@true"
                                     Class="mb-3" />
                        <ValidationMessage For="@(() => record.PriceListName)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudNumericField T="int"
                                         Label="Min Quantity"
                                         @bind-Value="record.MinQuantity"
                                         Variant="Variant.Outlined"
                                         Placeholder="MinQuantity"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        <ValidationMessage For="@(() => record.MinQuantity)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudNumericField T="double"
                                         Label="One Quantity Price"
                                         @bind-Value="record.OneQuantityPrice"
                                         Variant="Variant.Outlined"
                                         Placeholder="OneQuantityPrice"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        <ValidationMessage For="@(() => record.OneQuantityPrice)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudNumericField T="double"
                                         Label="Min Quantity Price"
                                         @bind-Value="record.MinQuantityPrice"
                                         Variant="Variant.Outlined"
                                         Placeholder="MinQuantityPrice"
                                         ReadOnly="@isReadOnly"
                                         Format="#,##0.00"
                                         FullWidth="@true"
                                         Class="mb-3" />
                        <ValidationMessage For="@(() => record.MinQuantityPrice)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudDatePicker Label="Effective Date"
                                      @bind-Date="record.EffectiveDate"
                                      DateFormat="yyyy-MM-dd"
                                      Placeholder="Effective Date"
                                      ReadOnly="@isReadOnly"
                                      Variant="Variant.Outlined"
                                      FullWidth="@true"
                                      Class="mb-3" />
                        <ValidationMessage For="@(() => record.EffectiveDate)" />
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <MudSelect T="int"
                                   Label="Active Status"
                                   @bind-Value="record.IsActive"
                                   Placeholder="Active Status"
                                   Variant="Variant.Outlined"
                                   Clearable="@true"
                                   FullWidth="@true"
                                   ReadOnly="@isReadOnly"
                                   Class="mb-3">
                            @if (record.IsActive != 0 && record.IsActive != 1)
                            {
                                record.IsActive = 1;
                            }
                            <MudSelectItem T="int" Value="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="me-2" />
                                Enable
                            </MudSelectItem>
                            <MudSelectItem T="int" Value="0">
                                <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" Class="me-2" />
                                Disable
                            </MudSelectItem>
                        </MudSelect>
                        <ValidationMessage For="@(() => record.IsActive)" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code
{
    PriceListModel record = new();
    List<ItemsModel> Ite = new();

    [Parameter] public string Action { get; set; } = "INSERT";
    [Parameter] public int CurrentRecord { get; set; } = 0;
    [Parameter] public EventCallback OnSaved { get; set; }

    bool isReadOnly = true;
    private bool LoadingPanel { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Globals.AccessLevel = Globals.PageAccess(NavManager, "PriceListDashboard");
        await GetAll();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        GetDefaultValues();
    }

    protected async Task GetAll()
    {
        LoadingPanel = true;
        Ite = await Functions.GetAsync<List<ItemsModel>>($"Items/Search", true) ?? new List<ItemsModel>();

        if (Action == "INSERT")
        {
            record = new PriceListModel();
            record.IsActive = 1;
            isReadOnly = false;
        }
        else if (Action == "UPDATE")
        {
            await Get(CurrentRecord);
            isReadOnly = false;
        }
        else if (Action == "VIEW")
        {
            await Get(CurrentRecord);
            isReadOnly = true;
        }

        LoadingPanel = false;
    }

    protected async Task Get(int id)
    {
        LoadingPanel = true;
        record = await Functions.GetAsync<PriceListModel>($"PriceList/Get/{id}", true) ?? new PriceListModel();
        LoadingPanel = false;
    }

    protected void GetDefaultValues()
    {
        StateHasChanged();
    }

    protected async Task Clear()
    {
        Action = "INSERT";
        record = new PriceListModel();
        record.IsActive = 1;
        isReadOnly = false;
    }

    protected async Task Edit(int id)
    {
        await Get(id);
        Action = "UPDATE";
        isReadOnly = false;
    }

    protected async Task Delete()
    {
        var res = await Functions.ShowConfirmation(dialogService, "Do you want to delete existing record?");
        if (res == false)
            return;

        Action = "SOFTDELETE";
        await Save();
    }

    protected async Task Save()
    {
        var errors = new List<string>();
        if (string.IsNullOrWhiteSpace(record.PriceListName))
            errors.Add("• Price List Name is required");

        if (errors.Count > 0)
        {
            SnackbarService.Add($"ERROR:\n{string.Join("\n", errors)}", Severity.Error);
            return;
        }

        try
        {
            LoadingPanel = true;

            record.OrganizationId = Globals.User.OrganizationId;
            record.CreatedBy = Globals.User.Id;
            record.CreatedOn = DateTime.Now;
            record.CreatedFrom = Globals.ClientInfo;
            record.UpdatedBy = Globals.User.Id;
            record.UpdatedOn = DateTime.Now;
            record.UpdatedFrom = Globals.ClientInfo;

            string url = char.ToUpper(Action[0]) + Action.Substring(1).ToLower();
            var result = await Functions.PostAsync<PriceListModel>($"PriceList/{url}", record, true);
            if (result.Success == false)
            {
                SnackbarService.Add($"ERROR: {result.Message}", Severity.Error);
            }
            else
            {
                await OnSaved.InvokeAsync();
                SnackbarService.Add($"Record {Action} Successfully", Severity.Success);
                if (url?.Contains("delete", StringComparison.OrdinalIgnoreCase) == false)
                    await Edit(result.Result!.Id);
                else
                {
                    await Clear();
                }
            }
        }
        catch (Exception ex)
        {
            SnackbarService.Add($"ERROR: {ex.Message}", Severity.Error);
        }
        finally
        {
            LoadingPanel = false;
        }
    }
}
