            flex-direction: column;
            height: 100%;
        }

    .drawer-tab-right {
        position: fixed;
        top: 50%;
        right: 0;
        transform: translateY(-50%);
        width: 12px; /* slim tab (about 25% of the previous width) */
        height: 100px; /* enough to be clickable but minimal */
        background-color: var(--mud-palette-primary);
        color: var(--mud-palette-primary-text);
        border: none;
        border-top-left-radius: 8px; /* curved outer top edge */
        border-bottom-left-radius: 8px; /* curved outer bottom edge */
        border-top-right-radius: 0; /* sharp edge flush with screen */
        border-bottom-right-radius: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 1300;
        transition: background-color 0.3s ease;
        box-shadow: none; /* no shadow */
    }

        /* Hover follows theme */
        .drawer-tab-right:hover {
            background-color: var(--mud-palette-primary-hover);
        }

        /* Make icon small and centered */
        .drawer-tab-right .mud-icon-root {
            font-size: 14px;
        }

        /* Transparent space above and below */
        .drawer-tab-right::before,
        .drawer-tab-right::after {
            content: "";
            position: absolute;
            right: 0;
            width: 12px;
            height: 9999px;
            background-color: transparent;
            pointer-events: none;
        }

        .drawer-tab-right::before {
            top: -9999px;
        }

        .drawer-tab-right::after {
            bottom: -9999px;
        }
</style>