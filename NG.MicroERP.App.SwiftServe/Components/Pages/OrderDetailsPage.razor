@page "/OrderDetailsPage/{Action}/{id:int}"
@using NG.MicroERP.App.SwiftServe.Helper
@layout MyMenuLayout
@inject NavigationManager Nav

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-0" Style="padding: 8px;">
<h2 class="text-center mb-4 text-dark" style="font-family: 'Orbitron', sans-serif; font-size: 30px;">
    <button class="btn btn-outline-primary rounded-pill px-3 py-2 me-2"
            @onclick="GoBack"
            title="Back to Order">
        <i class="fas fa-arrow-left"></i>
    </button>
    <i class="fas fa-receipt text-secondary me-2"></i>
    @if (Action == "ORDER")
    {
        <span>Order Summary</span>
    }
    else
    {
        <span>Table Summary</span>
    }
</h2>

@if (Invoices.Invoice != null)
{
    <div class="container mb-4">
        <div class="row justify-content-center mb-2">
            <div class="col-6 col-md-4 col-lg-3 text-start">
                <span><i class="fas fa-file-invoice me-1 text-info"></i><strong>Order #:</strong> @Invoices.Invoice.Code</span>
            </div>
            <div class="col-6 col-md-4 col-lg-3 text-start">
                <span><i class="fas fa-chair me-1 text-primary"></i><strong>Table #:</strong> @Invoices.Invoice.TableName</span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 col-md-4 col-lg-3 text-start">
                <span><i class="fas fa-list-ol me-1 text-success"></i><strong># of Items:</strong> @InvoiceDetails.Count</span>
            </div>
            <div class="col-6 col-md-4 col-lg-3 text-start">
                <span><i class="fas fa-boxes me-1 text-primary"></i><strong>Status:</strong> @Invoices.Invoice.Status</span>
            </div>
        </div>
    </div>


    @foreach (var group in InvoiceDetails.OrderBy(x => x.Person).GroupBy(x => x.Person))
    {
        <div class="mb-4">

            @if (@group.Key != 0)
            {
                <h5 class="text-primary">
                    <i class="fas fa-user-chair me-2"></i> Person: @group.Key
                </h5>
            }

            @foreach (var item in group)
            {
                <div class="border rounded shadow-sm p-3 mb-3 bg-light">
                    <div class="d-flex justify-content-between align-items-start flex-wrap">

                        <!-- Left: Item Details -->
                        <div class="flex-grow-1 pe-3">
                            <div><strong><i class="fas fa-utensils text-primary me-1"></i>Item:</strong> 
                                <span class="text-success">@item.ItemName</span> 
                                <span class="text-primary ms-2">@item.ServingSize</span>
                            </div>
                            <div><strong><i class="fas fa-calculator text-secondary me-1"></i>Total:</strong> 
                                @item.Qty x @item.UnitPrice.ToString("N2") = 
                                <strong>@item.ItemTotalAmount.ToString("N2")</strong>
                            </div>
                            <div><strong><i class="fas fa-info-circle text-dark me-1"></i>Status:</strong>
                                @if (item.Status == "COMPLETE")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (item.Status == "CANCEL")
                                {
                                    <span class="badge bg-danger text-dark">Cancelled</span>
                                }
                                else if (item.Status == "READY")
                                {
                                    <span class="badge bg-info text-dark">Ready</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </div>
                        </div>

                        <!-- Right: Action Buttons (fixed width for layout consistency) -->
                        <div class="d-flex flex-column gap-2 text-end mt-2 mt-md-0">

                            @if (Invoices.Invoice.Status != "COMPLETE" && Invoices.Invoice.Status != "READY")
                            {
                                @if (item.Status != "COMPLETE" && item.Status != "READY" && MyGlobals.User.UserType != "KITCHEN")
                                {
                                    <button class="btn btn-danger btn-sm" @onclick="@(() => OrderStatus(item, "CANCEL", 1))">
                                        <i class="fas fa-times-circle me-1"></i> Cancel
                                    </button>
                                }

                                @if (MyGlobals.User.UserType == "KITCHEN" && item.Status == "PENDING")
                                {
                                    <button class="btn btn-info btn-sm" @onclick="@(() => OrderStatus(item, "READY"))">
                                        <i class="fas fa-check-circle me-1"></i> Ready
                                    </button>
                                }
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
    }
}
else
{
    <div class="text-muted text-center">Loading order details...</div>
}
</MudContainer>

@code {
    [Parameter] public int id { get; set; }
    [Parameter] public string Action { get; set; } = "ORDER";
    private InvoicesModel Invoices = new();
    private ObservableCollection<InvoiceItemReportModel> InvoiceDetails = new();

    protected override async Task OnInitializedAsync()
    {
        MyGlobals.PageTitle = "Order View";
        await LoadBills(id);
    }

    private async Task LoadBills(int Id)
    {
        string bill_url = string.Empty;
        string billDetail_url = string.Empty;

        if (Action == "ORDER")
        {
            bill_url = $"Invoice/Search/i.Id={Id} AND i.InvoiceType='BILL'";
            billDetail_url = $"InvoiceDetail/Search/InvoiceDetail.InvoiceId={Id}";
        }
        else if (Action == "TABLE")
        {
            bill_url = $"Invoice/Search/i.TableId={Id} AND i.InvoiceType='BILL' AND i.Status!='COMPLETE'";
        }

        var res = await MyFunctions.GetAsync<List<InvoiceModel>>(bill_url, true);
        if (res != null && res.Count > 0)
        {
            Invoices.Invoice = res.First();

            if (Action == "ORDER")
            {
                var res1 = await MyFunctions.GetAsync<List<InvoiceItemReportModel>>(billDetail_url, true);
                if (res1 != null)
                {
                    InvoiceDetails.Clear();
                    foreach (var item in res1)
                    {
                        InvoiceDetails.Add(item);
                    }
                }
            }
            else if (Action == "TABLE")
            {
                // For table view, get details from all invoices for this table
                var invoiceIds = string.Join(",", res.Select(i => i.Id));
                billDetail_url = $"InvoiceDetail/Search/InvoiceDetail.InvoiceId IN ({invoiceIds})";
                var res1 = await MyFunctions.GetAsync<List<InvoiceItemReportModel>>(billDetail_url, true);
                if (res1 != null)
                {
                    InvoiceDetails.Clear();
                    foreach (var item in res1)
                    {
                        InvoiceDetails.Add(item);
                    }
                }
            }
        }
    }

    private async void OrderStatus(InvoiceItemReportModel item, string Status, int IsSoftDelete = 0)
    {
        bool confirm = await App.Current.MainPage.DisplayAlert("Item Status", $"{Status} Item: {item.ItemName}?", "Yes", "No");
        if (!confirm) return;

        var res = await MyFunctions.PostAsync<InvoiceItemReportModel>($"InvoiceDetail/InvoiceItemStatus/{item.InvoiceDetailId}/{Status}/{IsSoftDelete}", null, true);
        if (res.Success)
        {
            await Application.Current.MainPage.DisplayAlert("✅ Done", $"The item status is now set to {Status}.", "Great!");
        }
        else
        {
            await Application.Current.MainPage.DisplayAlert("❌ Status Update Failed", $"Unable to mark item as {Status}. Please try again.", "OK");
        }

        await LoadBills(id);
        StateHasChanged();
        InvoiceDetails.Remove(item);
    }

    private void GoBack()
    {
        Nav.NavigateTo($"/OrdersPage");
    }
}
