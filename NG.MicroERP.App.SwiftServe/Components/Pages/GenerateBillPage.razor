@page "/GenerateBillPage/{id:int}"
@inject NavigationManager Nav
@layout MyMenuLayout
@using System.Collections.ObjectModel
@using NG.MicroERP.Shared.Services

<div class="invoice-container" id="billContent">
    <header class="invoice-header">
        <h2>B I L L</h2>
        <div class="invoice-info">
            <div class="info-row"><strong>Bill #:</strong> @Bills.Bill?.SeqNo</div>
            <div class="info-row"><strong>Date:</strong> @Bills.Bill?.TranDate.ToString("dd-MMM-yyyy")</div>
            <div class="info-row"><strong>Location:</strong> @Bills.Bill?.Location</div>
        </div>
    </header>

    <hr />

    <section class="invoice-table">
        <div class="table-header">
            <div class="col-item">Item</div>
            <div class="col-center">Qty</div>
            <div class="col-right">Rate</div>
            <div class="col-right">Total</div>
        </div>

        @foreach (var item in BillDetails)
        {
            <div class="table-row">
                <div class="col-item">@item.Item @item.ServingSize</div>
                <div class="col-center">@item.Qty</div>
                <div class="col-right">@item.UnitPrice.ToString("N2")</div>
                <div class="col-right">@item.Item_Amount.ToString("N2")</div>
            </div>
        }
    </section>

    <section class="invoice-total">
        <div class="total-row">
            <label>Sub Total:</label>
            <div class="readonly">@GetSubTotal().ToString("N2")</div>
        </div>
        <div class="total-row">
            <label>Service Charges @@ @Globals.ServiceCharge.ServiceCharge%:</label>
            <div class="readonly">@Bills.Bill!.ServiceCharge.ToString("N2")</div>
        </div>
        <div class="total-row">
            <label>GST  @@ @Globals.GST%:</label>
            <div class="readonly">@Bills.Bill!.TaxAmount.ToString("N2")</div>
        </div>
        <div class="total-row">
            <label>Discount:</label>
            @if (BillGenerated == false)
            {
                <input type="number" step="1" class="editable" @bind="Bills.Bill!.DiscountAmount" @oninput="RecalculateTotal" disabled="@BillGenerated" />
            }
            else
            {
                <div class="readonly">@Bills.Bill!.DiscountAmount.ToString("N2")</div>
            }
        </div>
        <div class="grand-total">
            <label>Grand Total:</label>
            <div class="readonly">@GetGrandTotal().ToString("N2")</div>
        </div>
    </section>

    <div class="invoice-actions">
        @if (Bills.Bill.Status != "COMPLETE")
        {
            <button class="btn btn-primary" @onclick="GenerateBill" disabled="@BillGenerated">Generate Bill</button>
        }
        <button class="btn btn-outline-secondary" @onclick="PrintInvoice">🖨️ Print</button>
    </div>

    <footer class="invoice-footer">
        <p>Thank you for your business!</p>
    </footer>
</div>

@code {
    [Parameter] public int id { get; set; }
    [CascadingParameter] private List<ItemsModel> _cart { get; set; }

    private Bill_And_Bill_Detail_Model Bills = new();
    private ObservableCollection<BillDetailModel> BillDetails = new();

    private List<TypeCodeModel> GST = new();

    // Hide or show service charge input
    private bool ServiceCharges = false;
    private bool BillGenerated = false;


    protected override async Task OnInitializedAsync()
    {
        Globals.PageTitle = "Generate Bill";

        GST = await Functions.GetAsync<List<TypeCodeModel>>("TypeCode/Search/GST", true) ?? new List<TypeCodeModel>();

        await LoadBills(id);
        StateHasChanged();
    }

    private async Task LoadBills(int Id)
    {
        var res = await Functions.GetAsync<List<BillModel>>($"Bill/Search/bill.Id={Id}", true);
        if (res is { Count: > 0 })
        {
            Bills.Bill = res.First();

            if (Bills.Bill.Status == "COMPLETE")
                BillGenerated = true;

            var detailRes = await Functions.GetAsync<List<BillDetailModel>>($"BillDetail/Search/BillDetail.BillId={Id}", true);
            if (detailRes != null)
            {
                BillDetails.Clear();
                foreach (var item in detailRes)
                {
                    BillDetails.Add(item);
                }
            }
        }
    }

    private double GetSubTotal() => BillDetails.Sum(x => x.Item_Amount);

    private double GetGrandTotal()
    {

        double subTotal = GetSubTotal();

        // ✅ Calculate Service Amount based on type
        double serviceAmount = 0;
        if (Globals.ServiceCharge.ServiceChargeType == "PERCENTAGE")
        {
            serviceAmount = (Globals.ServiceCharge.ServiceCharge / 100) * subTotal;
        }
        else if (Globals.ServiceCharge.ServiceChargeType == "AMOUNT")
        {
            serviceAmount = Globals.ServiceCharge.ServiceCharge;
        }

        // ✅ Discount
        double discount = Bills.Bill?.DiscountAmount ?? 0;

        // ✅ Calculate tax and store it
        double tax = (subTotal + serviceAmount - discount) * Globals.GST / 100;
        Bills.Bill!.TaxAmount = tax;

        // ✅ Optional: Store service amount too
        Bills.Bill.ServiceCharge = serviceAmount;



        //var res = Globals.CalculateBillAmounts(Bills.Bill.Id);

        return subTotal + serviceAmount + tax - discount;
    }

    private void RecalculateTotal(ChangeEventArgs e)
    {
        StateHasChanged();
    }

    private async Task GenerateBill()
    {
        var tranDate = DateTime.Now;
        var bill = new BillModel
        {
            Id = id,
            ServiceCharge = Globals.ServiceCharge!.ServiceCharge,
            TaxAmount = Globals.GST,
            DiscountAmount = Bills.Bill.DiscountAmount,
        };


        var result = await Functions.PostAsync<string>("Bill/GenerateBill", bill, true);

        if (!result.Success)
        {
            await Application.Current.MainPage.DisplayAlert("⚠️ Billing Error", "Unable to generate the bill. Please check the order details and try again.", "OK");
        }
        else
        {
            await Application.Current.MainPage.DisplayAlert("✅ Done", "Bill generated and ready to go!", "Great");
            _cart.Clear();
            Nav.NavigateTo($"/OrdersPage");

        }
    }

    private async void PrintInvoice()
    {
        // await pdfHelper.GenerateBill();
    }

}

