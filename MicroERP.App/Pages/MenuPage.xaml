<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="MicroERP.App.Pages.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Menu"
    BackgroundColor="#f0f0f0">

    <ScrollView>
        <FlexLayout 
            Wrap="Wrap"
            Direction="Row"
            JustifyContent="Start"
            AlignItems="Start"
            Padding="15">

            <!-- Button 1 -->
            <VerticalStackLayout Margin="10" WidthRequest="100">

                <Label Text="Swift Serve"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#333" 
                           FontFamily="Orbitron"/>


                <Label Text="Swift Serve"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#333" 
                           FontFamily="Orbitron"/>

                <Border 
                    Stroke="Gray" 
                    StrokeThickness="1" 
                    BackgroundColor="White" 
                    WidthRequest="100" 
                    HeightRequest="100"
                    StrokeShape="RoundRectangle 10"
                    Shadow="5,5,0,0,Black">

                    <Image 
                        Source="dish.gif" 
                        HeightRequest="50" 
                        Aspect="AspectFit" 
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeTapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Border>
                <Label 
                    Text="Home" 
                    TextColor="Gray"
                    FontSize="14" 
                    HorizontalTextAlignment="Center" 
                    Margin="0,5,0,0" />
            </VerticalStackLayout>

            <!-- Button 2 -->
            <VerticalStackLayout Margin="10" WidthRequest="100">
                <Border 
                    Stroke="Gray" 
                    StrokeThickness="1" 
                    BackgroundColor="White" 
                    WidthRequest="100" 
                    HeightRequest="100"
                    StrokeShape="RoundRectangle 10"
                    Shadow="5,5,0,0,Black">

                    <Image 
                        Source="orders.png" 
                        HeightRequest="50" 
                        Aspect="AspectFit" 
                        VerticalOptions="Center"
                        HorizontalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOrdersTapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Border>
                <Label 
                    Text="Orders" 
                    TextColor="Gray"
                    FontSize="14" 
                    HorizontalTextAlignment="Center" 
                    Margin="0,5,0,0" />
            </VerticalStackLayout>

            <!-- Add more buttons below as needed -->

        </FlexLayout>
    </ScrollView>
</ContentPage>

