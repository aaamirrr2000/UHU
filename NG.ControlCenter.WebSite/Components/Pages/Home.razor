@page "/"
@using MudBlazor

<PageTitle>MicroERP - Enterprise Resource Planning</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.False" Class="pa-0">
    <!-- Hero Section -->
    <MudPaper Elevation="0" Class="hero-section">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Spacing="4" AlignItems="Center" Class="py-16">
                <MudItem xs="12" md="6">
                    <MudText Typo="Typo.h2" Class="mb-4" Style="color: #1976d2; font-weight: 700;">
                        Powerful ERP Solution for Your Business
                    </MudText>
                    <MudText Typo="Typo.h6" Class="mb-6" Style="color: #666;">
                        Streamline your operations, manage inventory, track finances, and grow your business with our comprehensive ERP platform.
                    </MudText>
                    <MudStack Row="true" Spacing="2">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="/register">
                            Get Started Free
                        </MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" Href="#features">
                            Learn More
                        </MudButton>
                    </MudStack>
                </MudItem>
                <MudItem xs="12" md="6">
                    <div class="hero-image">
                        <img src="/images/hero-illustration.svg" alt="ERP Solution" style="width: 100%; max-width: 600px;" />
                    </div>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </MudPaper>

    <!-- Features Section -->
    <MudContainer MaxWidth="MaxWidth.Large" Class="py-16" id="features">
        <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-8" Style="color: #1976d2; font-weight: 700;">
            Everything You Need to Run Your Business
        </MudText>
        <MudGrid Spacing="4">
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="pa-4 text-center" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.Inventory" Size="Size.Large" Color="Color.Primary" Class="mb-4" Style="font-size: 48px;" />
                    <MudText Typo="Typo.h6" Class="mb-2">Inventory Management</MudText>
                    <MudText>Track stock levels, manage suppliers, and optimize your inventory in real-time.</MudText>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="pa-4 text-center" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Size="Size.Large" Color="Color.Primary" Class="mb-4" Style="font-size: 48px;" />
                    <MudText Typo="Typo.h6" Class="mb-2">Financial Management</MudText>
                    <MudText>Complete accounting solution with invoicing, payments, and financial reporting.</MudText>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="pa-4 text-center" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Large" Color="Color.Primary" Class="mb-4" Style="font-size: 48px;" />
                    <MudText Typo="Typo.h6" Class="mb-2">HR & Payroll</MudText>
                    <MudText>Manage employees, track attendance, process payroll, and handle leave requests.</MudText>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="pa-4 text-center" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.Assessment" Size="Size.Large" Color="Color.Primary" Class="mb-4" Style="font-size: 48px;" />
                    <MudText Typo="Typo.h6" Class="mb-2">Analytics & Reports</MudText>
                    <MudText>Get insights with comprehensive reports and analytics dashboards.</MudText>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="pa-4 text-center" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.Security" Size="Size.Large" Color="Color.Primary" Class="mb-4" Style="font-size: 48px;" />
                    <MudText Typo="Typo.h6" Class="mb-2">Secure & Reliable</MudText>
                    <MudText>Enterprise-grade security with regular backups and data protection.</MudText>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="2" Class="pa-4 text-center" Style="height: 100%;">
                    <MudIcon Icon="@Icons.Material.Filled.Devices" Size="Size.Large" Color="Color.Primary" Class="mb-4" Style="font-size: 48px;" />
                    <MudText Typo="Typo.h6" Class="mb-2">Multi-Platform</MudText>
                    <MudText>Access your ERP from desktop, tablet, or mobile devices anywhere, anytime.</MudText>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudContainer>

    <!-- CTA Section -->
    <MudPaper Elevation="0" Class="cta-section pa-8">
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-4" Style="color: white; font-weight: 700;">
                Ready to Transform Your Business?
            </MudText>
            <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-6" Style="color: rgba(255,255,255,0.9);">
                Start your free trial today. No credit card required.
            </MudText>
            <div class="text-center">
                <MudButton Variant="Variant.Filled" Color="Color.Default" Size="Size.Large" Href="/register" Style="background-color: white; color: #1976d2;">
                    Create Your Account
                </MudButton>
            </div>
        </MudContainer>
    </MudPaper>
</MudContainer>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        min-height: 500px;
        display: flex;
        align-items: center;
    }

    .hero-image {
        text-align: center;
    }

    .cta-section {
        background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
        color: white;
        margin-top: 64px;
    }
</style>
