<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MicroERP.App.SwiftServe"
             x:Class="MicroERP.App.SwiftServe.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Standard navigation bar for all pages -->
            <Color x:Key="NavBarBackground">#512BD4</Color>
            <Color x:Key="NavBarText">#FFFFFF</Color>
            <Style TargetType="NavigationPage" ApplyToDerivedTypes="True">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavBarBackground}" />
                <Setter Property="BarTextColor" Value="{StaticResource NavBarText}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

