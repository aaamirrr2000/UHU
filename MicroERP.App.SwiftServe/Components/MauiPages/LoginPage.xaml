<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicroERP.App.SwiftServe.Components.MauiPages.LoginPage"
             NavigationPage.HasNavigationBar="False"
             Title="">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Primary theme colors -->
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="PrimaryLightColor">#7B5FE8</Color>
            <Color x:Key="PrimaryDarkColor">#2B0B98</Color>
            <Color x:Key="WhiteColor">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#212121</Color>
            <Color x:Key="TextSecondary">#666666</Color>
            <Color x:Key="BackgroundLight">#F5F5F5</Color>
            <Color x:Key="BorderColor">#E0E0E0</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <SolidColorBrush Color="{StaticResource BackgroundLight}"/>
    </ContentPage.Background>

    <ScrollView>
        <Grid Padding="0">
            <VerticalStackLayout Spacing="0">
                
                <!-- Header Section with Gradient (matching AreasDashboard theme) -->
                <Grid VerticalOptions="Start">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource PrimaryLightColor}" Offset="0.0" />
                            <GradientStop Color="{StaticResource PrimaryColor}" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    
                    <Grid Padding="20,40,20,30">
                        <VerticalStackLayout Spacing="15">
                            
                            <!-- Settings Button -->
                            <Grid>
                                <ImageButton Source="settings.png"
                                             WidthRequest="30"
                                             HeightRequest="30"
                                             HorizontalOptions="End"
                                             VerticalOptions="Start"
                                             BackgroundColor="Transparent"
                                             Clicked="OnSettingsClicked"
                                             x:Name="btnSettings"/>
                            </Grid>
                            
                            <!-- Logo and Title -->
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Image Source="waiter.png"
                                       WidthRequest="80"
                                       HeightRequest="80"
                                       HorizontalOptions="Center"/>
                                
                                <Label Text="Swift Serve"
                                       FontSize="32"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{StaticResource WhiteColor}"
                                       CharacterSpacing="2"
                                       FontFamily="Roboto"/>
                                
                                <Label Text="Restaurant Management System"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       TextColor="#E0FFFFFF"
                                       Margin="0,5,0,0"
                                       FontFamily="Roboto"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </Grid>

                <!-- Login Form Section -->
                <Grid Padding="30,40">
                    <VerticalStackLayout Spacing="25">
                        
                        <!-- Welcome Label -->
                        <Label Text="Welcome Back"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextPrimary}"
                               FontFamily="Roboto"
                               Margin="0,0,0,10"/>
                        
                        <Label Text="Sign in to continue"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextSecondary}"
                               FontFamily="Roboto"
                               Margin="0,0,0,20"/>

                        <!-- Username Field -->
                        <Frame BackgroundColor="{StaticResource WhiteColor}"
                               BorderColor="{StaticResource BorderColor}"
                               HasShadow="False"
                               CornerRadius="12"
                               Padding="15,0"
                               HeightRequest="56">
                            <Grid ColumnDefinitions="40,*" ColumnSpacing="10">
                                <Image Source="user.png"
                                       WidthRequest="24"
                                       HeightRequest="24"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       Grid.Column="0"/>
                                
                                <Entry x:Name="UsernameEntry"
                                       Placeholder="Username"
                                       TextColor="{StaticResource TextPrimary}"
                                       PlaceholderColor="{StaticResource TextSecondary}"
                                       BackgroundColor="Transparent"
                                       FontSize="16"
                                       FontFamily="Roboto"
                                       Keyboard="Email"
                                       Grid.Column="1"/>
                            </Grid>
                        </Frame>

                        <!-- Password Field -->
                        <Frame BackgroundColor="{StaticResource WhiteColor}"
                               BorderColor="{StaticResource BorderColor}"
                               HasShadow="False"
                               CornerRadius="12"
                               Padding="15,0"
                               HeightRequest="56">
                            <Grid ColumnDefinitions="40,*" ColumnSpacing="10">
                                <Image Source="password.png"
                                       WidthRequest="24"
                                       HeightRequest="24"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       Grid.Column="0"/>
                                
                                <Entry x:Name="PasswordEntry"
                                       Placeholder="Password"
                                       IsPassword="True"
                                       TextColor="{StaticResource TextPrimary}"
                                       PlaceholderColor="{StaticResource TextSecondary}"
                                       BackgroundColor="Transparent"
                                       FontSize="16"
                                       FontFamily="Roboto"
                                       Grid.Column="1"/>
                            </Grid>
                        </Frame>

                        <!-- Loading Indicator -->
                        <ActivityIndicator x:Name="LoginSpinner"
                                          IsVisible="False"
                                          IsRunning="False"
                                          Color="{StaticResource PrimaryColor}"
                                          HeightRequest="40"
                                          WidthRequest="40"
                                          HorizontalOptions="Center"/>

                        <!-- Login Button -->
                        <Button Text="Login"
                                BackgroundColor="{StaticResource PrimaryColor}"
                                TextColor="{StaticResource WhiteColor}"
                                HeightRequest="56"
                                FontSize="18"
                                FontAttributes="Bold"
                                FontFamily="Roboto"
                                CornerRadius="12"
                                Clicked="OnLoginClicked"
                                Margin="0,10,0,0">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding Source={x:Reference LoginSpinner}, Path=IsRunning}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>

                        <!-- Footer -->
                        <VerticalStackLayout Spacing="15" Margin="0,30,0,0">
                            <Image Source="food.png"
                                   WidthRequest="60"
                                   HeightRequest="60"
                                   HorizontalOptions="Center"
                                   Opacity="0.6"/>
                            
                            <Label Text="A Project by NexGen Tech Studios"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource TextSecondary}"
                                   FontFamily="Roboto"
                                   CharacterSpacing="1.5"/>
                            
                            <Label Text=""
                                   x:Name="lblURL"
                                   FontSize="11"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource TextSecondary}"
                                   FontFamily="Roboto"
                                   CharacterSpacing="1"
                                   Margin="0,5,0,0"/>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Grid>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>

