<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicroERP.App.SwiftServe.Components.MauiPages.Controls.NavigationMenu"
             x:Name="NavigationMenuControl"
             HorizontalOptions="Start"
             VerticalOptions="Start">

    <ContentView.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="PrimaryLightColor">#7B5FE8</Color>
            <Color x:Key="WhiteColor">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#212121</Color>
            <Color x:Key="TextSecondary">#666666</Color>
            <Color x:Key="BorderColor">#E0E0E0</Color>
            <Color x:Key="BackgroundLight">#F5F5F5</Color>
            <Color x:Key="MenuItemHighlight">#F0EBFC</Color>
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid RowDefinitions="*" ColumnDefinitions="*">
        <!-- Overlay when menu is open -->
        <BoxView x:Name="Overlay"
                 Grid.Row="0" Grid.Column="0"
                 BackgroundColor="#99000000"
                 IsVisible="False"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand"
                 ZIndex="999">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Sidebar: flush with edges so it feels part of the app -->
        <Border x:Name="SidebarFlyout"
                Grid.Row="0" Grid.Column="0"
                BackgroundColor="{StaticResource WhiteColor}"
                StrokeThickness="0"
                IsVisible="False"
                HorizontalOptions="Start"
                VerticalOptions="Fill"
                WidthRequest="280"
                ZIndex="1000">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0"/>
            </Border.StrokeShape>
            <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">
                <!-- Header with gradient -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="0">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource PrimaryLightColor}" Offset="0"/>
                            <GradientStop Color="{StaticResource PrimaryColor}" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <VerticalStackLayout Padding="20,20,20,16" Spacing="4">
                        <Label Text="SwiftServe"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{StaticResource WhiteColor}"/>
                        <Label Text="Navigation"
                               FontSize="13"
                               Opacity="0.9"
                               TextColor="{StaticResource WhiteColor}"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1" Text="âœ•"
                            FontSize="20"
                            BackgroundColor="#40FFFFFF"
                            TextColor="{StaticResource WhiteColor}"
                            Clicked="OnCloseMenuClicked"
                            WidthRequest="44" HeightRequest="44"
                            CornerRadius="22"
                            Margin="12,12,16,0"
                            Padding="0"/>
                </Grid>
                <!-- Menu items -->
                <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand">
                    <StackLayout x:Name="MenuItemsContainer"
                                 Spacing="6"
                                 Padding="12,8,12,12"/>
                </ScrollView>
                <!-- Footer -->
                <Border Grid.Row="2" StrokeThickness="0"
                        BackgroundColor="{StaticResource BackgroundLight}"
                        Padding="16,14">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0,0,16,0"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="12">
                        <Label x:Name="UserInfoLabel"
                               Text="User"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               HorizontalOptions="Center"/>
                        <Button Text="Log Out"
                                Clicked="OnLogoutClicked"
                                BackgroundColor="{StaticResource PrimaryColor}"
                                TextColor="{StaticResource WhiteColor}"
                                CornerRadius="10"
                                HeightRequest="44"
                                FontSize="15"
                                FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>
    </Grid>
</ContentView>
