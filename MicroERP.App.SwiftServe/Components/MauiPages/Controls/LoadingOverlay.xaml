<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MicroERP.App.SwiftServe.Components.MauiPages.Controls.LoadingOverlay"
             x:Name="LoadingOverlayRoot"
             IsVisible="False">

    <ContentView.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="WhiteColor">#FFFFFF</Color>
        </ResourceDictionary>
    </ContentView.Resources>

    <Grid BackgroundColor="#CC000000" ZIndex="9999">
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="16">
            <ActivityIndicator IsRunning="True" Color="{StaticResource WhiteColor}"
                               WidthRequest="48" HeightRequest="48"/>
            <Label x:Name="MessageLabel" Text="Loading..."
                   TextColor="{StaticResource WhiteColor}" FontSize="16"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>
