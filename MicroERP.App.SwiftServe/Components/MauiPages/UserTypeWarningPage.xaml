<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MicroERP.App.SwiftServe.Components.MauiPages.UserTypeWarningPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="User Type Warning">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <BoxView HeightRequest="40" />
            
            <!-- Warning Icon -->
            <Label Text="⚠️" 
                   FontSize="80" 
                   HorizontalOptions="Center" />
            
            <!-- Title -->
            <Label Text="User Type Not Configured" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#667eea" />
            
            <!-- Message -->
            <Label Text="Your account does not have a user type assigned. Please contact your administrator to configure your user type (WAITER, KITCHEN, ONLINE, or ADMIN) before accessing the application." 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"
                   TextColor="#333333" />
            
            <BoxView HeightRequest="20" />
            
            <!-- User Details Frame -->
            <Frame BorderColor="#e0e0e0" 
                   BackgroundColor="#f5f5f5" 
                   CornerRadius="10" 
                   Padding="15">
                <StackLayout Spacing="10">
                    <Label Text="Account Details" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#333333" />
                    
                    <BoxView HeightRequest="1" 
                             BackgroundColor="#e0e0e0" />
                    
                    <StackLayout Spacing="8">
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Username: " FontAttributes="Bold" />
                                    <Span Text="{Binding Username}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Full Name: " FontAttributes="Bold" />
                                    <Span Text="{Binding FullName}" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="User Type: " FontAttributes="Bold" />
                                    <Span Text="Not Set" TextColor="Red" FontAttributes="Bold" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </StackLayout>
            </Frame>
            
            <BoxView HeightRequest="20" />
            
            <!-- Return to Login Button -->
            <Button Text="Return to Login" 
                    Clicked="OnReturnToLoginClicked"
                    BackgroundColor="#667eea"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50" />
            
            <BoxView HeightRequest="40" />
        </StackLayout>
    </ScrollView>
</ContentPage>

