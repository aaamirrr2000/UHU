@inherits LayoutComponentBase
@using System.Collections.ObjectModel
@using MudBlazor
@inject CartStateService CartState
@inject NavigationManager Nav
@inject INavigationService NavigationService
@inject IJSRuntime JS

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="2" Dense="false" Class="professional-navbar">
        <div class="navbar-content">
            <!-- Left Section: Logo and Company Name -->
            <div class="navbar-left">
                <MudIconButton Icon="@Icons.Material.Filled.Menu"
                             Color="Color.Inherit"
                             OnClick="DrawerToggle"
                             Class="navbar-action-btn" />
                <MudHidden Breakpoint="Breakpoint.SmAndDown">
                    <div class="company-brand">
                        @if (!string.IsNullOrEmpty(MyGlobals.Organization?.Logo))
                        {
                            <img src="@MyGlobals.Organization.Logo" alt="Company Logo" class="company-logo" />
                        }
                        <div class="company-info">
                            <span class="company-name">@(MyGlobals.Organization?.Name ?? "Organization")</span>
                        </div>
                    </div>
                </MudHidden>
            </div>

            <!-- Center Section: Page Title -->
            <MudSpacer />
            <div class="navbar-center">
                <MudText Typo="Typo.h6" Class="page-title-text">
                    @MyGlobals.PageTitle
                </MudText>
            </div>
            <MudSpacer />

            <!-- Right Section: Actions -->
            <div class="navbar-right">
                <MudHidden Breakpoint="Breakpoint.SmAndDown">
                    <div class="navbar-actions">
                        <!-- Table Number -->
                        @if (MyGlobals._selectedTable != null)
                        {
                            <MudChip T="string" 
                                     Color="Color.Secondary" 
                                     Variant="Variant.Outlined"
                                     Size="Size.Small"
                                     Class="table-chip">
                                <i class="fas fa-chair me-2" style="font-size: 12px;"></i>
                                Table: @MyGlobals._selectedTable?.TableNumber
                            </MudChip>
                        }

                        <!-- Service Type -->
                        @if (!string.IsNullOrEmpty(MyGlobals._serviceType))
                        {
                            <MudChip T="string" 
                                     Color="Color.Primary" 
                                     Variant="Variant.Filled"
                                     Size="Size.Small"
                                     Class="service-type-chip">
                                @MyGlobals._serviceType
                            </MudChip>
                        }

                        <!-- Cart Button -->
                        <MudTooltip Text="View Cart">
                            <MudIconButton Icon="@Icons.Material.Filled.ShoppingCart"
                                         Color="Color.Inherit"
                                         Hover="true"
                                         Class="navbar-action-btn"
                                         OnClick="ViewCart">
                                @if (_cart.Count > 0)
                                {
                                    <MudBadge Content="@_cart.Count" Color="Color.Error" Overlap="true">
                                    </MudBadge>
                                }
                            </MudIconButton>
                        </MudTooltip>

                        <!-- Date Display -->
                        <MudChip T="string" 
                                 Color="Color.Secondary" 
                                 Variant="Variant.Outlined"
                                 Size="Size.Small"
                                 Class="date-chip">
                            <i class="fas fa-calendar-alt me-2" style="font-size: 12px;"></i>
                            @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                        </MudChip>
                    </div>
                </MudHidden>
            </div>
        </div>
    </MudAppBar>

    <!-- Drawer with Navigation Menu -->
    <MudDrawer @bind-Open="@_drawerOpen" @attributes="@GetDrawerAttributes()">
        <div style="height:100%;">
            <!-- User Profile Section -->
            @if (_isSidebarExpanded)
            {
                <div class="sidebar-user-profile">
                    <div class="d-flex align-items-center p-3">
                        <div class="profile-pic-container">
                            @if (MyGlobals.User != null && !string.IsNullOrEmpty(MyGlobals.User.Pic))
                            {
                                <img src="@MyGlobals.User.Pic" alt="Profile" class="profile-pic" />
                            }
                            else
                            {
                                <div class="profile-pic-fallback">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                        </div>
                        <div class="user-details">
                            <div class="user-name">@(MyGlobals.User?.FullName ?? MyGlobals.User?.Username ?? "User")</div>
                            <div class="user-role">@(MyGlobals.User?.GroupName ?? "No Group")</div>
                            <div class="user-type">@(MyGlobals.User?.UserType ?? "No Type")</div>
                            @if (MyGlobals.User?.SelectedEmployee != null)
                            {
                                <div class="user-employee">Employee ID: @MyGlobals.User.SelectedEmployee.EmpId</div>
                            }
                            @if (!string.IsNullOrEmpty(MyGlobals.User?.Email))
                            {
                                <div class="user-email">@MyGlobals.User.Email</div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Mini Profile when collapsed -->
                <div class="mini-profile p-2">
                    @if (MyGlobals.User != null && !string.IsNullOrEmpty(MyGlobals.User.Pic))
                    {
                        <img src="@MyGlobals.User.Pic" alt="Profile" class="mini-profile-pic" />
                    }
                    else
                    {
                        <div class="mini-profile-fallback">
                            <i class="fas fa-user"></i>
                        </div>
                    }
                </div>
            }

            <!-- Navigation Menu -->
            <div class="nav-menu">
                @foreach (var group in MenuGroups)
                {
                    <div class="nav-group">
                        @if (_isSidebarExpanded)
                        {
                            <MudText Typo="Typo.caption" Class="nav-group-title">
                                @group.GroupName
                            </MudText>
                        }

                        @foreach (var item in group.Items)
                        {
                            @if (item.Url == "/LogoutPage")
                            {
                                <div class="nav-menu-item" @onclick="() => Navigate(item.Url)">
                                    <svg class="nav-menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                         stroke-linecap="round" stroke-linejoin="round">
                                        @((MarkupString)item.Icon)
                                    </svg>
                                    @if (_isSidebarExpanded)
                                    {
                                        <span class="nav-menu-label">@item.Text</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <MudNavLink Href="@item.Url" Match="NavLinkMatch.Prefix" Class="nav-menu-item">
                                    <svg class="nav-menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                         stroke-linecap="round" stroke-linejoin="round">
                                        @((MarkupString)item.Icon)
                                    </svg>
                                    @if (_isSidebarExpanded)
                                    {
                                        <span class="nav-menu-label">@item.Text</span>
                                    }
                                </MudNavLink>
                            }
                        }

                        <MudDivider Class="my-2" />
                    </div>
                }
            </div>
        </div>
    </MudDrawer>

    <!-- Main content with dynamic margin -->
    <MudMainContent Class="@GetMainContentClass()">
        <div class="content-wrapper">
            <CascadingValue Value="_cart">
                @Body
            </CascadingValue>
        </div>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private bool _isSidebarExpanded = true;
    private List<MenuGroup> MenuGroups = new();
    private List<ItemsModel> _cart { get; set; } = new();
    private DateTime CurrentDateTime => DateTime.Now;
    private Timer? _refreshTimer;
    private bool _isMobile = false;

    protected override async Task OnInitializedAsync()
    {
        await CheckMobile();
        LoadMenuItems();
        
        // Start timer to trigger UI refresh every second
        _refreshTimer = new Timer(_ =>
        {
            InvokeAsync(StateHasChanged);
        }, null, TimeSpan.Zero, TimeSpan.FromSeconds(1));
    }

    private async Task CheckMobile()
    {
        try
        {
            _isMobile = await JS.InvokeAsync<bool>("eval", "window.innerWidth <= 768");

            // Auto-collapse on mobile by default
            if (_isMobile)
            {
                _drawerOpen = false;
                _isSidebarExpanded = false;
            }
            else
            {
                _drawerOpen = true;
                _isSidebarExpanded = true;
            }
        }
        catch
        {
            // Fallback values
            _isMobile = false;
            _drawerOpen = true;
            _isSidebarExpanded = true;
        }
    }

    private void LoadMenuItems()
    {
        var userType = MyGlobals.User?.UserType?.ToUpper() ?? "";
        var mainItems = new List<MenuItem>();

        // Always show "Submit Order" for most user types (except ONLINE)
        if (userType != "ONLINE")
        {
            mainItems.Add(new MenuItem
            {
                Text = "Submit Order",
                Url = "/TablesPage",
                Icon = "<path d='M20 21v-2a4 4 0 0 0-3-3.87' /><path d='M4 21v-2a4 4 0 0 1 3-3.87' /><circle cx='12' cy='7' r='4' />"
            });
        }

        // Menu items based on user type
        switch (userType)
        {
            case "WAITER":
                // Waiter menu: Submit orders and view order history
                mainItems.Add(new MenuItem
                {
                    Text = "Orders History",
                    Url = "/OrdersPage",
                    Icon = "<path d='M9 3h6a1 1 0 0 1 1 1v1h1a2 2 0 0 1 2 2v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h1V4a1 1 0 0 1 1-1z' /><path d='M9 12h6M9 16h6M9 8h6' />"
                });
                break;

            case "ONLINE":
                // Online user menu: View and manage online orders
                mainItems.Add(new MenuItem
                {
                    Text = "Online Orders",
                    Url = "/OrdersPage?serviceType=ONLINE",
                    Icon = "<path d='M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z' /><polyline points='3.27 6.96 12 12.01 20.73 6.96' /><line x1='12' y1='22.08' x2='12' y2='12' />"
                });
                mainItems.Add(new MenuItem
                {
                    Text = "All Orders",
                    Url = "/OrdersPage",
                    Icon = "<path d='M9 3h6a1 1 0 0 1 1 1v1h1a2 2 0 0 1 2 2v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h1V4a1 1 0 0 1 1-1z' /><path d='M9 12h6M9 16h6M9 8h6' />"
                });
                break;

            case "KITCHEN":
                // Kitchen menu: View all orders for preparation
                mainItems.Add(new MenuItem
                {
                    Text = "All Orders",
                    Url = "/OrdersPage",
                    Icon = "<path d='M9 3h6a1 1 0 0 1 1 1v1h1a2 2 0 0 1 2 2v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h1V4a1 1 0 0 1 1-1z' /><path d='M9 12h6M9 16h6M9 8h6' />"
                });
                break;

            case "ADMIN":
                // Admin menu: Full access to all features
                mainItems.Add(new MenuItem
                {
                    Text = "Orders History",
                    Url = "/OrdersPage",
                    Icon = "<path d='M9 3h6a1 1 0 0 1 1 1v1h1a2 2 0 0 1 2 2v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h1V4a1 1 0 0 1 1-1z' /><path d='M9 12h6M9 16h6M9 8h6' />"
                });
                mainItems.Add(new MenuItem
                {
                    Text = "Online Orders",
                    Url = "/OrdersPage?serviceType=ONLINE",
                    Icon = "<path d='M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z' /><polyline points='3.27 6.96 12 12.01 20.73 6.96' /><line x1='12' y1='22.08' x2='12' y2='12' />"
                });
                break;

            default:
                // Default menu: Show Submit Order and Orders History for all users
                mainItems.Add(new MenuItem
                {
                    Text = "Orders History",
                    Url = "/OrdersPage",
                    Icon = "<path d='M9 3h6a1 1 0 0 1 1 1v1h1a2 2 0 0 1 2 2v13a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h1V4a1 1 0 0 1 1-1z' /><path d='M9 12h6M9 16h6M9 8h6' />"
                });
                break;
        }

        MenuGroups = new()
        {
            new MenuGroup
            {
                GroupName = "Main",
                Items = mainItems
            },
            new MenuGroup
            {
                GroupName = "Account",
                Items = new()
                {
                    new MenuItem
                    {
                        Text = "My Profile",
                        Url = "/UserProfilePage",
                        Icon = "<path d='M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2' /><circle cx='12' cy='7' r='4' />"
                    }
                }
            },
            new MenuGroup
            {
                GroupName = "Settings",
                Items = new()
                {
                    new MenuItem
                    {
                        Text = "Log Out",
                        Url = "/LogoutPage",
                        Icon = "<path d='M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4' /><polyline points='16 17 21 12 16 7' /><line x1='21' y1='12' x2='9' y2='12' />"
                    }
                }
            }
        };
    }

    async void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;

        // If opening drawer on mobile, ensure sidebar is expanded
        if (_drawerOpen && _isMobile)
        {
            _isSidebarExpanded = true;
        }
        // Toggle sidebar expansion on desktop
        else if (!_isMobile && _drawerOpen)
        {
            _isSidebarExpanded = !_isSidebarExpanded;
        }

        await InvokeAsync(StateHasChanged);
    }

    private Dictionary<string, object> GetDrawerAttributes()
    {
        var attributes = new Dictionary<string, object>();

        if (_isSidebarExpanded)
        {
            attributes["Width"] = "240px";
        }
        else
        {
            attributes["Width"] = "52px";
        }

        // Only make it persistent on desktop
        // MudDrawer Variant property - use enum values
        if (!_isMobile)
        {
            // Persistent drawer stays open and doesn't overlay content
            attributes["Variant"] = MudBlazor.DrawerVariant.Persistent;
        }
        else
        {
            // Temporary drawer overlays content and can be closed
            attributes["Variant"] = MudBlazor.DrawerVariant.Temporary;
        }

        return attributes;
    }

    private string GetMainContentClass()
    {
        var classes = new List<string>();

        if (!_isMobile)
        {
            if (_isSidebarExpanded)
            {
                classes.Add("sidebar-expanded");
            }
            else
            {
                classes.Add("sidebar-collapsed");
            }
        }
        else
        {
            classes.Add("mobile-view");
        }

        return string.Join(" ", classes);
    }

    private void ViewCart()
    {
        CartState.CartItems = new ObservableCollection<ItemsModel>(_cart);
        CartState.SelectedTable = MyGlobals._selectedTable;
        CartState.ServiceType = MyGlobals._serviceType;
        Nav.NavigateTo("/CartPage");
    }

    private void Navigate(string url)
    {
        if (url == "/LogoutPage")
        {
            Nav.NavigateTo("/", true);
        }
        else
        {
            Nav.NavigateTo(url);
            MyGlobals.PageTitle = url.Replace("/", "").Replace("Page", "");
        }
        
        // Close drawer on mobile after navigation
        if (_isMobile)
        {
            _drawerOpen = false;
        }
    }

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }

    public class MenuItem
    {
        public string Text { get; set; } = string.Empty;
        public string Url { get; set; } = string.Empty;
        public string Icon { get; set; } = string.Empty;
        public Func<Task>? Action { get; set; }
    }

    public class MenuGroup
    {
        public string GroupName { get; set; } = string.Empty;
        public List<MenuItem> Items { get; set; } = new();
    }
}

