<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NG.MicroERP.WorkHub.Pages.DashboardPage"
             Title="Work Hub Dashboard">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="PrimaryLightColor">#7B5FE8</Color>
            <Color x:Key="WhiteColor">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#212121</Color>
            <Color x:Key="TextSecondary">#666666</Color>
            <Color x:Key="BackgroundLight">#F5F5F5</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <SolidColorBrush Color="{StaticResource BackgroundLight}"/>
    </ContentPage.Background>

    <ScrollView>
        <Grid Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Header -->
                <Grid Padding="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Work Hub"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}"
                               FontFamily="OpenSansSemibold"/>
                        <Label x:Name="lblWelcome"
                               FontSize="16"
                               TextColor="{StaticResource TextSecondary}"
                               FontFamily="OpenSansRegular"/>
                    </VerticalStackLayout>
                    
                    <Button Text="Logout"
                            Grid.Column="1"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="{StaticResource WhiteColor}"
                            Clicked="OnLogoutClicked"
                            Padding="15,8"
                            CornerRadius="8"/>
                </Grid>

                <!-- Menu Cards Grid -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*" ColumnSpacing="15" RowSpacing="15">
                    
                    <!-- Attendance Card -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="{StaticResource WhiteColor}"
                           BorderColor="#E0E0E0"
                           HasShadow="True"
                           CornerRadius="16"
                           Padding="20"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAttendanceTapped"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="ðŸ“…"
                                   FontSize="48"
                                   HorizontalOptions="Center"/>
                            <Label Text="Attendance"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansSemibold"/>
                            <Label Text="Mark your attendance"
                                   FontSize="12"
                                   TextColor="{StaticResource TextSecondary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansRegular"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Roster Card -->
                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="{StaticResource WhiteColor}"
                           BorderColor="#E0E0E0"
                           HasShadow="True"
                           CornerRadius="16"
                           Padding="20"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRosterTapped"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="ðŸ“‹"
                                   FontSize="48"
                                   HorizontalOptions="Center"/>
                            <Label Text="Roster"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansSemibold"/>
                            <Label Text="View your schedule"
                                   FontSize="12"
                                   TextColor="{StaticResource TextSecondary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansRegular"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Leave Request Card -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="{StaticResource WhiteColor}"
                           BorderColor="#E0E0E0"
                           HasShadow="True"
                           CornerRadius="16"
                           Padding="20"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLeaveRequestTapped"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="ðŸ–ï¸"
                                   FontSize="48"
                                   HorizontalOptions="Center"/>
                            <Label Text="Leave Request"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansSemibold"/>
                            <Label Text="Apply for leave"
                                   FontSize="12"
                                   TextColor="{StaticResource TextSecondary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansRegular"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- My Leaves Card -->
                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="{StaticResource WhiteColor}"
                           BorderColor="#E0E0E0"
                           HasShadow="True"
                           CornerRadius="16"
                           Padding="20"
                           HeightRequest="150">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMyLeavesTapped"/>
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="ðŸ“Š"
                                   FontSize="48"
                                   HorizontalOptions="Center"/>
                            <Label Text="My Leaves"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansSemibold"/>
                            <Label Text="View leave history"
                                   FontSize="12"
                                   TextColor="{StaticResource TextSecondary}"
                                   HorizontalOptions="Center"
                                   FontFamily="OpenSansRegular"/>
                        </VerticalStackLayout>
                    </Frame>

                </Grid>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
