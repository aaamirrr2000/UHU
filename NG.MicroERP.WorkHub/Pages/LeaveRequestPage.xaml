<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NG.MicroERP.WorkHub.Pages.LeaveRequestPage"
             Title="Leave Request">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="WhiteColor">#FFFFFF</Color>
            <Color x:Key="TextPrimary">#212121</Color>
            <Color x:Key="TextSecondary">#666666</Color>
            <Color x:Key="BackgroundLight">#F5F5F5</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <SolidColorBrush Color="{StaticResource BackgroundLight}"/>
    </ContentPage.Background>

    <ScrollView>
        <Grid Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Header -->
                <Label Text="Apply for Leave"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimary}"
                       FontFamily="OpenSansSemibold"/>

                <!-- Leave Type -->
                <Frame BackgroundColor="{StaticResource WhiteColor}"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       CornerRadius="12"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Leave Type *"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               FontFamily="OpenSansRegular"/>
                        <Picker x:Name="pickerLeaveType"
                                Title="Select Leave Type"
                                SelectedIndexChanged="OnLeaveTypeChanged"
                                FontSize="16"
                                FontFamily="OpenSansRegular"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Start Date -->
                <Frame BackgroundColor="{StaticResource WhiteColor}"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       CornerRadius="12"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Start Date *"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               FontFamily="OpenSansRegular"/>
                        <DatePicker x:Name="datePickerStart"
                                    Format="dd MMM yyyy"
                                    FontSize="16"
                                    FontFamily="OpenSansRegular"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- End Date -->
                <Frame BackgroundColor="{StaticResource WhiteColor}"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       CornerRadius="12"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="End Date *"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               FontFamily="OpenSansRegular"/>
                        <DatePicker x:Name="datePickerEnd"
                                    Format="dd MMM yyyy"
                                    FontSize="16"
                                    FontFamily="OpenSansRegular"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Reason -->
                <Frame BackgroundColor="{StaticResource WhiteColor}"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       CornerRadius="12"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Reason *"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               FontFamily="OpenSansRegular"/>
                        <Editor x:Name="editorReason"
                                 Placeholder="Enter reason for leave"
                                 HeightRequest="100"
                                 FontSize="16"
                                 FontFamily="OpenSansRegular"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Contact Number -->
                <Frame BackgroundColor="{StaticResource WhiteColor}"
                       BorderColor="#E0E0E0"
                       HasShadow="True"
                       CornerRadius="12"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Contact Number"
                               FontSize="14"
                               TextColor="{StaticResource TextSecondary}"
                               FontFamily="OpenSansRegular"/>
                        <Entry x:Name="entryContactNumber"
                               Placeholder="Enter contact number"
                               Keyboard="Telephone"
                               FontSize="16"
                               FontFamily="OpenSansRegular"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Submit Button -->
                <Button Text="Submit Leave Request"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        TextColor="{StaticResource WhiteColor}"
                        FontSize="18"
                        FontAttributes="Bold"
                        HeightRequest="56"
                        CornerRadius="12"
                        Clicked="OnSubmitClicked"
                        FontFamily="OpenSansSemibold"/>

                <!-- Loading Indicator -->
                <ActivityIndicator x:Name="LoadingSpinner"
                                  IsVisible="False"
                                  IsRunning="False"
                                  Color="{StaticResource PrimaryColor}"
                                  HeightRequest="40"
                                  WidthRequest="40"
                                  HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
