<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NG.MicroERP.WorkHub.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NG.MicroERP.WorkHub"
    xmlns:pages="clr-namespace:NG.MicroERP.WorkHub.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="NG.MicroERP.WorkHub">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate pages:DashboardPage}"
        Route="DashboardPage" />

    <ShellContent
        Title="Attendance"
        ContentTemplate="{DataTemplate pages:AttendancePage}"
        Route="AttendancePage" />

    <ShellContent
        Title="Roster"
        ContentTemplate="{DataTemplate pages:RosterPage}"
        Route="RosterPage" />

    <ShellContent
        Title="LeaveRequest"
        ContentTemplate="{DataTemplate pages:LeaveRequestPage}"
        Route="LeaveRequestPage" />

    <ShellContent
        Title="MyLeaves"
        ContentTemplate="{DataTemplate pages:MyLeavesPage}"
        Route="MyLeavesPage" />

</Shell>
